<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.RentalRecordsPage"
             x:DataType="vm:RentalRecordsPageViewModel">

    <Design.DataContext>
        <vm:RentalRecordsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Rentals'}"
                                   Value="{Binding TotalRentals}"
                                   Icon="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Active'}"
                                   Value="{Binding ActiveRentals}"
                                   Icon="{x:Static icons:Icons.Check}"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Overdue'}"
                                   Value="{Binding OverdueRentals}"
                                   Icon="{x:Static icons:Icons.Info}"
                                   IconColor="Danger" />
                <controls:StatCard Label="{loc:Loc 'Total Revenue'}"
                                   Value="{Binding TotalRevenueFormatted}"
                                   Icon="{x:Static icons:Icons.Dollar}"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc 'Rental Records'}"
                                ItemsSource="{Binding Records}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search rentals...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'New Rental'}"
                                AddButtonTooltip="{loc:Loc 'New Rental'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.RentalRecords}"
                                EmptyTitle="{loc:Loc 'No rental records found'}"
                                EmptyMessage="{loc:Loc 'Create your first rental record to start tracking rentals.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                        <table:ArgoTableHeader Header="{loc:Loc 'ID'}" ColumnName="Id" SortProperty="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Item'}" ColumnName="Item" SortProperty="Item"
                                                   ColumnWidth="{Binding ColumnWidths.ItemColumnWidth}"
                                                   IsColumnVisible="{Binding ShowItemColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Customer'}" ColumnName="Customer" SortProperty="Customer"
                                                   ColumnWidth="{Binding ColumnWidths.CustomerColumnWidth}"
                                                   IsColumnVisible="{Binding ShowCustomerColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Quantity'}" ColumnName="Quantity" SortProperty="Quantity"
                                                   ColumnWidth="{Binding ColumnWidths.QuantityColumnWidth}"
                                                   IsColumnVisible="{Binding ShowQuantityColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Start'}" ColumnName="StartDate" SortProperty="StartDate"
                                                   ColumnWidth="{Binding ColumnWidths.StartDateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStartDateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Due'}" ColumnName="DueDate" SortProperty="DueDate"
                                                   ColumnWidth="{Binding ColumnWidths.DueDateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDueDateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Status'}" ColumnName="Status" SortProperty="Status"
                                                   ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStatusColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Total'}" ColumnName="Total" SortProperty="Total"
                                                   ColumnWidth="{Binding ColumnWidths.TotalColumnWidth}"
                                                   IsColumnVisible="{Binding ShowTotalColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Deposit'}" ColumnName="Deposit" SortProperty="Deposit"
                                                   ColumnWidth="{Binding ColumnWidths.DepositColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDepositColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Paid'}" ColumnName="Paid" SortProperty="Paid"
                                                   ColumnWidth="{Binding ColumnWidths.PaidColumnWidth}"
                                                   IsColumnVisible="{Binding ShowPaidColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Invoice'}" ColumnName="Invoice" SortProperty="Invoice"
                                                   ColumnWidth="{Binding ColumnWidths.InvoiceColumnWidth}"
                                                   IsColumnVisible="{Binding ShowInvoiceColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Actions'}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Records}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:RentalRecordDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="56">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- ID -->
                                        <table:ArgoTableCell Text="{Binding Id}" FontWeight="Medium"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowIdColumn}" />

                                        <!-- Item - Custom content with ItemName and Rate -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.ItemColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowItemColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ItemName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               TextTrimming="CharacterEllipsis" />
                                                    <TextBlock Text="{Binding RateFormatted}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Customer -->
                                        <table:ArgoTableCell Text="{Binding CustomerName}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowCustomerColumn}" />

                                        <!-- Quantity -->
                                        <table:ArgoTableCell Text="{Binding Quantity}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.QuantityColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowQuantityColumn}" />

                                        <!-- Start Date -->
                                        <table:ArgoTableCell Text="{Binding StartDateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.StartDateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowStartDateColumn}" />

                                        <!-- Due Date - Custom content with overdue text -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.DueDateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowDueDateColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DueDateFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding DaysOverdueText}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource ErrorBrush}"
                                                               IsVisible="{Binding DaysOverdue, Converter={x:Static local:IntConverters.IsPositive}}" />
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Status Badge - Custom content -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowStatusColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding Status, Converter={x:Static local:StringConverters.ToRentalStatusBackground}}">
                                                    <TextBlock Text="{Binding Status, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding Status, Converter={x:Static local:StringConverters.ToRentalStatusForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Total Cost -->
                                        <table:ArgoTableCell Text="{Binding TotalCostFormatted}" FontWeight="Medium"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.TotalColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowTotalColumn}" />

                                        <!-- Deposit -->
                                        <table:ArgoTableCell Text="{Binding DepositFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.DepositColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowDepositColumn}" />

                                        <!-- Paid Badge -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.PaidColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowPaidColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding Paid, Converter={x:Static local:BoolConverters.ToPaidBackground}}">
                                                    <TextBlock Text="{Binding Paid, Converter={x:Static local:BoolConverters.ToPaidText}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding Paid, Converter={x:Static local:BoolConverters.ToPaidForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Invoice - Clickable link -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.InvoiceColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowInvoiceColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Button Classes="link-button"
                                                        Content="{Binding InvoiceId}"
                                                        Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ViewInvoiceCommand}"
                                                        CommandParameter="{Binding InvoiceId}"
                                                        IsVisible="{Binding HasInvoiceId}"
                                                        VerticalAlignment="Center"
                                                        Padding="0"
                                                        Cursor="Hand" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Spacing="4">
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Return'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenReturnModalCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding IsActive}">
                                                        <PathIcon Data="{x:Static icons:Icons.Check}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'View Details'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenViewModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Edit'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding IsActive}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Generate Invoice Button -->
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Generate Invoice'}"
                                                            IsVisible="{Binding CanGenerateInvoice}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).GenerateInvoiceCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger"
                                                            ToolTip.Tip="{loc:Loc 'Delete'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'ID'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowItemColumn}" Content="{loc:Loc 'Item'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="{loc:Loc 'Customer'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowQuantityColumn}" Content="{loc:Loc 'Quantity'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStartDateColumn}" Content="{loc:Loc 'Start Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDueDateColumn}" Content="{loc:Loc 'Due Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc 'Status'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTotalColumn}" Content="{loc:Loc 'Total'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDepositColumn}" Content="{loc:Loc 'Deposit'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowPaidColumn}" Content="{loc:Loc 'Paid'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowInvoiceColumn}" Content="{loc:Loc 'Invoice'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
