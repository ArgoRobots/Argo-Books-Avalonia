<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.RentalInventoryPage"
             x:DataType="vm:RentalInventoryPageViewModel">

    <Design.DataContext>
        <vm:RentalInventoryPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Items'}"
                                   Value="{Binding TotalItems}"
                                   Icon="M21 16.5c0 .38-.21.71-.53.88l-7.9 4.44c-.16.12-.36.18-.57.18-.21 0-.41-.06-.57-.18l-7.9-4.44A.991.991 0 0 1 3 16.5v-9c0-.38.21-.71.53-.88l7.9-4.44c.16-.12.36-.18.57-.18.21 0 .41.06.57.18l7.9 4.44c.32.17.53.5.53.88v9zM12 4.15L6.04 7.5 12 10.85l5.96-3.35L12 4.15zM5 15.91l6 3.38v-6.71L5 9.21v6.7zm14 0v-6.7l-6 3.37v6.71l6-3.38z"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Available'}"
                                   Value="{Binding AvailableItems}"
                                   Icon="{x:Static icons:Icons.Check}"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Rented Out'}"
                                   Value="{Binding RentedOutItems}"
                                   Icon="M12.5 2C8.36 2 5 5.36 5 9.5c0 1.71.57 3.29 1.54 4.56L2.71 17.9l1.41 1.41 3.83-3.83C9.21 16.43 10.79 17 12.5 17c4.14 0 7.5-3.36 7.5-7.5S16.64 2 12.5 2zm0 13c-3.03 0-5.5-2.47-5.5-5.5S9.47 4 12.5 4 18 6.47 18 9.5 15.53 15 12.5 15z"
                                   IconColor="Info" />
                <controls:StatCard Label="{loc:Loc 'In Maintenance'}"
                                   Value="{Binding MaintenanceItems}"
                                   Icon="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"
                                   IconColor="Warning" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc 'Rental Items'}"
                                ItemsSource="{Binding Items}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search rental items...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'Add Item'}"
                                AddButtonTooltip="{loc:Loc 'Add Item'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.RentalInventory}"
                                EmptyTitle="{loc:Loc 'No rental items found'}"
                                EmptyMessage="{loc:Loc 'Add your first rental item to start managing your rental inventory.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc Item}" ColumnName="Item" SortProperty="Item"
                                                   ColumnWidth="{Binding ColumnWidths.ItemColumnWidth}"
                                                   IsColumnVisible="{Binding ShowItemColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Status}" ColumnName="Status" SortProperty="Status"
                                                   ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStatusColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Total}" ColumnName="TotalQty" SortProperty="TotalQty"
                                                   ColumnWidth="{Binding ColumnWidths.TotalQtyColumnWidth}"
                                                   IsColumnVisible="{Binding ShowTotalQtyColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Available}" ColumnName="Available" SortProperty="Available"
                                                   ColumnWidth="{Binding ColumnWidths.AvailableColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAvailableColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Rented}" ColumnName="Rented" SortProperty="Rented"
                                                   ColumnWidth="{Binding ColumnWidths.RentedColumnWidth}"
                                                   IsColumnVisible="{Binding ShowRentedColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Daily}" ColumnName="DailyRate" SortProperty="DailyRate"
                                                   ColumnWidth="{Binding ColumnWidths.DailyRateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDailyRateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Weekly}" ColumnName="WeeklyRate" SortProperty="WeeklyRate"
                                                   ColumnWidth="{Binding ColumnWidths.WeeklyRateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowWeeklyRateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Deposit}" ColumnName="Deposit" SortProperty="Deposit"
                                                   ColumnWidth="{Binding ColumnWidths.DepositColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDepositColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:RentalItemDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="56">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Item - Custom content with name and id -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.ItemColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowItemColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               TextTrimming="CharacterEllipsis" />
                                                    <TextBlock Text="{Binding Id}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               TextTrimming="CharacterEllipsis" />
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Status - Custom content with status badge -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowStatusColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding Status, Converter={x:Static local:StringConverters.ToRentalItemStatusBackground}}">
                                                    <TextBlock Text="{Binding Status, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding Status, Converter={x:Static local:StringConverters.ToRentalItemStatusForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Total Quantity - Simple text -->
                                        <table:ArgoTableCell Text="{Binding TotalQuantity}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.TotalQtyColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowTotalQtyColumn}" />

                                        <!-- Available Quantity - Custom content with styled text -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.AvailableColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowAvailableColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding AvailableQuantity}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource SuccessBrush}"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Rented Quantity - Simple text -->
                                        <table:ArgoTableCell Text="{Binding RentedQuantity}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.RentedColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowRentedColumn}" />

                                        <!-- Daily Rate - Simple text -->
                                        <table:ArgoTableCell Text="{Binding DailyRateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.DailyRateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowDailyRateColumn}" />

                                        <!-- Weekly Rate - Simple text -->
                                        <table:ArgoTableCell Text="{Binding WeeklyRateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.WeeklyRateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowWeeklyRateColumn}" />

                                        <!-- Deposit - Simple text -->
                                        <table:ArgoTableCell Text="{Binding DepositFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.DepositColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowDepositColumn}" />

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Spacing="4">
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Rent Out'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).OpenRentOutModalCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding IsAvailable}">
                                                        <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Edit'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger"
                                                            ToolTip.Tip="{loc:Loc 'Delete'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowItemColumn}" Content="{loc:Loc 'Item'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc 'Status'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTotalQtyColumn}" Content="{loc:Loc 'Total Quantity'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAvailableColumn}" Content="{loc:Loc 'Available'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowRentedColumn}" Content="{loc:Loc 'Rented'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDailyRateColumn}" Content="{loc:Loc 'Daily Rate'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowWeeklyRateColumn}" Content="{loc:Loc 'Weekly Rate'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDepositColumn}" Content="{loc:Loc 'Deposit'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
