<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.RentalRecordsPage"
             x:DataType="vm:RentalRecordsPageViewModel">

    <UserControl.Resources>
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:RentalRecordsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Rentals'}"
                                   Value="{Binding TotalRentals}"
                                   Icon="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Active'}"
                                   Value="{Binding ActiveRentals}"
                                   Icon="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Overdue'}"
                                   Value="{Binding OverdueRentals}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                   IconColor="Danger" />
                <controls:StatCard Label="{loc:Loc 'Total Revenue'}"
                                   Value="{Binding TotalRevenueFormatted}"
                                   Icon="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="{loc:Loc 'Rental Records'}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="{loc:Loc 'Search rentals...'}"
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="{loc:Loc 'Filter'}" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Rental Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="{loc:Loc 'New Rental'}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="HorizontalTableScroll"
                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40"
                                    PointerPressed="OnTableHeaderPointerPressed">
                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                    <!-- ID -->
                                    <Panel Width="{Binding ColumnWidths.IdColumnWidth}" IsVisible="{Binding ShowIdColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'ID'}" ColumnName="Id"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Id" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Accountant -->
                                    <Panel Width="{Binding ColumnWidths.AccountantColumnWidth}" IsVisible="{Binding ShowAccountantColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Accountant'}" ColumnName="Accountant"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Accountant" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Item -->
                                    <Panel Width="{Binding ColumnWidths.ItemColumnWidth}" IsVisible="{Binding ShowItemColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Item'}" ColumnName="Item"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Item" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Customer -->
                                    <Panel Width="{Binding ColumnWidths.CustomerColumnWidth}" IsVisible="{Binding ShowCustomerColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Customer'}" ColumnName="Customer"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Customer" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Qty -->
                                    <Panel Width="{Binding ColumnWidths.QuantityColumnWidth}" IsVisible="{Binding ShowQuantityColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Qty'}" ColumnName="Quantity"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Quantity" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Start Date -->
                                    <Panel Width="{Binding ColumnWidths.StartDateColumnWidth}" IsVisible="{Binding ShowStartDateColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Start'}" ColumnName="StartDate"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="StartDate" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Due Date -->
                                    <Panel Width="{Binding ColumnWidths.DueDateColumnWidth}" IsVisible="{Binding ShowDueDateColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Due'}" ColumnName="DueDate"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="DueDate" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Status -->
                                    <Panel Width="{Binding ColumnWidths.StatusColumnWidth}" IsVisible="{Binding ShowStatusColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Status'}" ColumnName="Status"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Total -->
                                    <Panel Width="{Binding ColumnWidths.TotalColumnWidth}" IsVisible="{Binding ShowTotalColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Total'}" ColumnName="Total"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Total" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Deposit -->
                                    <Panel Width="{Binding ColumnWidths.DepositColumnWidth}" IsVisible="{Binding ShowDepositColumn}">
                                        <controls:SortableColumnHeader Text="{loc:Loc 'Deposit'}" ColumnName="Deposit"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Deposit" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Actions (Fixed) -->
                                    <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                        <TextBlock Text="{loc:Loc 'Actions'}" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="8,12,8,12" />
                                    </Panel>
                                </StackPanel>
                        </Border>

                            <!-- Table Content (scrollable vertically only) -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <Panel>
                                    <!-- Records List -->
                                    <ItemsControl ItemsSource="{Binding Records}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="vm:RentalRecordDisplayItem">
                                                <Border Padding="24,0"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="0,0,0,1"
                                                        MinHeight="56">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- ID -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowIdColumn}">
                                                            <TextBlock Text="{Binding Id}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Accountant -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.AccountantColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowAccountantColumn}">
                                                            <TextBlock Text="{Binding AccountantName}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="8,16,8,16"
                                                                       TextTrimming="CharacterEllipsis" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Item -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.ItemColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowItemColumn}">
                                                            <StackPanel VerticalAlignment="Center" Margin="8,0">
                                                                <TextBlock Text="{Binding ItemName}"
                                                                           FontSize="14"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis" />
                                                                <TextBlock Text="{Binding RateFormatted}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                            </StackPanel>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Customer -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowCustomerColumn}">
                                                            <TextBlock Text="{Binding CustomerName}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Quantity -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.QuantityColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowQuantityColumn}">
                                                            <TextBlock Text="{Binding Quantity}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Start Date -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.StartDateColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowStartDateColumn}">
                                                            <TextBlock Text="{Binding StartDateFormatted}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Due Date -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.DueDateColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowDueDateColumn}">
                                                            <StackPanel VerticalAlignment="Center" Margin="8,0">
                                                                <TextBlock Text="{Binding DueDateFormatted}"
                                                                           FontSize="14"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                                <TextBlock Text="{Binding DaysOverdueText}"
                                                                           FontSize="12"
                                                                           Foreground="#DC2626"
                                                                           IsVisible="{Binding DaysOverdue, Converter={x:Static local:IntConverters.IsPositive}}" />
                                                            </StackPanel>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Status Badge -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowStatusColumn}">
                                                            <Border VerticalAlignment="Center"
                                                                    HorizontalAlignment="Left"
                                                                    Padding="8,4"
                                                                    CornerRadius="4"
                                                                    Margin="8,0"
                                                                    Background="{Binding Status, Converter={x:Static local:StringConverters.ToRentalStatusBackground}}">
                                                                <TextBlock Text="{Binding Status, Converter={StaticResource TranslateConverter}}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           Foreground="{Binding Status, Converter={x:Static local:StringConverters.ToRentalStatusForeground}}" />
                                                            </Border>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Total Cost -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.TotalColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowTotalColumn}">
                                                            <TextBlock Text="{Binding TotalCostFormatted}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Deposit -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.DepositColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ShowDepositColumn}">
                                                            <TextBlock Text="{Binding DepositFormatted}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Actions -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Spacing="4"
                                                                        Margin="8,0">
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="{loc:Loc 'Return'}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenReturnModalCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        IsVisible="{Binding IsActive}">
                                                                    <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="{loc:Loc 'View Details'}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenViewModalCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="{loc:Loc 'Edit'}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenEditModalCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        IsVisible="{Binding IsActive}">
                                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button danger"
                                                                        ToolTip.Tip="{loc:Loc 'Delete'}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                            </StackPanel>
                                                        </Panel>
                                                    </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Records.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="{loc:Loc 'No rental records found'}"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="{loc:Loc 'Create your first rental record to start tracking rentals.'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="{loc:Loc 'New Rental'}" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                                </Panel>
                            </ScrollViewer>
                        </Grid>
                    </ScrollViewer>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="{loc:Loc 'Rows per page:'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnMenuX}"
                                    MenuY="{Binding ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'ID'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAccountantColumn}" Content="{loc:Loc 'Accountant'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowItemColumn}" Content="{loc:Loc 'Item'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="{loc:Loc 'Customer'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowQuantityColumn}" Content="{loc:Loc 'Qty'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStartDateColumn}" Content="{loc:Loc 'Start Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDueDateColumn}" Content="{loc:Loc 'Due Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc 'Status'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTotalColumn}" Content="{loc:Loc 'Total'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDepositColumn}" Content="{loc:Loc 'Deposit'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

    <!-- Styles are now consolidated in Styles/TableStyles.axaml -->
</UserControl>
