<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="280"
             x:Class="ArgoBooks.Modals.ReportSaveTemplateModal"
             x:DataType="vm:ReportsPageViewModel">

    <Border Background="{DynamicResource SurfaceBrush}"
            CornerRadius="12"
            Width="420"
            Padding="0">

        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceAltBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="24,16"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="Save Template"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <Button Grid.Column="1"
                            Classes="close-button"
                            Command="{Binding CloseSaveTemplateCommand}">
                        <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                  Width="16" Height="16" />
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Spacing="16" Margin="24">
                <TextBlock Text="Save your current report layout as a reusable template."
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           TextWrapping="Wrap" />

                <StackPanel Spacing="8">
                    <TextBlock Text="Template Name"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    <TextBox Text="{Binding SaveTemplateName}"
                             Watermark="Enter template name..."
                             Padding="12,10" />
                </StackPanel>

                <!-- Message -->
                <TextBlock Text="{Binding SaveTemplateMessage}"
                           FontSize="13"
                           TextWrapping="Wrap"
                           IsVisible="{Binding SaveTemplateMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock.Foreground>
                        <Binding Path="SaveTemplateMessage">
                            <Binding.Converter>
                                <x:Static Member="StringConverters.IsNullOrEmpty" />
                            </Binding.Converter>
                        </Binding>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceAltBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="24,16"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="12">
                    <Button Classes="secondary-button"
                            Content="Cancel"
                            Command="{Binding CloseSaveTemplateCommand}" />
                    <Button Classes="primary-button"
                            Content="Save Template"
                            Command="{Binding SaveTemplateCommand}" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>

    <UserControl.Styles>
        <Style Selector="Button.close-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.close-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.close-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

    </UserControl.Styles>
</UserControl>
