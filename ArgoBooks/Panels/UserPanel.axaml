<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="260" d:DesignHeight="300"
             x:Class="ArgoBooks.Panels.UserPanel"
             x:DataType="vm:UserPanelViewModel">

    <Design.DataContext>
        <vm:UserPanelViewModel />
    </Design.DataContext>

    <Panel IsVisible="{Binding IsOpen}">
        <!-- Transparent backdrop for click-away -->
        <Border Background="Transparent"
                PointerPressed="Backdrop_PointerPressed" />

        <!-- User Panel Container with animation -->
        <Border x:Name="UserPanelBorder"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Width="240"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,60,20,0"
                BoxShadow="0 4 20 0 #26000000"
                Focusable="True"
                KeyDown="UserPanel_KeyDown"
                Opacity="0"
                RenderTransformOrigin="1,0">
            <Border.RenderTransform>
                <TranslateTransform Y="-8" />
            </Border.RenderTransform>
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Border.Transitions>
            <StackPanel>
                <!-- User Profile Header (temporarily hidden) -->
                <Border Padding="16,16,20,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        IsVisible="False">
                    <Grid ColumnDefinitions="Auto,*">
                        <!-- Avatar -->
                        <Border Grid.Column="0"
                                Width="44" Height="44"
                                CornerRadius="22"
                                Background="{DynamicResource PrimaryBrush}"
                                ClipToBounds="True"
                                Margin="0,0,12,0">
                            <Panel>
                                <!-- User Initials -->
                                <TextBlock Text="{Binding UserInitials}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding !HasUserAvatar}" />
                                <!-- User Avatar Image -->
                                <Image Source="{Binding UserAvatarSource}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasUserAvatar}" />
                            </Panel>
                        </Border>

                        <!-- User Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                            <TextBlock Text="{Binding UserDisplayName}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="{Binding UserEmail}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextTrimming="CharacterEllipsis"
                                       IsVisible="{Binding UserEmail, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Menu Items -->
                <StackPanel Margin="0,8,0,8">
                    <!-- My Profile (temporarily hidden) -->
                    <Button x:Name="MenuItem0"
                            Classes="menu-item"
                            Command="{Binding OpenProfileCommand}"
                            IsVisible="False">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Employees}"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'My Profile'}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- My Plan (only visible when has Premium) -->
                    <Button x:Name="MenuItemPlan"
                            Classes="menu-item"
                            Command="{Binding OpenMyPlanCommand}"
                            IsVisible="{Binding HasPremium}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Star}"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'My Plan'}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Settings -->
                    <Button x:Name="MenuItem1"
                            Classes="menu-item"
                            Command="{Binding OpenSettingsCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Settings}"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc Settings}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Divider -->
                    <Border Height="1"
                            Background="{DynamicResource BorderBrush}"
                            Margin="0,8" />

                    <!-- Switch Account -->
                    <Button x:Name="MenuItem2"
                            Classes="menu-item"
                            Command="{Binding SwitchAccountCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Transfers}"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'Switch Account'}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Log Out -->
                    <Button x:Name="MenuItem3"
                            Classes="menu-item danger"
                            Command="{Binding SignOutCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Logout}"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'Log Out'}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Menu Item Style -->
        <Style Selector="Button.menu-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.menu-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.menu-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.menu-item:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
        </Style>
        <Style Selector="Button.menu-item:focus /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.menu-item:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="BorderThickness" Value="2,0,0,0" />
        </Style>
        <Style Selector="Button.menu-item PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Danger Menu Item Style -->
        <Style Selector="Button.menu-item.danger">
            <Setter Property="Foreground" Value="#dc2626" />
        </Style>
        <Style Selector="Button.menu-item.danger PathIcon">
            <Setter Property="Foreground" Value="#dc2626" />
        </Style>
    </UserControl.Styles>
</UserControl>
