<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:icons="using:ArgoBooks"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.CustomersPage"
             x:DataType="vm:CustomersPageViewModel">

    <Design.DataContext>
        <vm:CustomersPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Customers'}"
                                   Value="{Binding TotalCustomers}"
                                   Icon="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Active Customers'}"
                                   Value="{Binding ActiveCustomers}"
                                   Icon="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Banned Customers'}"
                                   Value="{Binding BannedCustomers}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8 0-1.85.63-3.55 1.69-4.9L16.9 18.31C15.55 19.37 13.85 20 12 20zm6.31-3.1L7.1 5.69C8.45 4.63 10.15 4 12 4c4.42 0 8 3.58 8 8 0 1.85-.63 3.55-1.69 4.9z"
                                   IconColor="Danger" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc Customers}"
                                ItemsSource="{Binding Customers}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search customers...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'Add Customer'}"
                                AddButtonTooltip="{loc:Loc 'Add Customer'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Customers}"
                                EmptyTitle="{loc:Loc 'No customers found'}"
                                EmptyMessage="{loc:Loc 'Add your first customer to start managing your customer relationships.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc Customer}" ColumnName="Customer" SortProperty="Name"
                                                   ColumnWidth="{Binding ColumnWidths.CustomerColumnWidth}"
                                                   IsColumnVisible="{Binding ShowCustomerColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Email}" ColumnName="Email" SortProperty="Email"
                                                   ColumnWidth="{Binding ColumnWidths.EmailColumnWidth}"
                                                   IsColumnVisible="{Binding ShowEmailColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Phone}" ColumnName="Phone" SortProperty="Phone"
                                                   ColumnWidth="{Binding ColumnWidths.PhoneColumnWidth}"
                                                   IsColumnVisible="{Binding ShowPhoneColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Address}" ColumnName="Address" SortProperty="Address"
                                                   ColumnWidth="{Binding ColumnWidths.AddressColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAddressColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Country}" ColumnName="Country" SortProperty="Country"
                                                   ColumnWidth="{Binding ColumnWidths.CountryColumnWidth}"
                                                   IsColumnVisible="{Binding ShowCountryColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Last Rental'}" ColumnName="LastRental" SortProperty="LastRental"
                                                   ColumnWidth="{Binding ColumnWidths.LastRentalColumnWidth}"
                                                   IsColumnVisible="{Binding ShowLastRentalColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Customers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:CustomerDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="52">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Customer Name with Avatar - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ShowCustomerColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20"
                                                            Background="{DynamicResource PrimaryBrush}" Margin="0,0,12,0">
                                                        <TextBlock Text="{Binding Initials}" FontSize="14" FontWeight="SemiBold"
                                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Text="{Binding Id}" FontSize="12"
                                                                   Foreground="{DynamicResource TextTertiaryBrush}" TextTrimming="CharacterEllipsis" />
                                                    </StackPanel>
                                                </Grid>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Simple text cells using ArgoTableCell -->
                                        <table:ArgoTableCell Text="{Binding Email}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.EmailColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ShowEmailColumn}" />

                                        <table:ArgoTableCell Text="{Binding Phone}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.PhoneColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ShowPhoneColumn}" />

                                        <table:ArgoTableCell Text="{Binding Address}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.AddressColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ShowAddressColumn}" />

                                        <table:ArgoTableCell Text="{Binding Country}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.CountryColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ShowCountryColumn}" />

                                        <table:ArgoTableCell Text="{Binding LastRentalFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.LastRentalColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ShowLastRentalColumn}" />

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="4">
                                                    <Button Classes="icon-button" ToolTip.Tip="{loc:Loc 'View History'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).OpenHistoryModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button" ToolTip.Tip="{loc:Loc Edit}"
                                                            Command="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}" Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger" ToolTip.Tip="{loc:Loc Delete}"
                                                            Command="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}" Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="{loc:Loc Customer}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowEmailColumn}" Content="{loc:Loc Email}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowPhoneColumn}" Content="{loc:Loc Phone}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAddressColumn}" Content="{loc:Loc Address}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCountryColumn}" Content="{loc:Loc Country}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowLastRentalColumn}" Content="{loc:Loc 'Last Rental'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>
</UserControl>
