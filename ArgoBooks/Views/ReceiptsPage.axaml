<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ReceiptsPage"
             x:DataType="vm:ReceiptsPageViewModel"
             DragDrop.AllowDrop="True">

    <Design.DataContext>
        <vm:ReceiptsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Receipts'}"
                                   Value="{Binding TotalReceipts}"
                                   Icon="{x:Static icons:Icons.Receipts}"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Expense Receipts'}"
                                   Value="{Binding ExpenseReceipts}"
                                   Icon="M20 12l-1.41-1.41L13 16.17V4h-2v12.17l-5.58-5.59L4 12l8 8 8-8z"
                                   IconColor="Danger" />
                <controls:StatCard Label="{loc:Loc 'Revenue Receipts'}"
                                   Value="{Binding RevenueReceipts}"
                                   Icon="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'AI Scanned'}"
                                   Value="{Binding AiScannedReceipts}"
                                   Icon="{x:Static icons:Icons.ScanReceipt}"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc 'Receipt Archive'}"
                                ItemsSource="{Binding Receipts}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search receipts...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding AiScanReceiptCommand}"
                                AddButtonText="{loc:Loc 'AI Scan Receipt'}"
                                AddButtonTooltip="{loc:Loc 'AI Scan Receipt'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Receipts}"
                                EmptyTitle="{loc:Loc 'No receipts found'}"
                                EmptyMessage="{loc:Loc 'Receipts from transactions will appear here. You can also scan receipts using AI.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- View Toggle Buttons -->
                <table:ArgoTable.ExtraButtonsContent>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Button Classes="view-toggle-button"
                                Classes.selected="{Binding IsGridView}"
                                Command="{Binding SetGridViewCommand}"
                                ToolTip.Tip="{loc:Loc 'Grid View'}">
                            <PathIcon Data="{x:Static icons:Icons.DashboardGrid}"
                                      Width="16" Height="16" />
                        </Button>
                        <Button Classes="view-toggle-button"
                                Classes.selected="{Binding IsListView}"
                                Command="{Binding SetListViewCommand}"
                                ToolTip.Tip="{loc:Loc 'List View'}">
                            <PathIcon Data="{x:Static icons:Icons.ListBullet}"
                                      Width="16" Height="16" />
                        </Button>
                    </StackPanel>
                </table:ArgoTable.ExtraButtonsContent>

                <!-- Table Header Content (List View Column Headers) - Using ArgoTableHeader -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal" IsVisible="{Binding IsListView}">
                        <!-- Selection Checkbox -->
                        <Panel Width="48" IsVisible="{Binding IsSelectionMode}">
                            <CheckBox IsChecked="{Binding IsAllSelected}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        </Panel>

                        <table:ArgoTableHeader Header="{loc:Loc 'Receipt #'}" ColumnName="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Supplier}" ColumnName="Supplier"
                                                   ColumnWidth="{Binding ColumnWidths.SupplierColumnWidth}"
                                                   IsColumnVisible="{Binding ShowSupplierColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Date}" ColumnName="Date"
                                                   ColumnWidth="{Binding ColumnWidths.DateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDateColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Type}" ColumnName="Type"
                                                   ColumnWidth="{Binding ColumnWidths.TypeColumnWidth}"
                                                   IsColumnVisible="{Binding ShowTypeColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Amount}" ColumnName="Amount"
                                                   ColumnWidth="{Binding ColumnWidths.AmountColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAmountColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content -->
                <table:ArgoTable.RowsContent>
                    <Panel>
                        <!-- Grid View -->
                        <ItemsControl ItemsSource="{Binding Receipts}"
                                      IsVisible="{Binding IsGridView}"
                                      Margin="24">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:ReceiptDisplayItem">
                                    <Border Width="260"
                                            Margin="0,0,16,16"
                                            Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="8"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            Cursor="Hand"
                                            Classes="receipt-card"
                                            Classes.selected="{Binding IsSelected}"
                                            PointerPressed="OnReceiptCardPressed">
                                        <Border.Styles>
                                            <Style Selector="Border.receipt-card:pointerover:not(.selected)">
                                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                                            </Style>
                                        </Border.Styles>
                                        <Grid RowDefinitions="Auto,Auto">
                                            <!-- File Preview Area -->
                                            <Border Grid.Row="0"
                                                    Height="140"
                                                    Background="{DynamicResource SurfaceBrush}"
                                                    CornerRadius="8,8,0,0"
                                                    ClipToBounds="True">
                                                <Panel>
                                                    <!-- Receipt Image (if available) -->
                                                    <Image Source="{Binding ImagePath, Converter={x:Static local:BoolConverters.ToImageSource}}"
                                                           Stretch="UniformToFill"
                                                           IsVisible="{Binding HasImage}" />

                                                    <!-- File Type Icon fallback (center) - shown when no image -->
                                                    <Panel HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           IsVisible="{Binding !HasImage}">
                                                        <!-- Image Icon -->
                                                        <PathIcon Data="{x:Static icons:Icons.Image}"
                                                                  Width="40" Height="40"
                                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                                  IsVisible="{Binding IsImage}" />
                                                        <!-- PDF Icon -->
                                                        <PathIcon Data="{x:Static icons:Icons.FilePdf}"
                                                                  Width="40" Height="40"
                                                                  Foreground="{DynamicResource ErrorBrush}"
                                                                  IsVisible="{Binding IsPdf}" />
                                                    </Panel>

                                                    <!-- Checkbox (top-left) -->
                                                    <CheckBox IsChecked="{Binding IsSelected}"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Top"
                                                              Margin="12,12,0,0" />

                                                    <!-- AI Badge (top-right) -->
                                                    <Border Background="{DynamicResource PurpleLightBrush}"
                                                            CornerRadius="4"
                                                            Padding="6,3"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="0,12,12,0"
                                                            IsVisible="{Binding IsAiScanned}">
                                                        <TextBlock Text="{loc:Loc 'AI'}"
                                                                   FontSize="10"
                                                                   FontWeight="Bold"
                                                                   Foreground="{DynamicResource PurpleDarkBrush}" />
                                                    </Border>
                                                </Panel>
                                            </Border>

                                            <!-- Receipt Details -->
                                            <StackPanel Grid.Row="1" Margin="16">
                                                <!-- ID and Date Row -->
                                                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding DateFormatted}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </Grid>

                                                <!-- Supplier Name -->
                                                <TextBlock Text="{Binding Supplier}"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,8" />

                                                <!-- Type Badge and Amount Row -->
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <!-- Type Badge -->
                                                    <Border CornerRadius="4"
                                                            Padding="8,4">
                                                        <Border.Background>
                                                            <MultiBinding>
                                                                <Binding Path="IsExpense" />
                                                            </MultiBinding>
                                                        </Border.Background>
                                                        <Border.Styles>
                                                            <Style Selector="Border">
                                                                <Setter Property="Background" Value="{DynamicResource SuccessLightBrush}" />
                                                            </Style>
                                                        </Border.Styles>
                                                        <Panel>
                                                            <Border Background="{DynamicResource ErrorLightBrush}"
                                                                    IsVisible="{Binding IsExpense}"
                                                                    CornerRadius="4"
                                                                    Margin="-8,-4"
                                                                    Padding="8,4">
                                                                <TextBlock Text="{loc:Loc 'Expense'}"
                                                                           FontSize="11"
                                                                           FontWeight="Medium"
                                                                           Foreground="{DynamicResource ErrorBrush}" />
                                                            </Border>
                                                            <Border Background="{DynamicResource SuccessLightBrush}"
                                                                    IsVisible="{Binding IsRevenue}"
                                                                    CornerRadius="4"
                                                                    Margin="-8,-4"
                                                                    Padding="8,4">
                                                                <TextBlock Text="{loc:Loc 'Revenue'}"
                                                                           FontSize="11"
                                                                           FontWeight="Medium"
                                                                           Foreground="{DynamicResource SuccessBrush}" />
                                                            </Border>
                                                        </Panel>
                                                    </Border>

                                                    <!-- Amount -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding AmountFormatted}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- List View (Table Rows) - Using ArgoTableCell -->
                        <ItemsControl ItemsSource="{Binding Receipts}"
                                      IsVisible="{Binding IsListView}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:ReceiptDisplayItem">
                                    <Border Padding="24,0"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,0,1"
                                            MinHeight="56"
                                            Classes="receipt-row"
                                            Classes.selected="{Binding IsSelected}"
                                            PointerPressed="OnReceiptRowPressed">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Selection Checkbox -->
                                            <Panel Width="48" IsVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).IsSelectionMode}">
                                                <CheckBox IsChecked="{Binding IsSelected}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                            </Panel>

                                            <!-- Receipt # - Custom content with ID and AI badge -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowIdColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <!-- AI Badge -->
                                                        <Border Background="{DynamicResource PurpleLightBrush}"
                                                                CornerRadius="4"
                                                                Padding="6,2"
                                                                IsVisible="{Binding IsAiScanned}">
                                                            <TextBlock Text="{loc:Loc 'AI'}"
                                                                       FontSize="10"
                                                                       FontWeight="Bold"
                                                                       Foreground="{DynamicResource PurpleDarkBrush}" />
                                                        </Border>
                                                    </StackPanel>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Supplier - Simple text -->
                                            <table:ArgoTableCell Text="{Binding Supplier}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.SupplierColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowSupplierColumn}" />

                                            <!-- Date - Simple text -->
                                            <table:ArgoTableCell Text="{Binding DateFormatted}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowDateColumn}" />

                                            <!-- Type Badge - Custom content -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.TypeColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowTypeColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <Panel VerticalAlignment="Center" HorizontalAlignment="Left">
                                                        <Border Background="{DynamicResource ErrorLightBrush}"
                                                                CornerRadius="4"
                                                                Padding="8,4"
                                                                IsVisible="{Binding IsExpense}">
                                                            <TextBlock Text="{loc:Loc 'Expense'}"
                                                                       FontSize="11"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource ErrorBrush}" />
                                                        </Border>
                                                        <Border Background="{DynamicResource SuccessLightBrush}"
                                                                CornerRadius="4"
                                                                Padding="8,4"
                                                                IsVisible="{Binding IsRevenue}">
                                                            <TextBlock Text="{loc:Loc 'Revenue'}"
                                                                       FontSize="11"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource SuccessBrush}" />
                                                        </Border>
                                                    </Panel>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Amount - Simple text -->
                                            <table:ArgoTableCell Text="{Binding AmountFormatted}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowAmountColumn}" />

                                            <!-- Actions - Custom content -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                     ShowSeparator="False">
                                                <table:ArgoTableCell.CellContent>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Spacing="4">
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="{loc:Loc 'Preview'}"
                                                                Command="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).OpenPreviewCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="{x:Static icons:Icons.Eye}"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="{loc:Loc 'Download'}"
                                                                Command="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).DownloadReceiptCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="{x:Static icons:Icons.ExportData}"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                    </StackPanel>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Panel>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>

    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'Receipt #'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowSupplierColumn}" Content="{loc:Loc 'Supplier'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc 'Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTypeColumn}" Content="{loc:Loc 'Type'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="{loc:Loc 'Amount'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>

    <!-- Drag-Drop Overlay -->
    <Border Background="#E0FFFFFF"
            IsVisible="{Binding IsDragOver}"
            IsHitTestVisible="False">
        <Border Background="{DynamicResource PrimaryLightBrush}"
                BorderBrush="{DynamicResource PrimaryBrush}"
                BorderThickness="3"
                CornerRadius="16"
                Margin="48"
                Padding="48">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16">
                <Border Width="80" Height="80"
                        CornerRadius="40"
                        Background="White"
                        HorizontalAlignment="Center">
                    <PathIcon Data="{x:Static icons:Icons.SmartInsights}"
                              Width="40" Height="40"
                              Foreground="{DynamicResource PrimaryBrush}" />
                </Border>
                <TextBlock Text="{loc:Loc 'Drop receipt to scan'}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{loc:Loc 'Release to analyze with AI'}"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Border>
    </Panel>

    <UserControl.Styles>
        <!-- View Toggle Button (page-specific) -->
        <Style Selector="Button.view-toggle-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.view-toggle-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <Style Selector="Button.view-toggle-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.view-toggle-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <!-- Selected state for view toggle button -->
        <Style Selector="Button.view-toggle-button.selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        </Style>
        <Style Selector="Button.view-toggle-button.selected PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.view-toggle-button.selected:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        </Style>

        <!-- Receipt card selected state -->
        <Style Selector="Border.receipt-card.selected">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <!-- Receipt row selected state -->
        <Style Selector="Border.receipt-row.selected">
            <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        </Style>

        <!-- Selection mode header styling -->
        <Style Selector="Border.selection-mode">
            <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        </Style>

        <!-- Icon button hover in selection mode header - use semi-transparent primary -->
        <Style Selector="Border.selection-mode Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryHoverLightBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
