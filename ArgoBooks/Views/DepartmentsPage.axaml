<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.DepartmentsPage"
             x:DataType="vm:DepartmentsPageViewModel">

    <UserControl.Resources>
        <local:DepartmentColorToBrushConverter x:Key="DepartmentColorToBrushConverter" />
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:DepartmentsPageViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="24">
        <!-- Statistics Cards (Row 0) -->
        <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
            <Grid.Styles>
                <Style Selector="Border.stat-card">
                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                    <Setter Property="CornerRadius" Value="12" />
                    <Setter Property="Padding" Value="20" />
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                    <Setter Property="BorderThickness" Value="1" />
                </Style>
            </Grid.Styles>

            <!-- Total Departments -->
            <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Border Grid.Column="0"
                            Width="48" Height="48"
                            CornerRadius="10"
                            Background="#DBEAFE"
                            Margin="0,0,16,0">
                        <PathIcon Data="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"
                                  Width="24" Height="24"
                                  Foreground="#3B82F6" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalDepartments}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="Total Departments"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Active Departments -->
            <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Border Grid.Column="0"
                            Width="48" Height="48"
                            CornerRadius="10"
                            Background="#DCFCE7"
                            Margin="0,0,16,0">
                        <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                  Width="24" Height="24"
                                  Foreground="#22C55E" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ActiveDepartments}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="Active Departments"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Employees -->
            <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Border Grid.Column="0"
                            Width="48" Height="48"
                            CornerRadius="10"
                            Background="#FEF3C7"
                            Margin="0,0,16,0">
                        <PathIcon Data="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"
                                  Width="24" Height="24"
                                  Foreground="#F59E0B" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalEmployees}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="Total Employees"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- New This Month -->
            <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Border Grid.Column="0"
                            Width="48" Height="48"
                            CornerRadius="10"
                            Background="#F3E8FF"
                            Margin="0,0,16,0">
                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                  Width="24" Height="24"
                                  Foreground="#A855F7" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding NewThisMonth}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="New This Month"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content Card (Row 1) -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">

            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header with Title, Search and Buttons -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Title -->
                        <TextBlock Grid.Column="0"
                                   Text="Departments"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" />

                        <!-- Search + Add Button (Right aligned) -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="12">
                            <!-- Search Box -->
                            <Border Background="{DynamicResource SurfaceAltBrush}"
                                    CornerRadius="6"
                                    Width="250">
                                <Grid ColumnDefinitions="Auto,*">
                                    <PathIcon Grid.Column="0"
                                              Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                              Width="16" Height="16"
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              Margin="12,0,8,0" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding SearchQuery, Mode=TwoWay}"
                                             Watermark="Search departments..."
                                             Classes="search-input" />
                                </Grid>
                            </Border>

                            <!-- Add Department Button -->
                            <Button Classes="primary-button"
                                    Command="{Binding OpenAddModalCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                              Width="16" Height="16"
                                              Foreground="White" />
                                    <TextBlock Text="Add Department" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Departments Table (Row 1) -->
                <Grid Grid.Row="1" RowDefinitions="Auto,*">
                    <!-- Table Header (fixed) -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12">
                        <Grid ColumnDefinitions="1.5*,2*,0.8*,120">
                            <!-- Department Column Header -->
                            <Button Grid.Column="0" Classes="column-header"
                                    Command="{Binding SortByCommand}" CommandParameter="Name">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Department" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <Panel Width="12" Height="12">
                                        <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextTertiaryBrush}">
                                            <PathIcon.IsVisible>
                                                <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                              ConverterParameter="Name:Ascending">
                                                    <Binding Path="SortColumn" />
                                                    <Binding Path="SortDirection" />
                                                </MultiBinding>
                                            </PathIcon.IsVisible>
                                        </PathIcon>
                                        <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextTertiaryBrush}">
                                            <PathIcon.IsVisible>
                                                <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                              ConverterParameter="Name:Descending">
                                                    <Binding Path="SortColumn" />
                                                    <Binding Path="SortDirection" />
                                                </MultiBinding>
                                            </PathIcon.IsVisible>
                                        </PathIcon>
                                    </Panel>
                                </StackPanel>
                            </Button>

                            <!-- Description Column Header -->
                            <Button Grid.Column="1" Classes="column-header"
                                    Command="{Binding SortByCommand}" CommandParameter="Description">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <Panel Width="12" Height="12">
                                        <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextTertiaryBrush}">
                                            <PathIcon.IsVisible>
                                                <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                              ConverterParameter="Description:Ascending">
                                                    <Binding Path="SortColumn" />
                                                    <Binding Path="SortDirection" />
                                                </MultiBinding>
                                            </PathIcon.IsVisible>
                                        </PathIcon>
                                        <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextTertiaryBrush}">
                                            <PathIcon.IsVisible>
                                                <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                              ConverterParameter="Description:Descending">
                                                    <Binding Path="SortColumn" />
                                                    <Binding Path="SortDirection" />
                                                </MultiBinding>
                                            </PathIcon.IsVisible>
                                        </PathIcon>
                                    </Panel>
                                </StackPanel>
                            </Button>

                            <!-- Employees Column Header -->
                            <Button Grid.Column="2" Classes="column-header"
                                    Command="{Binding SortByCommand}" CommandParameter="Employees">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Employees" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <Panel Width="12" Height="12">
                                        <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextTertiaryBrush}">
                                            <PathIcon.IsVisible>
                                                <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                              ConverterParameter="Employees:Ascending">
                                                    <Binding Path="SortColumn" />
                                                    <Binding Path="SortDirection" />
                                                </MultiBinding>
                                            </PathIcon.IsVisible>
                                        </PathIcon>
                                        <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextTertiaryBrush}">
                                            <PathIcon.IsVisible>
                                                <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                              ConverterParameter="Employees:Descending">
                                                    <Binding Path="SortColumn" />
                                                    <Binding Path="SortDirection" />
                                                </MultiBinding>
                                            </PathIcon.IsVisible>
                                        </PathIcon>
                                    </Panel>
                                </StackPanel>
                            </Button>

                            <!-- Actions Column Header (not sortable) -->
                            <TextBlock Grid.Column="3"
                                       Text="Actions"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       HorizontalAlignment="Right" />
                        </Grid>
                    </Border>

                    <!-- Table Content (scrollable) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Departments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:DepartmentDisplayItem">
                                    <Border Padding="24,16"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="1.5*,2*,0.8*,120">
                                            <!-- Department Name with Icon -->
                                            <StackPanel Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        Spacing="12">
                                                <Border Width="40" Height="40"
                                                        CornerRadius="8"
                                                        Background="{Binding IconColor, Converter={StaticResource DepartmentColorToBrushConverter}}">
                                                    <TextBlock Text="{Binding Icon}"
                                                               FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />
                                                </Border>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>

                                            <!-- Description -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Description, TargetNullValue='-', FallbackValue='-'}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis" />

                                            <!-- Employees Badge -->
                                            <Border Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Padding="8,4"
                                                    CornerRadius="4"
                                                    Background="#DBEAFE">
                                                <TextBlock Text="{Binding EmployeeCountDisplay}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           Foreground="#3B82F6" />
                                            </Border>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="3"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        Spacing="4">
                                                <Button Classes="icon-button"
                                                        ToolTip.Tip="Edit"
                                                        Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).OpenEditModalCommand}"
                                                        CommandParameter="{Binding}">
                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                              Width="16" Height="16" />
                                                </Button>
                                                <Button Classes="icon-button danger"
                                                        ToolTip.Tip="Delete"
                                                        Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                        CommandParameter="{Binding}">
                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                              Width="16" Height="16" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State (shown when no data) -->
                    <Border Grid.Row="1"
                            Padding="40"
                            IsVisible="{Binding Departments.Count, Converter={x:Static local:IntConverters.IsZero}}">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="16">
                            <Border Width="64" Height="64"
                                    CornerRadius="32"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    HorizontalAlignment="Center">
                                <PathIcon Data="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"
                                          Width="28" Height="28"
                                          Foreground="{DynamicResource TextTertiaryBrush}" />
                            </Border>
                            <TextBlock Text="No departments found"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Add your first department to organize your company structure."
                                       FontSize="14"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="300" />
                            <Button Classes="primary-button"
                                    HorizontalAlignment="Center"
                                    Margin="0,8,0,0"
                                    Command="{Binding OpenAddModalCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                              Width="16" Height="16"
                                              Foreground="White" />
                                    <TextBlock Text="Add Department" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Pagination Footer (Row 2 - fixed at bottom) -->
                <Border Grid.Row="2"
                        Background="{DynamicResource SurfaceAltBrush}"
                        Padding="24,12"
                        CornerRadius="0,0,11,11"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Rows per page selector -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding PaginationText}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="|"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0" />
                            <TextBlock Text="Rows per page:"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                      SelectedItem="{Binding PageSize}"
                                      Classes="page-size-combobox"
                                      Width="70" />
                        </StackPanel>

                        <!-- Page Numbers -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="4">
                            <!-- Previous Button -->
                            <Button Classes="pagination-button"
                                    Command="{Binding GoToPreviousPageCommand}"
                                    IsEnabled="{Binding CanGoToPreviousPage}">
                                <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                          Width="16" Height="16" />
                            </Button>

                            <!-- Page Number Buttons -->
                            <ItemsControl ItemsSource="{Binding PageNumbers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Classes="pagination-button"
                                                Content="{Binding}"
                                                Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).GoToPageCommand}"
                                                CommandParameter="{Binding}">
                                            <Button.Background>
                                                <MultiBinding Converter="{StaticResource PageActiveBackgroundConverter}">
                                                    <Binding />
                                                    <Binding Path="$parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).CurrentPage" />
                                                </MultiBinding>
                                            </Button.Background>
                                            <Button.Foreground>
                                                <MultiBinding Converter="{StaticResource PageActiveForegroundConverter}">
                                                    <Binding />
                                                    <Binding Path="$parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).CurrentPage" />
                                                </MultiBinding>
                                            </Button.Foreground>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Next Button -->
                            <Button Classes="pagination-button"
                                    Command="{Binding GoToNextPageCommand}"
                                    IsEnabled="{Binding CanGoToNextPage}">
                                <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                          Width="16" Height="16" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>

        <!-- Primary Button -->
        <Style Selector="Button.primary-button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.primary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.primary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Pagination Button -->
        <Style Selector="Button.pagination-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.pagination-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{TemplateBinding Background}" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
        <Style Selector="Button.pagination-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.pagination-button:disabled">
            <Setter Property="Opacity" Value="0.4" />
        </Style>
        <Style Selector="Button.pagination-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>
    </UserControl.Styles>
</UserControl>
