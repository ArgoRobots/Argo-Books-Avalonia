<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ExpensesPage"
             x:DataType="vm:ExpensesPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ExpensesPageViewModel />
    </Design.DataContext>

    <!-- Main Content -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards (Row 0) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>

                <!-- Total Monthly Expenses -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEE2E2"
                                Margin="0,0,16,0">
                            <PathIcon Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"
                                      Width="24" Height="24"
                                      Foreground="#DC2626" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalMonthlyExpenses}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Monthly Expenses"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Transactions -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DBEAFE"
                                Margin="0,0,16,0">
                            <PathIcon Data="M19 3h-4.18C14.4 1.84 13.3 1 12 1c-1.3 0-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm2 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                      Width="24" Height="24"
                                      Foreground="#3B82F6" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TransactionCount}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Transactions"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Receipts on File -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DCFCE7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                      Width="24" Height="24"
                                      Foreground="#22C55E" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ReceiptsOnFile}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Receipts on File"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Returns -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEF3C7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12.5 6.9c1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-.53.12-1.03.3-1.48.54l1.47 1.47c.41-.17.91-.27 1.51-.27zM5.33 4.06L4.06 5.33 7.5 8.77c0 2.08 1.56 3.22 3.91 3.91l3.51 3.51c-.34.49-1.05.91-2.42.91-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c.96-.18 1.83-.55 2.46-1.12l2.22 2.22 1.27-1.27L5.33 4.06z"
                                      Width="24" Height="24"
                                      Foreground="#F59E0B" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ReturnsCount}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Returns"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Expenses"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search expenses..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Expense Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Expense" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,*">
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12">
                            <Grid ColumnDefinitions="0.6*,0.8*,1.5*,0.8*,0.8*,0.7*,0.6*,0.5*,0.6*,80">
                                <!-- ID Column Header -->
                                <Button Grid.Column="0" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Id">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="ID" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Id:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Id:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Accountant Column Header -->
                                <Button Grid.Column="1" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Accountant">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Accountant" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Accountant:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Accountant:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Description Column Header -->
                                <Button Grid.Column="2" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Product">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Product:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Product:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Category Column Header -->
                                <Button Grid.Column="3" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Category">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Category" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Category:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Category:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Supplier Column Header -->
                                <Button Grid.Column="4" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Supplier">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Supplier" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Supplier:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Supplier:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Date Column Header -->
                                <Button Grid.Column="5" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Date">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Date" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Date:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Date:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Total Column Header -->
                                <Button Grid.Column="6" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Total">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Total" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Total:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Total:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Receipt - not sortable -->
                                <TextBlock Grid.Column="7"
                                           Text="Receipt"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center" />

                                <!-- Status Column Header -->
                                <Button Grid.Column="8" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Status">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Actions - not sortable -->
                                <TextBlock Grid.Column="9"
                                           Text="Actions"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Table Content (scrollable) -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Panel>
                                <!-- Expenses List -->
                                <ItemsControl ItemsSource="{Binding Expenses}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:ExpenseDisplayItem">
                                            <Border Padding="24,16"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid ColumnDefinitions="0.6*,0.8*,1.5*,0.8*,0.8*,0.7*,0.6*,0.5*,0.6*,80">
                                                    <!-- ID -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Id}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource PrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <!-- Accountant -->
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding AccountantName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <!-- Description -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding ProductDescription}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <!-- Category -->
                                                    <TextBlock Grid.Column="3"
                                                               Text="{Binding CategoryName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <!-- Supplier -->
                                                    <TextBlock Grid.Column="4"
                                                               Text="{Binding SupplierName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <!-- Date -->
                                                    <TextBlock Grid.Column="5"
                                                               Text="{Binding DateFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Total -->
                                                    <TextBlock Grid.Column="6"
                                                               Text="{Binding TotalFormatted}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="#DC2626"
                                                               VerticalAlignment="Center" />

                                                    <!-- Receipt Icon -->
                                                    <Panel Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                                  Width="16" Height="16"
                                                                  Foreground="#22C55E"
                                                                  IsVisible="{Binding HasReceipt}" />
                                                        <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                                                  Width="16" Height="16"
                                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                                  IsVisible="{Binding !HasReceipt}" />
                                                    </Panel>

                                                    <!-- Status Badge -->
                                                    <Border Grid.Column="8"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Padding="8,4"
                                                            CornerRadius="4"
                                                            Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToExpenseStatusBackground}}">
                                                        <TextBlock Text="{Binding StatusDisplay}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToExpenseStatusForeground}}" />
                                                    </Border>

                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="9"
                                                                Orientation="Horizontal"
                                                                HorizontalAlignment="Right"
                                                                Spacing="4">
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="Edit"
                                                                Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).OpenEditModalCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button danger"
                                                                ToolTip.Tip="Delete"
                                                                Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Expenses.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No expenses found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Add your first expense to start tracking your spending."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Add Expense" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                    </Grid>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>

        <!-- Primary Button -->
        <Style Selector="Button.primary-button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.primary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.primary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>

        <!-- Secondary Button -->
        <Style Selector="Button.secondary-button">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.secondary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
        </Style>
        <Style Selector="Button.secondary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Pagination Button -->
        <Style Selector="Button.pagination-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.pagination-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{TemplateBinding Background}" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
        <Style Selector="Button.pagination-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.pagination-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.pagination-button:disabled">
            <Setter Property="Opacity" Value="0.4" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
