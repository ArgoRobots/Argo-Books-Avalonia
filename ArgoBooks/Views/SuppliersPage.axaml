<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:icons="using:ArgoBooks"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.SuppliersPage"
             x:DataType="vm:SuppliersPageViewModel">

    <Design.DataContext>
        <vm:SuppliersPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Suppliers'}"
                                   Value="{Binding TotalSuppliers}"
                                   Icon="{x:Static icons:Icons.Departments}"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Active Suppliers'}"
                                   Value="{Binding ActiveSuppliers}"
                                   Icon="{x:Static icons:Icons.CircleCheck}"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Countries'}"
                                   Value="{Binding TotalCountries}"
                                   Icon="{x:Static icons:Icons.Globe}"
                                   IconColor="Warning" />
                <controls:StatCard Label="{loc:Loc 'Products Supplied'}"
                                   Value="{Binding TotalProductsSupplied}"
                                   Icon="{x:Static icons:Icons.Products}"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc Suppliers}"
                                ItemsSource="{Binding Suppliers}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search suppliers...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'Add Supplier'}"
                                AddButtonTooltip="{loc:Loc 'Add Supplier'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Suppliers}"
                                EmptyTitle="{loc:Loc 'No suppliers found'}"
                                EmptyMessage="{loc:Loc 'Add your first supplier to track vendors and manage your supply chain.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc Supplier}" ColumnName="Supplier" SortProperty="Name"
                                                   ColumnWidth="{Binding ColumnWidths.SupplierColumnWidth}"
                                                   IsColumnVisible="{Binding ShowSupplierColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Email}" ColumnName="Email" SortProperty="Email"
                                                   ColumnWidth="{Binding ColumnWidths.EmailColumnWidth}"
                                                   IsColumnVisible="{Binding ShowEmailColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Phone}" ColumnName="Phone" SortProperty="Phone"
                                                   ColumnWidth="{Binding ColumnWidths.PhoneColumnWidth}"
                                                   IsColumnVisible="{Binding ShowPhoneColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Address}" ColumnName="Address" SortProperty="Address"
                                                   ColumnWidth="{Binding ColumnWidths.AddressColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAddressColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Country}" ColumnName="Country" SortProperty="Country"
                                                   ColumnWidth="{Binding ColumnWidths.CountryColumnWidth}"
                                                   IsColumnVisible="{Binding ShowCountryColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Products}" ColumnName="Products" SortProperty="Products"
                                                   ColumnWidth="{Binding ColumnWidths.ProductsColumnWidth}"
                                                   IsColumnVisible="{Binding ShowProductsColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Status}" ColumnName="Status" SortProperty="Status"
                                                   ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStatusColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Suppliers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:SupplierDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="52">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Supplier Name with Avatar - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.SupplierColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ShowSupplierColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8"
                                                            Background="{DynamicResource PrimaryBrush}" Margin="0,0,12,0">
                                                        <TextBlock Text="{Binding Initials}" FontSize="14" FontWeight="SemiBold"
                                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Text="{Binding Id}" FontSize="12"
                                                                   Foreground="{DynamicResource TextTertiaryBrush}" TextTrimming="CharacterEllipsis" />
                                                    </StackPanel>
                                                </Grid>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Simple text cells using ArgoTableCell -->
                                        <table:ArgoTableCell Text="{Binding Email}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.EmailColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ShowEmailColumn}" />

                                        <table:ArgoTableCell Text="{Binding Phone}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.PhoneColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ShowPhoneColumn}" />

                                        <table:ArgoTableCell Text="{Binding Address}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.AddressColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ShowAddressColumn}" />

                                        <table:ArgoTableCell Text="{Binding Country}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.CountryColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ShowCountryColumn}" />

                                        <table:ArgoTableCell Text="{Binding ProductCount}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.ProductsColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ShowProductsColumn}" />

                                        <!-- Status Badge - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ShowStatusColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding IsActive, Converter={x:Static local:BoolConverters.ToStatusBackground}}">
                                                    <TextBlock Text="{Binding StatusText, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding IsActive, Converter={x:Static local:BoolConverters.ToStatusForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="4">
                                                    <Button Classes="icon-button" ToolTip.Tip="{loc:Loc Edit}"
                                                            Command="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}" Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger" ToolTip.Tip="{loc:Loc Delete}"
                                                            Command="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}" Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>

    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowSupplierColumn}" Content="{loc:Loc Supplier}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowEmailColumn}" Content="{loc:Loc Email}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowPhoneColumn}" Content="{loc:Loc Phone}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAddressColumn}" Content="{loc:Loc Address}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCountryColumn}" Content="{loc:Loc Country}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowProductsColumn}" Content="{loc:Loc Products}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc Status}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
