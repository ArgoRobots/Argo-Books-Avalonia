<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.PaymentsPage"
             x:DataType="vm:PaymentsPageViewModel">

    <Design.DataContext>
        <vm:PaymentsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Received This Month'}"
                                   Value="{Binding ReceivedThisMonth}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.95c1.86.45 2.79 1.86 2.85 3.39H14.3c-.05-1.11-.64-1.87-2.22-1.87-1.5 0-2.4.68-2.4 1.64 0 .84.65 1.39 2.67 1.91s4.18 1.39 4.18 3.91c-.01 1.83-1.38 2.83-3.12 3.16z"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Transactions'}"
                                   Value="{Binding TotalTransactions}"
                                   Icon="{x:Static icons:Icons.Payments}"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Pending'}"
                                   Value="{Binding PendingPayments}"
                                   Icon="{x:Static icons:Icons.Refresh}"
                                   IconColor="Info" />
                <controls:StatCard Label="{loc:Loc 'Refunds'}"
                                   Value="{Binding RefundedPayments}"
                                   Icon="{x:Static icons:Icons.Returns}"
                                   IconColor="Warning" />
            </controls:StatCardsRow>

            <!-- Payment Portal Section (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    Padding="20"
                    Margin="0,0,0,24">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Portal Icon -->
                    <Border Grid.Column="0"
                            Width="48" Height="48"
                            CornerRadius="10"
                            Background="{DynamicResource PrimaryIconBgBrush}"
                            Margin="0,0,16,0"
                            VerticalAlignment="Center">
                        <PathIcon Data="{x:Static icons:Icons.Globe}"
                                  Width="24" Height="24"
                                  Foreground="{DynamicResource PrimaryBrush}" />
                    </Border>

                    <!-- Portal Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{loc:Loc 'Payment Portal'}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Border Background="{DynamicResource SuccessIconBgBrush}"
                                    CornerRadius="4"
                                    Padding="8,4">
                                <TextBlock Text="{loc:Loc 'Connected'}"
                                           FontSize="11"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SuccessBrush}" />
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{loc:Loc 'When customers receive invoices, they can pay through your online portal. Payments sync automatically.'}"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" />
                        <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,4,0,0">
                            <PathIcon Data="{x:Static icons:Icons.Clock}"
                                      Width="14" Height="14"
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                            <TextBlock Text="{Binding LastSyncTime, StringFormat='Last synced: {0}'}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Portal Actions -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="12"
                                VerticalAlignment="Center">
                        <Button Classes="secondary-button"
                                Command="{Binding SyncPortalCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Classes.sync-spinning="{Binding IsSyncing}"
                                          Data="{x:Static icons:Icons.Refresh}"
                                          Width="16" Height="16"
                                          RenderTransformOrigin="50%,50%">
                                    <PathIcon.RenderTransform>
                                        <RotateTransform />
                                    </PathIcon.RenderTransform>
                                </PathIcon>
                                <TextBlock Text="{loc:Loc 'Sync Now'}" />
                            </StackPanel>
                        </Button>
                        <Button Classes="primary-button"
                                Command="{Binding OpenPortalCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"
                                          Width="16" Height="16"
                                          Foreground="White" />
                                <TextBlock Text="{loc:Loc 'Open Portal'}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="2"
                                Title="{loc:Loc Payments}"
                                ItemsSource="{Binding Payments}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search payments...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'Record Payment'}"
                                AddButtonTooltip="{loc:Loc 'Record Payment'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Payments}"
                                EmptyTitle="{loc:Loc 'No payments found'}"
                                EmptyMessage="{loc:Loc 'Record your first payment to start tracking your transactions.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc 'Payment ID'}" ColumnName="Id" SortProperty="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Invoice}" ColumnName="Invoice" SortProperty="Invoice"
                                                   ColumnWidth="{Binding ColumnWidths.InvoiceColumnWidth}"
                                                   IsColumnVisible="{Binding ShowInvoiceColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Customer}" ColumnName="Customer" SortProperty="Customer"
                                                   ColumnWidth="{Binding ColumnWidths.CustomerColumnWidth}"
                                                   IsColumnVisible="{Binding ShowCustomerColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Date}" ColumnName="Date" SortProperty="Date"
                                                   ColumnWidth="{Binding ColumnWidths.DateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Method}" ColumnName="Method" SortProperty="Method"
                                                   ColumnWidth="{Binding ColumnWidths.MethodColumnWidth}"
                                                   IsColumnVisible="{Binding ShowMethodColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Amount}" ColumnName="Amount" SortProperty="Amount"
                                                   ColumnWidth="{Binding ColumnWidths.AmountColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAmountColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Status}" ColumnName="Status" SortProperty="Status"
                                                   ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStatusColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Payments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:PaymentDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="56">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Payment ID - Simple text cell -->
                                        <table:ArgoTableCell Text="{Binding Id}" FontWeight="Medium"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ShowIdColumn}" />

                                        <!-- Invoice - Simple text cell -->
                                        <table:ArgoTableCell Text="{Binding InvoiceDisplay}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.InvoiceColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ShowInvoiceColumn}" />

                                        <!-- Customer - Simple text cell -->
                                        <table:ArgoTableCell Text="{Binding CustomerName}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ShowCustomerColumn}" />

                                        <!-- Date - Simple text cell -->
                                        <table:ArgoTableCell Text="{Binding DateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ShowDateColumn}" />

                                        <!-- Method - Simple text cell -->
                                        <table:ArgoTableCell Text="{Binding PaymentMethodDisplay}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.MethodColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ShowMethodColumn}" />

                                        <!-- Amount - Custom content with conditional color -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ShowAmountColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding AmountFormatted}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis">
                                                    <TextBlock.Foreground>
                                                        <Binding Path="IsRefund">
                                                            <Binding.Converter>
                                                                <local:BoolToColorConverter TrueColor="#DC2626" FalseColor="default" />
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Status Badge - Custom content -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ShowStatusColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding Status, Converter={x:Static local:StringConverters.ToPaymentTransactionStatusBackground}}">
                                                    <TextBlock Text="{Binding Status, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding Status, Converter={x:Static local:StringConverters.ToPaymentTransactionStatusForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="4">
                                                    <Button Classes="icon-button" ToolTip.Tip="{loc:Loc Edit}"
                                                            Command="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}" Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger" ToolTip.Tip="{loc:Loc Delete}"
                                                            Command="{Binding $parent[ItemsControl].((vm:PaymentsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}" Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>

    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'Payment ID'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowInvoiceColumn}" Content="{loc:Loc 'Invoice'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="{loc:Loc 'Customer'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc 'Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowMethodColumn}" Content="{loc:Loc 'Method'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="{loc:Loc 'Amount'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc 'Status'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
