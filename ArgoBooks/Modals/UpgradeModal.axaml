<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="ArgoBooks.Modals.UpgradeModal"
             x:DataType="vm:UpgradeModalViewModel">

    <Design.DataContext>
        <vm:UpgradeModalViewModel />
    </Design.DataContext>

    <Panel>
        <!-- Upgrade Modal -->
        <Panel IsVisible="{Binding IsOpen}">
            <!-- Backdrop with fade animation -->
            <Border Background="#80000000">
                <Border.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                    </Transitions>
                </Border.Transitions>
            </Border>

            <!-- Modal with scale animation -->
            <Border x:Name="ModalBorder"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="680"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000"
                    Opacity="0"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                </Border.RenderTransform>
                <Border.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                    </Transitions>
                </Border.Transitions>

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                       Text="Upgrade Your Plan"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Body -->
                    <ScrollViewer Grid.Row="1">
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="16" Margin="24">
                            <!-- Standard Plan -->
                            <Border Grid.Column="0" Classes="plan-card">
                                <Grid RowDefinitions="Auto,*,Auto">
                                    <!-- Plan Header -->
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                            <Border Width="48" Height="48"
                                                    CornerRadius="8"
                                                    ClipToBounds="True">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                                        <GradientStop Color="#fbbf24" Offset="0" />
                                                        <GradientStop Color="#f59e0b" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <PathIcon Data="M12 1l3.09 6.26L22 8.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 1z"
                                                          Width="24" Height="24"
                                                          Foreground="White" />
                                            </Border>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Standard"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="$20 CAD"
                                                               FontSize="20"
                                                               FontWeight="Bold"
                                                               Foreground="{DynamicResource PrimaryBrush}" />
                                                    <TextBlock Text=" one-time"
                                                               FontSize="13"
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               VerticalAlignment="Bottom"
                                                               Margin="0,0,0,2" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <!-- Active Badge (when has Standard but not Premium) -->
                                        <Border Grid.Column="2"
                                                Background="#22C55E"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                VerticalAlignment="Top"
                                                IsVisible="{Binding ShowStandardActive}">
                                            <TextBlock Text="Active"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="White" />
                                        </Border>
                                        <!-- Included Badge (when has Premium) -->
                                        <Border Grid.Column="2"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                VerticalAlignment="Top"
                                                IsVisible="{Binding ShowStandardIncluded}">
                                            <TextBlock Text="Included"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                        </Border>
                                    </Grid>

                                    <!-- Features -->
                                    <StackPanel Grid.Row="1" Spacing="0" Margin="0,16,0,16" VerticalAlignment="Top">
                                        <Border Classes="feature-item">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="Unlimited Products" />
                                            </Grid>
                                        </Border>
                                        <Border Classes="feature-item">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="Biometric Login Security" />
                                            </Grid>
                                        </Border>
                                        <Border Classes="feature-item">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="Priority Support" />
                                            </Grid>
                                        </Border>
                                        <Border Classes="feature-item" BorderThickness="0">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="Lifetime Updates" />
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <!-- Select Button (only when no plan) -->
                                    <Button Grid.Row="2"
                                            Classes="primary-button"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            Command="{Binding SelectStandardCommand}"
                                            Content="Select Standard"
                                            IsVisible="{Binding ShowSelectStandard}" />
                                </Grid>
                            </Border>

                            <!-- Premium Plan -->
                            <Border Grid.Column="1" Classes="plan-card">
                                <Grid RowDefinitions="Auto,*,Auto">
                                    <!-- Plan Header -->
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                            <Border Width="48" Height="48"
                                                    CornerRadius="8"
                                                    ClipToBounds="True">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                                        <GradientStop Color="#8b5cf6" Offset="0" />
                                                        <GradientStop Color="#6366f1" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <PathIcon Data="M20 9V7c0-1.1-.9-2-2-2h-3c0-1.66-1.34-3-3-3S9 3.34 9 5H6c-1.1 0-2 .9-2 2v2c-1.66 0-3 1.34-3 3s1.34 3 3 3v4c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2v-4c1.66 0 3-1.34 3-3s-1.34-3-3-3zM7.5 11.5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5S9.83 13 9 13s-1.5-.67-1.5-1.5zM16 17H8v-2h8v2zm-1-4c-.83 0-1.5-.67-1.5-1.5S14.17 10 15 10s1.5.67 1.5 1.5S15.83 13 15 13z"
                                                          Width="24" Height="24"
                                                          Foreground="White" />
                                            </Border>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Premium"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="$5 CAD"
                                                               FontSize="20"
                                                               FontWeight="Bold"
                                                               Foreground="{DynamicResource PrimaryBrush}" />
                                                    <TextBlock Text="/month"
                                                               FontSize="13"
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               VerticalAlignment="Bottom"
                                                               Margin="0,0,0,2" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <!-- Active Badge (when has Premium) -->
                                        <Border Grid.Column="2"
                                                Background="#22C55E"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                VerticalAlignment="Top"
                                                IsVisible="{Binding ShowPremiumActive}">
                                            <TextBlock Text="Active"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="White" />
                                        </Border>
                                    </Grid>

                                    <!-- Features -->
                                    <StackPanel Grid.Row="1" Spacing="0" Margin="0,16,0,16" VerticalAlignment="Top">
                                        <Border Classes="feature-item">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="Everything in Standard" />
                                            </Grid>
                                        </Border>
                                        <Border Classes="feature-item">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="Invoices &amp; payments" />
                                            </Grid>
                                        </Border>
                                        <Border Classes="feature-item">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="AI Receipt Scanning" />
                                            </Grid>
                                        </Border>
                                        <Border Classes="feature-item">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="Predictive Sales Analysis" />
                                            </Grid>
                                        </Border>
                                        <Border Classes="feature-item" BorderThickness="0">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <PathIcon Grid.Column="0"
                                                          Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                          Width="14" Height="14"
                                                          Foreground="#22C55E"
                                                          Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="AI Business Insights" />
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Spacing="8">
                                        <!-- Select Premium Button (only when doesn't have Premium) -->
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center"
                                                Command="{Binding SelectPremiumCommand}"
                                                Content="Select Premium"
                                                IsVisible="{Binding ShowSelectPremium}" />
                                        <Button Classes="secondary-button"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center"
                                                Command="{Binding CancelSubscriptionCommand}"
                                                Content="Cancel Subscription"
                                                IsVisible="{Binding ShowCancelPremium}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Button Classes="primary-button"
                                HorizontalAlignment="Right"
                                HorizontalContentAlignment="Center"
                                Command="{Binding OpenEnterKeyCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="M12.65 10C11.83 7.67 9.61 6 7 6c-3.31 0-6 2.69-6 6s2.69 6 6 6c2.61 0 4.83-1.67 5.65-4H17v4h4v-4h2v-4H12.65zM7 14c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"
                                          Width="16" Height="16" />
                                <TextBlock Text="Enter a Key" />
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- Enter Key Modal -->
        <Panel IsVisible="{Binding IsEnterKeyModalOpen}">
            <Border Background="#80000000" />

            <Border x:Name="EnterKeyModalBorder"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="420"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">

                <Panel>
                    <!-- Normal Entry View -->
                    <Grid RowDefinitions="Auto,*,Auto"
                          IsVisible="{Binding !IsVerificationSuccess}">
                        <!-- Header -->
                        <Border Grid.Row="0"
                                Padding="24,20"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0"
                                           Text="Enter License Key"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <Button Grid.Column="1"
                                        Classes="icon-button"
                                        Command="{Binding CloseEnterKeyCommand}">
                                    <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                              Width="20" Height="20" />
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Body -->
                        <StackPanel Grid.Row="1" Margin="24" Spacing="16">
                            <TextBlock Text="Enter your license key to activate your premium features."
                                       FontSize="14"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" />

                            <StackPanel Spacing="6">
                                <TextBlock Text="License Key"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox x:Name="LicenseKeyTextBox"
                                         Text="{Binding LicenseKey, Mode=TwoWay}"
                                         Watermark="XXXX-XXXX-XXXX-XXXX-XXXX"
                                         MaxLength="24"
                                         TextChanged="LicenseKeyTextBox_TextChanged"
                                         Classes="form-input license-key" />
                            </StackPanel>

                            <TextBlock Text="{Binding VerificationError}"
                                       FontSize="13"
                                       Foreground="{DynamicResource DangerBrush}"
                                       IsVisible="{Binding VerificationError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>

                        <!-- Footer -->
                        <Border Grid.Row="2"
                                Padding="24,16"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Spacing="12">
                                <Button Classes="secondary-button"
                                        Content="Cancel"
                                        Command="{Binding CloseEnterKeyCommand}" />
                                <Button Classes="primary-button"
                                        Command="{Binding VerifyKeyCommand}"
                                        IsEnabled="{Binding !IsVerifying}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                  Width="16" Height="16"
                                                  IsVisible="{Binding !IsVerifying}" />
                                        <TextBlock Text="Verify Key" IsVisible="{Binding !IsVerifying}" />
                                        <TextBlock Text="Verifying..." IsVisible="{Binding IsVerifying}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Success Animation View -->
                    <StackPanel IsVisible="{Binding IsVerificationSuccess}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="24"
                                Margin="48">
                        <!-- Animated Success Circle with Glow -->
                        <Panel HorizontalAlignment="Center">
                            <!-- Glow effect behind the circle -->
                            <Border x:Name="SuccessGlow"
                                    Width="120" Height="120"
                                    CornerRadius="60"
                                    Opacity="0.4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#22C55E" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="1" />
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0" ScaleY="0" />
                                </Border.RenderTransform>
                            </Border>
                            <!-- Main circle -->
                            <Border x:Name="SuccessCircle"
                                    Width="100" Height="100"
                                    CornerRadius="50"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ClipToBounds="True"
                                    BoxShadow="0 4 20 0 #4022C55E">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                        <GradientStop Color="#22C55E" Offset="0" />
                                        <GradientStop Color="#16A34A" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0" ScaleY="0" />
                                </Border.RenderTransform>
                                <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                          Width="48" Height="48"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                            </Border>
                        </Panel>

                        <!-- Success Text -->
                        <StackPanel x:Name="SuccessTextPanel" Spacing="8" HorizontalAlignment="Center" Opacity="0">
                            <StackPanel.RenderTransform>
                                <TranslateTransform Y="20" />
                            </StackPanel.RenderTransform>
                            <TextBlock Text="License Activated!"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#22C55E"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding SuccessMessage}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="300" />
                        </StackPanel>

                        <!-- Continue Button (appears after 2 seconds with animation) -->
                        <Panel x:Name="ContinueButtonPanel"
                               HorizontalAlignment="Center"
                               Opacity="0"
                               IsHitTestVisible="{Binding ShowContinueButton}">
                            <Panel.RenderTransform>
                                <TranslateTransform Y="20" />
                            </Panel.RenderTransform>
                            <Button Classes="primary-button"
                                    Content="Continue"
                                    Command="{Binding ContinueAfterSuccessCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="32,12" />
                        </Panel>
                    </StackPanel>
                </Panel>
            </Border>
        </Panel>
    </Panel>

    <UserControl.Styles>
        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Plan Card -->
        <Style Selector="Border.plan-card">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
        </Style>

        <!-- Feature Item -->
        <Style Selector="Border.feature-item">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Padding" Value="0,8" />
        </Style>
        <Style Selector="Border.feature-item TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Outline Button -->
        <Style Selector="Button.outline-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.outline-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.outline-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.outline-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Form Input -->
        <Style Selector="TextBox.form-input">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TextBox.form-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>
        <Style Selector="TextBox.form-input:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="TextBox.form-input:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderHoverBrush}" />
        </Style>
        <Style Selector="TextBox.license-key">
            <Setter Property="FontFamily" Value="Consolas, monospace" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="LetterSpacing" Value="2" />
        </Style>
    </UserControl.Styles>
</UserControl>
