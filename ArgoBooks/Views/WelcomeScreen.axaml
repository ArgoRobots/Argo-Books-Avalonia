<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.WelcomeScreen"
             x:DataType="vm:WelcomeScreenViewModel"
             Background="{DynamicResource BackgroundBrush}">

    <Design.DataContext>
        <vm:WelcomeScreenViewModel />
    </Design.DataContext>

    <Grid>
        <!-- Background gradient/pattern -->
        <Border Background="{DynamicResource BackgroundSecondaryBrush}"
                Opacity="0.5" />

        <!-- Window Drag Region (at top, behind content but interactive) -->
        <Border x:Name="TitleBarDragRegion"
                Height="40"
                VerticalAlignment="Top"
                Background="Transparent"
                IsHitTestVisible="True"
                ZIndex="1" />

        <!-- Main Content -->
        <ScrollViewer x:Name="MainScrollViewer"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="900"
                        Margin="40,60">

                <!-- Logo and Welcome -->
                <StackPanel HorizontalAlignment="Center"
                            Margin="0,0,0,48">
                    <!-- App Logo -->
                    <Border Width="80" Height="80"
                            CornerRadius="16"
                            Background="{DynamicResource PrimaryBrush}"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,24">
                        <PathIcon Data="{x:Static icons:Icons.DocumentNotes}"
                                  Width="40" Height="40"
                                  Foreground="White" />
                    </Border>

                    <!-- Welcome Text -->
                    <TextBlock Text="{loc:Loc 'Welcome to Argo Books'}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{loc:Loc 'Simple, powerful bookkeeping for your business'}"
                               FontSize="16"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0" />
                </StackPanel>

                <!-- Main Actions - Normal Mode (two columns) -->
                <UniformGrid Rows="1" Columns="2"
                             Margin="0,0,0,48"
                             IsVisible="{Binding ShowOpenCompany}">
                    <!-- Create New Company -->
                    <Border Classes="action-card"
                            Margin="0,0,12,0">
                        <Button Classes="action-card-button"
                                Command="{Binding CreateNewCompanyCommand}">
                            <StackPanel Spacing="16">
                                <Border Width="64" Height="64"
                                        CornerRadius="32"
                                        Background="{DynamicResource PrimaryLightBrush}">
                                    <PathIcon Data="{x:Static local:Icons.Add}"
                                              Width="28" Height="28"
                                              Foreground="{DynamicResource PrimaryBrush}" />
                                </Border>
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{loc:Loc 'Create New Company'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="{loc:Loc 'Start fresh with a new company file'}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Open Existing Company -->
                    <Border Classes="action-card"
                            Margin="12,0,0,0">
                        <Button Classes="action-card-button"
                                Command="{Binding OpenCompanyCommand}">
                            <StackPanel Spacing="16">
                                <Border Width="64" Height="64"
                                        CornerRadius="32"
                                        Background="#E6F4EA">
                                    <PathIcon Data="{x:Static local:Icons.Folder}"
                                              Width="28" Height="28"
                                              Foreground="{DynamicResource SuccessBrush}" />
                                </Border>
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{loc:Loc 'Open Company'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="{loc:Loc 'Open an existing company file'}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </Border>
                </UniformGrid>

                <!-- Tutorial Mode Guidance Banner (shown above create company card) -->
                <Border Classes="tutorial-banner"
                        IsVisible="{Binding IsTutorialMode}"
                        Margin="0,0,0,24">
                    <StackPanel Spacing="12">
                        <!-- Tutorial message -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="12">
                            <Border Width="40" Height="40"
                                    CornerRadius="20"
                                    Background="White">
                                <PathIcon Data="{x:Static local:Icons.Help}"
                                          Width="20" Height="20"
                                          Foreground="{DynamicResource PrimaryBrush}" />
                            </Border>
                            <StackPanel VerticalAlignment="Center"
                                        Spacing="2">
                                <TextBlock Text="{loc:Loc 'A tutorial will guide you through the setup'}"
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="#1E293B" />
                                <TextBlock Text="{loc:Loc 'Create a new company below to get started'}"
                                           FontSize="13"
                                           Foreground="#64748B" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Skip tutorial button -->
                        <Button Classes="skip-tutorial-button"
                                Command="{Binding SkipTutorialCommand}"
                                HorizontalAlignment="Center">
                            <TextBlock Text="{loc:Loc 'Skip Tutorial'}" />
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Main Action - Tutorial Mode (single centered card) -->
                <Border Classes="action-card"
                        HorizontalAlignment="Center"
                        MaxWidth="350"
                        Margin="0,0,0,48"
                        IsVisible="{Binding IsTutorialMode}">
                    <Button Classes="action-card-button"
                            Command="{Binding CreateNewCompanyCommand}">
                        <StackPanel Spacing="16">
                            <Border Width="64" Height="64"
                                    CornerRadius="32"
                                    Background="{DynamicResource PrimaryLightBrush}">
                                <PathIcon Data="{x:Static local:Icons.Add}"
                                          Width="28" Height="28"
                                          Foreground="{DynamicResource PrimaryBrush}" />
                            </Border>
                            <StackPanel Spacing="4">
                                <TextBlock Text="{loc:Loc 'Create New Company'}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{loc:Loc 'Start fresh with a new company file'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Recent Companies Section -->
                <Border Classes="section-card"
                        IsVisible="{Binding ShowRecentCompanies}"
                        Margin="0,0,0,32">
                    <StackPanel>
                        <!-- Section Header -->
                        <Grid ColumnDefinitions="*,Auto"
                              Margin="0,0,0,16">
                            <TextBlock Grid.Column="0"
                                       Text="{loc:Loc 'Recent Companies'}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1"
                                    Classes="text-link"
                                    Content="{loc:Loc 'Clear All'}"
                                    Command="{Binding ClearRecentCommand}" />
                        </Grid>

                        <!-- Recent List -->
                        <ItemsControl ItemsSource="{Binding RecentCompanies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:RecentCompanyItem">
                                    <Button Classes="recent-item"
                                            Command="{Binding $parent[ItemsControl].((vm:WelcomeScreenViewModel)DataContext).OpenRecentCompanyCommand}"
                                            CommandParameter="{Binding}">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                            <!-- Icon / Logo -->
                                            <Border Grid.Column="0"
                                                    Width="44" Height="44"
                                                    CornerRadius="8"
                                                    ClipToBounds="True"
                                                    Background="{DynamicResource SurfaceAltBrush}"
                                                    Margin="0,0,16,0">
                                                <Panel>
                                                    <Image Source="{Binding Logo}"
                                                           Stretch="UniformToFill"
                                                           IsVisible="{Binding HasLogo}" />
                                                    <PathIcon Data="{x:Static local:Icons.Departments}"
                                                              Width="22" Height="22"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                                              IsVisible="{Binding !HasLogo}" />
                                                </Panel>
                                            </Border>

                                            <!-- Company Info -->
                                            <StackPanel Grid.Column="1"
                                                        VerticalAlignment="Center"
                                                        Spacing="2">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <TextBlock Text="{Binding FilePath}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>

                                            <!-- Last Opened -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding LastOpened, StringFormat={}{0:MMM d}}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="16,0" />

                                            <!-- Remove Button -->
                                            <Button Grid.Column="3"
                                                    Classes="icon-button-small"
                                                    Command="{Binding $parent[ItemsControl].((vm:WelcomeScreenViewModel)DataContext).RemoveFromRecentCommand}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip.Tip="{loc:Loc 'Remove from recent'}">
                                                <PathIcon Data="{x:Static local:Icons.Close}"
                                                          Width="14" Height="14" />
                                            </Button>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Sample Company -->
                <Border Classes="sample-card"
                        Margin="0,0,0,32"
                        IsVisible="{Binding ShowSampleCompany}">
                    <Button Classes="sample-button"
                            Command="{Binding OpenSampleCompanyCommand}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Icon -->
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="24"
                                    Background="{DynamicResource WarningLightBrush}"
                                    Margin="0,0,16,0">
                                <PathIcon Data="{x:Static local:Icons.Star}"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource WarningBrush}" />
                            </Border>

                            <!-- Text -->
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Spacing="2">
                                <TextBlock Text="{loc:Loc 'Explore Sample Company'}"
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{loc:Loc 'See how Argo Books works with pre-populated data'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>

                            <!-- Arrow -->
                            <PathIcon Grid.Column="2"
                                      Data="{x:Static local:Icons.ChevronRightNav}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                      VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                </Border>

                <!-- Footer Links -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="24">
                    <Button Classes="footer-link"
                            Command="{Binding OpenHelpCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="{x:Static local:Icons.Help}"
                                      Width="16" Height="16" />
                            <TextBlock Text="{loc:Loc 'Help &amp; Support'}" />
                        </StackPanel>
                    </Button>
                    <Button Classes="footer-link"
                            Command="{Binding OpenWhatsNewCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="{x:Static icons:Icons.ChatBubble}"
                                      Width="16" Height="16" />
                            <TextBlock Text="{loc:Loc 'What''s New'}" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Version -->
                <TextBlock Text="{Binding AppVersion}"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0" />
            </StackPanel>
        </ScrollViewer>
    </Grid>

    <UserControl.Styles>
        <!-- Action Card -->
        <Style Selector="Border.action-card">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style Selector="Button.action-card-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="32" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.action-card-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.action-card-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Section Card -->
        <Style Selector="Border.section-card">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="24" />
        </Style>

        <!-- Recent Item -->
        <Style Selector="Button.recent-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,0,0,4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.recent-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.recent-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Sample Card -->
        <Style Selector="Border.sample-card">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
        </Style>

        <Style Selector="Button.sample-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sample-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sample-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Text Link -->
        <Style Selector="Button.text-link">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.text-link /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.text-link:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>


        <!-- Footer Link -->
        <Style Selector="Button.footer-link">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.footer-link /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.footer-link:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.footer-link PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.footer-link:pointerover PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Tutorial Banner -->
        <Style Selector="Border.tutorial-banner">
            <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="24" />
            <Setter Property="Opacity" Value="0.95" />
        </Style>

        <!-- Skip Tutorial Button -->
        <Style Selector="Button.skip-tutorial-button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CBD5E1" />
            <Setter Property="Foreground" Value="#475569" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.skip-tutorial-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="White" />
        </Style>
        <Style Selector="Button.skip-tutorial-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#F1F5F9" />
        </Style>
        <Style Selector="Button.skip-tutorial-button:pointerover">
            <Setter Property="Foreground" Value="#1E293B" />
            <Setter Property="BorderBrush" Value="#94A3B8" />
        </Style>
        <Style Selector="Button.skip-tutorial-button TextBlock">
            <Setter Property="Foreground" Value="#475569" />
        </Style>
        <Style Selector="Button.skip-tutorial-button:pointerover TextBlock">
            <Setter Property="Foreground" Value="#1E293B" />
        </Style>
    </UserControl.Styles>
</UserControl>
