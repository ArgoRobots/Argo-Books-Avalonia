<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="ArgoBooks.Controls.Reports.ReportPreviewControl"
             Background="#E0E0E0">

    <UserControl.Styles>
        <!-- Zoom button style -->
        <Style Selector="Button.zoom-button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style Selector="Button.zoom-button:pointerover">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*">

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid ColumnDefinitions="*,Auto,*">

                <!-- Page info (left) -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="8"
                            VerticalAlignment="Center">
                    <TextBlock Text="{loc:Loc Page}"
                               VerticalAlignment="Center"
                               Foreground="#616161"/>
                    <NumericUpDown x:Name="PageNumberInput"
                                   Value="1"
                                   Minimum="1"
                                   Width="70"
                                   FormatString="F0"
                                   ValueChanged="OnPageNumberChanged"/>
                    <TextBlock x:Name="TotalPagesText"
                               Text="{loc:Loc 'of 1'}"
                               VerticalAlignment="Center"
                               Foreground="#616161"/>

                    <Border Width="1" Height="20" Background="#E0E0E0" Margin="8,0"/>

                    <Button Classes="zoom-button"
                            Click="OnPreviousPageClick"
                            ToolTip.Tip="{loc:Loc 'Previous Page'}">
                        <PathIcon Width="16" Height="16"
                                  Data="{x:Static icons:Icons.ChevronLeftAlt}"/>
                    </Button>
                    <Button Classes="zoom-button"
                            Click="OnNextPageClick"
                            ToolTip.Tip="{loc:Loc 'Next Page'}">
                        <PathIcon Width="16" Height="16"
                                  Data="{x:Static icons:Icons.ChevronRightAlt}"/>
                    </Button>
                </StackPanel>

                <!-- Zoom controls (center) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="4"
                            HorizontalAlignment="Center">
                    <Button Classes="zoom-button"
                            Click="OnZoomOutClick"
                            ToolTip.Tip="{loc:Loc 'Zoom Out'}">
                        <PathIcon Width="16" Height="16"
                                  Data="{x:Static icons:Icons.MinusAlt}"/>
                    </Button>

                    <ComboBox x:Name="ZoomComboBox"
                              Width="100"
                              SelectedIndex="4"
                              SelectionChanged="OnZoomSelectionChanged">
                        <ComboBoxItem Content="{loc:Loc '50%'}"/>
                        <ComboBoxItem Content="{loc:Loc '75%'}"/>
                        <ComboBoxItem Content="{loc:Loc '100%'}"/>
                        <ComboBoxItem Content="{loc:Loc 'Fit Width'}"/>
                        <ComboBoxItem Content="{loc:Loc 'Fit Page'}"/>
                        <ComboBoxItem Content="{loc:Loc '150%'}"/>
                        <ComboBoxItem Content="{loc:Loc '200%'}"/>
                    </ComboBox>

                    <Button Classes="zoom-button"
                            Click="OnZoomInClick"
                            ToolTip.Tip="{loc:Loc 'Zoom In'}">
                        <PathIcon Width="16" Height="16"
                                  Data="{x:Static icons:Icons.AddAlt}"/>
                    </Button>
                </StackPanel>

                <!-- Actions (right) -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">
                    <Button Classes="zoom-button"
                            Padding="8,4"
                            Click="OnRefreshClick"
                            ToolTip.Tip="{loc:Loc 'Refresh Preview'}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <PathIcon Width="16" Height="16"
                                      Data="{x:Static icons:Icons.RefreshMdi}"/>
                            <TextBlock Text="{loc:Loc Refresh}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Preview area -->
        <ScrollViewer Grid.Row="1"
                      x:Name="PreviewScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#E0E0E0">

            <!-- Zoom container using LayoutTransformControl for proper scroll behavior -->
            <LayoutTransformControl x:Name="ZoomTransformControl">
                <Border x:Name="ZoomContainer"
                        Padding="40"
                        Background="#E0E0E0">

                    <!-- Page content -->
                    <Border x:Name="PageBorder"
                            Background="White"
                            ClipToBounds="True">

                        <!-- Rendered preview image -->
                        <Image x:Name="PreviewImage"
                               Stretch="None"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                    </Border>
                </Border>
            </LayoutTransformControl>
        </ScrollViewer>

        <!-- Loading overlay -->
        <Border Grid.Row="1"
                x:Name="LoadingOverlay"
                Background="#80FFFFFF"
                IsVisible="False">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                <ProgressBar IsIndeterminate="True"
                             Width="200"/>
                <TextBlock Text="{loc:Loc 'Generating preview...'}"
                           HorizontalAlignment="Center"
                           Foreground="#616161"/>
            </StackPanel>
        </Border>

        <!-- Error overlay -->
        <Border Grid.Row="1"
                x:Name="ErrorOverlay"
                Background="#80FFFFFF"
                IsVisible="False">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                <PathIcon Width="48" Height="48"
                          Foreground="#F44336"
                          Data="{x:Static icons:Icons.WarningCircleMdi}"/>
                <TextBlock x:Name="ErrorText"
                           Text="{loc:Loc 'Failed to generate preview'}"
                           HorizontalAlignment="Center"
                           Foreground="#616161"/>
                <Button Content="{loc:Loc Retry}"
                        Click="OnRefreshClick"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
