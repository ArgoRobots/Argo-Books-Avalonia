<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
             x:Class="ArgoBooks.Controls.Reports.ElementToolbox"
             Background="#FAFAFA">

    <UserControl.Styles>
        <!-- Toolbox item button style -->
        <Style Selector="Button.toolbox-item">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button.toolbox-item:pointerover">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
        </Style>

        <Style Selector="Button.toolbox-item:pressed">
            <Setter Property="Background" Value="#EEEEEE"/>
        </Style>

        <!-- Section header style -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <!-- Toolbox icon style -->
        <Style Selector="PathIcon.toolbox-icon">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="12" Spacing="6">

            <!-- Header -->
            <TextBlock Text="{loc:Loc Elements}"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Foreground="#424242"
                       Margin="0,0,0,8"/>

            <TextBlock Text="{loc:Loc 'Click to add to canvas'}"
                       FontSize="11"
                       Foreground="#9E9E9E"
                       Margin="0,0,0,12"/>

            <!-- Data Elements Section -->
            <TextBlock Text="{loc:Loc 'Data Elements'}" Classes="section-header"/>

            <!-- Chart -->
            <Button Classes="toolbox-item"
                    Click="OnAddChartClick"
                    ToolTip.Tip="{loc:Loc 'Add a data visualization chart'}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <PathIcon Classes="toolbox-icon"
                              Foreground="#2196F3"
                              Data="{x:Static icons:Icons.BarChartAlt}"/>
                    <StackPanel>
                        <TextBlock Text="{loc:Loc Chart}" FontWeight="Medium" FontSize="13"/>
                        <TextBlock Text="{loc:Loc 'Bar, line, pie charts'}" FontSize="11" Foreground="#757575"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Table -->
            <Button Classes="toolbox-item"
                    Click="OnAddTableClick"
                    ToolTip.Tip="{loc:Loc 'Add a data table'}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <PathIcon Classes="toolbox-icon"
                              Foreground="#4CAF50"
                              Data="{x:Static icons:Icons.TableGrid}"/>
                    <StackPanel>
                        <TextBlock Text="{loc:Loc Table}" FontWeight="Medium" FontSize="13"/>
                        <TextBlock Text="{loc:Loc 'Transaction data table'}" FontSize="11" Foreground="#757575"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Summary -->
            <Button Classes="toolbox-item"
                    Click="OnAddSummaryClick"
                    ToolTip.Tip="{loc:Loc 'Add a summary statistics block'}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <PathIcon Classes="toolbox-icon"
                              Foreground="#607D8B"
                              Data="{x:Static icons:Icons.NotepadAlt}"/>
                    <StackPanel>
                        <TextBlock Text="{loc:Loc Summary}" FontWeight="Medium" FontSize="13"/>
                        <TextBlock Text="{loc:Loc 'Key metrics summary'}" FontSize="11" Foreground="#757575"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Text Elements Section -->
            <TextBlock Text="{loc:Loc 'Text Elements'}" Classes="section-header"/>

            <!-- Label -->
            <Button Classes="toolbox-item"
                    Click="OnAddLabelClick"
                    ToolTip.Tip="{loc:Loc 'Add a text label'}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <PathIcon Classes="toolbox-icon"
                              Foreground="#FF9800"
                              Data="{x:Static icons:Icons.Heading}"/>
                    <StackPanel>
                        <TextBlock Text="{loc:Loc Label}" FontWeight="Medium" FontSize="13"/>
                        <TextBlock Text="{loc:Loc 'Text label or heading'}" FontSize="11" Foreground="#757575"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Date Range -->
            <Button Classes="toolbox-item"
                    Click="OnAddDateRangeClick"
                    ToolTip.Tip="{loc:Loc 'Add a date range display'}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <PathIcon Classes="toolbox-icon"
                              Foreground="#00BCD4"
                              Data="{x:Static icons:Icons.CalendarAlt}"/>
                    <StackPanel>
                        <TextBlock Text="{loc:Loc 'Date Range'}" FontWeight="Medium" FontSize="13"/>
                        <TextBlock Text="{loc:Loc 'Report date period'}" FontSize="11" Foreground="#757575"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Media Elements Section -->
            <TextBlock Text="{loc:Loc 'Media Elements'}" Classes="section-header"/>

            <!-- Image -->
            <Button Classes="toolbox-item"
                    Click="OnAddImageClick"
                    ToolTip.Tip="{loc:Loc 'Add an image or logo'}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <PathIcon Classes="toolbox-icon"
                              Foreground="#9C27B0"
                              Data="{x:Static icons:Icons.ImageGallery}"/>
                    <StackPanel>
                        <TextBlock Text="{loc:Loc Image}" FontWeight="Medium" FontSize="13"/>
                        <TextBlock Text="{loc:Loc 'Logo or picture'}" FontSize="11" Foreground="#757575"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Quick Add Section -->
            <TextBlock Text="{loc:Loc 'Quick Add Charts'}" Classes="section-header"/>

            <WrapPanel Orientation="Horizontal">
                <!-- Revenue Chart Quick Add -->
                <Button Classes="toolbox-item"
                        Width="85"
                        Margin="0,0,6,6"
                        Click="OnAddRevenueChartClick"
                        ToolTip.Tip="{loc:Loc 'Add revenue over time chart'}">
                    <StackPanel HorizontalAlignment="Center">
                        <PathIcon Width="24" Height="24"
                                  Foreground="#4CAF50"
                                  Data="{x:Static icons:Icons.LineChart}"/>
                        <TextBlock Text="{loc:Loc Revenue}" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Expenses Chart Quick Add -->
                <Button Classes="toolbox-item"
                        Width="85"
                        Margin="0,0,6,6"
                        Click="OnAddExpensesChartClick"
                        ToolTip.Tip="{loc:Loc 'Add expenses over time chart'}">
                    <StackPanel HorizontalAlignment="Center">
                        <PathIcon Width="24" Height="24"
                                  Foreground="#F44336"
                                  Data="{x:Static icons:Icons.LineChart}"/>
                        <TextBlock Text="{loc:Loc Expenses}" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Profit Chart Quick Add -->
                <Button Classes="toolbox-item"
                        Width="85"
                        Margin="0,0,0,6"
                        Click="OnAddProfitChartClick"
                        ToolTip.Tip="{loc:Loc 'Add profit over time chart'}">
                    <StackPanel HorizontalAlignment="Center">
                        <PathIcon Width="24" Height="24"
                                  Foreground="#2196F3"
                                  Data="{x:Static icons:Icons.BarChartAlt}"/>
                        <TextBlock Text="{loc:Loc Profit}" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Pie Chart Quick Add -->
                <Button Classes="toolbox-item"
                        Width="85"
                        Margin="0,0,6,6"
                        Click="OnAddDistributionChartClick"
                        ToolTip.Tip="{loc:Loc 'Add distribution pie chart'}">
                    <StackPanel HorizontalAlignment="Center">
                        <PathIcon Width="24" Height="24"
                                  Foreground="#9C27B0"
                                  Data="{x:Static icons:Icons.PieChart}"/>
                        <TextBlock Text="{loc:Loc Distribution}" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- World Map Quick Add -->
                <Button Classes="toolbox-item"
                        Width="85"
                        Margin="0,0,6,6"
                        Click="OnAddWorldMapClick"
                        ToolTip.Tip="{loc:Loc 'Add geographic sales map'}">
                    <StackPanel HorizontalAlignment="Center">
                        <PathIcon Width="24" Height="24"
                                  Foreground="#00BCD4"
                                  Data="{x:Static icons:Icons.GlobeAlt}"/>
                        <TextBlock Text="{loc:Loc 'World Map'}" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Growth Chart Quick Add -->
                <Button Classes="toolbox-item"
                        Width="85"
                        Margin="0,0,0,6"
                        Click="OnAddGrowthChartClick"
                        ToolTip.Tip="{loc:Loc 'Add growth rates chart'}">
                    <StackPanel HorizontalAlignment="Center">
                        <PathIcon Width="24" Height="24"
                                  Foreground="#FF9800"
                                  Data="{x:Static icons:Icons.ListAlt}"/>
                        <TextBlock Text="{loc:Loc Growth}" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
