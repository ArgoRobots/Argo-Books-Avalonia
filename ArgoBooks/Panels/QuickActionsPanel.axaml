<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="ArgoBooks.Panels.QuickActionsPanel"
             x:DataType="vm:QuickActionsViewModel">

    <Design.DataContext>
        <vm:QuickActionsViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <!-- Shared panel content template -->
        <DataTemplate x:Key="PanelContentTemplate" x:DataType="vm:QuickActionsViewModel">
            <Grid RowDefinitions="Auto,*">
                <!-- Search Input (hidden in dropdown mode - uses header searchbox) -->
                <Border Grid.Row="0"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="16"
                        IsVisible="{Binding !IsDropdownMode}">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Search Icon -->
                        <PathIcon Grid.Column="0"
                                  Data="{x:Static icons:Icons.Search}"
                                  Width="20" Height="20"
                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center" />

                        <!-- Search TextBox -->
                        <TextBox x:Name="SearchInput"
                                 Grid.Column="1"
                                 Classes="search-input"
                                 Watermark="{loc:Loc 'Type to search...'}"
                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 MaxLength="100" />

                        <!-- Close hint -->
                        <Border Grid.Column="2"
                                Background="{DynamicResource SurfaceAltBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                VerticalAlignment="Center">
                            <TextBlock Text="{loc:Loc Esc}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                        </Border>
                    </Grid>
                </Border>

                <!-- Results (fixed height to prevent modal resizing as results change) -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Height="380">
                    <StackPanel Spacing="0">
                        <!-- Top Results Section (shown when searching with strong matches) -->
                        <StackPanel IsVisible="{Binding HasTopResults}">
                            <TextBlock Text="{loc:Loc 'Top Results'}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       Margin="16,12,16,8" />
                            <ItemsControl ItemsSource="{Binding TopResults}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:QuickActionItem">
                                        <Button Classes="action-item"
                                                Command="{Binding $parent[UserControl].((vm:QuickActionsViewModel)DataContext).ExecuteActionCommand}"
                                                CommandParameter="{Binding}">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <Border Grid.Column="0"
                                                        Width="36" Height="36"
                                                        CornerRadius="8"
                                                        Background="{DynamicResource PrimaryIconBgBrush}"
                                                        Margin="0,0,12,0">
                                                    <PathIcon Data="{Binding IconData}"
                                                              Width="18" Height="18"
                                                              Foreground="{DynamicResource PrimaryBrush}" />
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                    <TextBlock Text="{Binding Title, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Description, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Quick Actions Section -->
                        <StackPanel IsVisible="{Binding HasQuickActions}">
                            <TextBlock Text="{loc:Loc 'Quick Actions'}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       Margin="16,12,16,8" />
                            <ItemsControl ItemsSource="{Binding QuickActions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:QuickActionItem">
                                        <Button Classes="action-item"
                                                Command="{Binding $parent[UserControl].((vm:QuickActionsViewModel)DataContext).ExecuteActionCommand}"
                                                CommandParameter="{Binding}">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <Border Grid.Column="0"
                                                        Width="36" Height="36"
                                                        CornerRadius="8"
                                                        Background="{DynamicResource PrimaryIconBgBrush}"
                                                        Margin="0,0,12,0">
                                                    <PathIcon Data="{Binding IconData}"
                                                              Width="18" Height="18"
                                                              Foreground="{DynamicResource PrimaryBrush}" />
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                    <TextBlock Text="{Binding Title, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Description, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Navigation Section -->
                        <StackPanel IsVisible="{Binding HasNavigationItems}">
                            <TextBlock Text="{loc:Loc 'Go To'}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       Margin="16,12,16,8" />
                            <ItemsControl ItemsSource="{Binding NavigationItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:QuickActionItem">
                                        <Button Classes="action-item"
                                                Command="{Binding $parent[UserControl].((vm:QuickActionsViewModel)DataContext).ExecuteActionCommand}"
                                                CommandParameter="{Binding}">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <Border Grid.Column="0"
                                                        Width="36" Height="36"
                                                        CornerRadius="8"
                                                        Background="{DynamicResource SurfaceAltBrush}"
                                                        Margin="0,0,12,0">
                                                    <PathIcon Data="{Binding IconData}"
                                                              Width="18" Height="18"
                                                              Foreground="{DynamicResource TextSecondaryBrush}" />
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                    <TextBlock Text="{Binding Title, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Description, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Tools Section -->
                        <StackPanel IsVisible="{Binding HasToolsItems}">
                            <TextBlock Text="{loc:Loc 'Tools &amp; Settings'}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       Margin="16,12,16,8" />
                            <ItemsControl ItemsSource="{Binding ToolsItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:QuickActionItem">
                                        <Button Classes="action-item"
                                                Command="{Binding $parent[UserControl].((vm:QuickActionsViewModel)DataContext).ExecuteActionCommand}"
                                                CommandParameter="{Binding}">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <Border Grid.Column="0"
                                                        Width="36" Height="36"
                                                        CornerRadius="8"
                                                        Background="{DynamicResource SurfaceAltBrush}"
                                                        Margin="0,0,12,0">
                                                    <PathIcon Data="{Binding IconData}"
                                                              Width="18" Height="18"
                                                              Foreground="{DynamicResource TextSecondaryBrush}" />
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                    <TextBlock Text="{Binding Title, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Description, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- No Results -->
                        <StackPanel IsVisible="{Binding !HasResults}"
                                    HorizontalAlignment="Center"
                                    Margin="0,40">
                            <TextBlock Text="{loc:Loc 'No results found'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>

                        <!-- Bottom padding -->
                        <Border Height="8" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Panel IsVisible="{Binding IsOpen}">
        <!-- Modal Mode: Full overlay with centered panel -->
        <Panel IsVisible="{Binding !IsDropdownMode}">
            <!-- Semi-transparent backdrop for click-away -->
            <Border Background="{DynamicResource OverlayBrush}"
                    IsHitTestVisible="True"
                    PointerPressed="Backdrop_PointerPressed">
                <Border.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseOut" />
                    </Transitions>
                </Border.Transitions>
            </Border>

            <!-- Modal centered on screen -->
            <Border x:Name="ModalBorder"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="500"
                    MaxHeight="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,-60,0,0"
                    BoxShadow="0 8 32 0 #40000000"
                    Opacity="0"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                </Border.RenderTransform>
                <Border.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                    </Transitions>
                </Border.Transitions>
                <ContentControl Content="{Binding}"
                                ContentTemplate="{StaticResource PanelContentTemplate}" />
            </Border>
        </Panel>

        <!-- Dropdown Mode: No backdrop, positioned below header searchbox -->
        <Panel IsVisible="{Binding IsDropdownMode}">
            <!-- Transparent backdrop for click-away -->
            <Border Background="Transparent"
                    PointerPressed="Backdrop_PointerPressed" />

            <!-- Grid that mirrors main layout for proper centering in content area -->
            <Grid ColumnDefinitions="Auto,*">
                <!-- Spacer matching sidebar width -->
                <Border Grid.Column="0" Width="{Binding SidebarWidth}">
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Width" Duration="0:0:0.2" Easing="CubicEaseOut" />
                        </Transitions>
                    </Border.Transitions>
                </Border>

                <!-- Dropdown centered in content area (matching search box position) -->
                <Border Grid.Column="1"
                        x:Name="DropdownBorder"
                        Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Width="340"
                        MaxHeight="400"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,60,0,0"
                        BoxShadow="0 4 16 0 #30000000"
                        Opacity="0"
                        RenderTransformOrigin="0.5,0">
                    <Border.RenderTransform>
                        <TranslateTransform Y="-8" />
                    </Border.RenderTransform>
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                        </Transitions>
                    </Border.Transitions>
                    <ContentControl Content="{Binding}"
                                    ContentTemplate="{StaticResource PanelContentTemplate}" />
                </Border>
            </Grid>
        </Panel>
    </Panel>

    <UserControl.Styles>
        <!-- Search Input Style -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="TextBox.search-input:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="TextBox.search-input:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!-- Action Item Style -->
        <Style Selector="Button.action-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="True" />
        </Style>
        <Style Selector="Button.action-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.action-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.action-item:focus /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.action-item:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="BorderThickness" Value="2,0,0,0" />
        </Style>
        <Style Selector="Button.action-item:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
        </Style>
    </UserControl.Styles>

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding CloseCommand}" />
        <KeyBinding Gesture="Up" Command="{Binding MoveUpCommand}" />
        <KeyBinding Gesture="Down" Command="{Binding MoveDownCommand}" />
        <KeyBinding Gesture="Enter" Command="{Binding ExecuteSelectedCommand}" />
    </UserControl.KeyBindings>
</UserControl>
