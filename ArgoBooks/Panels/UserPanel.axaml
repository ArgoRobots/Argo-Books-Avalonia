<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="280" d:DesignHeight="400"
             x:Class="ArgoBooks.Panels.UserPanel"
             x:DataType="vm:UserPanelViewModel">

    <Design.DataContext>
        <vm:UserPanelViewModel />
    </Design.DataContext>

    <Panel IsVisible="{Binding IsOpen}">
        <!-- Transparent backdrop for click-away -->
        <Border Background="Transparent"
                PointerPressed="Backdrop_PointerPressed" />

        <!-- User Panel Container (positioned top-right below header) -->
        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Width="280"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,60,20,0"
                BoxShadow="0 4 16 0 #30000000">
            <StackPanel>
                <!-- User Profile Section -->
                <Border Padding="16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="Auto,*">
                        <!-- Avatar -->
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="24"
                                Background="{DynamicResource PrimaryBrush}"
                                ClipToBounds="True"
                                Margin="0,0,12,0">
                            <Panel>
                                <!-- User Initials -->
                                <TextBlock Text="{Binding UserInitials}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding !HasUserAvatar}" />
                                <!-- User Avatar Image -->
                                <Image Source="{Binding UserAvatarSource}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasUserAvatar}" />
                            </Panel>
                        </Border>

                        <!-- User Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                            <TextBlock Text="{Binding UserDisplayName}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="{Binding UserEmail}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextTrimming="CharacterEllipsis"
                                       IsVisible="{Binding UserEmail, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            <TextBlock Text="{Binding UserRole}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       IsVisible="{Binding UserRole, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Company Section -->
                <Border Padding="12,8"
                        Background="{DynamicResource SurfaceAltBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="0">
                            <TextBlock Text="{Binding CompanyName}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="{Binding CompanyPlan}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                        </StackPanel>
                        <Button Grid.Column="1"
                                Classes="text-button-small"
                                Content="Switch"
                                Command="{Binding SwitchCompanyCommand}"
                                VerticalAlignment="Center" />
                    </Grid>
                </Border>

                <!-- Menu Items -->
                <StackPanel Margin="4,4">
                    <!-- Profile -->
                    <Button Classes="menu-item"
                            Command="{Binding OpenProfileCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="Profile" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Settings -->
                    <Button Classes="menu-item"
                            Command="{Binding OpenSettingsCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M19.14 12.94c.04-.31.06-.63.06-.94s-.02-.63-.06-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.04.31-.06.63-.06.94s.02.63.06.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="Settings" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Help -->
                    <Button Classes="menu-item"
                            Command="{Binding OpenHelpCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="Help &amp; Support" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Keyboard Shortcuts -->
                    <Button Classes="menu-item"
                            Command="{Binding OpenKeyboardShortcutsCommand}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <PathIcon Grid.Column="0"
                                      Data="M20 5H4c-1.1 0-1.99.9-1.99 2L2 17c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm-9 3h2v2h-2V8zm0 3h2v2h-2v-2zM8 8h2v2H8V8zm0 3h2v2H8v-2zm-1 2H5v-2h2v2zm0-3H5V8h2v2zm9 7H8v-2h8v2zm0-4h-2v-2h2v2zm0-3h-2V8h2v2zm3 3h-2v-2h2v2zm0-3h-2V8h2v2z"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="Keyboard Shortcuts" VerticalAlignment="Center" />
                            <Border Grid.Column="2"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    CornerRadius="4"
                                    Padding="6,2">
                                <TextBlock Text="?"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                            </Border>
                        </Grid>
                    </Button>
                </StackPanel>

                <!-- Divider -->
                <Border Height="1"
                        Background="{DynamicResource BorderBrush}"
                        Margin="12,4" />

                <!-- Sign Out Section -->
                <StackPanel Margin="4,4,4,8">
                    <!-- Close Company -->
                    <Button Classes="menu-item"
                            Command="{Binding CloseCompanyCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="Close Company" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Sign Out -->
                    <Button Classes="menu-item danger"
                            Command="{Binding SignOutCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z"
                                      Width="18" Height="18"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="Sign Out" VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Menu Item Style -->
        <Style Selector="Button.menu-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.menu-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.menu-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.menu-item:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
        </Style>
        <Style Selector="Button.menu-item PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Danger Menu Item Style -->
        <Style Selector="Button.menu-item.danger">
            <Setter Property="Foreground" Value="{DynamicResource DangerBrush}" />
        </Style>
        <Style Selector="Button.menu-item.danger PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource DangerBrush}" />
        </Style>

        <!-- Small Text Button Style -->
        <Style Selector="Button.text-button-small">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.text-button-small /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.text-button-small:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
