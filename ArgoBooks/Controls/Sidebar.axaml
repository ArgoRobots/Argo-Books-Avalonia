<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="800"
             x:Class="ArgoBooks.Controls.Sidebar"
             x:DataType="vm:SidebarViewModel"
             Background="{DynamicResource SidebarBackgroundBrush}">

    <Design.DataContext>
        <vm:SidebarViewModel />
    </Design.DataContext>

    <DockPanel>
        <!-- Header: Logo and Company Name -->
        <Border DockPanel.Dock="Top"
                Padding="15"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,0">
            <Panel>
                <!-- Expanded Header with Button -->
                <Button Classes="sidebar-header"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        IsVisible="{Binding !IsCollapsed}"
                        Command="{Binding OpenCompanySwitcherCommand}">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Logo (40px square with gradient) -->
                        <Border Grid.Column="0"
                                Width="40" Height="40"
                                CornerRadius="8"
                                ClipToBounds="True">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0" />
                                    <GradientStop Color="{DynamicResource AccentColor}" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Panel>
                                <Image Source="{Binding CompanyLogo}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasCompanyLogo}" />
                                <TextBlock Text="{Binding CompanyInitial}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding !HasCompanyLogo}" />
                            </Panel>
                        </Border>

                        <!-- Brand Name -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding CompanyName}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SidebarTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   MaxWidth="140"
                                   TextTrimming="CharacterEllipsis" />

                        <!-- Chevron Down Icon -->
                        <PathIcon Grid.Column="2"
                                  Data="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"
                                  Width="16" Height="16"
                                  Foreground="{DynamicResource SidebarTextMutedBrush}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0" />
                    </Grid>
                </Button>

                <!-- Collapsed Logo Only - Clickable to open company switcher -->
                <Button Classes="sidebar-header-collapsed"
                        IsVisible="{Binding IsCollapsed}"
                        Command="{Binding OpenCompanySwitcherCommand}"
                        ToolTip.Tip="{Binding CompanyName}"
                        HorizontalAlignment="Center">
                    <Border Width="40" Height="40"
                            CornerRadius="8"
                            ClipToBounds="True">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0" />
                                <GradientStop Color="{DynamicResource AccentColor}" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Panel>
                            <Image Source="{Binding CompanyLogo}"
                                   Stretch="UniformToFill"
                                   IsVisible="{Binding HasCompanyLogo}" />
                            <TextBlock Text="{Binding CompanyInitial}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding !HasCompanyLogo}" />
                        </Panel>
                    </Border>
                </Button>
            </Panel>
        </Border>

        <!-- Navigation Sections -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="0" Margin="0,15,0,20">
                <!-- Main Section -->
                <controls:SidebarSection Title="MAIN"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         Items="{Binding MainItems}" />

                <!-- Transactions Section -->
                <controls:SidebarSection Title="TRANSACTIONS"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         Items="{Binding TransactionItems}"
                                         IsVisible="{Binding ShowTransactions}" />

                <!-- Rentals Section -->
                <controls:SidebarSection Title="RENTALS"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         Items="{Binding RentalItems}"
                                         IsVisible="{Binding ShowRentals}" />

                <!-- Management Section -->
                <controls:SidebarSection Title="MANAGEMENT"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         Items="{Binding ManagementItems}" />

                <!-- Inventory Section -->
                <controls:SidebarSection Title="INVENTORY"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         Items="{Binding InventoryItems}"
                                         IsVisible="{Binding ShowInventory}" />

                <!-- Team Section -->
                <controls:SidebarSection Title="TEAM"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         Items="{Binding TeamItems}" />

                <!-- Tracking Section -->
                <controls:SidebarSection Title="TRACKING"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         Items="{Binding TrackingItems}" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>

    <UserControl.Styles>
        <!-- Sidebar Header Button Style -->
        <Style Selector="Button.sidebar-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sidebar-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sidebar-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!-- Collapsed Sidebar Header Button Style -->
        <Style Selector="Button.sidebar-header-collapsed">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sidebar-header-collapsed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sidebar-header-collapsed:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Styles>
</UserControl>
