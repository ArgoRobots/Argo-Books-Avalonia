<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ArgoBooks.Controls.LoadingPanel"
             x:DataType="controls:LoadingPanel">

    <Panel>
        <!-- Main Content -->
        <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}}"
                          IsEnabled="{Binding !IsLoading, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}}" />

        <!-- Loading Overlay -->
        <Border IsVisible="{Binding IsLoading, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}}"
                Background="{DynamicResource LoadingOverlayBrush}"
                IsHitTestVisible="True">
            <Border.Styles>
                <Style Selector="Border">
                    <Setter Property="Opacity" Value="0" />
                </Style>
                <Style Selector="Border:not(.hidden)">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2" FillMode="Forward">
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1" />
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                <!-- Spinner -->
                <controls:LoadingSpinner SizePreset="{Binding SpinnerSize, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}}"
                                         SpinnerBrush="{Binding SpinnerBrush, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}}"
                                         IsSpinning="{Binding IsLoading, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}}" />

                <!-- Loading Text -->
                <TextBlock Text="{Binding LoadingText, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}}"
                           IsVisible="{Binding LoadingText, RelativeSource={RelativeSource AncestorType=controls:LoadingPanel}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                           FontSize="{StaticResource FontSizeMd}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Panel>
</UserControl>
