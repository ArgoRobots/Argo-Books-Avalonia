<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.DepartmentsPage"
             x:DataType="vm:DepartmentsPageViewModel">

    <UserControl.Resources>
        <local:DepartmentColorToBrushConverter x:Key="DepartmentColorToBrushConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:DepartmentsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="Auto,*" Margin="24">
        <!-- Statistics Cards Row -->
        <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
            <controls:StatCard Label="Total Departments"
                               Value="{Binding TotalDepartments}"
                               Icon="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"
                               IconColor="Primary" />
            <controls:StatCard Label="Active Departments"
                               Value="{Binding ActiveDepartments}"
                               Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                               IconColor="Success" />
            <controls:StatCard Label="Total Employees"
                               Value="{Binding TotalEmployees}"
                               Icon="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"
                               IconColor="Warning" />
            <controls:StatCard Label="New This Month"
                               Value="{Binding NewThisMonth}"
                               Icon="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                               IconColor="Info" />
        </controls:StatCardsRow>

        <!-- Main Content Card (Row 1) -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">

            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header with Title, Search and Buttons -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Title -->
                        <TextBlock Grid.Column="0"
                                   Text="Departments"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" />

                        <!-- Search + Add Button (Right aligned) -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="12">
                            <!-- Search Box -->
                            <Border Background="{DynamicResource SurfaceAltBrush}"
                                    CornerRadius="6"
                                    Width="250">
                                <Grid ColumnDefinitions="Auto,*">
                                    <PathIcon Grid.Column="0"
                                              Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                              Width="16" Height="16"
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              Margin="12,0,8,0" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding SearchQuery, Mode=TwoWay}"
                                             Watermark="Search departments..."
                                             Classes="search-input" />
                                </Grid>
                            </Border>

                            <!-- Add Department Button -->
                            <Button Classes="primary-button"
                                    Command="{Binding OpenAddModalCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                              Width="16" Height="16"
                                              Foreground="White" />
                                    <TextBlock Text="Add Department" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Departments Table (Row 1) -->
                <ScrollViewer Grid.Row="1"
                              x:Name="HorizontalTableScroll"
                              HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                          MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,0"
                                MinHeight="40"
                                PointerPressed="OnTableHeaderPointerPressed">
                            <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                <!-- Department -->
                                <Panel Width="{Binding ColumnWidths.DepartmentColumnWidth}" IsVisible="{Binding ShowDepartmentColumn}">
                                    <controls:SortableColumnHeader Text="Department" ColumnName="Name"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Department" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Description -->
                                <Panel Width="{Binding ColumnWidths.DescriptionColumnWidth}" IsVisible="{Binding ShowDescriptionColumn}">
                                    <controls:SortableColumnHeader Text="Description" ColumnName="Description"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Description" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Employees -->
                                <Panel Width="{Binding ColumnWidths.EmployeesColumnWidth}" IsVisible="{Binding ShowEmployeesColumn}">
                                    <controls:SortableColumnHeader Text="Employees" ColumnName="EmployeeCount"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Employees" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Actions (Fixed) -->
                                <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                    <TextBlock Text="Actions" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="8,12,8,12" />
                                </Panel>
                            </StackPanel>
                        </Border>

                        <!-- Table Content (scrollable vertically only) -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <Panel>
                                <!-- Departments List -->
                                <ItemsControl ItemsSource="{Binding Departments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:DepartmentDisplayItem">
                                            <Border Padding="24,0"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,0,1"
                                                    MinHeight="56">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Department Name with Icon -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.DepartmentColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ShowDepartmentColumn}">
                                                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" Margin="8,0">
                                                            <Border Width="40" Height="40"
                                                                    CornerRadius="8"
                                                                    Background="{Binding IconColor, Converter={StaticResource DepartmentColorToBrushConverter}}">
                                                                <TextBlock Text="{Binding Icon}"
                                                                           FontSize="16"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center" />
                                                            </Border>
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis" />
                                                        </StackPanel>
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Description -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.DescriptionColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ShowDescriptionColumn}">
                                                        <TextBlock Text="{Binding Description, TargetNullValue='-', FallbackValue='-'}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Employees Badge -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.EmployeesColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ShowEmployeesColumn}">
                                                        <Border VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"
                                                                Padding="8,4"
                                                                CornerRadius="4"
                                                                Margin="8,0"
                                                                Background="#DBEAFE">
                                                            <TextBlock Text="{Binding EmployeeCountDisplay}"
                                                                       FontSize="12"
                                                                       FontWeight="Medium"
                                                                       Foreground="#3B82F6" />
                                                        </Border>
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Actions -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Right"
                                                                    Spacing="4"
                                                                    Margin="8,0">
                                                            <Button Classes="icon-button"
                                                                    ToolTip.Tip="Edit"
                                                                    Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).OpenEditModalCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <Button Classes="icon-button danger"
                                                                    ToolTip.Tip="Delete"
                                                                    Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                        </StackPanel>
                                                    </Panel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Departments.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No departments found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Add your first department to organize your company structure."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Add Department" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                    </Grid>
                </ScrollViewer>

                <!-- Pagination Footer (Row 2 - fixed at bottom) -->
                <Border Grid.Row="2"
                        Background="{DynamicResource SurfaceAltBrush}"
                        Padding="24,12"
                        CornerRadius="0,0,11,11"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Rows per page selector -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding PaginationText}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="|"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0" />
                            <TextBlock Text="Rows per page:"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                      SelectedItem="{Binding PageSize}"
                                      Classes="page-size-combobox"
                                      Width="70" />
                        </StackPanel>

                        <!-- Page Numbers -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="4"
                                    IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                            <!-- Previous Button -->
                            <Button Classes="pagination-button"
                                    Command="{Binding GoToPreviousPageCommand}"
                                    IsEnabled="{Binding CanGoToPreviousPage}">
                                <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                          Width="16" Height="16" />
                            </Button>

                            <!-- Page Number Buttons -->
                            <ItemsControl ItemsSource="{Binding PageNumbers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Classes="pagination-button"
                                                Content="{Binding}"
                                                Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).GoToPageCommand}"
                                                CommandParameter="{Binding}">
                                            <controls:PaginationHelper.IsActivePage>
                                                <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                    <Binding />
                                                    <Binding Path="$parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).CurrentPage" />
                                                </MultiBinding>
                                            </controls:PaginationHelper.IsActivePage>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Next Button -->
                            <Button Classes="pagination-button"
                                    Command="{Binding GoToNextPageCommand}"
                                    IsEnabled="{Binding CanGoToNextPage}">
                                <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                          Width="16" Height="16" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnMenuX}"
                                    MenuY="{Binding ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowDepartmentColumn}" Content="Department" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDescriptionColumn}" Content="Description" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowEmployeesColumn}" Content="Employees" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

    <!-- Styles are now consolidated in Styles/TableStyles.axaml -->
</UserControl>
