<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ArgoBooks.Controls.ModalOverlay"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Panel>
        <Panel x:Name="OverlayPanel"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Opacity="0"
               IsHitTestVisible="False">

            <!-- Semi-transparent backdrop -->
            <Border Background="{DynamicResource OverlayBrush}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    PointerPressed="OnBackdropPointerPressed" />

            <!-- Modal content container - stretches to fill, child content decides its own alignment -->
            <Border HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <ContentPresenter x:Name="ModalContentPresenter"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch" />
            </Border>
        </Panel>
    </Panel>
</UserControl>
