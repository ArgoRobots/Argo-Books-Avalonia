<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:local="using:ArgoBooks"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="ArgoBooks.Modals.ImportModal"
             x:DataType="vm:ImportModalViewModel">

    <Design.DataContext>
        <vm:ImportModalViewModel />
    </Design.DataContext>

    <controls:ModalOverlay IsOpen="{Binding IsOpen}">
        <controls:ModalOverlay.ModalContent>
            <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="500"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">

            <Grid RowDefinitions="Auto,Auto,Auto">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="{loc:Loc 'Import Data'}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{loc:Loc 'Import data from external files into Argo Books'}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseCommand}">
                            <PathIcon Data="{x:Static local:Icons.Close}"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24,20" Spacing="12">
                        <!-- Backup -->
                        <TextBlock Text="{loc:Loc 'Backup'}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   Margin="0,0,0,4" />

                        <!-- Backup File -->
                        <Button Classes="import-option"
                                Command="{Binding SelectFormatCommand}"
                                CommandParameter="Backup">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="{DynamicResource PrimaryIconBgBrush}"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="{x:Static icons:Icons.Security}"
                                              Width="20" Height="20"
                                              Foreground="{DynamicResource PrimaryBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="{loc:Loc 'Backup File (.argobk)'}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{loc:Loc 'Open a previously exported backup as a new company'}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="2"
                                          Data="{x:Static local:Icons.ChevronRightNav}"
                                          Width="16" Height="16"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Spreadsheets -->
                        <TextBlock Text="{loc:Loc Spreadsheets}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   Margin="0,12,0,4" />

                        <!-- Excel -->
                        <Button Classes="import-option"
                                Command="{Binding SelectFormatCommand}"
                                CommandParameter="Excel">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="{DynamicResource SuccessIconBgBrush}"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="{x:Static icons:Icons.BarChartSquare}"
                                              Width="20" Height="20"
                                              Foreground="{DynamicResource SuccessBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="{loc:Loc 'Excel (XLSX)'}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{loc:Loc 'Import data from Microsoft Excel workbooks'}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="2"
                                          Data="{x:Static local:Icons.ChevronRightNav}"
                                          Width="16" Height="16"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Other Software -->
                        <TextBlock Text="{loc:Loc 'Other Software'}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   Margin="0,12,0,4" />

                        <!-- QuickBooks -->
                        <Button Classes="import-option"
                                IsEnabled="False">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="{DynamicResource PrimaryIconBgBrush}"
                                        Opacity="0.5"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="{x:Static local:Icons.CircleCheck}"
                                              Width="20" Height="20"
                                              Foreground="{DynamicResource PrimaryBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="{loc:Loc 'QuickBooks (IIF)'}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{loc:Loc 'Coming Soon'}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="12">
                        <Button Classes="secondary-button"
                                Content="{loc:Loc Cancel}"
                                Command="{Binding CloseCommand}" />
                    </StackPanel>
                </Border>
            </Grid>
            </Border>
        </controls:ModalOverlay.ModalContent>
    </controls:ModalOverlay>

    <UserControl.Styles>
        <!-- Import Option Button -->
        <Style Selector="Button.import-option">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.import-option /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
        </Style>
        <Style Selector="Button.import-option:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.import-option:disabled">
            <Setter Property="Opacity" Value="0.6" />
        </Style>
        <Style Selector="Button.import-option:disabled /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
