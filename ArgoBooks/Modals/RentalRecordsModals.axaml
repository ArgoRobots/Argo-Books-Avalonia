<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:conv="using:ArgoBooks.Converters"
             xmlns:behaviors="using:ArgoBooks.Behaviors"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArgoBooks.Modals.RentalRecordsModals"
             x:DataType="vm:RentalRecordsModalsViewModel">

    <Panel>
        <!-- Add Record Modal -->
        <Panel IsVisible="{Binding IsAddModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="New Rental Record" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseAddModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Rental Item -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Rental Item" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableItems}"
                                                            SelectedItem="{Binding ModalItem}"
                                                            Placeholder="Search rental items..."
                                                            ShowAddNew="False"
                                                            EmptyMessage="No rental items available."
                                                            EmptyCreateLinkText="Create one"
                                                            EmptyCreateCommand="{Binding NavigateToCreateRentalItemCommand}" />
                                <TextBlock Text="{Binding ModalItemError}" Foreground="#dc2626" FontSize="12"
                                           IsVisible="{Binding ModalItemError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Customer -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Customer" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableCustomers}"
                                                            SelectedItem="{Binding ModalCustomer}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="Search customers..."
                                                            ShowAddNew="False"
                                                            EmptyMessage="No customers available."
                                                            EmptyCreateLinkText="Create one"
                                                            EmptyCreateCommand="{Binding NavigateToCreateCustomerCommand}" />
                                <TextBlock Text="{Binding ModalCustomerError}" Foreground="#dc2626" FontSize="12"
                                           IsVisible="{Binding ModalCustomerError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Quantity and Security Deposit Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Quantity" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalQuantity}" Watermark="1" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsIntegerOnly="True" />
                                    <TextBlock Text="{Binding ModalQuantityError}" Foreground="#dc2626" FontSize="12"
                                               IsVisible="{Binding ModalQuantityError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="Security Deposit" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalSecurityDeposit}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Rate Type and Rate Amount Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Rate Type" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <ComboBox ItemsSource="{Binding RateTypeOptions}"
                                              SelectedItem="{Binding ModalRateType}"
                                              Classes="form-combobox" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Rate Amount" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalRateAmount}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                    <TextBlock Text="{Binding ModalRateError}" Foreground="#dc2626" FontSize="12"
                                               IsVisible="{Binding ModalRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                            </Grid>

                            <!-- Start Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Start Date" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalStartDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Due Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Due Date" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalDueDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Notes" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalNotes}" Watermark="Optional notes" TextWrapping="Wrap" Classes="form-input"
                                         AcceptsReturn="True" MinHeight="80" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseAddModalCommand}" />
                            <Button Classes="primary-button" Content="Create Rental" Command="{Binding SaveNewRecordCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- Edit Record Modal -->
        <Panel IsVisible="{Binding IsEditModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Edit Rental Record" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseEditModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Rental Item -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Rental Item" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableItems}"
                                                            SelectedItem="{Binding ModalItem}"
                                                            Placeholder="Search rental items..."
                                                            ShowAddNew="False"
                                                            EmptyMessage="No rental items available."
                                                            EmptyCreateLinkText="Create one"
                                                            EmptyCreateCommand="{Binding NavigateToCreateRentalItemCommand}" />
                                <TextBlock Text="{Binding ModalItemError}" Foreground="#dc2626" FontSize="12"
                                           IsVisible="{Binding ModalItemError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Customer -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Customer" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableCustomers}"
                                                            SelectedItem="{Binding ModalCustomer}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="Search customers..."
                                                            ShowAddNew="False"
                                                            EmptyMessage="No customers available."
                                                            EmptyCreateLinkText="Create one"
                                                            EmptyCreateCommand="{Binding NavigateToCreateCustomerCommand}" />
                                <TextBlock Text="{Binding ModalCustomerError}" Foreground="#dc2626" FontSize="12"
                                           IsVisible="{Binding ModalCustomerError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Quantity and Security Deposit Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Quantity" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalQuantity}" Watermark="1" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsIntegerOnly="True" />
                                    <TextBlock Text="{Binding ModalQuantityError}" Foreground="#dc2626" FontSize="12"
                                               IsVisible="{Binding ModalQuantityError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="Security Deposit" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalSecurityDeposit}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Rate Type and Rate Amount Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Rate Type" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <ComboBox ItemsSource="{Binding RateTypeOptions}"
                                              SelectedItem="{Binding ModalRateType}"
                                              Classes="form-combobox" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Rate Amount" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalRateAmount}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                    <TextBlock Text="{Binding ModalRateError}" Foreground="#dc2626" FontSize="12"
                                               IsVisible="{Binding ModalRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                            </Grid>

                            <!-- Start Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Start Date" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalStartDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Due Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Due Date" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalDueDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Notes" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalNotes}" Watermark="Optional notes" TextWrapping="Wrap" Classes="form-input"
                                         AcceptsReturn="True" MinHeight="80" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseEditModalCommand}" />
                            <Button Classes="primary-button" Content="Save Changes" Command="{Binding SaveEditedRecordCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- Filter Modal -->
        <Panel IsVisible="{Binding IsFilterModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Filter Rental Records" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseFilterModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="20">
                            <!-- Status -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Status" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding StatusOptions}"
                                          SelectedItem="{Binding FilterStatus}"
                                          Classes="form-combobox" />
                            </StackPanel>

                            <!-- Customer -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Customer" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding FilterCustomer}" Watermark="Search by customer name" Classes="form-input" />
                            </StackPanel>

                            <!-- Item -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Rental Item" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding FilterItem}" Watermark="Search by item name" Classes="form-input" />
                            </StackPanel>

                            <!-- Start Date Range -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Start Date Range" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <StackPanel Spacing="8">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="From" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterStartDateFrom}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="To" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterStartDateTo}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <!-- Due Date Range -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Due Date Range" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <StackPanel Spacing="8">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="From" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterDueDateFrom}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="To" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterDueDateTo}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Button Grid.Column="0" Classes="secondary-button" Content="Clear Filters" Command="{Binding ClearFiltersCommand}" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                                <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseFilterModalCommand}" />
                                <Button Classes="primary-button" Content="Apply Filters" Command="{Binding ApplyFiltersCommand}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- Return Modal -->
        <Panel IsVisible="{Binding IsReturnModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Process Return" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseReturnModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <Border Grid.Row="1" Padding="24">
                        <StackPanel Spacing="16">
                            <!-- Rental Summary -->
                            <Border Background="{DynamicResource SurfaceAltBrush}" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Rental Summary" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,8,0,0">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Record ID:" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,4" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ReturnRecordId}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Item:" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,4" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ReturnItemName}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Customer:" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,4" />
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ReturnCustomerName}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Quantity:" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,0" />
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ReturnQuantity}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Return Date -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Return Date" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                            <DatePicker SelectedDate="{Binding ReturnDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <!-- Total Cost -->
                        <Border Background="#f0fdf4" CornerRadius="8" Padding="16">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel>
                                    <TextBlock Text="Total Rental Cost" FontWeight="Medium" Foreground="#166534" />
                                    <TextBlock Text="Calculated based on rental duration" FontSize="12" Foreground="#16a34a" />
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding ReturnTotalCostFormatted}" FontSize="24" FontWeight="Bold" Foreground="#166534" VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Security Deposit -->
                        <Border Background="#fefce8" CornerRadius="8" Padding="16">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Security Deposit" FontWeight="Medium" Foreground="#854d0e" />
                                    <TextBlock Text="{Binding ReturnDepositFormatted}" FontSize="18" FontWeight="SemiBold" Foreground="#a16207" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <CheckBox IsChecked="{Binding ReturnRefundDeposit}" Content="Refund Deposit" Foreground="#854d0e" />
                                </StackPanel>
                            </Grid>
                        </Border>

                            <!-- Return Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Return Notes" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ReturnNotes}" Watermark="Optional notes about the return" TextWrapping="Wrap" Classes="form-input"
                                         AcceptsReturn="True" MinHeight="60" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseReturnModalCommand}" />
                            <Button Classes="success-button" Content="Confirm Return" Command="{Binding ConfirmReturnCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- View Modal -->
        <Panel IsVisible="{Binding IsViewModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Rental Details" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                <Border Background="{Binding ViewStatus, Converter={x:Static conv:StringConverters.ToRentalStatusBackground}}"
                                        CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="{Binding ViewStatus}"
                                               Foreground="{Binding ViewStatus, Converter={x:Static conv:StringConverters.ToRentalStatusForeground}}"
                                               FontSize="12" FontWeight="Medium" />
                                </Border>
                            </StackPanel>
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseViewModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="20">
                            <!-- Record ID -->
                            <Border Background="{DynamicResource SurfaceAltBrush}" CornerRadius="8" Padding="16">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Record ID:" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewRecordId}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Border>

                            <!-- Item and Customer -->
                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Rental Item" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewItemName}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Customer" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewCustomerName}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Accountant and Quantity -->
                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Accountant" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewAccountantName}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Quantity" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewQuantity}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Rate and Deposit -->
                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Rate" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewRateFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Security Deposit" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewDepositFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Dates -->
                            <Border Background="#f0f9ff" CornerRadius="8" Padding="16">
                                <Grid ColumnDefinitions="*,*,*">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="Start Date" FontSize="12" Foreground="#0369a1" />
                                        <TextBlock Text="{Binding ViewStartDateFormatted}" FontWeight="SemiBold" Foreground="#0c4a6e" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text="Due Date" FontSize="12" Foreground="#0369a1" />
                                        <TextBlock Text="{Binding ViewDueDateFormatted}" FontWeight="SemiBold" Foreground="#0c4a6e" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Spacing="4">
                                        <TextBlock Text="Return Date" FontSize="12" Foreground="#0369a1" />
                                        <TextBlock Text="{Binding ViewReturnDateFormatted}" FontWeight="SemiBold" Foreground="#0c4a6e" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Overdue Warning -->
                            <Border Background="#fef2f2" CornerRadius="8" Padding="16"
                                    IsVisible="{Binding ViewDaysOverdue, Converter={x:Static conv:IntConverters.IsPositive}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                              Width="20" Height="20" Foreground="#dc2626" />
                                    <TextBlock Foreground="#b91c1c">
                                        <Run Text="This rental is " />
                                        <Run Text="{Binding ViewDaysOverdue}" FontWeight="Bold" />
                                        <Run Text=" days overdue" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Financial Summary -->
                            <Border Background="#f0fdf4" CornerRadius="8" Padding="16">
                                <Grid ColumnDefinitions="*,*">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="Total Cost" FontSize="12" Foreground="#166534" />
                                        <TextBlock Text="{Binding ViewTotalCostFormatted}" FontSize="20" FontWeight="Bold" Foreground="#15803d" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text="Deposit Status" FontSize="12" Foreground="#166534" />
                                        <TextBlock Text="{Binding ViewDepositStatusFormatted}" FontWeight="SemiBold" Foreground="#15803d" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Notes -->
                            <StackPanel Spacing="4" IsVisible="{Binding ViewNotes, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                <TextBlock Text="Notes" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <Border Background="{DynamicResource SurfaceAltBrush}" CornerRadius="6" Padding="12">
                                    <TextBlock Text="{Binding ViewNotes}" TextWrapping="Wrap" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <Button Classes="secondary-button" Content="Close" Command="{Binding CloseViewModalCommand}" HorizontalAlignment="Right" />
                    </Border>
                </Grid>
            </Border>
        </Panel>
    </Panel>

    <UserControl.Styles>
        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Success Button -->
        <Style Selector="Button.success-button">
            <Setter Property="Background" Value="#16a34a" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.success-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#16a34a" />
        </Style>
        <Style Selector="Button.success-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#15803d" />
        </Style>

        <!-- Form Input -->
        <Style Selector="TextBox.form-input">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TextBox.form-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>
        <Style Selector="TextBox.form-input:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Form ComboBox -->
        <Style Selector="ComboBox.form-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="PlaceholderForeground" Value="{DynamicResource TextTertiaryBrush}" />
        </Style>

    </UserControl.Styles>
</UserControl>
