<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.SuppliersPage"
             x:DataType="vm:SuppliersPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:SuppliersPageViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards (Row 0) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>

                <!-- Total Suppliers -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DBEAFE"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"
                                      Width="24" Height="24"
                                      Foreground="#3B82F6" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalSuppliers}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Total Suppliers"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Suppliers -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DCFCE7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                      Width="24" Height="24"
                                      Foreground="#22C55E" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ActiveSuppliers}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Active Suppliers"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Countries -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEF3C7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"
                                      Width="24" Height="24"
                                      Foreground="#F59E0B" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalCountries}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Countries"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Products Supplied -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#F3E8FF"
                                Margin="0,0,16,0">
                            <PathIcon Data="M21 16.5c0 .38-.21.71-.53.88l-7.9 4.44c-.16.12-.36.18-.57.18-.21 0-.41-.06-.57-.18l-7.9-4.44A.991.991 0 013 16.5v-9c0-.38.21-.71.53-.88l7.9-4.44c.16-.12.36-.18.57-.18.21 0 .41.06.57.18l7.9 4.44c.32.17.53.5.53.88v9zM12 4.15L6.04 7.5 12 10.85l5.96-3.35L12 4.15zM5 15.91l6 3.38v-6.71L5 9.21v6.7zm14 0v-6.7l-6 3.37v6.71l6-3.38z"
                                      Width="24" Height="24"
                                      Foreground="#A855F7" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalProductsSupplied}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Products Supplied"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Suppliers"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search suppliers..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Supplier Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Supplier" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Suppliers Table (Row 1) -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,*">
                        <!-- Table Header (fixed) -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12">
                            <Grid ColumnDefinitions="1.5*,*,*,0.8*,0.6*,120">
                                <!-- Supplier Column Header -->
                                <Button Grid.Column="0" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Name">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Supplier" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Name:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Name:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Contact Column Header -->
                                <Button Grid.Column="1" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Contact">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Contact" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Contact:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Contact:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Country Column Header -->
                                <Button Grid.Column="2" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Country">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Country" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Country:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Country:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Products Column Header -->
                                <Button Grid.Column="3" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Products">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Products" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Products:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Products:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Status Column Header -->
                                <Button Grid.Column="4" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Status">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Actions Column Header (not sortable) -->
                                <TextBlock Grid.Column="5"
                                           Text="Actions"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Table Content (scrollable) -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Suppliers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:SupplierDisplayItem">
                                    <Border Padding="24,16"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="1.5*,*,*,0.8*,0.6*,120">
                                            <!-- Supplier Name with Avatar -->
                                            <StackPanel Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        Spacing="12">
                                                <Border Width="40" Height="40"
                                                        CornerRadius="8"
                                                        Background="{DynamicResource PrimaryBrush}">
                                                    <TextBlock Text="{Binding Initials}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Email}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Contact Person -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ContactPerson, TargetNullValue='-', FallbackValue='-'}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis" />

                                            <!-- Country -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Country, TargetNullValue='-', FallbackValue='-'}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center" />

                                            <!-- Product Count -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding ProductCount}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center" />

                                            <!-- Status Badge -->
                                            <Border Grid.Column="4"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Padding="8,4"
                                                    CornerRadius="4"
                                                    Background="{Binding IsActive, Converter={x:Static local:BoolConverters.ToStatusBackground}}">
                                                <TextBlock Text="{Binding StatusText}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           Foreground="{Binding IsActive, Converter={x:Static local:BoolConverters.ToStatusForeground}}" />
                                            </Border>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="5"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        Spacing="4">
                                                <Button Classes="icon-button"
                                                        ToolTip.Tip="Edit"
                                                        Command="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).OpenEditModalCommand}"
                                                        CommandParameter="{Binding}">
                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                              Width="16" Height="16" />
                                                </Button>
                                                <Button Classes="icon-button danger"
                                                        ToolTip.Tip="Delete"
                                                        Command="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                        CommandParameter="{Binding}">
                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                              Width="16" Height="16" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        </ScrollViewer>

                        <!-- Empty State (shown when no data) -->
                        <Border Grid.Row="1"
                                Padding="40"
                                IsVisible="{Binding Suppliers.Count, Converter={x:Static local:IntConverters.IsZero}}">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="16">
                                <Border Width="64" Height="64"
                                        CornerRadius="32"
                                        Background="{DynamicResource SurfaceAltBrush}"
                                        HorizontalAlignment="Center">
                                    <PathIcon Data="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"
                                              Width="28" Height="28"
                                              Foreground="{DynamicResource TextTertiaryBrush}" />
                                </Border>
                                <TextBlock Text="No suppliers found"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Add your first supplier to track vendors and manage your supply chain."
                                           FontSize="14"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="300" />
                                <Button Classes="primary-button"
                                        HorizontalAlignment="Center"
                                        Margin="0,8,0,0"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Supplier" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Pagination Footer (Row 2 - fixed at bottom) -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <Button.Background>
                                                    <MultiBinding Converter="{StaticResource PageActiveBackgroundConverter}">
                                                        <Binding />
