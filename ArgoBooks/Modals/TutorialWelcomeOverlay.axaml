<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="ArgoBooks.Modals.TutorialWelcomeOverlay"
             x:DataType="vm:TutorialWelcomeViewModel"
             IsVisible="{Binding IsOpen}">

    <Design.DataContext>
        <vm:TutorialWelcomeViewModel />
    </Design.DataContext>

    <!-- Semi-transparent backdrop -->
    <Panel Background="{DynamicResource OverlayBrush}">
        <!-- Centered welcome card -->
        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="16"
                Width="520"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 16 48 0 #50000000"
                ClipToBounds="True">

            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header with gradient -->
                <Border Grid.Row="0"
                        Background="{DynamicResource PrimaryBrush}"
                        Padding="32,40">
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <!-- Logo Icon -->
                        <Border Width="72" Height="72"
                                CornerRadius="36"
                                Background="#33FFFFFF"
                                HorizontalAlignment="Center">
                            <PathIcon Data="{x:Static local:Icons.Dashboard}"
                                      Width="36" Height="36"
                                      Foreground="White" />
                        </Border>

                        <!-- Welcome Text -->
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="Welcome to Argo Books"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Let's get you started with a quick tour"
                                       FontSize="14"
                                       Foreground="#CCFFFFFF"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Content -->
                <StackPanel Grid.Row="1"
                            Spacing="24"
                            Margin="32,32">
                    <!-- Feature highlights -->
                    <StackPanel Spacing="16">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="40" Height="40"
                                    CornerRadius="20"
                                    Background="{DynamicResource PrimaryLightBrush}"
                                    Margin="0,0,16,0">
                                <PathIcon Data="{x:Static local:Icons.Lightning}"
                                          Width="20" Height="20"
                                          Foreground="{DynamicResource PrimaryBrush}" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                <TextBlock Text="Learn the essentials"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Quick tour of navigation and key features"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="40" Height="40"
                                    CornerRadius="20"
                                    Background="#E6F4EA"
                                    Margin="0,0,16,0">
                                <PathIcon Data="{x:Static local:Icons.Check}"
                                          Width="20" Height="20"
                                          Foreground="#22C55E" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                <TextBlock Text="Setup checklist"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Track your progress setting up your business"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="40" Height="40"
                                    CornerRadius="20"
                                    Background="#FEF3C7"
                                    Margin="0,0,16,0">
                                <PathIcon Data="{x:Static local:Icons.Help}"
                                          Width="20" Height="20"
                                          Foreground="#F59E0B" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                <TextBlock Text="Helpful hints"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Tips appear as you explore new features"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Footer with actions -->
                <Border Grid.Row="2"
                        Padding="32,24"
                        CornerRadius="0,0,16,16"
                        Background="{DynamicResource BackgroundSecondaryBrush}">
                    <Grid ColumnDefinitions="*,Auto">
                        <Button Grid.Column="0"
                                Classes="text-button"
                                Content="Skip for now"
                                Command="{Binding SkipTutorialCommand}"
                                HorizontalAlignment="Left" />

                        <Button Grid.Column="1"
                                Classes="primary-button"
                                Command="{Binding StartTourCommand}"
                                HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Start Tour"
                                           VerticalAlignment="Center" />
                                <PathIcon Data="{x:Static local:Icons.ChevronRightNav}"
                                          Width="16" Height="16"
                                          VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Panel>

    <UserControl.Styles>
        <Style Selector="Button.text-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.text-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.text-button:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
