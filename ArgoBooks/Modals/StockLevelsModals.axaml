<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArgoBooks.Modals.StockLevelsModals"
             x:DataType="vm:StockLevelsModalsViewModel">

    <Panel>
        <!-- Adjust Stock Modal -->
        <Panel IsVisible="{Binding IsAdjustStockModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="12" Width="500"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Adjust Stock"
                                           FontSize="18" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{Binding SelectedItemProductName}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseAdjustStockModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Adjustment Type -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Adjustment Type" /><Run Text="*" Foreground="#dc2626" />
                                </TextBlock>
                                <ComboBox ItemsSource="{Binding AdjustmentTypes}"
                                          SelectedItem="{Binding AdjustmentType}"
                                          Classes="form-combobox"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Current Stock (Read-only) -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="Current Stock" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding CurrentStock}"
                                             IsReadOnly="True"
                                             Classes="form-input"
                                             Background="{DynamicResource SurfaceAltBrush}" />
                                </StackPanel>

                                <!-- Adjustment Quantity -->
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Quantity" /><Run Text="*" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding AdjustmentQuantity, Mode=TwoWay}"
                                             Classes="form-input"
                                             Watermark="Enter quantity" />
                                </StackPanel>
                            </Grid>

                            <!-- New Stock Level (Calculated, Read-only) -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="New Stock Level" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding CalculatedNewStock}"
                                         IsReadOnly="True"
                                         Classes="form-input"
                                         Background="{DynamicResource SurfaceAltBrush}" />
                            </StackPanel>

                            <!-- Reason/Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Reason/Notes" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding AdjustmentReason, Mode=TwoWay}"
                                         Classes="form-input"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MinHeight="80"
                                         MaxHeight="120"
                                         Watermark="Enter reason for adjustment..." />
                            </StackPanel>

                            <!-- Error Message -->
                            <TextBlock Text="{Binding AdjustmentError}"
                                       FontSize="12"
                                       Foreground="#dc2626"
                                       IsVisible="{Binding AdjustmentError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseAdjustStockModalCommand}" />
                            <Button Classes="primary-button" Content="Apply Adjustment" Command="{Binding SaveAdjustmentCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- Add Item Modal -->
        <Panel IsVisible="{Binding IsAddItemModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="12" Width="600"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Add Inventory Item"
                                       FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseAddItemModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Product Selection -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Product" /><Run Text="*" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableProducts}"
                                                            SelectedItem="{Binding SelectedProduct}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="Search products..."
                                                            ShowAddNew="False"
                                                            EmptyMessage="No products available."
                                                            EmptyCreateLinkText="Create one"
                                                            EmptyCreateCommand="{Binding NavigateToCreateProductCommand}" />
                                <TextBlock Text="{Binding AddItemProductError}" FontSize="12" Foreground="#dc2626"
                                           IsVisible="{Binding AddItemProductError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- SKU and Location -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="SKU" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding AddItemSku, Mode=TwoWay}"
                                             Classes="form-input"
                                             Watermark="Auto-generated if empty" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Spacing="6">
                                    <controls:SearchableDropdown
                                        Label="Location"
                                        IsRequired="True"
                                        ItemsSource="{Binding AvailableLocations}"
                                        SelectedItem="{Binding SelectedLocation}"
                                        DisplayMemberPath="Name"
                                        Placeholder="Select a location..."
                                        HasError="{Binding HasLocationError}"
                                        ErrorMessage="Please select a location"
                                        ShowAddNew="False"
                                        EmptyMessage="No locations found."
                                        EmptyCreateLinkText="Create one"
                                        EmptyCreateCommand="{Binding NavigateToCreateLocationCommand}" />
                                </StackPanel>
                            </Grid>

                            <!-- Initial Quantity and Reorder Point -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Initial Quantity" /><Run Text="*" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding AddItemQuantity, Mode=TwoWay}"
                                             Classes="form-input"
                                             Watermark="0" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="Reorder Point" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding AddItemReorderPoint, Mode=TwoWay}"
                                             Classes="form-input"
                                             Watermark="10" />
                                </StackPanel>
                            </Grid>

                            <!-- Overstock Threshold -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Overstock Threshold" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding AddItemOverstockThreshold, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="100" />
                            </StackPanel>

                            <!-- Error Message -->
                            <TextBlock Text="{Binding AddItemError}"
                                       FontSize="12"
                                       Foreground="#dc2626"
                                       IsVisible="{Binding AddItemError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseAddItemModalCommand}" />
                            <Button Classes="primary-button" Content="Add Item" Command="{Binding SaveNewItemCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- Filter Modal -->
        <Panel IsVisible="{Binding IsFilterModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="480"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <StackPanel>
                    <!-- Modal Header -->
                    <Border Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Filter Stock Levels"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseFilterModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <StackPanel Spacing="16" Margin="24">
                        <!-- Category -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Category"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <ComboBox ItemsSource="{Binding FilterCategories}"
                                      SelectedItem="{Binding FilterCategory}"
                                      Classes="form-combobox"
                                      HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <!-- Location -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Location"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <ComboBox ItemsSource="{Binding FilterLocations}"
                                      SelectedItem="{Binding FilterLocation}"
                                      Classes="form-combobox"
                                      HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <!-- Stock Status -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Stock Status"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <ComboBox ItemsSource="{Binding FilterStatusOptions}"
                                      SelectedItem="{Binding FilterStatus}"
                                      Classes="form-combobox"
                                      HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Modal Footer -->
                    <Border Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                            <Button Grid.Column="0"
                                    Content="Clear Filters"
                                    Classes="secondary-button"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ClearFiltersCommand}" />
                            <Button Grid.Column="2"
                                    Content="Cancel"
                                    Classes="secondary-button"
                                    Margin="0,0,12,0"
                                    Command="{Binding CloseFilterModalCommand}" />
                            <Button Grid.Column="3"
                                    Content="Apply Filters"
                                    Classes="primary-button"
                                    Command="{Binding ApplyFiltersCommand}" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Panel>
    </Panel>
</UserControl>
