<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.CustomersPage"
             x:DataType="vm:CustomersPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:CustomersPageViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards (Row 0) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>

                <!-- Total Customers -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DBEAFE"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                      Width="24" Height="24"
                                      Foreground="#3B82F6" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalCustomers}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Total Customers"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Customers -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DCFCE7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                      Width="24" Height="24"
                                      Foreground="#22C55E" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ActiveCustomers}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Active Customers"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Overdue Payments -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEF3C7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"
                                      Width="24" Height="24"
                                      Foreground="#F59E0B" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding OverduePayments}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Overdue Payments"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Banned Customers -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEE2E2"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8 0-1.85.63-3.55 1.69-4.9L16.9 18.31C15.55 19.37 13.85 20 12 20zm6.31-3.1L7.1 5.69C8.45 4.63 10.15 4 12 4c4.42 0 8 3.58 8 8 0 1.85-.63 3.55-1.69 4.9z"
                                      Width="24" Height="24"
                                      Foreground="#DC2626" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding BannedCustomers}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Banned Customers"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Customers"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search customers..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Customer Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Customer" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Customers Table -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="HorizontalTableScroll"
                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40">
                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                <!-- Customer Name Column Header -->
                                <Panel Width="{Binding ColumnWidths.CustomerColumnWidth}">
                                    <Button Classes="column-header" Margin="8,12"
                                            Command="{Binding SortByCommand}" CommandParameter="Name">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Customer" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Name:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Name:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Customer" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>

                                <!-- Email Column Header -->
                                <Panel Width="{Binding ColumnWidths.EmailColumnWidth}">
                                    <Button Classes="column-header" Margin="8,12"
                                            Command="{Binding SortByCommand}" CommandParameter="Email">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Email" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Email:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Email:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Email" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>

                                <!-- Phone Column Header -->
                                <Panel Width="{Binding ColumnWidths.PhoneColumnWidth}">
                                    <Button Classes="column-header" Margin="8,12"
                                            Command="{Binding SortByCommand}" CommandParameter="Phone">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Phone" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Phone:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Phone:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Phone" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>

                                <!-- Address Column Header -->
                                <Panel Width="{Binding ColumnWidths.AddressColumnWidth}">
                                    <Button Classes="column-header" Margin="8,12"
                                            Command="{Binding SortByCommand}" CommandParameter="Address">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Address" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Address:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Address:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Address" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>

                                <!-- Payment Status Column Header -->
                                <Panel Width="{Binding ColumnWidths.PaymentStatusColumnWidth}">
                                    <Button Classes="column-header" Margin="8,12"
                                            Command="{Binding SortByCommand}" CommandParameter="PaymentStatus">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Payment" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="PaymentStatus:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="PaymentStatus:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="PaymentStatus" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>

                                <!-- Outstanding Column Header -->
                                <Panel Width="{Binding ColumnWidths.OutstandingColumnWidth}">
                                    <Button Classes="column-header" Margin="8,12"
                                            Command="{Binding SortByCommand}" CommandParameter="Outstanding">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Outstanding" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Outstanding:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Outstanding:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Outstanding" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>

                                <!-- Last Rental Column Header -->
                                <Panel Width="{Binding ColumnWidths.LastRentalColumnWidth}">
                                    <Button Classes="column-header" Margin="8,12"
                                            Command="{Binding SortByCommand}" CommandParameter="LastRental">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Last Rental" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="LastRental:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="LastRental:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="LastRental" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>

                                <!-- Actions - not sortable -->
                                <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                    <TextBlock Text="Actions"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               HorizontalAlignment="Left"
                                               Margin="8,12" />
                                </Panel>
                            </StackPanel>
                        </Border>

                        <!-- Table Content (scrollable) -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Panel>
                                <!-- Customers List -->
                                <ItemsControl ItemsSource="{Binding Customers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:CustomerDisplayItem">
                                            <Border Padding="24,0"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,0,1"
                                                    MinHeight="52">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <!-- Customer Name with Avatar and ID -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}">
                                                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" Margin="8,0">
                                                            <Border Width="40" Height="40"
                                                                    CornerRadius="20"
                                                                    Background="#E0E7FF">
                                                                <TextBlock Text="{Binding Initials}"
                                                                           FontSize="14"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="#4F46E5"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center" />
                                                            </Border>
                                                            <StackPanel VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="14"
                                                                           FontWeight="Medium"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis" />
                                                                <TextBlock Text="{Binding Id}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                            </StackPanel>
                                                        </StackPanel>
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Email -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.EmailColumnWidth}">
                                                        <TextBlock Text="{Binding Email}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Phone -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.PhoneColumnWidth}">
                                                        <TextBlock Text="{Binding Phone}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Address -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.AddressColumnWidth}">
                                                        <TextBlock Text="{Binding Address}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Payment Status Badge -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.PaymentStatusColumnWidth}">
                                                        <Border VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"
                                                                Padding="8,4"
                                                                CornerRadius="4"
                                                                Margin="8,0"
                                                                Background="{Binding PaymentStatus, Converter={x:Static local:StringConverters.ToPaymentStatusBackground}}">
                                                            <TextBlock Text="{Binding PaymentStatus}"
                                                                       FontSize="12"
                                                                       FontWeight="Medium"
                                                                       Foreground="{Binding PaymentStatus, Converter={x:Static local:StringConverters.ToPaymentStatusForeground}}" />
                                                        </Border>
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Outstanding Amount -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.OutstandingColumnWidth}">
                                                        <TextBlock Text="{Binding OutstandingFormatted}"
                                                                   FontSize="14"
                                                                   FontWeight="Medium"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Last Rental -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.LastRentalColumnWidth}">
                                                        <TextBlock Text="{Binding LastRentalFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Actions -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Spacing="4"
                                                                    Margin="8,0">
                                                            <Button Classes="icon-button"
                                                                    ToolTip.Tip="View History"
                                                                    Command="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).OpenHistoryModalCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <PathIcon Data="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <Button Classes="icon-button"
                                                                    ToolTip.Tip="Edit"
                                                                    Command="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).OpenEditModalCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <Button Classes="icon-button danger"
                                                                    ToolTip.Tip="Delete"
                                                                    Command="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                        </StackPanel>
                                                    </Panel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Customers.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No customers found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Add your first customer to start managing your customer relationships."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Add Customer" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                    </Grid>
                    </ScrollViewer>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:CustomersPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Note: Modals are now rendered at AppShell level for full-screen coverage -->
    </Grid>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Form Input -->
        <Style Selector="TextBox.form-input">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TextBox.form-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>
        <Style Selector="TextBox.form-input:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Form ComboBox -->
        <Style Selector="ComboBox.form-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <!-- Form DatePicker -->
        <Style Selector="DatePicker.form-datepicker">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
