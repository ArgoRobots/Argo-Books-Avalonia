<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ReturnsPage"
             x:DataType="vm:ReturnsPageViewModel">

    <UserControl.Resources>
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ReturnsPageViewModel />
    </Design.DataContext>

    <Panel>
        <Grid RowDefinitions="Auto,*">
            <!-- Tab Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                            Margin="0"
                            Classes="page-tabs">
                    <TabItem Header="Expense Returns" />
                    <TabItem Header="Customer Returns" />
                </TabControl>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid RowDefinitions="Auto,*" Margin="24">
                    <!-- Statistics Cards Row -->
                    <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                    <controls:StatCard Label="Total Returns"
                                       Value="{Binding TotalReturns}"
                                       Icon="M19 7v4H5.83l3.58-3.59L8 6l-6 6 6 6 1.41-1.41L5.83 13H21V7h-2z"
                                       IconColor="Primary" />
                    <controls:StatCard Label="Expense Returns"
                                       Value="{Binding ExpenseReturns}"
                                       Icon="M20 12l-1.41-1.41L13 16.17V4h-2v12.17l-5.58-5.59L4 12l8 8 8-8z"
                                       IconColor="Danger" />
                    <controls:StatCard Label="Customer Returns"
                                       Value="{Binding CustomerReturns}"
                                       Icon="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"
                                       IconColor="Success" />
                    <controls:StatCard Label="Total Refunded"
                                       Value="{Binding TotalRefunded}"
                                       Icon="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                       IconColor="Info" />
                </controls:StatCardsRow>

                <!-- Main Content Card (Row 1) -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1">

                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header with Title, Search and Buttons -->
                        <Border Grid.Row="0"
                                Padding="24,20"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="*,Auto">
                                <!-- Title -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <TextBlock FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}">
                                                <Binding Path="IsExpenseTabActive" Converter="{x:Static local:BoolConverters.ToReturnTableTitle}" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Action Buttons (Right aligned) -->
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="12">
                                    <!-- Search Box -->
                                    <Border Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="6"
                                            Width="250">
                                        <Grid ColumnDefinitions="Auto,*">
                                            <PathIcon Grid.Column="0"
                                                      Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                      Width="16" Height="16"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Margin="12,0,8,0" />
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                                     Watermark="Search returns..."
                                                     Classes="search-input" />
                                        </Grid>
                                    </Border>

                                    <!-- Filter Button -->
                                    <Button Classes="secondary-button"
                                            Command="{Binding OpenFilterModalCommand}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                      Width="16" Height="16" />
                                            <TextBlock Text="Filter" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Returns Table Content -->
                        <ScrollViewer Grid.Row="1"
                                      x:Name="HorizontalTableScroll"
                                      HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                      VerticalScrollBarVisibility="Disabled">
                            <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                                  MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                                <!-- Table Header -->
                                <Border Grid.Row="0"
                                        Background="{DynamicResource SurfaceAltBrush}"
                                        Padding="24,0"
                                        MinHeight="40"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- ID Column Header -->
                                        <Panel Width="{Binding ColumnWidths.IdColumnWidth}">
                                            <TextBlock Text="ID" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Id" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Product Column Header -->
                                        <Panel Width="{Binding ColumnWidths.ProductColumnWidth}">
                                            <TextBlock Text="Product" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Product" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Supplier/Customer Column Header -->
                                        <Panel Width="{Binding ColumnWidths.SupplierCustomerColumnWidth}">
                                            <TextBlock FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}">
                                                        <Binding Path="$parent[UserControl].((vm:ReturnsPageViewModel)DataContext).IsExpenseTabActive" Converter="{x:Static local:BoolConverters.ToSupplierOrCustomerHeader}" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="SupplierCustomer" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Date Column Header -->
                                        <Panel Width="{Binding ColumnWidths.DateColumnWidth}">
                                            <TextBlock Text="Date" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Date" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Reason Column Header -->
                                        <Panel Width="{Binding ColumnWidths.ReasonColumnWidth}">
                                            <TextBlock Text="Reason" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Reason" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Processed Column Header -->
                                        <Panel Width="{Binding ColumnWidths.ProcessedColumnWidth}">
                                            <TextBlock Text="Processed" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Processed" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Refund Column Header -->
                                        <Panel Width="{Binding ColumnWidths.RefundColumnWidth}">
                                            <TextBlock Text="Refund" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Refund" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Status Column Header -->
                                        <Panel Width="{Binding ColumnWidths.StatusColumnWidth}">
                                            <TextBlock Text="Status" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Actions Column Header -->
                                        <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                            <TextBlock Text="Actions" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" HorizontalAlignment="Left" />
                                        </Panel>
                                    </StackPanel>
                                </Border>

                                <!-- Table Content (scrollable vertically only) -->
                                <ScrollViewer Grid.Row="1"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <Panel>

                                        <!-- Table Rows -->
                                        <ItemsControl ItemsSource="{Binding Returns}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="vm:ReturnDisplayItem">
                                                    <Border Padding="24,0"
                                                            BorderBrush="{DynamicResource BorderBrush}"
                                                            BorderThickness="0,0,0,1"
                                                            Background="{DynamicResource SurfaceBrush}"
                                                            MinHeight="52"
                                                            Cursor="Hand">
                                                        <Border.Styles>
                                                            <Style Selector="Border:pointerover">
                                                                <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
                                                            </Style>
                                                        </Border.Styles>
                                                        <StackPanel Orientation="Horizontal">
                                                            <!-- Transaction ID -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.IdColumnWidth}">
                                                                <TextBlock Text="{Binding Id}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           Foreground="{DynamicResource PrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Product -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.ProductColumnWidth}">
                                                                <StackPanel VerticalAlignment="Center" Margin="8,0">
                                                                    <TextBlock Text="{Binding ProductNames}"
                                                                               FontSize="12"
                                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                                               TextTrimming="CharacterEllipsis" />
                                                                    <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} item(s)'}"
                                                                               FontSize="10"
                                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                                </StackPanel>
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Supplier/Customer -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.SupplierCustomerColumnWidth}">
                                                                <TextBlock Text="{Binding SupplierOrCustomerName}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Return Date -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.DateColumnWidth}">
                                                                <TextBlock Text="{Binding DateFormatted}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Reason -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.ReasonColumnWidth}">
                                                                <TextBlock Text="{Binding Reason}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Processed By -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.ProcessedColumnWidth}">
                                                                <TextBlock Text="{Binding ProcessedBy}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Refund Amount -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.RefundColumnWidth}">
                                                                <TextBlock Text="{Binding RefundAmountFormatted}"
                                                                           FontSize="12"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Status Badge -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}">
                                                                <Border CornerRadius="4"
                                                                        Padding="6,3"
                                                                        Background="{Binding StatusBadgeBackground}"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Margin="8,0">
                                                                    <TextBlock Text="{Binding StatusText}"
                                                                               FontSize="10"
                                                                               FontWeight="Medium"
                                                                               Foreground="{Binding StatusBadgeForeground}" />
                                                                </Border>
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Actions -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            Spacing="2"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center">
                                                                    <Button Classes="icon-button-small"
                                                                            ToolTip.Tip="View Details"
                                                                            Command="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ViewReturnDetailsCommand}"
                                                                            CommandParameter="{Binding}">
                                                                        <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                                  Width="14" Height="14" />
                                                                    </Button>
                                                                    <Button Classes="icon-button-small danger"
                                                                            ToolTip.Tip="Undo Return"
                                                                            Command="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).UndoReturnCommand}"
                                                                            CommandParameter="{Binding}">
                                                                        <PathIcon Data="M12.5 8c-2.65 0-5.05.99-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z"
                                                                                  Width="14" Height="14" />
                                                                    </Button>
                                                                </StackPanel>
                                                            </Panel>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Returns.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M19 7v4H5.83l3.58-3.59L8 6l-6 6 6 6 1.41-1.41L5.83 13H21V7h-2z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No returns found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Returns will appear here when items are returned to suppliers or by customers."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="350" />
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                        </Grid>
                    </ScrollViewer>

                        <!-- Pagination Footer -->
                        <Border Grid.Row="2"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12"
                                CornerRadius="0,0,11,11"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Rows per page selector -->
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="8"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding PaginationText}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBlock Text="|"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="8,0" />
                                    <TextBlock Text="Per page:"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                              SelectedItem="{Binding PageSize}"
                                              Classes="page-size-combobox"
                                              Width="70" />
                                </StackPanel>

                                <!-- Page Numbers -->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="4"
                                            IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                    <!-- Previous Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToPreviousPageCommand}"
                                            IsEnabled="{Binding CanGoToPreviousPage}">
                                        <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                                  Width="16" Height="16" />
                                    </Button>

                                    <!-- Page Number Buttons -->
                                    <ItemsControl ItemsSource="{Binding PageNumbers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="4" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Classes="pagination-button"
                                                        Content="{Binding}"
                                                        Command="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).GoToPageCommand}"
                                                        CommandParameter="{Binding}">
                                                    <controls:PaginationHelper.IsActivePage>
                                                        <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                            <Binding />
                                                            <Binding Path="$parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).CurrentPage" />
                                                        </MultiBinding>
                                                    </controls:PaginationHelper.IsActivePage>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Next Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToNextPageCommand}"
                                            IsEnabled="{Binding CanGoToNextPage}">
                                        <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                                  Width="16" Height="16" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
        </Grid>

        <!-- View Details Modal Overlay -->
        <Border Background="#80000000"
                IsVisible="{Binding IsViewDetailsModalOpen}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#DBEAFE">
                                    <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                              Width="20" Height="20"
                                              Foreground="#3B82F6" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Return Details"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsId}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseViewDetailsModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" Padding="24">
                        <StackPanel Spacing="20">
                            <!-- Product -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Product"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Text="{Binding ViewDetailsProduct}"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <!-- Date and Refund -->
                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="Return Date"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsDate}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="6">
                                    <TextBlock Text="Refund Amount"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsRefund}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Reason -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Reason"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="8"
                                        Padding="12">
                                    <TextBlock Text="{Binding ViewDetailsReason}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextWrapping="Wrap" />
                                </Border>
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Notes"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="8"
                                        Padding="12"
                                        MinHeight="80">
                                    <TextBlock Text="{Binding ViewDetailsNotes}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2"
                            Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Button Content="Close"
                                Classes="secondary-button"
                                HorizontalAlignment="Right"
                                Command="{Binding CloseViewDetailsModalCommand}" />
                    </Border>
                </Grid>
            </Border>
        </Border>

        <!-- Undo Return Modal Overlay -->
        <Border Background="#80000000"
                IsVisible="{Binding IsUndoReturnModalOpen}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="450"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#FEF3C7">
                                    <PathIcon Data="M12.5 8c-2.65 0-5.05.99-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z"
                                              Width="20" Height="20"
                                              Foreground="#D97706" />
                                </Border>
                                <TextBlock Text="Undo Return"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseUndoReturnModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <StackPanel Grid.Row="1" Spacing="16" Margin="24">
                        <!-- Item Description -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Return to undo:"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBlock Text="{Binding UndoReturnItemDescription}"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                        </StackPanel>

                        <!-- Reason (Optional) -->
                        <StackPanel Spacing="8">
                            <TextBlock FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                <Run Text="Reason for undo" />
                                <Run Text="(optional)" Foreground="{DynamicResource TextTertiaryBrush}" />
                            </TextBlock>
                            <TextBox Text="{Binding UndoReturnReason, Mode=TwoWay}"
                                     Watermark="Enter reason for undoing this return..."
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     MaxHeight="120" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2"
                            Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <Button Grid.Column="1"
                                    Content="Cancel"
                                    Classes="secondary-button"
                                    Margin="0,0,12,0"
                                    Command="{Binding CloseUndoReturnModalCommand}" />
                            <Button Grid.Column="2"
                                    Content="Undo Return"
                                    Classes="danger-button"
                                    Command="{Binding ConfirmUndoReturnCommand}" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- TabControl - page tabs styling -->
        <Style Selector="TabControl.page-tabs">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="TabControl.page-tabs /template/ ItemsPresenter#PART_ItemsPresenter">
            <Setter Property="Margin" Value="24,0" />
        </Style>
        <Style Selector="TabControl.page-tabs /template/ Border#PART_InnerBorder">
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="TabControl.page-tabs /template/ ContentPresenter#PART_SelectedContentHost">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Tab Item Styling -->
        <Style Selector="TabControl.page-tabs TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="4,12,4,10" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:selected">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="TextBlock.Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Height" Value="2" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="CornerRadius" Value="1" />
        </Style>

        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>


        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

    </UserControl.Styles>
</UserControl>
