<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Argo Books Text Styles
        Typography styles for headings, body text, and labels.
    -->

    <!-- Heading 1 -->
    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXxxl}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- Heading 2 -->
    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXxl}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <!-- Heading 3 -->
    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXl}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Heading 4 -->
    <Style Selector="TextBlock.h4">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLg}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Body Text (default) -->
    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="{StaticResource FontSizeMd}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="22" />
    </Style>

    <!-- Body Text Small -->
    <Style Selector="TextBlock.body-sm">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="LineHeight" Value="18" />
    </Style>

    <!-- Secondary Text (muted) -->
    <Style Selector="TextBlock.secondary">
        <Setter Property="FontSize" Value="{StaticResource FontSizeMd}" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>

    <!-- Tertiary Text (more muted) -->
    <Style Selector="TextBlock.tertiary">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}" />
    </Style>

    <!-- Label (for form fields) -->
    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Caption -->
    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXs}" />
        <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}" />
    </Style>

    <!-- Link Text -->
    <Style Selector="TextBlock.link">
        <Setter Property="FontSize" Value="{StaticResource FontSizeMd}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="TextBlock.link:pointerover">
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>

    <!-- Error Text -->
    <Style Selector="TextBlock.error">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
    </Style>

    <!-- Success Text -->
    <Style Selector="TextBlock.success-text">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
    </Style>

    <!-- Warning Text -->
    <Style Selector="TextBlock.warning-text">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}" />
    </Style>

    <!-- Stat Value (large numbers) -->
    <Style Selector="TextBlock.stat-value">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXxl}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!-- Stat Label -->
    <Style Selector="TextBlock.stat-label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="Margin" Value="0,4,0,0" />
    </Style>

    <!-- Page Title -->
    <Style Selector="TextBlock.page-title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXxl}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!-- Section Title -->
    <Style Selector="TextBlock.section-title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLg}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <!-- Monospace (for code/IDs) -->
    <Style Selector="TextBlock.monospace">
        <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>

</ResourceDictionary>
