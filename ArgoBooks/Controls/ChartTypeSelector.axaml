<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="40"
             x:Class="ArgoBooks.Controls.ChartTypeSelector"
             x:CompileBindings="False">

    <!-- Chart Type Selector - binds to DataContext properties -->
    <StackPanel Orientation="Horizontal"
                Spacing="8"
                VerticalAlignment="Center">
        <PathIcon Data="{x:Static local:Icons.Analytics}"
                  Width="16" Height="16"
                  Foreground="{DynamicResource TextSecondaryBrush}" />
        <ComboBox ItemsSource="{Binding ChartTypeOptions}"
                  SelectedItem="{Binding SelectedChartType}"
                  Classes="form-combobox"
                  Width="120">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>
</UserControl>
