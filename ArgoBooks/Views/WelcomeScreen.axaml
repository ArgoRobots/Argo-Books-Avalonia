<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.WelcomeScreen"
             x:DataType="vm:WelcomeScreenViewModel"
             Background="{DynamicResource BackgroundBrush}">

    <Design.DataContext>
        <vm:WelcomeScreenViewModel />
    </Design.DataContext>

    <Grid>
        <!-- Background gradient/pattern -->
        <Border Background="{DynamicResource BackgroundSecondaryBrush}"
                Opacity="0.5" />

        <!-- Main Content -->
        <ScrollViewer x:Name="MainScrollViewer"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="900"
                        Margin="40,60">

                <!-- Logo and Welcome -->
                <StackPanel HorizontalAlignment="Center"
                            Margin="0,0,0,48">
                    <!-- App Logo -->
                    <Border Width="80" Height="80"
                            CornerRadius="16"
                            Background="{DynamicResource PrimaryBrush}"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,24">
                        <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                  Width="40" Height="40"
                                  Foreground="White" />
                    </Border>

                    <!-- Welcome Text -->
                    <TextBlock Text="Welcome to Argo Books"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Simple, powerful bookkeeping for your business"
                               FontSize="16"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0" />
                </StackPanel>

                <!-- Main Actions -->
                <UniformGrid Rows="1" Columns="2"
                             Margin="0,0,0,48">
                    <!-- Create New Company -->
                    <Border Classes="action-card"
                            Margin="0,0,12,0">
                        <Button Classes="action-card-button"
                                Command="{Binding CreateNewCompanyCommand}">
                            <StackPanel Spacing="16">
                                <Border Width="64" Height="64"
                                        CornerRadius="32"
                                        Background="{DynamicResource PrimaryLightBrush}">
                                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                              Width="28" Height="28"
                                              Foreground="{DynamicResource PrimaryBrush}" />
                                </Border>
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Create New Company"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="Start fresh with a new company file"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Open Existing Company -->
                    <Border Classes="action-card"
                            Margin="12,0,0,0">
                        <Button Classes="action-card-button"
                                Command="{Binding OpenCompanyCommand}">
                            <StackPanel Spacing="16">
                                <Border Width="64" Height="64"
                                        CornerRadius="32"
                                        Background="#E6F4EA">
                                    <PathIcon Data="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z"
                                              Width="28" Height="28"
                                              Foreground="#22C55E" />
                                </Border>
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Open Company"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="Open an existing company file"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </Border>
                </UniformGrid>

                <!-- Recent Companies Section -->
                <Border Classes="section-card"
                        IsVisible="{Binding HasRecentCompanies}"
                        Margin="0,0,0,32">
                    <StackPanel>
                        <!-- Section Header -->
                        <Grid ColumnDefinitions="*,Auto"
                              Margin="0,0,0,16">
                            <TextBlock Grid.Column="0"
                                       Text="Recent Companies"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1"
                                    Classes="text-link"
                                    Content="Clear All"
                                    Command="{Binding ClearRecentCommand}" />
                        </Grid>

                        <!-- Recent List -->
                        <ItemsControl ItemsSource="{Binding RecentCompanies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:RecentCompanyItem">
                                    <Button Classes="recent-item"
                                            Command="{Binding $parent[ItemsControl].((vm:WelcomeScreenViewModel)DataContext).OpenRecentCompanyCommand}"
                                            CommandParameter="{Binding}">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                            <!-- Icon -->
                                            <Border Grid.Column="0"
                                                    Width="44" Height="44"
                                                    CornerRadius="8"
                                                    Background="{DynamicResource SurfaceAltBrush}"
                                                    Margin="0,0,16,0">
                                                <PathIcon Data="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"
                                                          Width="22" Height="22"
                                                          Foreground="{DynamicResource TextSecondaryBrush}" />
                                            </Border>

                                            <!-- Company Info -->
                                            <StackPanel Grid.Column="1"
                                                        VerticalAlignment="Center"
                                                        Spacing="2">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <TextBlock Text="{Binding FilePath}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>

                                            <!-- Last Opened -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding LastOpened, StringFormat={}{0:MMM d}}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="16,0" />

                                            <!-- Remove Button -->
                                            <Button Grid.Column="3"
                                                    Classes="icon-button-small"
                                                    Command="{Binding $parent[ItemsControl].((vm:WelcomeScreenViewModel)DataContext).RemoveFromRecentCommand}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip.Tip="Remove from recent">
                                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                                          Width="14" Height="14" />
                                            </Button>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Sample Company -->
                <Border Classes="sample-card"
                        Margin="0,0,0,32">
                    <Button Classes="sample-button"
                            Command="{Binding OpenSampleCompanyCommand}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Icon -->
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="24"
                                    Background="#FEF3C7"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"
                                          Width="24" Height="24"
                                          Foreground="#F59E0B" />
                            </Border>

                            <!-- Text -->
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Spacing="2">
                                <TextBlock Text="Explore Sample Company"
                                           FontSize="15"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="See how Argo Books works with pre-populated data"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>

                            <!-- Arrow -->
                            <PathIcon Grid.Column="2"
                                      Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                      VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                </Border>

                <!-- Footer Links -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="24">
                    <Button Classes="footer-link"
                            Command="{Binding OpenHelpCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"
                                      Width="16" Height="16" />
                            <TextBlock Text="Help &amp; Support" />
                        </StackPanel>
                    </Button>
                    <Button Classes="footer-link"
                            Command="{Binding OpenWhatsNewCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="M20 2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h14l4 4V4c0-1.1-.9-2-2-2zm-2 12H6v-2h12v2zm0-3H6V9h12v2zm0-3H6V6h12v2z"
                                      Width="16" Height="16" />
                            <TextBlock Text="What's New" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Version -->
                <TextBlock Text="{Binding AppVersion}"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0" />
            </StackPanel>
        </ScrollViewer>
    </Grid>

    <UserControl.Styles>
        <!-- Action Card -->
        <Style Selector="Border.action-card">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style Selector="Button.action-card-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="32" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.action-card-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.action-card-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Section Card -->
        <Style Selector="Border.section-card">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="24" />
        </Style>

        <!-- Recent Item -->
        <Style Selector="Button.recent-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,0,0,4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.recent-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.recent-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Sample Card -->
        <Style Selector="Border.sample-card">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
        </Style>

        <Style Selector="Button.sample-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sample-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sample-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Text Link -->
        <Style Selector="Button.text-link">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.text-link /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.text-link:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>


        <!-- Footer Link -->
        <Style Selector="Button.footer-link">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.footer-link /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.footer-link:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.footer-link PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.footer-link:pointerover PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
