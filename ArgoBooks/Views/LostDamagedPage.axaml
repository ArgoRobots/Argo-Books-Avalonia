<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.LostDamagedPage"
             x:DataType="vm:LostDamagedPageViewModel">

    <UserControl.Resources>
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:LostDamagedPageViewModel />
    </Design.DataContext>

    <Panel>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid RowDefinitions="Auto,*" Margin="24">
                <!-- Statistics Cards (Row 0) -->
                <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                    <Grid.Styles>
                        <Style Selector="Border.stat-card">
                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                            <Setter Property="CornerRadius" Value="12" />
                            <Setter Property="Padding" Value="20" />
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                            <Setter Property="BorderThickness" Value="1" />
                        </Style>
                    </Grid.Styles>

                    <!-- Total Lost/Damaged -->
                    <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="#FEE2E2"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                          Width="24" Height="24"
                                          Foreground="#DC2626" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding TotalLostDamaged}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Total Lost/Damaged"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Lost Items -->
                    <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="#FEF3C7"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                          Width="24" Height="24"
                                          Foreground="#D97706" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding LostItems}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Lost Items"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Damaged Items -->
                    <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="#F3E8FF"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M22 5.72l-4.6-3.86-1.29 1.53 4.6 3.86L22 5.72zM7.88 3.39L6.6 1.86 2 5.71l1.29 1.53 4.59-3.85zM12.5 8H11v6l4.75 2.85.75-1.23-4-2.37V8zM12 4c-4.97 0-9 4.03-9 9s4.03 9 9 9 9-4.03 9-9-4.03-9-9-9zm0 16c-3.87 0-7-3.13-7-7s3.13-7 7-7 7 3.13 7 7-3.13 7-7 7z"
                                          Width="24" Height="24"
                                          Foreground="#9333EA" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DamagedItems}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Damaged Items"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Total Loss Value -->
                    <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="#DBEAFE"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                          Width="24" Height="24"
                                          Foreground="#3B82F6" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding TotalLossValue}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Total Loss Value"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Main Content Card (Row 1) -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1">

                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header with Title, Search and Buttons -->
                        <Border Grid.Row="0"
                                Padding="24,20"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="*,Auto">
                                <!-- Title -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <TextBlock Text="Lost &amp; Damaged Inventory"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>

                                <!-- Action Buttons (Right aligned) -->
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="12">
                                    <!-- Search Box -->
                                    <Border Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="6"
                                            Width="250">
                                        <Grid ColumnDefinitions="Auto,*">
                                            <PathIcon Grid.Column="0"
                                                      Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                      Width="16" Height="16"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Margin="12,0,8,0" />
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                                     Watermark="Search products..."
                                                     Classes="search-input" />
                                        </Grid>
                                    </Border>

                                    <!-- Filter Button -->
                                    <Button Classes="secondary-button"
                                            Command="{Binding OpenFilterModalCommand}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                      Width="16" Height="16" />
                                            <TextBlock Text="Filter" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Report Button -->
                                    <Button Classes="primary-button"
                                            Command="{Binding OpenReportModalCommand}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                      Width="16" Height="16"
                                                      Foreground="White" />
                                            <TextBlock Text="Report Lost/Damaged" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Items Table Content -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto">
                            <Panel Margin="0">
                                <!-- Data Table -->
                                <Grid IsVisible="{Binding Items.Count, Converter={x:Static local:IntConverters.IsNotZero}}">
                                    <Grid RowDefinitions="Auto,*">
                                        <!-- Table Header -->
                                        <Border Grid.Row="0"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                Padding="24,12"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="0,0,0,1">
                                            <Grid ColumnDefinitions="100,80,*,100,120,120,100,100,80">
                                                <TextBlock Grid.Column="0" Text="ID" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="1" Text="Type" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="2" Text="Product" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="3" Text="Date" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="4" Text="Reason" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="5" Text="Staff" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="6" Text="Loss Value" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="7" Text="Status" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Grid.Column="8" Text="Actions" FontWeight="Medium" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" />
                                            </Grid>
                                        </Border>

                                        <!-- Table Rows -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="vm:LostDamagedDisplayItem">
                                                    <Border Padding="24,16"
                                                            BorderBrush="{DynamicResource BorderBrush}"
                                                            BorderThickness="0,0,0,1"
                                                            Background="{DynamicResource SurfaceBrush}"
                                                            Cursor="Hand">
                                                        <Border.Styles>
                                                            <Style Selector="Border:pointerover">
                                                                <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
                                                            </Style>
                                                        </Border.Styles>
                                                        <Grid ColumnDefinitions="100,80,*,100,120,120,100,100,80">
                                                            <!-- ID -->
                                                            <TextBlock Grid.Column="0"
                                                                       Text="{Binding Id}"
                                                                       FontSize="13"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource PrimaryBrush}"
                                                                       VerticalAlignment="Center" />

                                                            <!-- Type Badge -->
                                                            <Panel Grid.Column="1" VerticalAlignment="Center">
                                                                <Border CornerRadius="4"
                                                                        Padding="8,4"
                                                                        Background="{Binding TypeBadgeBackground}"
                                                                        HorizontalAlignment="Left">
                                                                    <TextBlock Text="{Binding ItemType}"
                                                                               FontSize="11"
                                                                               FontWeight="Medium"
                                                                               Foreground="{Binding TypeBadgeForeground}" />
                                                                </Border>
                                                            </Panel>

                                                            <!-- Product -->
                                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding ProductName}"
                                                                           FontSize="13"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis" />
                                                                <TextBlock Text="{Binding QuantityFormatted}"
                                                                           FontSize="11"
                                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                            </StackPanel>

                                                            <!-- Date -->
                                                            <TextBlock Grid.Column="3"
                                                                       Text="{Binding DateFormatted}"
                                                                       FontSize="13"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       VerticalAlignment="Center" />

                                                            <!-- Reason -->
                                                            <TextBlock Grid.Column="4"
                                                                       Text="{Binding Reason}"
                                                                       FontSize="13"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       VerticalAlignment="Center" />

                                                            <!-- Staff -->
                                                            <TextBlock Grid.Column="5"
                                                                       Text="{Binding StaffName}"
                                                                       FontSize="13"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       VerticalAlignment="Center" />

                                                            <!-- Loss Value -->
                                                            <TextBlock Grid.Column="6"
                                                                       Text="{Binding ValueLostFormatted}"
                                                                       FontSize="13"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#DC2626"
                                                                       VerticalAlignment="Center" />

                                                            <!-- Status Badge -->
                                                            <Panel Grid.Column="7" VerticalAlignment="Center">
                                                                <Border CornerRadius="4"
                                                                        Padding="8,4"
                                                                        Background="{Binding StatusBadgeBackground}"
                                                                        HorizontalAlignment="Left">
                                                                    <TextBlock Text="{Binding Status}"
                                                                               FontSize="11"
                                                                               FontWeight="Medium"
                                                                               Foreground="{Binding StatusBadgeForeground}" />
                                                                </Border>
                                                            </Panel>

                                                            <!-- Actions -->
                                                            <StackPanel Grid.Column="8"
                                                                        Orientation="Horizontal"
                                                                        Spacing="4"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center">
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="View Details"
                                                                        Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ViewItemDetailsCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button danger"
                                                                        ToolTip.Tip="Delete"
                                                                        Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).DeleteItemCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Grid>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Items.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No lost or damaged items found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Report lost or damaged inventory items to track losses and file insurance claims."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="350" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenReportModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Report Lost/Damaged" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>

                        <!-- Pagination Footer -->
                        <Border Grid.Row="2"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12"
                                CornerRadius="0,0,11,11"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Rows per page selector -->
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="8"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding PaginationText}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBlock Text="|"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="8,0" />
                                    <TextBlock Text="Per page:"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                              SelectedItem="{Binding PageSize}"
                                              Classes="page-size-combobox"
                                              Width="70" />
                                </StackPanel>

                                <!-- Page Numbers -->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="4"
                                            IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                    <!-- Previous Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToPreviousPageCommand}"
                                            IsEnabled="{Binding CanGoToPreviousPage}">
                                        <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                                  Width="16" Height="16" />
                                    </Button>

                                    <!-- Page Number Buttons -->
                                    <ItemsControl ItemsSource="{Binding PageNumbers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="4" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Classes="pagination-button"
                                                        Content="{Binding}"
                                                        Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).GoToPageCommand}"
                                                        CommandParameter="{Binding}">
                                                    <controls:PaginationHelper.IsActivePage>
                                                        <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                            <Binding />
                                                            <Binding Path="$parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).CurrentPage" />
                                                        </MultiBinding>
                                                    </controls:PaginationHelper.IsActivePage>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Next Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToNextPageCommand}"
                                            IsEnabled="{Binding CanGoToNextPage}">
                                        <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                                  Width="16" Height="16" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Filter Modal Overlay -->
        <Border Background="#80000000"
                IsVisible="{Binding IsFilterModalOpen}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="480"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Filter Lost/Damaged Items"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseFilterModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" Padding="24">
                        <StackPanel Spacing="16">
                            <!-- Type -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Type"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding TypeOptions}"
                                          SelectedItem="{Binding FilterType}"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Date Range -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="From Date"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <CalendarDatePicker SelectedDate="{Binding FilterDateFrom}"
                                                        HorizontalAlignment="Stretch" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="To Date"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <CalendarDatePicker SelectedDate="{Binding FilterDateTo}"
                                                        HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Grid>

                            <!-- Reason -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Reason"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding ReasonOptions}"
                                          SelectedItem="{Binding FilterReason}"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2"
                            Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <Button Grid.Column="0"
                                    Content="Clear Filters"
                                    Classes="secondary-button"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ClearFiltersCommand}" />
                            <Button Grid.Column="1"
                                    Content="Cancel"
                                    Classes="secondary-button"
                                    Margin="0,0,12,0"
                                    Command="{Binding CloseFilterModalCommand}" />
                            <Button Grid.Column="2"
                                    Content="Apply Filters"
                                    Classes="primary-button"
                                    Command="{Binding ApplyFiltersCommand}" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Border>

        <!-- Report Modal Overlay -->
        <Border Background="#80000000"
                IsVisible="{Binding IsReportModalOpen}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="520"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Report Lost/Damaged Item"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseReportModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" Padding="24">
                        <StackPanel Spacing="16">
                            <!-- Type Selection -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="Type"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <ComboBox ItemsSource="{Binding ReportTypeOptions}"
                                              SelectedItem="{Binding ReportType}"
                                              HorizontalAlignment="Stretch" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="Date Discovered"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <CalendarDatePicker SelectedDate="{Binding ReportDate}"
                                                        HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Grid>

                            <!-- Reason -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Reason"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding ReportReasonOptions}"
                                          SelectedItem="{Binding ReportReason}"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Quantity and Value -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="Quantity"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <NumericUpDown Value="{Binding ReportQuantity}"
                                                   Minimum="1"
                                                   HorizontalAlignment="Stretch" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="Loss Value ($)"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <NumericUpDown Value="{Binding ReportValueLost}"
                                                   Minimum="0"
                                                   FormatString="N2"
                                                   HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Grid>

                            <!-- Notes -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Notes"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ReportNotes}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Height="80"
                                         Watermark="Add any additional notes about the incident..." />
                            </StackPanel>

                            <!-- Insurance Claim -->
                            <CheckBox IsChecked="{Binding ReportInsuranceClaim}">
                                <TextBlock Text="File Insurance Claim"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                            </CheckBox>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2"
                            Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <Button Grid.Column="1"
                                    Content="Cancel"
                                    Classes="secondary-button"
                                    Margin="0,0,12,0"
                                    Command="{Binding CloseReportModalCommand}" />
                            <Button Grid.Column="2"
                                    Content="Submit Report"
                                    Classes="primary-button"
                                    Command="{Binding SubmitReportCommand}" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>
    </UserControl.Styles>
</UserControl>
