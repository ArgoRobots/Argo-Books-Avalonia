<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="550"
             x:Class="ArgoBooks.Modals.ExportAsModal"
             x:DataType="vm:ExportAsModalViewModel">

    <Design.DataContext>
        <vm:ExportAsModalViewModel />
    </Design.DataContext>

    <Panel IsVisible="{Binding IsOpen}">
        <!-- Modal Backdrop -->
        <Border Background="#80000000"
                PointerPressed="Backdrop_PointerPressed">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                </Transitions>
            </Border.Transitions>
        </Border>

        <!-- Modal Container -->
        <Border x:Name="ModalBorder"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000"
                Focusable="True"
                KeyDown="Modal_KeyDown"
                Opacity="0"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
            </Border.RenderTransform>
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Border.Transitions>

            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Export As"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Export your data to various file formats"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseCommand}">
                            <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24,20" Spacing="12">
                        <!-- Documents -->
                        <TextBlock Text="Documents"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   Margin="0,0,0,4" />

                        <!-- PDF -->
                        <Button Classes="export-option"
                                Command="{Binding SelectFormatCommand}"
                                CommandParameter="PDF">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#DC26261A"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="M20 2H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-8.5 7.5c0 .83-.67 1.5-1.5 1.5H9v2H7.5V7H10c.83 0 1.5.67 1.5 1.5v1zm5 2c0 .83-.67 1.5-1.5 1.5h-2.5V7H15c.83 0 1.5.67 1.5 1.5v3zm4-3H19v1h1.5V11H19v2h-1.5V7h3v1.5zM9 9.5h1v-1H9v1zM4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm10 5.5h1v-3h-1v3z"
                                              Width="20" Height="20"
                                              Foreground="#DC2626" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="PDF Document"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="Export as a formatted PDF for printing or sharing"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="2"
                                          Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                          Width="16" Height="16"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Spreadsheets -->
                        <TextBlock Text="Spreadsheets"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   Margin="0,12,0,4" />

                        <!-- CSV -->
                        <Button Classes="export-option"
                                Command="{Binding SelectFormatCommand}"
                                CommandParameter="CSV">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="{DynamicResource WarningIconBgBrush}"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm4 18H6V4h7v5h5v11z"
                                              Width="20" Height="20"
                                              Foreground="{DynamicResource WarningBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="CSV (Comma-Separated Values)"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="Export as a CSV file for use in spreadsheet applications"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="2"
                                          Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                          Width="16" Height="16"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Excel -->
                        <Button Classes="export-option"
                                Command="{Binding SelectFormatCommand}"
                                CommandParameter="Excel">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#1D6F421A"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="M21 5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"
                                              Width="20" Height="20"
                                              Foreground="#1D6F42" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="Excel (XLSX)"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="Export as a Microsoft Excel workbook"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="2"
                                          Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                          Width="16" Height="16"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Financial Formats -->
                        <TextBlock Text="Financial Formats"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   Margin="0,12,0,4" />

                        <!-- QIF -->
                        <Button Classes="export-option"
                                Command="{Binding SelectFormatCommand}"
                                CommandParameter="QIF">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="{DynamicResource PrimaryIconBgBrush}"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                              Width="20" Height="20"
                                              Foreground="{DynamicResource PrimaryBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="QIF (Quicken Interchange Format)"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="Export for Quicken and other financial software"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="2"
                                          Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                          Width="16" Height="16"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- IIF -->
                        <Button Classes="export-option"
                                Command="{Binding SelectFormatCommand}"
                                CommandParameter="IIF">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#2CA01C1A"
                                        Margin="0,0,16,0">
                                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                              Width="20" Height="20"
                                              Foreground="#2CA01C" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="IIF (Intuit Interchange Format)"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="Export for QuickBooks Desktop"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="2"
                                          Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                          Width="16" Height="16"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          VerticalAlignment="Center" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="12">
                        <Button Classes="secondary-button"
                                Content="Cancel"
                                Command="{Binding CloseCommand}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Secondary Button -->
        <Style Selector="Button.secondary-button">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.secondary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
        </Style>
        <Style Selector="Button.secondary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Export Option Button -->
        <Style Selector="Button.export-option">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.export-option /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
        </Style>
        <Style Selector="Button.export-option:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
