<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="42"
             x:Class="ArgoBooks.Controls.SidebarItem"
             x:DataType="controls:SidebarItem">

    <Button x:Name="ItemButton"
            Classes="sidebar-item"
            Classes.active="{Binding IsActive, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
            Classes.collapsed="{Binding IsCollapsed, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
            Command="{Binding Command, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
            CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
            ToolTip.Tip="{Binding EffectiveTooltipText, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
            HorizontalAlignment="Stretch">
        <Grid ColumnDefinitions="30,*,Auto">
            <!-- Icon - fixed width column so position stays constant when collapsed -->
            <PathIcon Grid.Column="0"
                      Data="{Binding Icon, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
                      Width="20" Height="20"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" />

            <!-- Text -->
            <TextBlock Grid.Column="1"
                       Text="{Binding TranslatedText, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       IsVisible="{Binding !IsCollapsed, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}" />

            <!-- Badge -->
            <Border Grid.Column="2"
                    Background="{DynamicResource DangerBrush}"
                    CornerRadius="10"
                    Padding="6,2"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    IsVisible="{Binding ShowBadge, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}">
                <TextBlock Text="{Binding BadgeText, RelativeSource={RelativeSource AncestorType=controls:SidebarItem}}"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Foreground="White" />
            </Border>
        </Grid>
    </Button>

    <UserControl.Styles>
        <!-- Sidebar Item Base Style (from mockup: padding 10px 15px, rounded 8px) -->
        <Style Selector="Button.sidebar-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource SidebarTextMutedBrush}" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style Selector="Button.sidebar-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="Button.sidebar-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarHoverBrush}" />
        </Style>

        <Style Selector="Button.sidebar-item:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarHoverBrush}" />
        </Style>

        <!-- Default Icon/Text colors -->
        <Style Selector="Button.sidebar-item PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource SidebarTextMutedBrush}" />
        </Style>

        <Style Selector="Button.sidebar-item TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}" />
        </Style>

        <!-- Active State (must come after default styles to override) -->
        <Style Selector="Button.sidebar-item.active /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SidebarActiveBrush}" />
        </Style>

        <Style Selector="Button.sidebar-item.active">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.sidebar-item.active PathIcon">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.sidebar-item.active TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- Collapsed State - keep same left padding so icon stays in place -->
        <Style Selector="Button.sidebar-item.collapsed">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </UserControl.Styles>
</UserControl>
