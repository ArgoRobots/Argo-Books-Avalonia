<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.RevenuePage"
             x:DataType="vm:RevenuePageViewModel">

    <Design.DataContext>
        <vm:RevenuePageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Monthly Revenue'}"
                                   Value="{Binding TotalMonthlyRevenue}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.95c1.86.45 2.79 1.86 2.85 3.39H14.3c-.05-1.11-.64-1.87-2.22-1.87-1.5 0-2.4.68-2.4 1.64 0 .84.65 1.39 2.67 1.91s4.18 1.39 4.18 3.91c-.01 1.83-1.38 2.83-3.12 3.16z"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Sales'}"
                                   Value="{Binding SalesCount}"
                                   Icon="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Unique Customers'}"
                                   Value="{Binding UniqueCustomers}"
                                   Icon="{x:Static icons:Icons.Customers}"
                                   IconColor="Info" />
                <controls:StatCard Label="{loc:Loc 'Returns'}"
                                   Value="{Binding ReturnsCount}"
                                   Icon="M12.5 6.9c1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-.53.12-1.03.3-1.48.54l1.47 1.47c.41-.17.91-.27 1.51-.27zM5.33 4.06L4.06 5.33 7.5 8.77c0 2.08 1.56 3.22 3.91 3.91l3.51 3.51c-.34.49-1.05.91-2.42.91-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c.96-.18 1.83-.55 2.46-1.12l2.22 2.22 1.27-1.27L5.33 4.06z"
                                   IconColor="Warning" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc Revenue}"
                                ItemsSource="{Binding Revenue}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search revenue...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'Add Revenue'}"
                                AddButtonTooltip="{loc:Loc 'Add Revenue'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Revenue}"
                                EmptyTitle="{loc:Loc 'No revenue found'}"
                                EmptyMessage="{loc:Loc 'Add your first sale to start tracking your revenue.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Extra Buttons (AI Scan Receipt) -->
                <table:ArgoTable.ExtraButtonsContent>
                    <Button x:Name="AiScanButton"
                            Classes="primary-button"
                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                            Click="OnAiScanButtonClick"
                            ToolTip.Tip="{loc:Loc 'AI Scan Receipt'}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{x:Static icons:Icons.ScanReceipt}"
                                      Width="16" Height="16"
                                      Foreground="White" />
                            <TextBlock Text="{loc:Loc 'AI Scan Receipt'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                        </StackPanel>
                    </Button>
                </table:ArgoTable.ExtraButtonsContent>

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc 'ID'}" ColumnName="Id" SortProperty="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Customer'}" ColumnName="Customer" SortProperty="Customer"
                                                   ColumnWidth="{Binding ColumnWidths.CustomerColumnWidth}"
                                                   IsColumnVisible="{Binding ShowCustomerColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Product'}" ColumnName="Product" SortProperty="Product"
                                                   ColumnWidth="{Binding ColumnWidths.ProductColumnWidth}"
                                                   IsColumnVisible="{Binding ShowProductColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Date'}" ColumnName="Date" SortProperty="Date"
                                                   ColumnWidth="{Binding ColumnWidths.DateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Qty'}" ColumnName="Quantity" SortProperty="Quantity"
                                                   ColumnWidth="{Binding ColumnWidths.QuantityColumnWidth}"
                                                   IsColumnVisible="{Binding ShowQuantityColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Unit Price'}" ColumnName="Amount" SortProperty="Amount"
                                                   ColumnWidth="{Binding ColumnWidths.AmountColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAmountColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Tax'}" ColumnName="Tax" SortProperty="Tax"
                                                   ColumnWidth="{Binding ColumnWidths.TaxColumnWidth}"
                                                   IsColumnVisible="{Binding ShowTaxColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Shipping'}" ColumnName="Shipping" SortProperty="Shipping"
                                                   ColumnWidth="{Binding ColumnWidths.ShippingColumnWidth}"
                                                   IsColumnVisible="{Binding ShowShippingColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Discount'}" ColumnName="Discount" SortProperty="Discount"
                                                   ColumnWidth="{Binding ColumnWidths.DiscountColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDiscountColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Total'}" ColumnName="Total" SortProperty="Total"
                                                   ColumnWidth="{Binding ColumnWidths.TotalColumnWidth}"
                                                   IsColumnVisible="{Binding ShowTotalColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Receipt'}" ColumnName="Receipt" SortProperty="Receipt"
                                                   ColumnWidth="{Binding ColumnWidths.ReceiptColumnWidth}"
                                                   IsColumnVisible="{Binding ShowReceiptColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Status'}" ColumnName="Status" SortProperty="Status"
                                                   ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStatusColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Actions'}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Revenue}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:RevenueDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="52"
                                        Classes.highlighted-row="{Binding IsHighlighted}">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- ID -->
                                        <table:ArgoTableCell Text="{Binding Id}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowIdColumn}"
                                                                 FontWeight="Medium" />

                                        <!-- Customer with Avatar - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowCustomerColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                                    <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                                                            Background="{DynamicResource PrimaryBrush}" Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding CustomerInitials}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{Binding CustomerName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />
                                                </Grid>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Product -->
                                        <table:ArgoTableCell Text="{Binding ProductDescription}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ProductColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowProductColumn}" />

                                        <!-- Date -->
                                        <table:ArgoTableCell Text="{Binding DateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowDateColumn}" />

                                        <!-- Quantity -->
                                        <table:ArgoTableCell Text="{Binding Quantity}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.QuantityColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowQuantityColumn}" />

                                        <!-- Unit Price (was Amount) -->
                                        <table:ArgoTableCell Text="{Binding AmountFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowAmountColumn}" />

                                        <!-- Tax -->
                                        <table:ArgoTableCell Text="{Binding TaxAmountFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.TaxColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowTaxColumn}" />

                                        <!-- Shipping -->
                                        <table:ArgoTableCell Text="{Binding ShippingCostFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ShippingColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowShippingColumn}" />

                                        <!-- Discount - Custom content for ErrorBrush color -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.DiscountColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowDiscountColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding DiscountFormatted}"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource ErrorBrush}"
                                                           VerticalAlignment="Center" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Total - Custom content for SuccessBrush and Medium font -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.TotalColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowTotalColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding TotalFormatted}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource SuccessBrush}"
                                                           VerticalAlignment="Center" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Receipt Icon - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ReceiptColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowReceiptColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Panel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <PathIcon Data="{x:Static icons:Icons.Check}"
                                                              Width="16" Height="16"
                                                              Foreground="{DynamicResource SuccessBrush}"
                                                              IsVisible="{Binding HasReceipt}" />
                                                    <PathIcon Data="{x:Static icons:Icons.Close}"
                                                              Width="16" Height="16"
                                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                                              IsVisible="{Binding !HasReceipt}" />
                                                </Panel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Status Badge - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowStatusColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToRevenueStatusBackground}}">
                                                    <TextBlock Text="{Binding StatusDisplay, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToRevenueStatusForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Spacing="4">
                                                    <!-- View Receipt Button -->
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'View Receipt'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ViewReceiptCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding HasReceipt}">
                                                        <PathIcon Data="{x:Static icons:Icons.Receipts}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Edit'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Mark as Lost/Damaged (shown when not already marked) -->
                                                    <Button Classes="icon-button warning"
                                                            ToolTip.Tip="{loc:Loc 'Mark as Lost/Damaged'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).MarkAsLostDamagedCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding CanMarkAsLostDamaged}">
                                                        <PathIcon Data="{x:Static icons:Icons.Info}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Undo Lost/Damaged (shown when already marked as lost/damaged) -->
                                                    <Button Classes="icon-button warning"
                                                            ToolTip.Tip="{loc:Loc 'Undo Lost/Damaged'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).UndoLostDamagedCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding IsLostDamaged}">
                                                        <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Mark as Returned (shown when not already marked) -->
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Mark as Returned'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).MarkAsReturnedCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding CanMarkAsReturned}">
                                                        <PathIcon Data="{x:Static icons:Icons.Undo}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Undo Return (shown when already returned) -->
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Undo Return'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).UndoReturnCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding IsReturned}">
                                                        <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger"
                                                            ToolTip.Tip="{loc:Loc 'Delete'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'ID'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="{loc:Loc 'Customer'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowProductColumn}" Content="{loc:Loc 'Product'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc 'Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowQuantityColumn}" Content="{loc:Loc 'Quantity'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="{loc:Loc 'Unit Price'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTaxColumn}" Content="{loc:Loc 'Tax'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowShippingColumn}" Content="{loc:Loc 'Shipping'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDiscountColumn}" Content="{loc:Loc 'Discount'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTotalColumn}" Content="{loc:Loc 'Total'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowReceiptColumn}" Content="{loc:Loc 'Receipt'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc 'Status'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
