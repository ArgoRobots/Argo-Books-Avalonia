<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="60"
             x:Class="ArgoBooks.Controls.Header"
             x:DataType="vm:HeaderViewModel">

    <Design.DataContext>
        <vm:HeaderViewModel />
    </Design.DataContext>

    <!-- Header: height 60px, symmetric padding, white bg, bottom border -->
    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Height="60"
            Padding="16,0,16,0">
        <Panel>
            <!-- Center Section: Search Box (absolutely centered) -->
            <Border Width="280"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Search Icon -->
                    <PathIcon Grid.Column="0"
                              Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                              Width="16" Height="16"
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="15,0,10,0"
                              VerticalAlignment="Center" />

                    <!-- Search TextBox -->
                    <TextBox x:Name="SearchInput"
                             Grid.Column="1"
                             Text="{Binding SearchQuery, Mode=TwoWay}"
                             Watermark="{loc:Loc 'Search or jump to...'}"
                             Classes="header-search"
                             GotFocus="SearchInput_GotFocus"
                             KeyDown="SearchInput_KeyDown"
                             VerticalAlignment="Center" />

                    <!-- Keyboard Shortcut Hint -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="Ctrl+K"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                    </Border>
                </Grid>
            </Border>

            <!-- Left Section: File, Undo, Redo, Save -->
            <StackPanel HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="4">
                <!-- File Menu Button -->
                <Button Classes="header-icon"
                        Command="{Binding OpenFileMenuCommand}"
                        ToolTip.Tip="{loc:Loc File}">
                    <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                              Width="18" Height="18" />
                </Button>

                <!-- Undo/Redo Button Group -->
                <controls:UndoRedoButtonGroup x:Name="UndoRedoButtons"
                                              DataContext="{Binding UndoRedoViewModel}" />

                <!-- Save Button with Asterisk and Status Indicator -->
                <StackPanel x:Name="SaveButtonContainer" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Save Button -->
                    <Button Classes="header-icon"
                            Command="{Binding SaveCommand}"
                            ToolTip.Tip="{loc:Loc Save}">
                        <PathIcon Data="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"
                                  Width="18" Height="18" />
                    </Button>

                    <!-- Asterisk placeholder - added dynamically via code-behind when needed -->

                    <!-- Status Indicator Container - fixed width to prevent layout shift -->
                    <Border Width="105" VerticalAlignment="Center" Margin="4,0,0,0">
                        <Panel>
                            <!-- "No changes found" indicator (temporary, shows when save clicked with no changes) -->
                            <TextBlock Text="{loc:Loc 'No changes found'}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding ShowNoChangesIndicator}"
                                       Opacity="{Binding NoChangesIndicatorOpacity}">
                                <TextBlock.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                                    </Transitions>
                                </TextBlock.Transitions>
                            </TextBlock>

                            <!-- "Saved" indicator (temporary, shows when save clicked with changes) -->
                            <TextBlock Text="{loc:Loc Saved}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SuccessBrush}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding ShowSavedIndicator}"
                                       Opacity="{Binding SavedIndicatorOpacity}">
                                <TextBlock.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                                    </Transitions>
                                </TextBlock.Transitions>
                            </TextBlock>
                        </Panel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Right Section: Upgrade, Notifications, Help, User -->
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="4">

                <!-- Upgrade Button (blue circle with up arrow) - hidden when user has Premium -->
                <Button Classes="header-icon"
                        Command="{Binding OpenUpgradeCommand}"
                        ToolTip.Tip="{loc:Loc Upgrades}"
                        IsVisible="{Binding ShowUpgrade}">
                    <Panel Width="24" Height="24">
                        <Ellipse Fill="{DynamicResource PrimaryBrush}" Width="24" Height="24" />
                        <PathIcon Data="M12 6L6 12h4v6h4v-6h4L12 6z"
                                  Width="12" Height="12"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                    </Panel>
                </Button>

                <!-- Notifications -->
                <Button Classes="header-icon"
                        Command="{Binding OpenNotificationsCommand}"
                        ToolTip.Tip="{loc:Loc Notifications}">
                    <Panel>
                        <PathIcon Data="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"
                                  Width="20" Height="20" />
                        <!-- Notification Badge -->
                        <Border Background="{DynamicResource DangerBrush}"
                                MinWidth="18" Height="18"
                                CornerRadius="9"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-4,-4,0"
                                Padding="5,0"
                                IsVisible="{Binding HasUnreadNotifications}">
                            <TextBlock Text="{Binding UnreadNotificationCount}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </Panel>
                </Button>

                <!-- Help -->
                <Button Classes="header-icon"
                        Command="{Binding OpenHelpCommand}"
                        ToolTip.Tip="{loc:Loc Help}">
                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"
                              Width="20" Height="20" />
                </Button>

                <!-- My Plan (temporary) -->
                <Button Classes="header-icon"
                        Command="{Binding OpenProfileCommand}"
                        ToolTip.Tip="{loc:Loc 'My Plan'}">
                    <PathIcon Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"
                              Width="20" Height="20" />
                </Button>

                <!-- Settings (temporary) -->
                <Button Classes="header-icon"
                        Command="{Binding OpenSettingsCommand}"
                        ToolTip.Tip="{loc:Loc Settings}">
                    <PathIcon Data="M19.14 12.94c.04-.31.06-.63.06-.94 0-.31-.02-.63-.06-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.04.31-.06.63-.06.94s.02.63.06.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"
                              Width="20" Height="20" />
                </Button>

                <!-- User Menu (temporarily commented out)
                <Button Classes="header-icon"
                        Command="{Binding OpenUserMenuCommand}"
                        ToolTip.Tip="{Binding UserDisplayName}">
                    <PathIcon Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                              Width="22" Height="22" />
                </Button>
                -->
            </StackPanel>
        </Panel>
    </Border>

    <UserControl.Styles>
        <!-- Header Icon Button Style (40x40, gray text, hover bg) -->
        <Style Selector="Button.header-icon">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.header-icon /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.header-icon:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.header-icon:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
        </Style>
        <Style Selector="Button.header-icon PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Header Search TextBox Style -->
        <Style Selector="TextBox.header-search">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="TextBox.header-search /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="TextBox.header-search:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Styles>
</UserControl>
