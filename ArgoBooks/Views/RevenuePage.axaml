<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.RevenuePage"
             x:DataType="vm:RevenuePageViewModel">

    <UserControl.Resources>
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:RevenuePageViewModel />
    </Design.DataContext>

    <Panel>
    <!-- Main Content -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Monthly Revenue'}"
                                   Value="{Binding TotalMonthlyRevenue}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.95c1.86.45 2.79 1.86 2.85 3.39H14.3c-.05-1.11-.64-1.87-2.22-1.87-1.5 0-2.4.68-2.4 1.64 0 .84.65 1.39 2.67 1.91s4.18 1.39 4.18 3.91c-.01 1.83-1.38 2.83-3.12 3.16z"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Sales'}"
                                   Value="{Binding SalesCount}"
                                   Icon="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Unique Customers'}"
                                   Value="{Binding UniqueCustomers}"
                                   Icon="{x:Static icons:Icons.Customers}"
                                   IconColor="Info" />
                <controls:StatCard Label="{loc:Loc 'Returns'}"
                                   Value="{Binding ReturnsCount}"
                                   Icon="M12.5 6.9c1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-.53.12-1.03.3-1.48.54l1.47 1.47c.41-.17.91-.27 1.51-.27zM5.33 4.06L4.06 5.33 7.5 8.77c0 2.08 1.56 3.22 3.91 3.91l3.51 3.51c-.34.49-1.05.91-2.42.91-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c.96-.18 1.83-.55 2.46-1.12l2.22 2.22 1.27-1.27L5.33 4.06z"
                                   IconColor="Warning" />
            </controls:StatCardsRow>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    SizeChanged="OnHeaderSizeChanged">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="{Binding ResponsiveHeader.HeaderPadding}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="{loc:Loc 'Revenue'}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="{Binding ResponsiveHeader.HeaderSpacing}">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="{Binding ResponsiveHeader.SearchBoxWidth}"
                                        MinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}">
                                    <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                        <PathIcon Grid.Column="0"
                                                  Data="{x:Static icons:Icons.Search}"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="{Binding ResponsiveHeader.SearchIconMargin}" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="{loc:Loc 'Search revenue...'}"
                                                 Classes="search-input"
                                                 VerticalAlignment="Center" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                        Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                        Command="{Binding OpenFilterModalCommand}"
                                        ToolTip.Tip="{loc:Loc 'Filter'}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="{loc:Loc 'Filter'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                    </StackPanel>
                                </Button>

                                <!-- AI Scan Receipt Button -->
                                <Button x:Name="AiScanButton"
                                        Classes="primary-button"
                                        Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                        Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                        Click="OnAiScanButtonClick"
                                        ToolTip.Tip="{loc:Loc 'AI Scan Receipt'}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="{x:Static icons:Icons.ScanReceipt}"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="{loc:Loc 'AI Scan Receipt'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Revenue Button -->
                                <Button Classes="primary-button"
                                        Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                        Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                        Command="{Binding OpenAddModalCommand}"
                                        ToolTip.Tip="{loc:Loc 'Add Revenue'}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="{x:Static icons:Icons.Add}"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="{loc:Loc 'Add Revenue'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="HorizontalTableScroll"
                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40"
                                    PointerPressed="OnTableHeaderPointerPressed">
                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                <!-- ID -->
                                <Panel Width="{Binding ColumnWidths.IdColumnWidth}" IsVisible="{Binding ShowIdColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'ID'}" ColumnName="Id"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Id" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Accountant -->
                                <Panel Width="{Binding ColumnWidths.AccountantColumnWidth}" IsVisible="{Binding ShowAccountantColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Accountant'}" ColumnName="Accountant"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Accountant" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Customer -->
                                <Panel Width="{Binding ColumnWidths.CustomerColumnWidth}" IsVisible="{Binding ShowCustomerColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Customer'}" ColumnName="Customer"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Customer" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Product -->
                                <Panel Width="{Binding ColumnWidths.ProductColumnWidth}" IsVisible="{Binding ShowProductColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Product'}" ColumnName="Product"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Product" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Date -->
                                <Panel Width="{Binding ColumnWidths.DateColumnWidth}" IsVisible="{Binding ShowDateColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Date'}" ColumnName="Date"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Date" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Qty -->
                                <Panel Width="{Binding ColumnWidths.QuantityColumnWidth}" IsVisible="{Binding ShowQuantityColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Qty'}" ColumnName="Quantity"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Quantity" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Unit Price -->
                                <Panel Width="{Binding ColumnWidths.UnitPriceColumnWidth}" IsVisible="{Binding ShowUnitPriceColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Unit Price'}" ColumnName="UnitPrice"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="UnitPrice" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Amount -->
                                <Panel Width="{Binding ColumnWidths.AmountColumnWidth}" IsVisible="{Binding ShowAmountColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Amount'}" ColumnName="Amount"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Amount" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Tax -->
                                <Panel Width="{Binding ColumnWidths.TaxColumnWidth}" IsVisible="{Binding ShowTaxColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Tax'}" ColumnName="Tax"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Tax" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Shipping -->
                                <Panel Width="{Binding ColumnWidths.ShippingColumnWidth}" IsVisible="{Binding ShowShippingColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Shipping'}" ColumnName="Shipping"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Shipping" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Discount -->
                                <Panel Width="{Binding ColumnWidths.DiscountColumnWidth}" IsVisible="{Binding ShowDiscountColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Discount'}" ColumnName="Discount"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Discount" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Total -->
                                <Panel Width="{Binding ColumnWidths.TotalColumnWidth}" IsVisible="{Binding ShowTotalColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Total'}" ColumnName="Total"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Total" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Receipt -->
                                <Panel Width="{Binding ColumnWidths.ReceiptColumnWidth}" IsVisible="{Binding ShowReceiptColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Receipt'}" ColumnName="Receipt"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Receipt" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Status -->
                                <Panel Width="{Binding ColumnWidths.StatusColumnWidth}" IsVisible="{Binding ShowStatusColumn}">
                                    <controls:SortableColumnHeader Text="{loc:Loc 'Status'}" ColumnName="Status"
                                                                    Command="{Binding SortByCommand}"
                                                                    SortColumn="{Binding SortColumn}"
                                                                    SortDirection="{Binding SortDirection}" />
                                    <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                </Panel>
                                <!-- Actions -->
                                <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                    <TextBlock Text="{loc:Loc 'Actions'}" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Left" VerticalAlignment="Center"
                                               Margin="8,12,8,12" />
                                </Panel>
                            </StackPanel>
                        </Border>

                        <!-- Table Content (scrollable vertically only) -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <Panel>
                                <!-- Revenue List -->
                                <ItemsControl ItemsSource="{Binding Revenue}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:RevenueDisplayItem">
                                            <Border Padding="24,0"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,0,1"
                                                    MinHeight="52"
                                                    Classes.highlighted-row="{Binding IsHighlighted}">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- ID -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowIdColumn}">
                                                        <TextBlock Text="{Binding Id}"
                                                                   FontSize="14"
                                                                   FontWeight="Medium"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Accountant -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.AccountantColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowAccountantColumn}">
                                                        <TextBlock Text="{Binding AccountantName}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,16,8,16"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Customer with Avatar -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowCustomerColumn}">
                                                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" Margin="8,0">
                                                            <Border Width="32" Height="32" CornerRadius="16"
                                                                    Background="{DynamicResource PrimaryBrush}">
                                                                <TextBlock Text="{Binding CustomerInitials}"
                                                                           FontSize="12"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="White"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center" />
                                                            </Border>
                                                            <TextBlock Text="{Binding CustomerName}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis" />
                                                        </StackPanel>
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Product -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ProductColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowProductColumn}">
                                                        <TextBlock Text="{Binding ProductDescription}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Date -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowDateColumn}">
                                                        <TextBlock Text="{Binding DateFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Quantity -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.QuantityColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowQuantityColumn}">
                                                        <TextBlock Text="{Binding Quantity}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Unit Price -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.UnitPriceColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowUnitPriceColumn}">
                                                        <TextBlock Text="{Binding UnitPriceFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Amount -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowAmountColumn}">
                                                        <TextBlock Text="{Binding AmountFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Tax -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.TaxColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowTaxColumn}">
                                                        <TextBlock Text="{Binding TaxAmountFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Shipping -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ShippingColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowShippingColumn}">
                                                        <TextBlock Text="{Binding ShippingCostFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Discount -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.DiscountColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowDiscountColumn}">
                                                        <TextBlock Text="{Binding DiscountFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="#22C55E"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Total -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.TotalColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowTotalColumn}">
                                                        <TextBlock Text="{Binding TotalFormatted}"
                                                                   FontSize="14"
                                                                   FontWeight="Medium"
                                                                   Foreground="#22C55E"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0" />
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Receipt Icon -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ReceiptColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowReceiptColumn}">
                                                        <Panel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <PathIcon Data="{x:Static icons:Icons.Check}"
                                                                      Width="16" Height="16"
                                                                      Foreground="#22C55E"
                                                                      IsVisible="{Binding HasReceipt}" />
                                                            <PathIcon Data="{x:Static icons:Icons.Close}"
                                                                      Width="16" Height="16"
                                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                                      IsVisible="{Binding !HasReceipt}" />
                                                        </Panel>
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Status Badge -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ShowStatusColumn}">
                                                        <Border VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"
                                                                Padding="8,4"
                                                                CornerRadius="4"
                                                                Margin="8,0"
                                                                Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToRevenueStatusBackground}}">
                                                            <TextBlock Text="{Binding StatusDisplay, Converter={StaticResource TranslateConverter}}"
                                                                       FontSize="12"
                                                                       FontWeight="Medium"
                                                                       Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToRevenueStatusForeground}}" />
                                                        </Border>
                                                        <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>

                                                    <!-- Actions -->
                                                    <Panel Width="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Spacing="4"
                                                                    Margin="8,0">
                                                            <!-- View Receipt Button -->
                                                            <Button Classes="icon-button"
                                                                    ToolTip.Tip="{loc:Loc 'View Receipt'}"
                                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).ViewReceiptCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    IsVisible="{Binding HasReceipt}">
                                                                <PathIcon Data="{x:Static icons:Icons.Receipts}"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <Button Classes="icon-button"
                                                                    ToolTip.Tip="{loc:Loc 'Edit'}"
                                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).OpenEditModalCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <!-- Mark as Lost/Damaged (shown when not already marked) -->
                                                            <Button Classes="icon-button warning"
                                                                    ToolTip.Tip="{loc:Loc 'Mark as Lost/Damaged'}"
                                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).MarkAsLostDamagedCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    IsVisible="{Binding CanMarkAsLostDamaged}">
                                                                <PathIcon Data="{x:Static icons:Icons.Info}"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <!-- Undo Lost/Damaged (shown when already marked as lost/damaged) -->
                                                            <Button Classes="icon-button warning"
                                                                    ToolTip.Tip="{loc:Loc 'Undo Lost/Damaged'}"
                                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).UndoLostDamagedCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    IsVisible="{Binding IsLostDamaged}">
                                                                <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <!-- Mark as Returned (shown when not already marked) -->
                                                            <Button Classes="icon-button"
                                                                    ToolTip.Tip="{loc:Loc 'Mark as Returned'}"
                                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).MarkAsReturnedCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    IsVisible="{Binding CanMarkAsReturned}">
                                                                <PathIcon Data="{x:Static icons:Icons.Undo}"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <!-- Undo Return (shown when already returned) -->
                                                            <Button Classes="icon-button"
                                                                    ToolTip.Tip="{loc:Loc 'Undo Return'}"
                                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).UndoReturnCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    IsVisible="{Binding IsReturned}">
                                                                <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                            <Button Classes="icon-button danger"
                                                                    ToolTip.Tip="{loc:Loc 'Delete'}"
                                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                          Width="16" Height="16" />
                                                            </Button>
                                                        </StackPanel>
                                                    </Panel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Revenue.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="{x:Static icons:Icons.Revenue}"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="{loc:Loc 'No revenue found'}"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="{loc:Loc 'Add your first sale to start tracking your revenue.'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="{x:Static icons:Icons.Add}"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="{loc:Loc 'Add Revenue'}" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                    </Grid>
                    </ScrollViewer>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="{loc:Loc 'Rows per page:'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="{x:Static icons:Icons.ChevronLeft}"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:RevenuePageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="{x:Static icons:Icons.ChevronRightNav}"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnMenuX}"
                                    MenuY="{Binding ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'ID'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAccountantColumn}" Content="{loc:Loc 'Accountant'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="{loc:Loc 'Customer'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowProductColumn}" Content="{loc:Loc 'Product'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc 'Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowQuantityColumn}" Content="{loc:Loc 'Quantity'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowUnitPriceColumn}" Content="{loc:Loc 'Unit Price'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="{loc:Loc 'Amount'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTaxColumn}" Content="{loc:Loc 'Tax'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowShippingColumn}" Content="{loc:Loc 'Shipping'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDiscountColumn}" Content="{loc:Loc 'Discount'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTotalColumn}" Content="{loc:Loc 'Total'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowReceiptColumn}" Content="{loc:Loc 'Receipt'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc 'Status'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

    <!-- Styles are now consolidated in Styles/TableStyles.axaml -->
</UserControl>
