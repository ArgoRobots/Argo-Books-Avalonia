<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.InvoicesPage"
             x:DataType="vm:InvoicesPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:InvoicesPageViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Tab Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="24,0">
                <Button Classes="page-tab"
                        Classes.active="{Binding IsAllInvoicesTab}"
                        Command="{Binding SelectTabCommand}"
                        CommandParameter="All">
                    <TextBlock Text="All Invoices" />
                </Button>
                <Button Classes="page-tab"
                        Classes.active="{Binding IsDraftsTab}"
                        Command="{Binding SelectTabCommand}"
                        CommandParameter="Drafts">
                    <TextBlock Text="Drafts" />
                </Button>
                <Button Classes="page-tab"
                        Classes.active="{Binding IsRecurringTab}"
                        Command="{Binding SelectTabCommand}"
                        CommandParameter="Recurring">
                    <TextBlock Text="Recurring Invoices" />
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid RowDefinitions="Auto,*" Margin="24">
                <!-- Statistics Cards (Row 0) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>

                <!-- Total Outstanding -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DBEAFE"
                                Margin="0,0,16,0">
                            <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                      Width="24" Height="24"
                                      Foreground="#3B82F6" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalOutstanding}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Total Outstanding"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Paid This Month -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DCFCE7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                      Width="24" Height="24"
                                      Foreground="#22C55E" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding PaidThisMonth}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Paid This Month"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Overdue -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEE2E2"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                      Width="24" Height="24"
                                      Foreground="#DC2626" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding OverdueAmount}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Overdue"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Due This Week -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#F3E8FF"
                                Margin="0,0,16,0">
                            <PathIcon Data="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"
                                      Width="24" Height="24"
                                      Foreground="#A855F7" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DueThisWeekCount}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Due This Week"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Invoices"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Create Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search invoices..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Create Invoice Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenCreateModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Create Invoice" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,*">
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12">
                            <Grid ColumnDefinitions="0.8*,1.2*,0.8*,0.8*,0.8*,0.7*,100">
                                <!-- Invoice # Column Header -->
                                <Button Grid.Column="0" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Id">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Invoice #" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Id:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Id:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Customer Column Header -->
                                <Button Grid.Column="1" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Customer">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Customer" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Customer:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Customer:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Issue Date Column Header -->
                                <Button Grid.Column="2" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="IssueDate">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Issue Date" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="IssueDate:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="IssueDate:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Due Date Column Header -->
                                <Button Grid.Column="3" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="DueDate">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Due Date" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="DueDate:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="DueDate:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Amount Column Header -->
                                <Button Grid.Column="4" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Amount">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Amount" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Amount:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Amount:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Status Column Header -->
                                <Button Grid.Column="5" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Status">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Actions - not sortable -->
                                <TextBlock Grid.Column="6"
                                           Text="Actions"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Table Content (scrollable) -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Panel>
                                <!-- Invoices List -->
                                <ItemsControl ItemsSource="{Binding Invoices}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:InvoiceDisplayItem">
                                            <Border Padding="24,16"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid ColumnDefinitions="0.8*,1.2*,0.8*,0.8*,0.8*,0.7*,100">
                                                    <!-- Invoice # -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Id}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Customer with Avatar -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                                        <Border Width="32" Height="32" CornerRadius="16"
                                                                Background="{DynamicResource PrimaryBrush}">
                                                            <TextBlock Text="{Binding CustomerInitials}"
                                                                       FontSize="12"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center" />
                                                        </Border>
                                                        <TextBlock Text="{Binding CustomerName}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis" />
                                                    </StackPanel>

                                                    <!-- Issue Date -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding IssueDateFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Due Date -->
                                                    <TextBlock Grid.Column="3"
                                                               Text="{Binding DueDateFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Amount -->
                                                    <TextBlock Grid.Column="4"
                                                               Text="{Binding TotalFormatted}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Status Badge -->
                                                    <Border Grid.Column="5"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Padding="8,4"
                                                            CornerRadius="4"
                                                            Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToInvoiceStatusBackground}}">
                                                        <TextBlock Text="{Binding StatusDisplay}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToInvoiceStatusForeground}}" />
                                                    </Border>

                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="6"
                                                                Orientation="Horizontal"
                                                                HorizontalAlignment="Right"
                                                                Spacing="4">
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="View History"
                                                                Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenHistoryModalCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="Edit"
                                                                Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenEditModalCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button danger"
                                                                ToolTip.Tip="Delete"
                                                                Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Invoices.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="{Binding EmptyStateTitle}"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding EmptyStateMessage}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenCreateModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Create Invoice" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                    </Grid>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <Button.Background>
                                                    <MultiBinding Converter="{StaticResource PageActiveBackgroundConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </Button.Background>
                                                <Button.Foreground>
                                                    <MultiBinding Converter="{StaticResource PageActiveForegroundConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </Button.Foreground>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            </Grid>
        </ScrollViewer>

        <!-- Note: Modals are now rendered at AppShell level for full-screen coverage -->
    </Grid>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Page Tab Button -->
        <Style Selector="Button.page-tab">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="4,12,4,10" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.page-tab /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.page-tab:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.page-tab:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="Button.page-tab.active">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>

        <!-- Primary Button -->
        <Style Selector="Button.primary-button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.primary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.primary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>

        <!-- Secondary Button -->
        <Style Selector="Button.secondary-button">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.secondary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
        </Style>
        <Style Selector="Button.secondary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Pagination Button -->
        <Style Selector="Button.pagination-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.pagination-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{TemplateBinding Background}" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
        <Style Selector="Button.pagination-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.pagination-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.pagination-button:disabled">
            <Setter Property="Opacity" Value="0.4" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
