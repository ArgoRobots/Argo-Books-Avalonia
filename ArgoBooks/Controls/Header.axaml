<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="60"
             x:Class="ArgoBooks.Controls.Header"
             x:DataType="vm:HeaderViewModel">

    <Design.DataContext>
        <vm:HeaderViewModel />
    </Design.DataContext>

    <!-- Header: height 60px, symmetric padding, white bg, bottom border -->
    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Height="60"
            Padding="16,0,16,0">
        <Panel>
            <!-- Center Section: Search Box (absolutely centered) -->
            <Border x:Name="SearchBox"
                    Width="280"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    PointerPressed="SearchBox_PointerPressed"
                    Cursor="IBeam">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Search Icon -->
                    <PathIcon Grid.Column="0"
                              Data="{x:Static local:Icons.Search}"
                              Width="16" Height="16"
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="15,0,10,0"
                              VerticalAlignment="Center" />

                    <!-- Search TextBox -->
                    <TextBox x:Name="SearchInput"
                             Grid.Column="1"
                             Text="{Binding SearchQuery, Mode=TwoWay}"
                             Watermark="{loc:Loc 'Search or jump to...'}"
                             Classes="header-search"
                             GotFocus="SearchInput_GotFocus"
                             KeyDown="SearchInput_KeyDown"
                             VerticalAlignment="Center"
                             MaxLength="100" />

                    <!-- Keyboard Shortcut Hint -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="Ctrl+K"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                    </Border>
                </Grid>
            </Border>

            <!-- Left Section: File, Undo, Redo, Save -->
            <StackPanel HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="4">
                <!-- File Menu Button -->
                <Button Classes="header-icon"
                        Command="{Binding OpenFileMenuCommand}"
                        ToolTip.Tip="{loc:Loc File}">
                    <PathIcon Data="{x:Static local:Icons.Reports}"
                              Width="18" Height="18" />
                </Button>

                <!-- Undo/Redo Button Group -->
                <controls:UndoRedoButtonGroup x:Name="UndoRedoButtons"
                                              DataContext="{Binding UndoRedoViewModel}" />

                <!-- Save Button with Asterisk and Status Indicator -->
                <StackPanel x:Name="SaveButtonContainer" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Save Button -->
                    <Button Classes="header-icon"
                            Command="{Binding SaveCommand}"
                            ToolTip.Tip="{loc:Loc Save}">
                        <PathIcon Data="{x:Static local:Icons.Save}"
                                  Width="18" Height="18" />
                    </Button>

                    <!-- Asterisk placeholder - added dynamically via code-behind when needed -->

                    <!-- Status Indicator Container - fixed width to prevent layout shift -->
                    <Border Width="105" VerticalAlignment="Center" Margin="4,0,0,0">
                        <Panel>
                            <!-- "No changes found" indicator (temporary, shows when save clicked with no changes) -->
                            <TextBlock Text="{loc:Loc 'No changes found'}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding ShowNoChangesIndicator}"
                                       Opacity="{Binding NoChangesIndicatorOpacity}">
                                <TextBlock.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                                    </Transitions>
                                </TextBlock.Transitions>
                            </TextBlock>

                            <!-- "Saved" indicator (temporary, shows when save clicked with changes) -->
                            <TextBlock Text="{loc:Loc Saved}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SuccessBrush}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding ShowSavedIndicator}"
                                       Opacity="{Binding SavedIndicatorOpacity}">
                                <TextBlock.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                                    </Transitions>
                                </TextBlock.Transitions>
                            </TextBlock>
                        </Panel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Right Section: Upgrade, Notifications, Help, User -->
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="4">

                <!-- Upgrade Button (blue circle with up arrow) - hidden when user has Premium -->
                <Button Classes="header-icon"
                        Command="{Binding OpenUpgradeCommand}"
                        ToolTip.Tip="{loc:Loc Upgrades}"
                        IsVisible="{Binding ShowUpgrade}">
                    <Panel Width="24" Height="24">
                        <Ellipse Fill="{DynamicResource PrimaryBrush}" Width="24" Height="24" />
                        <PathIcon Data="M12 6L6 12h4v6h4v-6h4L12 6z"
                                  Width="12" Height="12"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                    </Panel>
                </Button>

                <!-- Notifications -->
                <Button Classes="header-icon"
                        Command="{Binding OpenNotificationsCommand}"
                        ToolTip.Tip="{loc:Loc Notifications}">
                    <Panel>
                        <PathIcon Data="{x:Static local:Icons.Notification}"
                                  Width="20" Height="20" />
                        <!-- Notification Badge -->
                        <Border Background="{DynamicResource DangerBrush}"
                                MinWidth="18" Height="18"
                                CornerRadius="9"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-4,-4,0"
                                Padding="5,0"
                                IsVisible="{Binding HasUnreadNotifications}">
                            <TextBlock Text="{Binding UnreadNotificationCount}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </Panel>
                </Button>

                <!-- Help -->
                <Button Classes="header-icon"
                        Command="{Binding OpenHelpCommand}"
                        ToolTip.Tip="{loc:Loc Help}">
                    <PathIcon Data="{x:Static local:Icons.Help}"
                              Width="20" Height="20" />
                </Button>

                <!-- My Plan - hidden when user has Premium -->
                <Button Classes="header-icon"
                        Command="{Binding OpenMyPlanCommand}"
                        ToolTip.Tip="{loc:Loc 'My Plan'}"
                        IsVisible="{Binding ShowUpgrade}">
                    <PathIcon Data="{x:Static local:Icons.Star}"
                              Width="20" Height="20" />
                </Button>

                <!-- Settings -->
                <Button Classes="header-icon"
                        Command="{Binding OpenSettingsCommand}"
                        ToolTip.Tip="{loc:Loc Settings}">
                    <PathIcon Data="{x:Static local:Icons.Settings}"
                              Width="20" Height="20" />
                </Button>

                <!-- User Menu (temporarily commented out)
                <Button Classes="header-icon"
                        Command="{Binding OpenUserMenuCommand}"
                        ToolTip.Tip="{Binding UserDisplayName}">
                    <PathIcon Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                              Width="22" Height="22" />
                </Button>
                -->
            </StackPanel>
        </Panel>
    </Border>

    <UserControl.Styles>
        <!-- Header Icon Button Style (40x40, gray text, hover bg) -->
        <Style Selector="Button.header-icon">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.header-icon /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.header-icon:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.header-icon:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
        </Style>
        <Style Selector="Button.header-icon PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Header Search TextBox Style -->
        <Style Selector="TextBox.header-search">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="TextBox.header-search /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="TextBox.header-search:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Styles>
</UserControl>
