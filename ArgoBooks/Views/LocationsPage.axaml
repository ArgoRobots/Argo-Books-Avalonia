<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.LocationsPage"
             x:DataType="vm:LocationsPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:LocationsPageViewModel />
    </Design.DataContext>

    <Panel>
        <Grid RowDefinitions="*">
            <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="Total Locations"
                                   Value="{Binding TotalLocations}"
                                   Icon="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                                   IconColor="Primary" />
                <controls:StatCard Label="Total Stock Items"
                                   Value="{Binding TotalStockItems}"
                                   Icon="M20 2H4c-1 0-2 .9-2 2v3.01c0 .72.43 1.34 1 1.69V20c0 1.1 1.1 2 2 2h14c.9 0 2-.9 2-2V8.7c.57-.35 1-.97 1-1.69V4c0-1.1-1-2-2-2zm-5 12H9v-2h6v2zm5-7H4V4l16-.02V7z"
                                   IconColor="Success" />
                <controls:StatCard Label="Total Inventory Value"
                                   Value="{Binding TotalInventoryValue}"
                                   Icon="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                   IconColor="Warning" />
                <controls:StatCard Label="Avg Capacity Used"
                                   Value="{Binding AverageCapacityUsed}"
                                   Icon="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                   IconColor="Danger" />
            </controls:StatCardsRow>

            <!-- Main Content Card -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Locations"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search locations..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Location Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Location" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Locations Table -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="HorizontalTableScroll"
                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40">
                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                    <!-- Location Column Header -->
                                    <Panel Width="{Binding ColumnWidths.LocationColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Location">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Location" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Location:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Location:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Location" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Type Column Header -->
                                    <Panel Width="{Binding ColumnWidths.TypeColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Type">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Type" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Type:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Type:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Type" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Address Column Header -->
                                    <Panel Width="{Binding ColumnWidths.AddressColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Address">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Address" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Address:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Address:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Address" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Manager Column Header -->
                                    <Panel Width="{Binding ColumnWidths.ManagerColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Manager">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Manager" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Manager:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Manager:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Manager" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Status Column Header -->
                                    <Panel Width="{Binding ColumnWidths.StatusColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Status">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Status:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Status:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Actions Column Header -->
                                    <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                        <TextBlock Text="Actions"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Left"
                                                   Margin="8,12" />
                                    </Panel>
                                </StackPanel>
                            </Border>

                            <!-- Table Content -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <Panel>
                                    <!-- Locations List -->
                                    <ItemsControl ItemsSource="{Binding Locations}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="vm:LocationDisplayItem">
                                                <Border Padding="24,0"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="0,0,0,1"
                                                        MinHeight="52">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Location Name -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).ColumnWidths.LocationColumnWidth}">
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Type -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).ColumnWidths.TypeColumnWidth}">
                                                            <TextBlock Text="{Binding Type}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Address -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).ColumnWidths.AddressColumnWidth}">
                                                            <TextBlock Text="{Binding Address}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Manager -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).ColumnWidths.ManagerColumnWidth}">
                                                            <TextBlock Text="{Binding Manager}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Status -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}">
                                                            <Border Background="{Binding StatusBackground}"
                                                                    CornerRadius="4"
                                                                    Padding="8,4"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Margin="8,0">
                                                                <TextBlock Text="{Binding StatusText}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           Foreground="{Binding StatusColor}" />
                                                            </Border>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Actions -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Spacing="4"
                                                                        Margin="8,0">
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="Edit"
                                                                        Command="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).OpenEditModalCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button danger"
                                                                        ToolTip.Tip="Delete"
                                                                        Command="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                            </StackPanel>
                                                        </Panel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Empty State -->
                                    <Border Padding="40"
                                            IsVisible="{Binding Locations.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Spacing="16">
                                            <Border Width="64" Height="64"
                                                    CornerRadius="32"
                                                    Background="{DynamicResource SurfaceAltBrush}"
                                                    HorizontalAlignment="Center">
                                                <PathIcon Data="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                                                          Width="28" Height="28"
                                                          Foreground="{DynamicResource TextTertiaryBrush}" />
                                            </Border>
                                            <TextBlock Text="No locations found"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center" />
                                            <TextBlock Text="Add your first location to start managing your warehouses and storage facilities."
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300" />
                                            <Button Classes="primary-button"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,8,0,0"
                                                    Command="{Binding OpenAddModalCommand}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                              Width="16" Height="16"
                                                              Foreground="White" />
                                                    <TextBlock Text="Add Location" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Panel>
                            </ScrollViewer>
                        </Grid>
                    </ScrollViewer>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:LocationsPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
