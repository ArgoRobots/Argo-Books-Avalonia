<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.InvoicesPage"
             x:DataType="vm:InvoicesPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:InvoicesPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="Auto,*">
        <!-- Tab Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        Margin="0"
                        Classes="page-tabs">
                <TabItem Header="All Invoices" />
                <TabItem Header="Drafts" />
                <TabItem Header="Recurring Invoices" />
            </TabControl>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid RowDefinitions="Auto,*" Margin="24">
                <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="Total Outstanding"
                                   Value="{Binding TotalOutstanding}"
                                   Icon="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                   IconColor="Primary" />
                <controls:StatCard Label="Paid This Month"
                                   Value="{Binding PaidThisMonth}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                   IconColor="Success" />
                <controls:StatCard Label="Overdue"
                                   Value="{Binding OverdueAmount}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                   IconColor="Danger" />
                <controls:StatCard Label="Due This Week"
                                   Value="{Binding DueThisWeekCount}"
                                   Icon="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Invoices"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Create Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search invoices..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Create Invoice Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenCreateModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Create Invoice" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="HorizontalTableScroll"
                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40"
                                    PointerPressed="OnTableHeaderPointerPressed">
                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                    <!-- Invoice # -->
                                    <Panel Width="{Binding ColumnWidths.IdColumnWidth}" IsVisible="{Binding ShowIdColumn}">
                                        <controls:SortableColumnHeader Text="Invoice #" ColumnName="Id"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Id" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Accountant -->
                                    <Panel Width="{Binding ColumnWidths.AccountantColumnWidth}" IsVisible="{Binding ShowAccountantColumn}">
                                        <controls:SortableColumnHeader Text="Accountant" ColumnName="Accountant"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Accountant" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Customer -->
                                    <Panel Width="{Binding ColumnWidths.CustomerColumnWidth}" IsVisible="{Binding ShowCustomerColumn}">
                                        <controls:SortableColumnHeader Text="Customer" ColumnName="Customer"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Customer" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Issue Date -->
                                    <Panel Width="{Binding ColumnWidths.IssueDateColumnWidth}" IsVisible="{Binding ShowIssueDateColumn}">
                                        <controls:SortableColumnHeader Text="Issue Date" ColumnName="IssueDate"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="IssueDate" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Due Date -->
                                    <Panel Width="{Binding ColumnWidths.DueDateColumnWidth}" IsVisible="{Binding ShowDueDateColumn}">
                                        <controls:SortableColumnHeader Text="Due Date" ColumnName="DueDate"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="DueDate" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Amount -->
                                    <Panel Width="{Binding ColumnWidths.AmountColumnWidth}" IsVisible="{Binding ShowAmountColumn}">
                                        <controls:SortableColumnHeader Text="Amount" ColumnName="Amount"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Amount" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Status -->
                                    <Panel Width="{Binding ColumnWidths.StatusColumnWidth}" IsVisible="{Binding ShowStatusColumn}">
                                        <controls:SortableColumnHeader Text="Status" ColumnName="Status"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Actions (Fixed) -->
                                    <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                        <TextBlock Text="Actions" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="8,12,8,12" />
                                    </Panel>
                                </StackPanel>
                            </Border>

                            <!-- Table Content (scrollable vertically only) -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <Panel>
                                    <!-- Invoices List -->
                                    <ItemsControl ItemsSource="{Binding Invoices}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="vm:InvoiceDisplayItem">
                                                <Border Padding="24,0"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="0,0,0,1"
                                                        MinHeight="56">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Invoice # -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowIdColumn}">
                                                            <TextBlock Text="{Binding Id}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Accountant -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.AccountantColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowAccountantColumn}">
                                                            <TextBlock Text="{Binding AccountantName}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="8,16,8,16"
                                                                       TextTrimming="CharacterEllipsis" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Customer with Avatar -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowCustomerColumn}">
                                                            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" Margin="8,0">
                                                                <Border Width="32" Height="32" CornerRadius="16"
                                                                        Background="{DynamicResource PrimaryBrush}">
                                                                    <TextBlock Text="{Binding CustomerInitials}"
                                                                               FontSize="12"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="White"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center" />
                                                                </Border>
                                                                <TextBlock Text="{Binding CustomerName}"
                                                                           FontSize="14"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           TextTrimming="CharacterEllipsis" />
                                                            </StackPanel>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Issue Date -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.IssueDateColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowIssueDateColumn}">
                                                            <TextBlock Text="{Binding IssueDateFormatted}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Due Date -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.DueDateColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowDueDateColumn}">
                                                            <TextBlock Text="{Binding DueDateFormatted}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Amount -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowAmountColumn}">
                                                            <TextBlock Text="{Binding TotalFormatted}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Status Badge -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowStatusColumn}">
                                                            <Border VerticalAlignment="Center"
                                                                    HorizontalAlignment="Left"
                                                                    Padding="8,4"
                                                                    CornerRadius="4"
                                                                    Margin="8,0"
                                                                    Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToInvoiceStatusBackground}}">
                                                                <TextBlock Text="{Binding StatusDisplay}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToInvoiceStatusForeground}}" />
                                                            </Border>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Actions -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Right"
                                                                        Spacing="4"
                                                                        Margin="8,0">
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="Edit"
                                                                        IsVisible="{Binding CanEdit}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenEditModalCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="View History"
                                                                        Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenHistoryModalCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button danger"
                                                                        ToolTip.Tip="Delete"
                                                                        Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                            </StackPanel>
                                                        </Panel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Empty State -->
                                    <Border Padding="40"
                                            IsVisible="{Binding Invoices.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Spacing="16">
                                            <Border Width="64" Height="64"
                                                    CornerRadius="32"
                                                    Background="{DynamicResource SurfaceAltBrush}"
                                                    HorizontalAlignment="Center">
                                                <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                                          Width="28" Height="28"
                                                          Foreground="{DynamicResource TextTertiaryBrush}" />
                                            </Border>
                                            <TextBlock Text="{Binding EmptyStateTitle}"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center" />
                                            <TextBlock Text="{Binding EmptyStateMessage}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300" />
                                            <Button Classes="primary-button"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,8,0,0"
                                                    Command="{Binding OpenCreateModalCommand}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                              Width="16" Height="16"
                                                              Foreground="White" />
                                                    <TextBlock Text="Create Invoice" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Panel>
                            </ScrollViewer>
                        </Grid>
                    </ScrollViewer>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            </Grid>
        </ScrollViewer>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnMenuX}"
                                    MenuY="{Binding ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="Invoice #" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAccountantColumn}" Content="Accountant" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="Customer" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowIssueDateColumn}" Content="Issue Date" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDueDateColumn}" Content="Due Date" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="Amount" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="Status" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Page Tabs (TabControl) -->
        <Style Selector="TabControl.page-tabs">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="TabControl.page-tabs /template/ ItemsPresenter#PART_ItemsPresenter">
            <Setter Property="Margin" Value="24,0" />
        </Style>
        <Style Selector="TabControl.page-tabs /template/ Border#PART_InnerBorder">
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="TabControl.page-tabs /template/ ContentPresenter#PART_SelectedContentHost">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Tab Item Styling -->
        <Style Selector="TabControl.page-tabs TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="4,12,4,10" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="TextBlock.Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:selected">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="TextBlock.Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="TabControl.page-tabs TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Height" Value="2" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="CornerRadius" Value="1" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Column Toggle CheckBox -->
        <Style Selector="CheckBox.column-toggle">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Styles>
</UserControl>
