<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40"
             x:Class="ArgoBooks.Controls.CountryInput"
             x:DataType="controls:CountryInput"
             Focusable="True">

    <Grid>
        <!-- Country Dropdown -->
        <Border x:Name="CountryDropdownBorder"
                CornerRadius="6"
                BorderThickness="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                Classes.focused="{Binding IsDropdownOpen}">
            <Border.Styles>
                <Style Selector="Border.focused">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                </Style>
                <Style Selector="Border:pointerover:not(.focused)">
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderHoverBrush}" />
                </Style>
            </Border.Styles>

            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Flag Image -->
                <Image Grid.Column="0"
                       Source="{Binding SelectedCountryFlag}"
                       Width="20" Height="14"
                       Stretch="UniformToFill"
                       VerticalAlignment="Center"
                       Margin="12,0,8,0"
                       IsVisible="{Binding SelectedCountryFlag, Converter={x:Static ObjectConverters.IsNotNull}}" />

                <!-- Search/Display TextBox -->
                <TextBox x:Name="CountrySearchBox"
                         Grid.Column="1"
                         Text="{Binding SearchText, Mode=TwoWay}"
                         Watermark="Select country"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="4,10"
                         FontSize="14"
                         VerticalAlignment="Center" />

                <!-- Dropdown Arrow -->
                <Button Grid.Column="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="24" Height="24"
                        Margin="0,0,8,0"
                        Padding="0"
                        CornerRadius="4"
                        Cursor="Hand"
                        Command="{Binding ToggleDropdownCommand}">
                    <PathIcon Data="M7 10l5 5 5-5z"
                              Width="12" Height="12"
                              Foreground="{DynamicResource TextTertiaryBrush}" />
                </Button>
            </Grid>
        </Border>

        <!-- Country Dropdown Popup -->
        <Popup x:Name="CountryDropdownPopup"
               IsOpen="{Binding IsDropdownOpen, Mode=TwoWay}"
               PlacementTarget="{Binding #CountryDropdownBorder}"
               Placement="Bottom"
               PlacementGravity="BottomLeft"
               IsLightDismissEnabled="True"
               WindowManagerAddShadowHint="True">

            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Width="280"
                    MaxHeight="300"
                    Margin="0,4,0,0"
                    BoxShadow="0 4 12 0 #20000000">

                <Grid RowDefinitions="Auto,*">
                    <!-- No Results Message -->
                    <TextBlock Grid.Row="0"
                               Text="No countries found"
                               FontSize="13"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               Padding="12,16"
                               HorizontalAlignment="Center"
                               IsVisible="{Binding !HasFilteredCountries}" />

                    <!-- Filtered Items -->
                    <ListBox Grid.Row="1"
                             x:Name="CountryListBox"
                             ItemsSource="{Binding FilteredCountries}"
                             SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             IsVisible="{Binding HasFilteredCountries}">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="10,8" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="controls:CountryDialCode">
                                <Grid ColumnDefinitions="30,*">
                                    <!-- Flag Image -->
                                    <Image Grid.Column="0"
                                           Source="{Binding FlagImage}"
                                           Width="20" Height="14"
                                           Stretch="UniformToFill"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                    <!-- Country Name -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
