<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="40"
             x:Class="ArgoBooks.Controls.SortableColumnHeader"
             x:DataType="controls:SortableColumnHeader">

    <UserControl.Styles>
        <Style Selector="Button.sort-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sort-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sort-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sort-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>

    <Button Classes="sort-header" Margin="8,12"
            Command="{Binding Command, RelativeSource={RelativeSource AncestorType=controls:SortableColumnHeader}}"
            CommandParameter="{Binding ColumnName, RelativeSource={RelativeSource AncestorType=controls:SortableColumnHeader}}">
        <StackPanel Orientation="Horizontal" Spacing="4">
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=controls:SortableColumnHeader}}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            <Panel Width="12" Height="12">
                <!-- Ascending Arrow (up) -->
                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                          Foreground="{DynamicResource TextTertiaryBrush}"
                          IsVisible="{Binding IsAscending, RelativeSource={RelativeSource AncestorType=controls:SortableColumnHeader}}" />
                <!-- Descending Arrow (down) -->
                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                          Foreground="{DynamicResource TextTertiaryBrush}"
                          IsVisible="{Binding IsDescending, RelativeSource={RelativeSource AncestorType=controls:SortableColumnHeader}}" />
            </Panel>
        </StackPanel>
    </Button>
</UserControl>
