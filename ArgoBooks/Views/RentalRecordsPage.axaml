<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.RentalRecordsPage"
             x:DataType="vm:RentalRecordsPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:RentalRecordsPageViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards (Row 0) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>

                <!-- Total Rentals -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DBEAFE"
                                Margin="0,0,16,0">
                            <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                      Width="24" Height="24"
                                      Foreground="#3B82F6" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalRentals}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Total Rentals"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Rentals -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DCFCE7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                      Width="24" Height="24"
                                      Foreground="#22C55E" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ActiveRentals}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Active"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Overdue Rentals -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEE2E2"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                      Width="24" Height="24"
                                      Foreground="#DC2626" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding OverdueRentals}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Overdue"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Total Revenue -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#F3E8FF"
                                Margin="0,0,16,0">
                            <PathIcon Data="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                      Width="24" Height="24"
                                      Foreground="#A855F7" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalRevenueFormatted}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Total Revenue"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Rental Records"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search rentals..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Rental Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="New Rental" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Rental Records Table -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,*">
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12">
                            <Grid ColumnDefinitions="0.6*,1*,1*,0.4*,0.7*,0.7*,0.7*,0.6*,0.6*,100">
                                <!-- ID Column Header -->
                                <Button Grid.Column="0" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Id">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="ID" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Id:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Id:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Item Column Header -->
                                <Button Grid.Column="1" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Item">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Item" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Item:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Item:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Customer Column Header -->
                                <Button Grid.Column="2" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Customer">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Customer" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Customer:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Customer:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Qty Column Header -->
                                <Button Grid.Column="3" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Quantity">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Qty" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Quantity:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Quantity:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Start Date Column Header -->
                                <Button Grid.Column="4" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="StartDate">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Start" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="StartDate:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="StartDate:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Due Date Column Header -->
                                <Button Grid.Column="5" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="DueDate">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Due" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="DueDate:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="DueDate:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Status Column Header -->
                                <Button Grid.Column="6" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Status">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Status:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Total Column Header -->
                                <Button Grid.Column="7" Classes="column-header"
                                        Command="{Binding SortByCommand}" CommandParameter="Total">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Total" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <Panel Width="12" Height="12">
                                            <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Total:Ascending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                            <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                      Foreground="{DynamicResource TextTertiaryBrush}">
                                                <PathIcon.IsVisible>
                                                    <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                  ConverterParameter="Total:Descending">
                                                        <Binding Path="SortColumn" />
                                                        <Binding Path="SortDirection" />
                                                    </MultiBinding>
                                                </PathIcon.IsVisible>
                                            </PathIcon>
                                        </Panel>
                                    </StackPanel>
                                </Button>

                                <!-- Deposit - not sortable -->
                                <TextBlock Grid.Column="8"
                                           Text="Deposit"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />

                                <!-- Actions - not sortable -->
                                <TextBlock Grid.Column="9"
                                           Text="Actions"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Table Content (scrollable) -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Panel>
                                <!-- Records List -->
                                <ItemsControl ItemsSource="{Binding Records}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:RentalRecordDisplayItem">
                                            <Border Padding="24,16"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid ColumnDefinitions="0.6*,1*,1*,0.4*,0.7*,0.7*,0.7*,0.6*,0.6*,100">
                                                    <!-- ID -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Id}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Item Name -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ItemName}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Text="{Binding RateFormatted}"
                                                                   FontSize="12"
                                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                                    </StackPanel>

                                                    <!-- Customer -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding CustomerName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />

                                                    <!-- Quantity -->
                                                    <TextBlock Grid.Column="3"
                                                               Text="{Binding Quantity}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Start Date -->
                                                    <TextBlock Grid.Column="4"
                                                               Text="{Binding StartDateFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Due Date -->
                                                    <StackPanel Grid.Column="5" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DueDateFormatted}"
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                                                        <TextBlock Text="{Binding DaysOverdueText}"
                                                                   FontSize="12"
                                                                   Foreground="#DC2626"
                                                                   IsVisible="{Binding DaysOverdue, Converter={x:Static local:IntConverters.IsPositive}}" />
                                                    </StackPanel>

                                                    <!-- Status Badge -->
                                                    <Border Grid.Column="6"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Padding="8,4"
                                                            CornerRadius="4"
                                                            Background="{Binding Status, Converter={x:Static local:StringConverters.ToRentalStatusBackground}}">
                                                        <TextBlock Text="{Binding Status}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="{Binding Status, Converter={x:Static local:StringConverters.ToRentalStatusForeground}}" />
                                                    </Border>

                                                    <!-- Total Cost -->
                                                    <TextBlock Grid.Column="7"
                                                               Text="{Binding TotalCostFormatted}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Deposit -->
                                                    <TextBlock Grid.Column="8"
                                                               Text="{Binding DepositFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />

                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="9"
                                                                Orientation="Horizontal"
                                                                HorizontalAlignment="Right"
                                                                Spacing="4">
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="Return"
                                                                Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenReturnModalCommand}"
                                                                CommandParameter="{Binding}"
                                                                IsVisible="{Binding IsActive}">
                                                            <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="View Details"
                                                                Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenViewModalCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="Edit"
                                                                Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenEditModalCommand}"
                                                                CommandParameter="{Binding}"
                                                                IsVisible="{Binding IsActive}">
                                                            <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button danger"
                                                                ToolTip.Tip="Delete"
                                                                Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Records.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No rental records found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Create your first rental record to start tracking rentals."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="New Rental" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                    </Grid>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:RentalRecordsPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>
        <Style Selector="Button.icon-button:disabled">
            <Setter Property="Opacity" Value="0.4" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
