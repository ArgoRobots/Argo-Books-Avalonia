<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="560" d:DesignHeight="600"
             x:Class="ArgoBooks.Modals.CreateCompanyWizard"
             x:DataType="vm:CreateCompanyViewModel">

    <Design.DataContext>
        <vm:CreateCompanyViewModel />
    </Design.DataContext>

    <Panel>
        <controls:ModalOverlay IsOpen="{Binding IsOpen}">
            <controls:ModalOverlay.ModalContent>
                <!-- Wizard Container -->
                <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="620"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">

            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="{loc:Loc 'Create New Company'}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding CurrentStep, StringFormat='Step {0} of 2'}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                        </StackPanel>
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseCommand}">
                            <PathIcon Data="{x:Static icons:Icons.Close}"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Step Indicators -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,-16"
                            Spacing="8">
                    <!-- Step 1 -->
                    <Border Width="32" Height="32" CornerRadius="16"
                            Background="{DynamicResource PrimaryBrush}"
                            IsVisible="{Binding IsStep1}">
                        <TextBlock Text="1" Foreground="White" FontWeight="Medium"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <Border Width="32" Height="32" CornerRadius="16"
                            Background="{DynamicResource SurfaceAltBrush}"
                            IsVisible="{Binding !IsStep1}">
                        <TextBlock Text="1" Foreground="{DynamicResource TextTertiaryBrush}" FontWeight="Medium"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>

                    <Border Width="40" Height="2" Background="{DynamicResource BorderBrush}" VerticalAlignment="Center" />

                    <!-- Step 2 -->
                    <Border Width="32" Height="32" CornerRadius="16"
                            Background="{DynamicResource PrimaryBrush}"
                            IsVisible="{Binding IsStep2}">
                        <TextBlock Text="2" Foreground="White" FontWeight="Medium"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <Border Width="32" Height="32" CornerRadius="16"
                            Background="{DynamicResource SurfaceAltBrush}"
                            IsVisible="{Binding !IsStep2}">
                        <TextBlock Text="2" Foreground="{DynamicResource TextTertiaryBrush}" FontWeight="Medium"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </StackPanel>

                <!-- Body -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24,32,24,24">
                        <!-- Step 1: Company Info -->
                        <StackPanel IsVisible="{Binding IsStep1}" Spacing="20">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{loc:Loc 'Company Information'}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{loc:Loc 'Enter your company''s basic information'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                            </StackPanel>

                            <!-- Company Name (full width) -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Company Name'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <TextBox Text="{Binding CompanyName, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="{loc:Loc 'Enter company name'}"
                                         MaxLength="100" />
                            </StackPanel>

                            <!-- Two column layout for other fields -->
                            <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,16,Auto,16,Auto,16,Auto">
                                <!-- Business Type -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Business Type'}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <ComboBox ItemsSource="{Binding BusinessTypes}"
                                              SelectedItem="{Binding BusinessType}"
                                              Classes="form-combobox"
                                              PlaceholderText="{loc:Loc 'Select business type'}"
                                              HorizontalAlignment="Stretch" />
                                </StackPanel>

                                <!-- Industry -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc Industry}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <ComboBox ItemsSource="{Binding Industries}"
                                              SelectedItem="{Binding Industry}"
                                              Classes="form-combobox"
                                              PlaceholderText="{loc:Loc 'Select industry'}"
                                              HorizontalAlignment="Stretch" />
                                </StackPanel>

                                <!-- Phone Number -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Phone Number'}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <controls:PhoneInput SelectedCountry="{Binding SelectedPhoneCountry, Mode=TwoWay}"
                                                         PhoneNumber="{Binding PhoneNumber, Mode=TwoWay}" />
                                </StackPanel>

                                <!-- Country -->
                                <StackPanel Grid.Row="2" Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc Country}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <controls:CountryInput SelectedCountryName="{Binding Country, Mode=TwoWay}" />
                                </StackPanel>

                                <!-- City -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc City}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Classes="form-input"
                                             Text="{Binding City, Mode=TwoWay}"
                                             Watermark="{loc:Loc 'Enter city'}"
                                             MaxLength="100" />
                                </StackPanel>

                                <!-- Address -->
                                <StackPanel Grid.Row="4" Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc Address}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Classes="form-input"
                                             Text="{Binding Address, Mode=TwoWay}"
                                             Watermark="{loc:Loc 'Enter address'}"
                                             MaxLength="200" />
                                </StackPanel>

                                <!-- Default Currency -->
                                <StackPanel Grid.Row="6" Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Default Currency'}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <controls:SearchableDropdown ItemsSource="{Binding Currencies}"
                                                                  SelectedItem="{Binding SelectedCurrency}"
                                                                  PriorityItems="{Binding PriorityCurrencies}"
                                                                  Placeholder="{loc:Loc 'Search currencies...'}" />
                                </StackPanel>

                                <!-- Province / State -->
                                <StackPanel Grid.Row="6" Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Province / State'}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Classes="form-input"
                                             Text="{Binding ProvinceState, Mode=TwoWay}"
                                             Watermark="{loc:Loc 'Enter province or state'}"
                                             MaxLength="100" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Step 2: Security & Logo -->
                        <StackPanel IsVisible="{Binding IsStep2}" Spacing="20">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{loc:Loc 'Security &amp; Branding'}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{loc:Loc 'Protect your data and add your company logo'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                            </StackPanel>

                            <!-- Logo Upload -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="{loc:Loc 'Company Logo'}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />

                                <Grid ColumnDefinitions="Auto,*">
                                    <!-- Logo Preview -->
                                    <Border Grid.Column="0"
                                            Width="100" Height="100"
                                            CornerRadius="8"
                                            Background="{DynamicResource SurfaceAltBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            ClipToBounds="True"
                                            Margin="0,0,16,0">
                                        <Panel>
                                            <PathIcon Data="{x:Static icons:Icons.GridDetailed}"
                                                      Width="40" Height="40"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      IsVisible="{Binding !HasLogo}" />
                                            <Image Source="{Binding LogoSource}"
                                                   Stretch="Uniform"
                                                   IsVisible="{Binding HasLogo}" />
                                        </Panel>
                                    </Border>

                                    <!-- Upload Buttons -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <Button Classes="secondary-button"
                                                Command="{Binding BrowseLogoCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="{x:Static icons:Icons.ImportData}"
                                                          Width="16" Height="16" />
                                                <TextBlock Text="{loc:Loc 'Upload Logo'}" />
                                            </StackPanel>
                                        </Button>
                                        <Button Classes="text-button"
                                                Command="{Binding RemoveLogoCommand}"
                                                IsVisible="{Binding HasLogo}">
                                            <TextBlock Text="{loc:Loc Remove}" Foreground="{DynamicResource DangerBrush}" />
                                        </Button>
                                        <TextBlock Text="{loc:Loc 'PNG, JPG up to 5MB'}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Password Protection -->
                            <Border Background="{DynamicResource SurfaceAltBrush}"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="16">
                                    <CheckBox IsChecked="{Binding EnablePassword}"
                                              Content="{loc:Loc 'Password protect this company file'}" />

                                    <StackPanel IsVisible="{Binding EnablePassword}" Spacing="16">
                                        <StackPanel Spacing="6">
                                            <TextBlock Text="{loc:Loc Password}"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                            <TextBox Text="{Binding Password, Mode=TwoWay}"
                                                     Classes="form-input"
                                                     PasswordChar="*"
                                                     Watermark="{loc:Loc 'Enter password'}"
                                                     MaxLength="128" />
                                        </StackPanel>

                                        <StackPanel Spacing="6">
                                            <TextBlock Text="{loc:Loc 'Confirm Password'}"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                            <TextBox Text="{Binding ConfirmPassword, Mode=TwoWay}"
                                                     Classes="form-input"
                                                     PasswordChar="*"
                                                     Watermark="{loc:Loc 'Confirm password'}"
                                                     MaxLength="128" />
                                            <TextBlock Text="{loc:Loc 'Passwords do not match'}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource DangerBrush}"
                                                       IsVisible="{Binding ShowPasswordError}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Back Button -->
                        <Button Grid.Column="0"
                                Classes="secondary-button"
                                Command="{Binding PreviousStepCommand}"
                                IsVisible="{Binding CanGoBack}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{x:Static icons:Icons.ArrowBack}"
                                          Width="16" Height="16" />
                                <TextBlock Text="{loc:Loc Back}" />
                            </StackPanel>
                        </Button>

                        <!-- Cancel (only on first step) -->
                        <Button Grid.Column="0"
                                Classes="secondary-button"
                                Command="{Binding CloseCommand}"
                                IsVisible="{Binding !CanGoBack}"
                                Content="{loc:Loc Cancel}" />

                        <!-- Next / Create Button -->
                        <Button Grid.Column="2"
                                Classes="primary-button"
                                Command="{Binding NextStepCommand}"
                                IsVisible="{Binding CanGoNext}"
                                IsEnabled="{Binding IsStep1Valid}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{loc:Loc Next}" />
                                <PathIcon Data="{x:Static icons:Icons.ArrowForward}"
                                          Width="16" Height="16" />
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                                Classes="primary-button"
                                Command="{Binding CreateCompanyCommand}"
                                IsVisible="{Binding IsLastStep}"
                                IsEnabled="{Binding CanCreate}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{x:Static icons:Icons.Check}"
                                          Width="16" Height="16" />
                                <TextBlock Text="{loc:Loc 'Create Company'}" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>
    </Panel>
</UserControl>
