<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="280" d:DesignHeight="350"
             x:Class="ArgoBooks.Panels.HelpPanel"
             x:DataType="vm:HelpPanelViewModel">

    <Design.DataContext>
        <vm:HelpPanelViewModel />
    </Design.DataContext>

    <Panel IsVisible="{Binding IsOpen}">
        <!-- Transparent backdrop for click-away -->
        <Border Background="Transparent"
                PointerPressed="Backdrop_PointerPressed" />

        <!-- Help Panel with animation -->
        <Border x:Name="HelpPanelBorder"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Width="280"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,60,20,0"
                BoxShadow="0 4 20 0 #26000000"
                Focusable="True"
                KeyDown="HelpPanel_KeyDown"
                Opacity="0"
                RenderTransformOrigin="1,0">
            <Border.RenderTransform>
                <TranslateTransform Y="-8" />
            </Border.RenderTransform>
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Border.Transitions>
            <StackPanel>
                <!-- Header -->
                <Border Padding="20,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="{loc:Loc 'Help &amp; Resources'}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                </Border>

                <!-- Menu Items -->
                <StackPanel Margin="0,8">
                    <!-- What's New -->
                    <Button x:Name="MenuItem0"
                            Classes="menu-item"
                            Command="{Binding OpenWhatsNewCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Gift}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'What''s New'}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Documentation -->
                    <Button x:Name="MenuItem1"
                            Classes="menu-item"
                            Command="{Binding OpenDocumentationCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Book}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc Documentation}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Community -->
                    <Button x:Name="MenuItem2"
                            Classes="menu-item"
                            Command="{Binding OpenCommunityCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Customers}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'Argo Community'}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Support -->
                    <Button x:Name="MenuItem3"
                            Classes="menu-item"
                            Command="{Binding OpenSupportCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Phone}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc Support}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Divider -->
                    <Border Height="1"
                            Background="{DynamicResource BorderBrush}"
                            Margin="0,8" />

                    <!-- Show Setup Checklist -->
                    <Button x:Name="MenuItem6"
                            Classes="menu-item"
                            Command="{Binding ShowSetupChecklistCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Check}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'Show Setup Checklist'}" VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Divider -->
                    <Border Height="1"
                            Background="{DynamicResource BorderBrush}"
                            Margin="0,8" />

                    <!-- Check for Updates -->
                    <Button x:Name="MenuItem4"
                            Classes="menu-item"
                            Command="{Binding CheckForUpdatesCommand}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Refresh}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      Margin="0,0,12,0" />
                            <TextBlock Grid.Column="1" Text="{loc:Loc 'Check for Updates'}" VerticalAlignment="Center" />
                            <Border Grid.Column="2"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    CornerRadius="4"
                                    Padding="8,4">
                                <TextBlock Text="{Binding AppVersion}"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </Border>
                        </Grid>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Menu Item Style -->
        <Style Selector="Button.menu-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.menu-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.menu-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.menu-item:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
        </Style>
        <Style Selector="Button.menu-item:focus /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.menu-item:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="BorderThickness" Value="2,0,0,0" />
        </Style>
        <Style Selector="Button.menu-item PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
