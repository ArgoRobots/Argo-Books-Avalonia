<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="ArgoBooks.Modals.SwitchAccountModal"
             x:DataType="vm:SwitchAccountModalViewModel">

    <Design.DataContext>
        <vm:SwitchAccountModalViewModel />
    </Design.DataContext>

    <controls:ModalOverlay IsOpen="{Binding IsOpen}">
        <controls:ModalOverlay.ModalContent>
            <!-- Modal Container -->
            <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="480"
                MaxHeight="550"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">

            <Grid RowDefinitions="Auto,Auto,*">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="{loc:Loc 'Switch Account'}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{loc:Loc 'Select an account to sign in'}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseCommand}">
                            <PathIcon Data="{x:Static local:Icons.Close}"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Search Box -->
                <Border Grid.Row="1"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Border Background="{DynamicResource SurfaceAltBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="{x:Static local:Icons.Search}"
                                      Width="16" Height="16"
                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                      Margin="0,0,10,0"
                                      VerticalAlignment="Center" />
                            <TextBox Grid.Column="1"
                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                     Watermark="{loc:Loc 'Search accounts...'}"
                                     Classes="search-input"
                                     VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </Border>

                <!-- Account List -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24,16" Spacing="8">
                        <ItemsControl ItemsSource="{Binding Accounts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:AccountItem">
                                    <Button Classes="account-item"
                                            Command="{Binding $parent[ItemsControl].((vm:SwitchAccountModalViewModel)DataContext).SelectAccountCommand}"
                                            CommandParameter="{Binding}">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Account Avatar -->
                                            <Border Grid.Column="0"
                                                    Width="44" Height="44"
                                                    CornerRadius="8"
                                                    Margin="0,0,14,0">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Color}" Opacity="0.15" />
                                                </Border.Background>
                                                <TextBlock Text="{Binding Initials}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Foreground>
                                                        <SolidColorBrush Color="{Binding Color}" />
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                            </Border>

                                            <!-- Account Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                            </StackPanel>

                                            <!-- Arrow Indicator -->
                                            <PathIcon Grid.Column="2"
                                                      Data="{x:Static local:Icons.ChevronRightNav}"
                                                      Width="18" Height="18"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      VerticalAlignment="Center" />
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Add Account Button -->
                        <Button Classes="add-account"
                                Command="{Binding CreateAccountCommand}"
                                Margin="0,8,0,0">
                            <Grid ColumnDefinitions="Auto,*">
                                <Border Grid.Column="0"
                                        Width="44" Height="44"
                                        CornerRadius="8"
                                        Background="{DynamicResource SurfaceHoverBrush}"
                                        Margin="0,0,14,0">
                                    <PathIcon Data="{x:Static local:Icons.Add}"
                                              Width="20" Height="20"
                                              Foreground="{DynamicResource TextSecondaryBrush}" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="{loc:Loc 'Create New Account'}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{loc:Loc 'Set up a new company or organization'}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            </Border>
        </controls:ModalOverlay.ModalContent>
    </controls:ModalOverlay>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="Padding" Value="0,10" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Account Item Button -->
        <Style Selector="Button.account-item">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.account-item /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.account-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.account-item:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Add Account Button -->
        <Style Selector="Button.add-account">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.add-account /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.add-account:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.add-account:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
