<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="ArgoBooks.Controls.Reports.ReportPreviewControl"
             Background="#E0E0E0">

    <UserControl.Styles>
        <!-- Page shadow style -->
        <Style Selector="Border.page-shadow">
            <Setter Property="BoxShadow" Value="2 2 10 0 #40000000"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>

        <!-- Zoom button style -->
        <Style Selector="Button.zoom-button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style Selector="Button.zoom-button:pointerover">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*">

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid ColumnDefinitions="*,Auto,*">

                <!-- Page info (left) -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="8"
                            VerticalAlignment="Center">
                    <TextBlock Text="Page"
                               VerticalAlignment="Center"
                               Foreground="#616161"/>
                    <NumericUpDown x:Name="PageNumberInput"
                                   Value="1"
                                   Minimum="1"
                                   Width="70"
                                   FormatString="F0"
                                   ValueChanged="OnPageNumberChanged"/>
                    <TextBlock x:Name="TotalPagesText"
                               Text="of 1"
                               VerticalAlignment="Center"
                               Foreground="#616161"/>

                    <Border Width="1" Height="20" Background="#E0E0E0" Margin="8,0"/>

                    <Button Classes="zoom-button"
                            Click="OnPreviousPageClick"
                            ToolTip.Tip="Previous Page">
                        <PathIcon Width="16" Height="16"
                                  Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z"/>
                    </Button>
                    <Button Classes="zoom-button"
                            Click="OnNextPageClick"
                            ToolTip.Tip="Next Page">
                        <PathIcon Width="16" Height="16"
                                  Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"/>
                    </Button>
                </StackPanel>

                <!-- Zoom controls (center) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="4"
                            HorizontalAlignment="Center">
                    <Button Classes="zoom-button"
                            Click="OnZoomOutClick"
                            ToolTip.Tip="Zoom Out">
                        <PathIcon Width="16" Height="16"
                                  Data="M19,13H5V11H19V13Z"/>
                    </Button>

                    <ComboBox x:Name="ZoomComboBox"
                              Width="100"
                              SelectedIndex="3"
                              SelectionChanged="OnZoomSelectionChanged">
                        <ComboBoxItem Content="50%"/>
                        <ComboBoxItem Content="75%"/>
                        <ComboBoxItem Content="100%"/>
                        <ComboBoxItem Content="Fit Width"/>
                        <ComboBoxItem Content="Fit Page"/>
                        <ComboBoxItem Content="150%"/>
                        <ComboBoxItem Content="200%"/>
                    </ComboBox>

                    <Button Classes="zoom-button"
                            Click="OnZoomInClick"
                            ToolTip.Tip="Zoom In">
                        <PathIcon Width="16" Height="16"
                                  Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                    </Button>
                </StackPanel>

                <!-- Actions (right) -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">
                    <Button Classes="zoom-button"
                            Width="Auto"
                            Padding="8,4"
                            Click="OnRefreshClick"
                            ToolTip.Tip="Refresh Preview">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <PathIcon Width="16" Height="16"
                                      Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"/>
                            <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Preview area -->
        <ScrollViewer Grid.Row="1"
                      x:Name="PreviewScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#E0E0E0">

            <Border Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <!-- Page container with zoom transform -->
                <Border x:Name="ZoomContainer"
                        Classes="page-shadow"
                        HorizontalAlignment="Center">

                    <!-- Page content -->
                    <Border x:Name="PageBorder"
                            Background="White"
                            ClipToBounds="True">

                        <!-- Rendered preview image -->
                        <Image x:Name="PreviewImage"
                               Stretch="None"
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                    </Border>
                </Border>
            </Border>
        </ScrollViewer>

        <!-- Loading overlay -->
        <Border Grid.Row="1"
                x:Name="LoadingOverlay"
                Background="#80FFFFFF"
                IsVisible="False">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                <ProgressBar IsIndeterminate="True"
                             Width="200"/>
                <TextBlock Text="Generating preview..."
                           HorizontalAlignment="Center"
                           Foreground="#616161"/>
            </StackPanel>
        </Border>

        <!-- Error overlay -->
        <Border Grid.Row="1"
                x:Name="ErrorOverlay"
                Background="#80FFFFFF"
                IsVisible="False">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                <PathIcon Width="48" Height="48"
                          Foreground="#F44336"
                          Data="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/>
                <TextBlock x:Name="ErrorText"
                           Text="Failed to generate preview"
                           HorizontalAlignment="Center"
                           Foreground="#616161"/>
                <Button Content="Retry"
                        Click="OnRefreshClick"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
