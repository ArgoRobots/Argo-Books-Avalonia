<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.SuppliersPage"
             x:DataType="vm:SuppliersPageViewModel">

    <Design.DataContext>
        <vm:SuppliersPageViewModel />
    </Design.DataContext>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" Spacing="24">
            <!-- Statistics Cards -->
            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>

                <!-- Total Suppliers -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DBEAFE"
                                Margin="0,0,16,0">
                            <PathIcon Data="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
                                      Width="24" Height="24"
                                      Foreground="#3B82F6" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalSuppliers}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Total Suppliers"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Suppliers -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DCFCE7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                      Width="24" Height="24"
                                      Foreground="#22C55E" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ActiveSuppliers}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Active Suppliers"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Countries -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEF3C7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                      Width="24" Height="24"
                                      Foreground="#F59E0B" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalCountries}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Countries"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Products Supplied -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#F3E8FF"
                                Margin="0,0,16,0">
                            <PathIcon Data="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                                      Width="24" Height="24"
                                      Foreground="#A855F7" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalProductsSupplied}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Products Supplied"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Card -->
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Suppliers"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search suppliers..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Supplier Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Supplier" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Suppliers Table -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,*">
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12">
                            <Grid ColumnDefinitions="1.5*,*,*,0.8*,0.6*,120">
                                <TextBlock Grid.Column="0"
                                           Text="Supplier"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Grid.Column="1"
                                           Text="Contact"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Grid.Column="2"
                                           Text="Country"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Grid.Column="3"
                                           Text="Products"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Grid.Column="4"
                                           Text="Status"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Grid.Column="5"
                                           Text="Actions"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Table Content -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding Suppliers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:SupplierDisplayItem">
                                    <Border Padding="24,16"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="1.5*,*,*,0.8*,0.6*,120">
                                            <!-- Supplier Name with Avatar -->
                                            <StackPanel Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        Spacing="12">
                                                <Border Width="40" Height="40"
                                                        CornerRadius="8"
                                                        Background="{DynamicResource PrimaryBrush}">
                                                    <TextBlock Text="{Binding Initials}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Email}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Contact Person -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ContactPerson, TargetNullValue='-', FallbackValue='-'}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis" />

                                            <!-- Country -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Country, TargetNullValue='-', FallbackValue='-'}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center" />

                                            <!-- Product Count -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding ProductCount}"
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center" />

                                            <!-- Status Badge -->
                                            <Border Grid.Column="4"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Padding="8,4"
                                                    CornerRadius="4"
                                                    Background="{Binding IsActive, Converter={x:Static local:BoolConverters.ToStatusBackground}}">
                                                <TextBlock Text="{Binding StatusText}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           Foreground="{Binding IsActive, Converter={x:Static local:BoolConverters.ToStatusForeground}}" />
                                            </Border>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="5"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        Spacing="4">
                                                <Button Classes="icon-button"
                                                        ToolTip.Tip="Edit"
                                                        Command="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).OpenEditModalCommand}"
                                                        CommandParameter="{Binding}">
                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                              Width="16" Height="16" />
                                                </Button>
                                                <Button Classes="icon-button danger"
                                                        ToolTip.Tip="Delete"
                                                        Command="{Binding $parent[ItemsControl].((vm:SuppliersPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                        CommandParameter="{Binding}">
                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                              Width="16" Height="16" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Grid.Row="1"
                                Padding="40"
                                IsVisible="{Binding Suppliers.Count, Converter={x:Static local:IntConverters.IsZero}}">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="16">
                                <Border Width="64" Height="64"
                                        CornerRadius="32"
                                        Background="{DynamicResource SurfaceAltBrush}"
                                        HorizontalAlignment="Center">
                                    <PathIcon Data="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
                                              Width="28" Height="28"
                                              Foreground="{DynamicResource TextTertiaryBrush}" />
                                </Border>
                                <TextBlock Text="No suppliers found"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Add your first supplier to track vendors and manage your supply chain."
                                           FontSize="14"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="300" />
                                <Button Classes="primary-button"
                                        HorizontalAlignment="Center"
                                        Margin="0,8,0,0"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Supplier" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>

    <!-- Add Supplier Modal -->
    <Panel IsVisible="{Binding IsAddModalOpen}">
        <Border Background="#80000000"
                PointerPressed="Backdrop_PointerPressed" />
        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="550"
                MaxHeight="650"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Add Supplier"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseAddModalCommand}">
                            <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24" Spacing="16">
                        <!-- Supplier Name -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Supplier Name *"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalSupplierName, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="Enter supplier name" />
                        </StackPanel>

                        <!-- Contact Person -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Contact Person"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalContactPerson, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="Enter contact person name" />
                        </StackPanel>

                        <!-- Email and Phone Row -->
                        <Grid ColumnDefinitions="*,16,*">
                            <StackPanel Grid.Column="0" Spacing="6">
                                <TextBlock Text="Email"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalEmail, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="email@example.com" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="6">
                                <TextBlock Text="Phone"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalPhone, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="(555) 123-4567" />
                            </StackPanel>
                        </Grid>

                        <!-- Address Section -->
                        <TextBlock Text="Address"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,8,0,0" />

                        <!-- Street -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Street Address"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalStreet, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="123 Main Street" />
                        </StackPanel>

                        <!-- City and State Row -->
                        <Grid ColumnDefinitions="*,16,*">
                            <StackPanel Grid.Column="0" Spacing="6">
                                <TextBlock Text="City"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalCity, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="City" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="6">
                                <TextBlock Text="State/Province"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalState, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="State" />
                            </StackPanel>
                        </Grid>

                        <!-- Zip and Country Row -->
                        <Grid ColumnDefinitions="*,16,*">
                            <StackPanel Grid.Column="0" Spacing="6">
                                <TextBlock Text="ZIP/Postal Code"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalZipCode, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="12345" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="6">
                                <TextBlock Text="Country"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding CountryOptions}"
                                          SelectedItem="{Binding ModalCountry}"
                                          Classes="form-combobox"
                                          PlaceholderText="Select country" />
                            </StackPanel>
                        </Grid>

                        <!-- Website -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Website"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalWebsite, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="https://www.example.com" />
                        </StackPanel>

                        <!-- Payment Terms -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Payment Terms"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <ComboBox ItemsSource="{Binding PaymentTermsOptions}"
                                      SelectedItem="{Binding ModalPaymentTerms}"
                                      Classes="form-combobox"
                                      PlaceholderText="Select payment terms" />
                        </StackPanel>

                        <!-- Notes -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Notes"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalNotes, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="Additional notes (optional)"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     MaxHeight="120" />
                        </StackPanel>

                        <!-- Error Message -->
                        <TextBlock Text="{Binding ModalError}"
                                   FontSize="12"
                                   Foreground="#dc2626"
                                   IsVisible="{Binding ModalError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="12">
                        <Button Classes="secondary-button"
                                Content="Cancel"
                                Command="{Binding CloseAddModalCommand}" />
                        <Button Classes="primary-button"
                                Content="Add Supplier"
                                Command="{Binding SaveNewSupplierCommand}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Panel>

    <!-- Edit Supplier Modal -->
    <Panel IsVisible="{Binding IsEditModalOpen}">
        <Border Background="#80000000"
                PointerPressed="EditBackdrop_PointerPressed" />
        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="550"
                MaxHeight="650"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Edit Supplier"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseEditModalCommand}">
                            <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Form Content (Same as Add) -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24" Spacing="16">
                        <!-- Supplier Name -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Supplier Name *"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalSupplierName, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="Enter supplier name" />
                        </StackPanel>

                        <!-- Contact Person -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Contact Person"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalContactPerson, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="Enter contact person name" />
                        </StackPanel>

                        <!-- Email and Phone Row -->
                        <Grid ColumnDefinitions="*,16,*">
                            <StackPanel Grid.Column="0" Spacing="6">
                                <TextBlock Text="Email"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalEmail, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="email@example.com" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="6">
                                <TextBlock Text="Phone"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalPhone, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="(555) 123-4567" />
                            </StackPanel>
                        </Grid>

                        <!-- Address Section -->
                        <TextBlock Text="Address"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,8,0,0" />

                        <!-- Street -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Street Address"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalStreet, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="123 Main Street" />
                        </StackPanel>

                        <!-- City and State Row -->
                        <Grid ColumnDefinitions="*,16,*">
                            <StackPanel Grid.Column="0" Spacing="6">
                                <TextBlock Text="City"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalCity, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="City" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="6">
                                <TextBlock Text="State/Province"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalState, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="State" />
                            </StackPanel>
                        </Grid>

                        <!-- Zip and Country Row -->
                        <Grid ColumnDefinitions="*,16,*">
                            <StackPanel Grid.Column="0" Spacing="6">
                                <TextBlock Text="ZIP/Postal Code"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalZipCode, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="12345" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="6">
                                <TextBlock Text="Country"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding CountryOptions}"
                                          SelectedItem="{Binding ModalCountry}"
                                          Classes="form-combobox"
                                          PlaceholderText="Select country" />
                            </StackPanel>
                        </Grid>

                        <!-- Website -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Website"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalWebsite, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="https://www.example.com" />
                        </StackPanel>

                        <!-- Payment Terms -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Payment Terms"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <ComboBox ItemsSource="{Binding PaymentTermsOptions}"
                                      SelectedItem="{Binding ModalPaymentTerms}"
                                      Classes="form-combobox"
                                      PlaceholderText="Select payment terms" />
                        </StackPanel>

                        <!-- Notes -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Notes"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBox Text="{Binding ModalNotes, Mode=TwoWay}"
                                     Classes="form-input"
                                     Watermark="Additional notes (optional)"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     MaxHeight="120" />
                        </StackPanel>

                        <!-- Error Message -->
                        <TextBlock Text="{Binding ModalError}"
                                   FontSize="12"
                                   Foreground="#dc2626"
                                   IsVisible="{Binding ModalError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="12">
                        <Button Classes="secondary-button"
                                Content="Cancel"
                                Command="{Binding CloseEditModalCommand}" />
                        <Button Classes="primary-button"
                                Content="Save Changes"
                                Command="{Binding SaveEditedSupplierCommand}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Panel>

    <!-- Delete Confirmation Modal -->
    <Panel IsVisible="{Binding IsDeleteConfirmOpen}">
        <Border Background="#80000000"
                PointerPressed="DeleteBackdrop_PointerPressed" />
        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">
            <StackPanel>
                <!-- Header -->
                <Border Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="Delete Supplier"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                </Border>

                <!-- Content -->
                <StackPanel Margin="24" Spacing="16">
                    <Border Width="48" Height="48"
                            CornerRadius="24"
                            Background="#FEE2E2"
                            HorizontalAlignment="Center">
                        <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                  Width="24" Height="24"
                                  Foreground="#DC2626" />
                    </Border>
                    <TextBlock Text="Are you sure you want to delete this supplier?"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding DeletingSupplierName}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               TextAlignment="Center" />
                    <TextBlock FontSize="12"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="This supplier has {0} associated products. Product supplier references will be cleared.">
                                <Binding Path="DeletingSupplierProductCount" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Footer -->
                <Border Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="12">
                        <Button Classes="secondary-button"
                                Content="Cancel"
                                Command="{Binding CloseDeleteConfirmCommand}" />
                        <Button Classes="danger-button"
                                Content="Delete"
                                Command="{Binding ConfirmDeleteCommand}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Panel>

    <!-- Filter Modal -->
    <Panel IsVisible="{Binding IsFilterModalOpen}">
        <Border Background="#80000000"
                PointerPressed="FilterBackdrop_PointerPressed" />
        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="24,20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Filter Suppliers"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseFilterModalCommand}">
                            <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Form Content -->
                <StackPanel Grid.Row="1" Margin="24" Spacing="20">
                    <!-- Status -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Status"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <ComboBox ItemsSource="{Binding StatusOptions}"
                                  SelectedItem="{Binding FilterStatus}"
                                  Classes="form-combobox" />
                    </StackPanel>

                    <!-- Country -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Country"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <ComboBox ItemsSource="{Binding AvailableCountries}"
                                  SelectedItem="{Binding FilterCountry}"
                                  Classes="form-combobox"
                                  PlaceholderText="All Countries" />
                    </StackPanel>
                </StackPanel>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Grid.Column="0"
                                Classes="secondary-button"
                                Content="Clear Filters"
                                Command="{Binding ClearFiltersCommand}" />
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="12">
                            <Button Classes="secondary-button"
                                    Content="Cancel"
                                    Command="{Binding CloseFilterModalCommand}" />
                            <Button Classes="primary-button"
                                    Content="Apply"
                                    Command="{Binding ApplyFiltersCommand}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Panel>
    </Grid>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>

        <!-- Primary Button -->
        <Style Selector="Button.primary-button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.primary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.primary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>

        <!-- Secondary Button -->
        <Style Selector="Button.secondary-button">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.secondary-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
        </Style>
        <Style Selector="Button.secondary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Danger Button -->
        <Style Selector="Button.danger-button">
            <Setter Property="Background" Value="#DC2626" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.danger-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#DC2626" />
        </Style>
        <Style Selector="Button.danger-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#B91C1C" />
        </Style>

        <!-- Form Input -->
        <Style Selector="TextBox.form-input">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="TextBox.form-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>
        <Style Selector="TextBox.form-input:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Form ComboBox -->
        <Style Selector="ComboBox.form-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </UserControl.Styles>
</UserControl>
