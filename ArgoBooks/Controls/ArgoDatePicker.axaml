<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="80"
             x:Class="ArgoBooks.Controls.ArgoDatePicker"
             x:DataType="controls:ArgoDatePicker">

    <StackPanel Spacing="4">
        <!-- Label -->
        <StackPanel Orientation="Horizontal" Spacing="4"
                    IsVisible="{Binding Label, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}"
                       FontSize="{StaticResource FontSizeSm}"
                       FontWeight="Medium"
                       Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="*"
                       FontSize="{StaticResource FontSizeSm}"
                       Foreground="{DynamicResource ErrorBrush}"
                       IsVisible="{Binding IsRequired, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}" />
        </StackPanel>

        <!-- DatePicker Container -->
        <Border CornerRadius="{StaticResource RadiusMd}"
                BorderThickness="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                Classes.error="{Binding HasError, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}">
            <Border.Styles>
                <Style Selector="Border.error">
                    <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
                </Style>
                <Style Selector="Border:pointerover:not(.error)">
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderHoverBrush}" />
                </Style>
            </Border.Styles>

            <CalendarDatePicker x:Name="InnerDatePicker"
                                SelectedDate="{Binding SelectedDate, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}, Mode=TwoWay}"
                                DisplayDate="{Binding DisplayDate, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}"
                                DisplayDateStart="{Binding MinDate, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}"
                                DisplayDateEnd="{Binding MaxDate, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}"
                                Watermark="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}"
                                IsTodayHighlighted="True"
                                HorizontalAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,10" />
        </Border>

        <!-- Helper Text / Error Message -->
        <TextBlock FontSize="{StaticResource FontSizeXs}"
                   Margin="0,2,0,0"
                   Foreground="{DynamicResource TextTertiaryBrush}"
                   Text="{Binding HelperText, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}"
                   IsVisible="{Binding HelperText, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

        <TextBlock FontSize="{StaticResource FontSizeXs}"
                   Margin="0,2,0,0"
                   Foreground="{DynamicResource ErrorBrush}"
                   Text="{Binding ErrorMessage, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}"
                   IsVisible="{Binding HasError, RelativeSource={RelativeSource AncestorType=controls:ArgoDatePicker}}" />
    </StackPanel>
</UserControl>
