<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:behaviors="using:ArgoBooks.Behaviors"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="550"
             x:Class="ArgoBooks.Modals.RentalInventoryModals"
             x:DataType="vm:RentalInventoryModalsViewModel">

    <Design.DataContext>
        <vm:RentalInventoryModalsViewModel />
    </Design.DataContext>

    <Panel>
        <!-- Add Rental Item Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsAddModalOpen}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="{loc:Loc 'Add Rental Item'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseAddModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Form Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Item Name -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Item Name'}" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <TextBox Text="{Binding ModalItemName, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc 'Enter item name'}" />
                                <TextBlock Text="{Binding ModalItemNameError}" FontSize="12" Foreground="#dc2626"
                                           IsVisible="{Binding ModalItemNameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Supplier -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc Supplier}" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableSuppliers}"
                                                            SelectedItem="{Binding ModalSupplier}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="{loc:Loc 'Search suppliers...'}"
                                                            ShowAddNew="False"
                                                            EmptyMessage="{loc:Loc 'No suppliers available.'}"
                                                            EmptyCreateLinkText="{loc:Loc 'Create one'}"
                                                            EmptyCreateCommand="{Binding NavigateToCreateSupplierCommand}" />
                            </StackPanel>

                            <!-- Quantity -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Total Quantity'}" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <TextBox Text="{Binding ModalTotalQuantity, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc 'Enter quantity'}"
                                         behaviors:NumericInputBehavior.IsIntegerOnly="True" />
                                <TextBlock Text="{Binding ModalQuantityError}" FontSize="12" Foreground="#dc2626"
                                           IsVisible="{Binding ModalQuantityError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Rates Section -->
                            <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,8,0,0">
                                <Run Text="{loc:Loc 'Rental Rates'}" /><Run Text=" *" Foreground="#dc2626" />
                            </TextBlock>

                            <!-- Daily and Weekly Rate Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Daily Rate'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalDailyRate, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                    <TextBlock Text="{Binding ModalDailyRateError}" FontSize="12" Foreground="#dc2626"
                                               IsVisible="{Binding ModalDailyRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Weekly Rate'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalWeeklyRate, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Monthly Rate and Deposit Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Monthly Rate'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalMonthlyRate, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Security Deposit'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalSecurityDeposit, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Notes}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalNotes, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc 'Enter notes'}"
                                         AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" MaxHeight="120" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseAddModalCommand}" />
                            <Button Classes="primary-button" Content="{loc:Loc 'Add Item'}" Command="{Binding SaveNewItemCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>

        <!-- Edit Rental Item Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsEditModalOpen}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="{loc:Loc 'Edit Rental Item'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseEditModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Form Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Item Name -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Item Name'}" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <TextBox Text="{Binding ModalItemName, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc 'Enter item name'}" />
                                <TextBlock Text="{Binding ModalItemNameError}" FontSize="12" Foreground="#dc2626"
                                           IsVisible="{Binding ModalItemNameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Supplier -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc Supplier}" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableSuppliers}"
                                                            SelectedItem="{Binding ModalSupplier}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="{loc:Loc 'Search suppliers...'}"
                                                            ShowAddNew="False"
                                                            EmptyMessage="{loc:Loc 'No suppliers available.'}"
                                                            EmptyCreateLinkText="{loc:Loc 'Create one'}"
                                                            EmptyCreateCommand="{Binding NavigateToCreateSupplierCommand}" />
                            </StackPanel>

                            <!-- Quantity and Status Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc 'Total Quantity'}" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalTotalQuantity, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc 'Enter quantity'}"
                                         behaviors:NumericInputBehavior.IsIntegerOnly="True" />
                                    <TextBlock Text="{Binding ModalQuantityError}" FontSize="12" Foreground="#dc2626"
                                               IsVisible="{Binding ModalQuantityError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc Status}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding ModalStatus}" Classes="form-combobox">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Rates Section -->
                            <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,8,0,0">
                                <Run Text="{loc:Loc 'Rental Rates'}" /><Run Text=" *" Foreground="#dc2626" />
                            </TextBlock>

                            <!-- Daily and Weekly Rate Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Daily Rate'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalDailyRate, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                    <TextBlock Text="{Binding ModalDailyRateError}" FontSize="12" Foreground="#dc2626"
                                               IsVisible="{Binding ModalDailyRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Weekly Rate'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalWeeklyRate, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Monthly Rate and Deposit Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Monthly Rate'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalMonthlyRate, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Security Deposit'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalSecurityDeposit, Mode=TwoWay}" Classes="form-input" Watermark="0.00"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Notes}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalNotes, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc 'Enter notes'}"
                                         AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" MaxHeight="120" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseEditModalCommand}" />
                            <Button Classes="primary-button" Content="{loc:Loc 'Save Changes'}" Command="{Binding SaveEditedItemCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>

        <!-- Filter Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsFilterModalOpen}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="450"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="{loc:Loc 'Filter Rental Items'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseFilterModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Form Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="20">
                            <!-- Status -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Status}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding FilterStatusOptions}" SelectedItem="{Binding FilterStatus}" Classes="form-combobox">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Availability -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Availability}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding AvailabilityOptions}" SelectedItem="{Binding FilterAvailability}" Classes="form-combobox">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Daily Rate Range -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Daily Rate'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <Grid ColumnDefinitions="*,Auto,*">
                                    <TextBox Grid.Column="0" Text="{Binding FilterDailyRateMin, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc Min}" />
                                    <TextBlock Grid.Column="1" Text="{loc:Loc to}" FontSize="13" Foreground="{DynamicResource TextTertiaryBrush}" VerticalAlignment="Center" Margin="12,0" />
                                    <TextBox Grid.Column="2" Text="{Binding FilterDailyRateMax, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc Max}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Button Grid.Column="0" Classes="secondary-button" Content="{loc:Loc 'Clear Filters'}" Command="{Binding ClearFiltersCommand}" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                                <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseFilterModalCommand}" />
                                <Button Classes="primary-button" Content="{loc:Loc Apply}" Command="{Binding ApplyFiltersCommand}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>

        <!-- Rent Out Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsRentOutModalOpen}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{loc:Loc 'Rent Out Item'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{Binding RentOutItemName}" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseRentOutModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Form Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Customer -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc Customer}" /><Run Text=" *" Foreground="#dc2626" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableCustomers}"
                                                            SelectedItem="{Binding RentOutCustomer}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="{loc:Loc 'Search customers...'}"
                                                            ShowAddNew="False"
                                                            EmptyMessage="{loc:Loc 'No customers available.'}"
                                                            EmptyCreateLinkText="{loc:Loc 'Create one'}"
                                                            EmptyCreateCommand="{Binding NavigateToCreateCustomerCommand}" />
                                <TextBlock Text="{Binding RentOutCustomerError}" FontSize="12" Foreground="#dc2626"
                                           IsVisible="{Binding RentOutCustomerError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Quantity and Available -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc Quantity}" /><Run Text=" *" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding RentOutQuantity, Mode=TwoWay}" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsIntegerOnly="True" />
                                    <TextBlock Text="{Binding RentOutQuantityError}" FontSize="12" Foreground="#dc2626"
                                               IsVisible="{Binding RentOutQuantityError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc Available}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding RentOutAvailableQuantity}" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}" Padding="12,10" />
                                </StackPanel>
                            </Grid>

                            <!-- Rate Type and Amount -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Rate Type'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <ComboBox ItemsSource="{Binding RateTypeOptions}" SelectedItem="{Binding RentOutRateType}" Classes="form-combobox">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Rate Amount'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding RentOutRateAmount, StringFormat='${0:N2}'}" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}" Padding="12,10" />
                                </StackPanel>
                            </Grid>

                            <!-- Start Date -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Start Date'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <DatePicker SelectedDate="{Binding RentOutStartDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Due Date -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Due Date'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <DatePicker SelectedDate="{Binding RentOutDueDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Security Deposit and Estimated Total -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Security Deposit'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding RentOutDeposit, StringFormat='${0:N2}'}" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}" Padding="12,10" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Estimated Total'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding RentOutEstimatedTotal}" FontSize="14" FontWeight="SemiBold" Foreground="#22C55E" Padding="12,10" />
                                </StackPanel>
                            </Grid>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Notes}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding RentOutNotes, Mode=TwoWay}" Classes="form-input" Watermark="{loc:Loc 'Enter notes'}"
                                         AcceptsReturn="True" TextWrapping="Wrap" MinHeight="60" MaxHeight="100" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseRentOutModalCommand}" />
                            <Button Classes="primary-button" Content="{loc:Loc 'Create Rental'}" Command="{Binding ConfirmRentOutCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>
    </Panel>
</UserControl>
