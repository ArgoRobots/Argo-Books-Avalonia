<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ProductsPage"
             x:DataType="vm:ProductsPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ProductsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="Auto,*">
        <!-- Tab Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        Margin="0"
                        Classes="page-tabs">
                <TabItem Header="{loc:Loc Expenses}" />
                <TabItem Header="{loc:Loc Revenue}" />
            </TabControl>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards (Row 0) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                    <Grid.Styles>
                        <Style Selector="Border.stat-card">
                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                            <Setter Property="CornerRadius" Value="12" />
                            <Setter Property="Padding" Value="20" />
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                            <Setter Property="BorderThickness" Value="1" />
                        </Style>
                    </Grid.Styles>

                    <!-- Total Products -->
                    <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="{DynamicResource PrimaryLightBrush}"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M21 16.5c0 .38-.21.71-.53.88l-7.9 4.44c-.16.12-.36.18-.57.18-.21 0-.41-.06-.57-.18l-7.9-4.44A.991.991 0 0 1 3 16.5v-9c0-.38.21-.71.53-.88l7.9-4.44c.16-.12.36-.18.57-.18.21 0 .41.06.57.18l7.9 4.44c.32.17.53.5.53.88v9zM12 4.15L6.04 7.5 12 10.85l5.96-3.35L12 4.15zM5 15.91l6 3.38v-6.71L5 9.21v6.7zm14 0v-6.7l-6 3.37v6.71l6-3.38z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource PrimaryBrush}" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding TotalProducts}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{loc:Loc 'Total Products'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Physical Products -->
                    <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="{DynamicResource SuccessLightBrush}"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M21 3H3C1.9 3 1 3.9 1 5v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14zM5 15h14v2H5zm0-4h14v2H5zm0-4h14v2H5z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource SuccessBrush}" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding PhysicalProducts}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{loc:Loc 'Physical Products'}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Services -->
                    <Border Grid.Column="2" Classes="stat-card" Margin="12,0,0,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="{DynamicResource PurpleLightBrush}"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M18.5 12c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM5 9v6h4l5 5V4L9 9H5z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource PurpleBrush}" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Services}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{loc:Loc Services}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>
            </Grid>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        SizeChanged="OnHeaderSizeChanged">

                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header with Title, Search and Buttons -->
                        <Border Grid.Row="0"
                                Padding="{Binding ResponsiveHeader.HeaderPadding}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="*,Auto">
                                <!-- Title -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding IsExpensesTabSelected, Converter={x:Static local:BoolConverters.ToExpensesOrRevenue}}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />

                                <!-- Search + Filter + Add Button (Right aligned) -->
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="{Binding ResponsiveHeader.HeaderSpacing}">
                                    <!-- Search Box -->
                                    <Border Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="6"
                                            Width="{Binding ResponsiveHeader.SearchBoxWidth}"
                                            MinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}">
                                        <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                            <PathIcon Grid.Column="0"
                                                      Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                      Width="16" Height="16"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Margin="{Binding ResponsiveHeader.SearchIconMargin}" />
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                                     Watermark="{loc:Loc 'Search products...'}"
                                                     Classes="search-input"
                                                     VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>

                                    <!-- Filter Button -->
                                    <Button Classes="secondary-button"
                                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                            Command="{Binding OpenFilterModalCommand}"
                                            ToolTip.Tip="{Binding ResponsiveHeader.ShowButtonText, Converter={x:Static local:BoolConverters.ToParameterWhenFalse}, ConverterParameter={loc:Loc Filter}}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                      Width="16" Height="16" />
                                            <TextBlock Text="{loc:Loc Filter}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Remaining Products Label (only shown without standard plan) -->
                                    <TextBlock Text="{Binding RemainingProductsText}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding ShowRemainingProducts}" />

                                    <!-- Upgrade Button (shown when limit reached) -->
                                    <Button Classes="secondary-button"
                                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                            Content="{loc:Loc Upgrade}"
                                            Command="{Binding UpgradeCommand}"
                                            IsVisible="{Binding ShowUpgradeButton}"
                                            ToolTip.Tip="{Binding ResponsiveHeader.ShowButtonText, Converter={x:Static local:BoolConverters.ToParameterWhenFalse}, ConverterParameter={loc:Loc Upgrade}}"
                                            Padding="12,6" />

                                    <!-- Add Product Button -->
                                    <Button Classes="primary-button"
                                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                            Command="{Binding OpenAddModalCommand}"
                                            IsEnabled="{Binding CanAddProduct}"
                                            ToolTip.Tip="{Binding ResponsiveHeader.ShowButtonText, Converter={x:Static local:BoolConverters.ToParameterWhenFalse}, ConverterParameter={loc:Loc 'Add Product'}}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                      Width="16" Height="16"
                                                      Foreground="White" />
                                            <TextBlock Text="{loc:Loc 'Add Product'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Products Table -->
                        <ScrollViewer Grid.Row="1"
                                      x:Name="HorizontalTableScroll"
                                      HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                      VerticalScrollBarVisibility="Disabled">
                            <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                                  MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header - Expenses Tab (9 columns) -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40"
                                    IsVisible="{Binding IsExpensesTabSelected}"
                                    PointerPressed="OnTableHeaderPointerPressed">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Product Name Column Header -->
                                    <Panel Width="{Binding ColumnWidths.NameColumnWidth}" IsVisible="{Binding ShowNameColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Name">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc 'Product Name'}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Name:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Name:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Name" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Type Column Header -->
                                    <Panel Width="{Binding ColumnWidths.TypeColumnWidth}" IsVisible="{Binding ShowTypeColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Type">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc Type}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Type:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Type:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Type" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Description Column Header -->
                                    <Panel Width="{Binding ColumnWidths.DescriptionColumnWidth}" IsVisible="{Binding ShowDescriptionColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Description">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc Description}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Description:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Description:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Description" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Category Column Header -->
                                    <Panel Width="{Binding ColumnWidths.CategoryColumnWidth}" IsVisible="{Binding ShowCategoryColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Category">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc Category}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Category:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Category:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Category" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Supplier Column Header -->
                                    <Panel Width="{Binding ColumnWidths.SupplierColumnWidth}" IsVisible="{Binding ShowSupplierColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Supplier">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc Supplier}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Supplier:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Supplier:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Supplier" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Country Column Header -->
                                    <Panel Width="{Binding ColumnWidths.CountryColumnWidth}" IsVisible="{Binding ShowCountryColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Country">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc Country}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Country:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Country:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Country" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Reorder Column Header -->
                                    <Panel Width="{Binding ColumnWidths.ReorderColumnWidth}" IsVisible="{Binding ShowReorderColumn}">
                                        <TextBlock Text="{loc:Loc Reorder}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   Margin="8,12" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Reorder" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Overstock Column Header -->
                                    <Panel Width="{Binding ColumnWidths.OverstockColumnWidth}" IsVisible="{Binding ShowOverstockColumn}">
                                        <TextBlock Text="{loc:Loc Overstock}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   Margin="8,12" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Overstock" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Actions Column Header -->
                                    <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                        <TextBlock Text="{loc:Loc Actions}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Left"
                                                   Margin="8,12" />
                                    </Panel>
                                </StackPanel>
                            </Border>

                            <!-- Table Header - Revenue Tab (5 columns) -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40"
                                    IsVisible="{Binding IsRevenueTabSelected}"
                                    PointerPressed="OnTableHeaderPointerPressed">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Product Name Column Header -->
                                    <Panel Width="{Binding ColumnWidths.NameColumnWidth}" IsVisible="{Binding ShowNameColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Name">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc 'Product Name'}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Name:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Name:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Name" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Type Column Header -->
                                    <Panel Width="{Binding ColumnWidths.TypeColumnWidth}" IsVisible="{Binding ShowTypeColumn}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Type">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{loc:Loc Type}" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Type:Ascending">
