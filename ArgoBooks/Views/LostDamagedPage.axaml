<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:icons="using:ArgoBooks"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.LostDamagedPage"
             x:DataType="vm:LostDamagedPageViewModel">

    <Design.DataContext>
        <vm:LostDamagedPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Lost/Damaged'}"
                                   Value="{Binding TotalLostDamaged}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                   IconColor="Danger" />
                <controls:StatCard Label="{loc:Loc 'Lost Items'}"
                                   Value="{Binding LostItems}"
                                   Icon="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                   IconColor="Warning" />
                <controls:StatCard Label="{loc:Loc 'Damaged Items'}"
                                   Value="{Binding DamagedItems}"
                                   Icon="M22 5.72l-4.6-3.86-1.29 1.53 4.6 3.86L22 5.72zM7.88 3.39L6.6 1.86 2 5.71l1.29 1.53 4.59-3.85zM12.5 8H11v6l4.75 2.85.75-1.23-4-2.37V8zM12 4c-4.97 0-9 4.03-9 9s4.03 9 9 9 9-4.03 9-9-4.03-9-9-9zm0 16c-3.87 0-7-3.13-7-7s3.13-7 7-7 7 3.13 7 7-3.13 7-7 7z"
                                   IconColor="Info" />
                <controls:StatCard Label="{loc:Loc 'Total Loss Value'}"
                                   Value="{Binding TotalLossValue}"
                                   Icon="{x:Static icons:Icons.Dollar}"
                                   IconColor="Primary" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc 'Lost &amp; Damaged Inventory'}"
                                ItemsSource="{Binding Items}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search products...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                ShowAddButton="False"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.LostDamaged}"
                                EmptyTitle="{loc:Loc 'No lost or damaged items found'}"
                                EmptyMessage="{loc:Loc 'Items marked as lost or damaged from the Expenses or Revenue pages will appear here.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc 'ID'}" ColumnName="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Product}" ColumnName="Product"
                                                   ColumnWidth="{Binding ColumnWidths.ProductColumnWidth}"
                                                   IsColumnVisible="{Binding ShowProductColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Date}" ColumnName="Date"
                                                   ColumnWidth="{Binding ColumnWidths.DateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDateColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Reason}" ColumnName="Reason"
                                                   ColumnWidth="{Binding ColumnWidths.ReasonColumnWidth}"
                                                   IsColumnVisible="{Binding ShowReasonColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Loss}" ColumnName="Loss"
                                                   ColumnWidth="{Binding ColumnWidths.LossColumnWidth}"
                                                   IsColumnVisible="{Binding ShowLossColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:LostDamagedDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="52">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- ID -->
                                        <table:ArgoTableCell Text="{Binding Id}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowIdColumn}" />

                                        <!-- Product - Custom content for stacked text -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.ProductColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowProductColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ProductName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               TextTrimming="CharacterEllipsis" />
                                                    <TextBlock Text="{Binding QuantityFormatted}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Date -->
                                        <table:ArgoTableCell Text="{Binding DateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowDateColumn}" />

                                        <!-- Reason -->
                                        <table:ArgoTableCell Text="{Binding Reason}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.ReasonColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowReasonColumn}" />

                                        <!-- Loss Value - Custom content for styled text -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.LossColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowLossColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding ValueLostFormatted}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource ErrorBrush}"
                                                           VerticalAlignment="Center" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content for buttons -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            Spacing="2"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                    <Button Classes="icon-button-small"
                                                            ToolTip.Tip="{loc:Loc 'View Details'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ViewItemDetailsCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                  Width="14" Height="14" />
                                                    </Button>
                                                    <Button Classes="icon-button-small danger"
                                                            ToolTip.Tip="{loc:Loc 'Undo'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).UndoItemCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                  Width="14" Height="14" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'ID'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowProductColumn}" Content="{loc:Loc Product}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc Date}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowReasonColumn}" Content="{loc:Loc Reason}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowLossColumn}" Content="{loc:Loc Loss}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
