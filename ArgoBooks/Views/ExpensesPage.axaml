<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ExpensesPage"
             x:DataType="vm:ExpensesPageViewModel">

    <Design.DataContext>
        <vm:ExpensesPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Monthly Expenses'}"
                                   Value="{Binding TotalMonthlyExpenses}"
                                   Icon="{x:Static icons:Icons.Payments}"
                                   IconColor="Danger" />
                <controls:StatCard Label="{loc:Loc 'Transactions'}"
                                   Value="{Binding TransactionCount}"
                                   Icon="{x:Static icons:Icons.NewStockAdjustment}"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Receipts on File'}"
                                   Value="{Binding ReceiptsOnFile}"
                                   Icon="{x:Static icons:Icons.Invoices}"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Returns'}"
                                   Value="{Binding ReturnsCount}"
                                   Icon="M12.5 6.9c1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-.53.12-1.03.3-1.48.54l1.47 1.47c.41-.17.91-.27 1.51-.27zM5.33 4.06L4.06 5.33 7.5 8.77c0 2.08 1.56 3.22 3.91 3.91l3.51 3.51c-.34.49-1.05.91-2.42.91-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c.96-.18 1.83-.55 2.46-1.12l2.22 2.22 1.27-1.27L5.33 4.06z"
                                   IconColor="Warning" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc Expenses}"
                                ItemsSource="{Binding Expenses}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search expenses...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'Add Expense'}"
                                AddButtonTooltip="{loc:Loc 'Add Expense'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Expenses}"
                                EmptyTitle="{loc:Loc 'No expenses found'}"
                                EmptyMessage="{loc:Loc 'Add your first expense to start tracking your spending.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Extra Buttons Content (AI Scan Receipt) -->
                <table:ArgoTable.ExtraButtonsContent>
                    <Button x:Name="AiScanButton"
                            Classes="primary-button"
                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                            Click="OnAiScanButtonClick"
                            ToolTip.Tip="{loc:Loc 'AI Scan Receipt'}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{x:Static icons:Icons.ScanReceipt}"
                                      Width="16" Height="16"
                                      Foreground="White" />
                            <TextBlock Text="{loc:Loc 'AI Scan Receipt'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                        </StackPanel>
                    </Button>
                </table:ArgoTable.ExtraButtonsContent>

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc 'ID'}" ColumnName="Id" SortProperty="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Product / Service'}" ColumnName="Product" SortProperty="Product"
                                                   ColumnWidth="{Binding ColumnWidths.ProductColumnWidth}"
                                                   IsColumnVisible="{Binding ShowProductColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Supplier'}" ColumnName="Supplier" SortProperty="Supplier"
                                                   ColumnWidth="{Binding ColumnWidths.SupplierColumnWidth}"
                                                   IsColumnVisible="{Binding ShowSupplierColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Date'}" ColumnName="Date" SortProperty="Date"
                                                   ColumnWidth="{Binding ColumnWidths.DateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Quantity'}" ColumnName="Quantity" SortProperty="Quantity"
                                                   ColumnWidth="{Binding ColumnWidths.QuantityColumnWidth}"
                                                   IsColumnVisible="{Binding ShowQuantityColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Unit Price'}" ColumnName="Amount" SortProperty="Amount"
                                                   ColumnWidth="{Binding ColumnWidths.AmountColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAmountColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Tax'}" ColumnName="Tax" SortProperty="Tax"
                                                   ColumnWidth="{Binding ColumnWidths.TaxColumnWidth}"
                                                   IsColumnVisible="{Binding ShowTaxColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Shipping'}" ColumnName="Shipping" SortProperty="Shipping"
                                                   ColumnWidth="{Binding ColumnWidths.ShippingColumnWidth}"
                                                   IsColumnVisible="{Binding ShowShippingColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Discount'}" ColumnName="Discount"
                                                   ColumnWidth="{Binding ColumnWidths.DiscountColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDiscountColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Fee'}" ColumnName="Fee"
                                                   ColumnWidth="{Binding ColumnWidths.FeeColumnWidth}"
                                                   IsColumnVisible="{Binding ShowFeeColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Total'}" ColumnName="Total" SortProperty="Total"
                                                   ColumnWidth="{Binding ColumnWidths.TotalColumnWidth}"
                                                   IsColumnVisible="{Binding ShowTotalColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Receipt'}" ColumnName="Receipt"
                                                   ColumnWidth="{Binding ColumnWidths.ReceiptColumnWidth}"
                                                   IsColumnVisible="{Binding ShowReceiptColumn}"
                                                   IsSortable="False" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Status'}" ColumnName="Status" SortProperty="Status"
                                                   ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStatusColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Actions'}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Expenses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:ExpenseDisplayItem">
                                <Border Padding="24,0"
                                        MinHeight="52"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        Classes.highlighted-row="{Binding IsHighlighted}">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Simple text cells using ArgoTableCell -->
                                        <table:ArgoTableCell Text="{Binding Id}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowIdColumn}" />

                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.ProductColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowProductColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock VerticalAlignment="Center" TextTrimming="CharacterEllipsis">
                                                    <Run Text="{Binding ProductDescription}" /><Run Text="{Binding ProductMoreText}" FontStyle="Italic"
                                                         Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </TextBlock>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <table:ArgoTableCell Text="{Binding SupplierName}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.SupplierColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowSupplierColumn}" />

                                        <table:ArgoTableCell Text="{Binding DateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowDateColumn}" />

                                        <table:ArgoTableCell Text="{Binding Quantity}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.QuantityColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowQuantityColumn}" />

                                        <!-- Unit Price (was Amount) -->
                                        <table:ArgoTableCell Text="{Binding AmountFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowAmountColumn}" />

                                        <table:ArgoTableCell Text="{Binding TaxAmountFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.TaxColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowTaxColumn}" />

                                        <table:ArgoTableCell Text="{Binding ShippingCostFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.ShippingColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowShippingColumn}" />

                                        <!-- Discount - Custom styling with SuccessBrush -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.DiscountColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowDiscountColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding DiscountFormatted}"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource SuccessBrush}"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0"
                                                           TextTrimming="CharacterEllipsis" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Fee -->
                                        <table:ArgoTableCell Text="{Binding FeeFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.FeeColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowFeeColumn}" />

                                        <!-- Total - Custom styling with ErrorBrush and FontWeight -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.TotalColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowTotalColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding TotalFormatted}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource ErrorBrush}"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0"
                                                           TextTrimming="CharacterEllipsis" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Receipt Icon - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.ReceiptColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowReceiptColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Panel>
                                                    <PathIcon Data="{x:Static icons:Icons.Check}"
                                                              Width="16" Height="16"
                                                              Foreground="{DynamicResource SuccessBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              IsVisible="{Binding HasReceipt}" />
                                                    <PathIcon Data="{x:Static icons:Icons.Close}"
                                                              Width="16" Height="16"
                                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              IsVisible="{Binding !HasReceipt}" />
                                                </Panel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Status Badge - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowStatusColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Margin="8,0,8,0"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToExpenseStatusBackground}}">
                                                    <TextBlock Text="{Binding StatusDisplay, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToExpenseStatusForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Spacing="4">
                                                    <!-- View Receipt Button -->
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'View Receipt'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ViewReceiptCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding HasReceipt}">
                                                        <PathIcon Data="{x:Static icons:Icons.Receipts}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Edit'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Mark as Lost/Damaged (shown when not already marked) -->
                                                    <Button Classes="icon-button warning"
                                                            ToolTip.Tip="{loc:Loc 'Mark as Lost / Damaged'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).MarkAsLostDamagedCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding CanMarkAsLostDamaged}">
                                                        <PathIcon Data="{x:Static icons:Icons.Info}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Undo Lost/Damaged (shown when already marked as lost/damaged) -->
                                                    <Button Classes="icon-button warning"
                                                            ToolTip.Tip="{loc:Loc 'Undo Lost / Damaged'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).UndoLostDamagedCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding IsLostDamaged}">
                                                        <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Mark as Returned (shown when not already marked) -->
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Mark as Returned'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).MarkAsReturnedCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding CanMarkAsReturned}">
                                                        <PathIcon Data="{x:Static icons:Icons.Undo}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <!-- Undo Return (shown when already returned) -->
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'Undo Return'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).UndoReturnCommand}"
                                                            CommandParameter="{Binding}"
                                                            IsVisible="{Binding IsReturned}">
                                                        <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger"
                                                            ToolTip.Tip="{loc:Loc 'Delete'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>

    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'ID'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowProductColumn}" Content="{loc:Loc 'Product'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowSupplierColumn}" Content="{loc:Loc 'Supplier'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc 'Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowQuantityColumn}" Content="{loc:Loc 'Quantity'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="{loc:Loc 'Unit Price'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTaxColumn}" Content="{loc:Loc 'Tax'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowShippingColumn}" Content="{loc:Loc 'Shipping'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDiscountColumn}" Content="{loc:Loc 'Discount'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowFeeColumn}" Content="{loc:Loc 'Fee'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTotalColumn}" Content="{loc:Loc 'Total'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowReceiptColumn}" Content="{loc:Loc 'Receipt'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc 'Status'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
