<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
             x:Class="ArgoBooks.Modals.ReportPageSettingsModal"
             x:DataType="vm:ReportsPageViewModel">

    <Border x:Name="RootBorder"
            Background="{DynamicResource SurfaceBrush}"
            CornerRadius="12"
            Width="480"
            MaxHeight="600"
            Padding="0"
            Focusable="True"
            KeyDown="Modal_KeyDown"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
        </Border.RenderTransform>
        <Border.Transitions>
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
            </Transitions>
        </Border.Transitions>

        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceAltBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="24,16"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="{loc:Loc 'Page Settings'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <Button Grid.Column="1"
                            Classes="close-button"
                            Command="{Binding ClosePageSettingsCommand}">
                        <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                  Width="16" Height="16" />
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="20" Margin="24">
                    <!-- Page Size -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{loc:Loc 'Page Size'}"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <ComboBox ItemsSource="{Binding PageSizes}"
                                  SelectedItem="{Binding PageSize}"
                                  HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <!-- Orientation -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{loc:Loc Orientation}"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <ComboBox ItemsSource="{Binding Orientations}"
                                  SelectedItem="{Binding PageOrientation}"
                                  HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <!-- Margins -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{loc:Loc 'Margins (pixels)'}"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />

                        <Grid ColumnDefinitions="*,12,*" RowDefinitions="Auto,12,Auto">
                            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
                                <TextBlock Text="{loc:Loc Top}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <NumericUpDown Value="{Binding MarginTop}" Minimum="0" Maximum="200" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Grid.Row="0" Spacing="4">
                                <TextBlock Text="{loc:Loc Right}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <NumericUpDown Value="{Binding MarginRight}" Minimum="0" Maximum="200" />
                            </StackPanel>
                            <StackPanel Grid.Column="0" Grid.Row="2" Spacing="4">
                                <TextBlock Text="{loc:Loc Bottom}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <NumericUpDown Value="{Binding MarginBottom}" Minimum="0" Maximum="200" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Grid.Row="2" Spacing="4">
                                <TextBlock Text="{loc:Loc Left}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <NumericUpDown Value="{Binding MarginLeft}" Minimum="0" Maximum="200" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Background Color -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{loc:Loc 'Background Color'}"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <controls:ColorPickerInput ColorValue="{Binding BackgroundColor, Mode=TwoWay}" />
                    </StackPanel>

                    <!-- Display Options -->
                    <StackPanel Spacing="12">
                        <TextBlock Text="{loc:Loc 'Display Options'}"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />

                        <CheckBox Content="{loc:Loc 'Show Header'}"
                                  IsChecked="{Binding ShowHeader}" />
                        <CheckBox Content="{loc:Loc 'Show Footer'}"
                                  IsChecked="{Binding ShowFooter}" />
                        <CheckBox Content="{loc:Loc 'Show Page Numbers'}"
                                  IsChecked="{Binding ShowPageNumbers}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceAltBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="24,16"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="12">
                    <Button Classes="secondary-button"
                            Content="{loc:Loc Cancel}"
                            Command="{Binding ClosePageSettingsCommand}" />
                    <Button Classes="primary-button"
                            Content="{loc:Loc Apply}"
                            Command="{Binding ApplyPageSettingsCommand}" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>

    <UserControl.Styles>
        <!-- NumericUpDown styling to match other controls -->
        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="MinHeight" Value="38" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <Style Selector="NumericUpDown:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="NumericUpDown:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="NumericUpDown /template/ TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style Selector="Button.close-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.close-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.close-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

    </UserControl.Styles>
</UserControl>
