<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:conv="using:ArgoBooks.Converters"
             xmlns:behaviors="using:ArgoBooks.Behaviors"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArgoBooks.Modals.RentalRecordsModals"
             x:DataType="vm:RentalRecordsModalsViewModel">

    <Panel>
        <!-- Add Record Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsAddModalOpen}"
                               ClosingCommand="{Binding RequestCloseAddModalCommand}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{loc:Loc 'New Rental Record'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseAddModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Rental Item -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Rental Item'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableItems}"
                                                            SelectedItem="{Binding ModalItem}"
                                                            Placeholder="{loc:Loc 'Search rental items...'}"
                                                            ShowAddNew="False"
                                                            EmptyMessage="{loc:Loc 'No rental items available.'}"
                                                            EmptyCreateLinkText="{loc:Loc 'Create one'}"
                                                            EmptyCreateCommand="{Binding NavigateToCreateRentalItemCommand}" />
                                <TextBlock Text="{Binding ModalItemError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                           IsVisible="{Binding ModalItemError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Customer -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc Customer}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableCustomers}"
                                                            SelectedItem="{Binding ModalCustomer}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="{loc:Loc 'Search customers...'}"
                                                            ShowAddNew="False"
                                                            EmptyMessage="{loc:Loc 'No customers available.'}"
                                                            EmptyCreateLinkText="{loc:Loc 'Create one'}"
                                                            EmptyCreateCommand="{Binding NavigateToCreateCustomerCommand}" />
                                <TextBlock Text="{Binding ModalCustomerError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                           IsVisible="{Binding ModalCustomerError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Quantity and Security Deposit Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc Quantity}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalQuantity}" Watermark="1" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsIntegerOnly="True" />
                                    <TextBlock Text="{Binding ModalQuantityError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                               IsVisible="{Binding ModalQuantityError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Security Deposit'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalSecurityDeposit}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Rate Type and Rate Amount Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc 'Rate Type'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                    </TextBlock>
                                    <ComboBox ItemsSource="{Binding RateTypeOptions}"
                                              SelectedItem="{Binding ModalRateType}"
                                              Classes="form-combobox">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc 'Rate Amount'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalRateAmount}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                    <TextBlock Text="{Binding ModalRateError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                               IsVisible="{Binding ModalRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                            </Grid>

                            <!-- Start Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Start Date'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalStartDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Due Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Due Date'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalDueDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Notes}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalNotes}" Watermark="{loc:Loc 'Optional notes'}" TextWrapping="Wrap" Classes="form-input"
                                         AcceptsReturn="True" MinHeight="80" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseAddModalCommand}" />
                            <Button Classes="primary-button" Content="{loc:Loc 'Create Rental'}" Command="{Binding SaveNewRecordCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>

        <!-- Edit Record Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsEditModalOpen}"
                               ClosingCommand="{Binding RequestCloseEditModalCommand}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{loc:Loc 'Edit Rental Record'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseEditModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Rental Item -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Rental Item'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableItems}"
                                                            SelectedItem="{Binding ModalItem}"
                                                            Placeholder="{loc:Loc 'Search rental items...'}"
                                                            ShowAddNew="False"
                                                            EmptyMessage="{loc:Loc 'No rental items available.'}"
                                                            EmptyCreateLinkText="{loc:Loc 'Create one'}"
                                                            EmptyCreateCommand="{Binding NavigateToCreateRentalItemCommand}" />
                                <TextBlock Text="{Binding ModalItemError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                           IsVisible="{Binding ModalItemError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Customer -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc Customer}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <controls:SearchableDropdown ItemsSource="{Binding AvailableCustomers}"
                                                            SelectedItem="{Binding ModalCustomer}"
                                                            DisplayMemberPath="Name"
                                                            Placeholder="{loc:Loc 'Search customers...'}"
                                                            ShowAddNew="False"
                                                            EmptyMessage="{loc:Loc 'No customers available.'}"
                                                            EmptyCreateLinkText="{loc:Loc 'Create one'}"
                                                            EmptyCreateCommand="{Binding NavigateToCreateCustomerCommand}" />
                                <TextBlock Text="{Binding ModalCustomerError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                           IsVisible="{Binding ModalCustomerError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>

                            <!-- Quantity and Security Deposit Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc Quantity}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalQuantity}" Watermark="1" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsIntegerOnly="True" />
                                    <TextBlock Text="{Binding ModalQuantityError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                               IsVisible="{Binding ModalQuantityError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Security Deposit'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding ModalSecurityDeposit}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                </StackPanel>
                            </Grid>

                            <!-- Rate Type and Rate Amount Row -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc 'Rate Type'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                    </TextBlock>
                                    <ComboBox ItemsSource="{Binding RateTypeOptions}"
                                              SelectedItem="{Binding ModalRateType}"
                                              Classes="form-combobox">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="{loc:Loc 'Rate Amount'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                    </TextBlock>
                                    <TextBox Text="{Binding ModalRateAmount}" Watermark="0.00" Classes="form-input"
                                             behaviors:NumericInputBehavior.IsDecimalOnly="True" />
                                    <TextBlock Text="{Binding ModalRateError}" Foreground="{DynamicResource ErrorBrush}" FontSize="12"
                                               IsVisible="{Binding ModalRateError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                </StackPanel>
                            </Grid>

                            <!-- Start Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Start Date'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalStartDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Due Date -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{loc:Loc 'Due Date'}" /><Run Text=" *" Foreground="{DynamicResource ErrorBrush}" />
                                </TextBlock>
                                <DatePicker SelectedDate="{Binding ModalDueDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Notes}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ModalNotes}" Watermark="{loc:Loc 'Optional notes'}" TextWrapping="Wrap" Classes="form-input"
                                         AcceptsReturn="True" MinHeight="80" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseEditModalCommand}" />
                            <Button Classes="primary-button" Content="{loc:Loc 'Save Changes'}" Command="{Binding SaveEditedRecordCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>

        <!-- Filter Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsFilterModalOpen}"
                               ClosingCommand="{Binding RequestCloseFilterModalCommand}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{loc:Loc 'Filter Rental Records'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseFilterModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="24" Spacing="20">
                            <!-- Status -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Status}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding StatusOptions}"
                                          SelectedItem="{Binding FilterStatus}"
                                          Classes="form-combobox">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource TranslateConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Customer -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc Customer}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding FilterCustomer}" Watermark="{loc:Loc 'Search by customer name'}" Classes="form-input" />
                            </StackPanel>

                            <!-- Item -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Rental Item'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding FilterItem}" Watermark="{loc:Loc 'Search by item name'}" Classes="form-input" />
                            </StackPanel>

                            <!-- Start Date Range -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Start Date Range'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <StackPanel Spacing="8">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{loc:Loc From}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterStartDateFrom}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{loc:Loc To}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterStartDateTo}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <!-- Due Date Range -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Due Date Range'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <StackPanel Spacing="8">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{loc:Loc From}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterDueDateFrom}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{loc:Loc To}" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                        <DatePicker SelectedDate="{Binding FilterDueDateTo}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Button Grid.Column="0" Classes="secondary-button" Content="{loc:Loc 'Clear Filters'}" Command="{Binding ClearFiltersCommand}" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                                <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseFilterModalCommand}" />
                                <Button Classes="primary-button" Content="{loc:Loc 'Apply Filters'}" Command="{Binding ApplyFiltersCommand}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>

        <!-- Return Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsReturnModalOpen}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{loc:Loc 'Process Return'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseReturnModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <Border Grid.Row="1" Padding="24">
                        <StackPanel Spacing="16">
                            <!-- Rental Summary -->
                            <Border Background="{DynamicResource SurfaceAltBrush}" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8">
                                <TextBlock Text="{loc:Loc 'Rental Summary'}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,8,0,0">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{loc:Loc 'Record ID:'}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,4" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ReturnRecordId}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{loc:Loc 'Item:'}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,4" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ReturnItemName}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{loc:Loc 'Customer:'}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,4" />
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ReturnCustomerName}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{loc:Loc 'Quantity:'}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,16,0" />
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ReturnQuantity}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Return Date -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="{loc:Loc 'Return Date'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                            <DatePicker SelectedDate="{Binding ReturnDate}" Classes="form-datepicker" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <!-- Total Cost -->
                        <Border Background="{DynamicResource SuccessLightBrush}" CornerRadius="8" Padding="16">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel>
                                    <TextBlock Text="{loc:Loc 'Total Rental Cost'}" FontWeight="Medium" Foreground="{DynamicResource SuccessTextBrush}" />
                                    <TextBlock Text="{loc:Loc 'Calculated based on rental duration'}" FontSize="12" Foreground="{DynamicResource SuccessTextLightBrush}" />
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding ReturnTotalCostFormatted}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource SuccessTextBrush}" VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Security Deposit -->
                        <Border Background="{DynamicResource WarningLightBrush}" CornerRadius="8" Padding="16">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{loc:Loc 'Security Deposit'}" FontWeight="Medium" Foreground="{DynamicResource WarningTextBrush}" />
                                    <TextBlock Text="{Binding ReturnDepositFormatted}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource WarningTextLightBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <CheckBox IsChecked="{Binding ReturnRefundDeposit}" Content="{loc:Loc 'Refund Deposit'}" Foreground="{DynamicResource WarningTextBrush}" />
                                </StackPanel>
                            </Grid>
                        </Border>

                            <!-- Return Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Return Notes'}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ReturnNotes}" Watermark="{loc:Loc 'Optional notes about the return'}" TextWrapping="Wrap" Classes="form-input"
                                         AcceptsReturn="True" MinHeight="60" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="{loc:Loc Cancel}" Command="{Binding CloseReturnModalCommand}" />
                            <Button Classes="success-button" Content="{loc:Loc 'Confirm Return'}" Command="{Binding ConfirmReturnCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>

        <!-- View Modal -->
        <controls:ModalOverlay IsOpen="{Binding IsViewModalOpen}">
            <controls:ModalOverlay.ModalContent>
                <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Width="550"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="{loc:Loc 'Rental Details'}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center" />
                                <Border Background="{Binding ViewStatus, Converter={x:Static conv:StringConverters.ToRentalStatusBackground}}"
                                        CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ViewStatus}"
                                               Foreground="{Binding ViewStatus, Converter={x:Static conv:StringConverters.ToRentalStatusForeground}}"
                                               FontSize="12" FontWeight="Medium" />
                                </Border>
                            </StackPanel>
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseViewModalCommand}">
                                <PathIcon Data="{x:Static local:Icons.Close}"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="24" Spacing="20">
                            <!-- Record ID -->
                            <Border Background="{DynamicResource SurfaceAltBrush}" CornerRadius="8" Padding="16">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{loc:Loc 'Record ID:'}" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewRecordId}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Border>

                            <!-- Item and Customer -->
                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="{loc:Loc 'Rental Item'}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewItemName}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="{loc:Loc Customer}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewCustomerName}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Quantity -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="{loc:Loc Quantity}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBlock Text="{Binding ViewQuantity}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                            </StackPanel>

                            <!-- Rate and Deposit -->
                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="{loc:Loc Rate}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewRateFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="{loc:Loc 'Security Deposit'}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding ViewDepositFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Dates -->
                            <Border Background="{DynamicResource InfoLightBrush}" CornerRadius="8" Padding="16">
                                <Grid ColumnDefinitions="*,*,*">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="{loc:Loc 'Start Date'}" FontSize="12" Foreground="{DynamicResource InfoBrush}" />
                                        <TextBlock Text="{Binding ViewStartDateFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource InfoTextBrush}" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text="{loc:Loc 'Due Date'}" FontSize="12" Foreground="{DynamicResource InfoBrush}" />
                                        <TextBlock Text="{Binding ViewDueDateFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource InfoTextBrush}" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Spacing="4">
                                        <TextBlock Text="{loc:Loc 'Return Date'}" FontSize="12" Foreground="{DynamicResource InfoBrush}" />
                                        <TextBlock Text="{Binding ViewReturnDateFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource InfoTextBrush}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Overdue Warning -->
                            <Border Background="{DynamicResource ErrorLightBrush}" CornerRadius="8" Padding="16"
                                    IsVisible="{Binding ViewDaysOverdue, Converter={x:Static conv:IntConverters.IsPositive}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="{x:Static local:Icons.CircleCheck}"
                                              Width="20" Height="20" Foreground="{DynamicResource ErrorBrush}" />
                                    <TextBlock Foreground="{DynamicResource ErrorTextBrush}">
                                        <Run Text="{loc:Loc 'This rental is '}" />
                                        <Run Text="{Binding ViewDaysOverdue}" FontWeight="Bold" />
                                        <Run Text="{loc:Loc ' days overdue'}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Financial Summary -->
                            <Border Background="{DynamicResource SuccessLightBrush}" CornerRadius="8" Padding="16">
                                <Grid ColumnDefinitions="*,*">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="{loc:Loc 'Total Cost'}" FontSize="12" Foreground="{DynamicResource SuccessTextBrush}" />
                                        <TextBlock Text="{Binding ViewTotalCostFormatted}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource SuccessTextLightBrush}" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text="{loc:Loc 'Deposit Status'}" FontSize="12" Foreground="{DynamicResource SuccessTextBrush}" />
                                        <TextBlock Text="{Binding ViewDepositStatusFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource SuccessTextLightBrush}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Notes -->
                            <StackPanel Spacing="4" IsVisible="{Binding ViewNotes, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                <TextBlock Text="{loc:Loc Notes}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <Border Background="{DynamicResource SurfaceAltBrush}" CornerRadius="6" Padding="12">
                                    <TextBlock Text="{Binding ViewNotes}" TextWrapping="Wrap" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <Button Classes="secondary-button" Content="{loc:Loc Close}" Command="{Binding CloseViewModalCommand}" HorizontalAlignment="Right" />
                    </Border>
                </Grid>
                </Border>
            </controls:ModalOverlay.ModalContent>
        </controls:ModalOverlay>
    </Panel>

</UserControl>
