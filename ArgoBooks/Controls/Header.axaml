<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="60"
             x:Class="ArgoBooks.Controls.Header"
             x:DataType="vm:HeaderViewModel">

    <Design.DataContext>
        <vm:HeaderViewModel />
    </Design.DataContext>

    <!-- Header: height 60px, padding 0 30px 0 12px, white bg, bottom border -->
    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Height="60"
            Padding="12,0,30,0">
        <Grid ColumnDefinitions="Auto,*,Auto">

            <!-- Left Section: Menu Toggle, Undo, Redo, Save -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="4">
                <!-- Menu Toggle (hamburger) -->
                <Button Classes="header-icon"
                        Command="{Binding ToggleSidebarCommand}"
                        ToolTip.Tip="Toggle Sidebar">
                    <PathIcon Data="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"
                              Width="20" Height="20" />
                </Button>

                <!-- Undo Button -->
                <Button Classes="header-icon"
                        Command="{Binding UndoCommand}"
                        ToolTip.Tip="Undo">
                    <PathIcon Data="M12.5 8c-2.65 0-5.05.99-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z"
                              Width="18" Height="18" />
                </Button>

                <!-- Redo Button -->
                <Button Classes="header-icon"
                        Command="{Binding RedoCommand}"
                        ToolTip.Tip="Redo">
                    <PathIcon Data="M18.4 10.6C16.55 8.99 14.15 8 11.5 8c-4.65 0-8.58 3.03-9.96 7.22L3.9 16c1.05-3.19 4.05-5.5 7.6-5.5 1.95 0 3.73.72 5.12 1.88L13 16h9V7l-3.6 3.6z"
                              Width="18" Height="18" />
                </Button>

                <!-- Save Button -->
                <Button Classes="header-icon"
                        Command="{Binding SaveCommand}"
                        ToolTip.Tip="Save">
                    <PathIcon Data="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"
                              Width="18" Height="18" />
                </Button>
            </StackPanel>

            <!-- Center Section: Search Box -->
            <Border Grid.Column="1"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Width="280"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Search Icon -->
                    <PathIcon Grid.Column="0"
                              Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                              Width="16" Height="16"
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="15,0,10,0"
                              VerticalAlignment="Center" />

                    <!-- Search Input -->
                    <TextBox Grid.Column="1"
                             Watermark="Search or jump to..."
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="0,10"
                             FontSize="14"
                             VerticalAlignment="Center"
                             Text="{Binding SearchQuery, Mode=TwoWay}">
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.KeyBindings>
                    </TextBox>

                    <!-- Keyboard Shortcut Hint -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="Ctrl+K"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                    </Border>
                </Grid>
            </Border>

            <!-- Right Section: Upgrade, Notifications, Help, User -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="0">

                <!-- Upgrade Button (blue circle with up arrow) -->
                <Button Classes="header-icon"
                        Command="{Binding OpenUpgradeCommand}"
                        ToolTip.Tip="Upgrades">
                    <Panel Width="20" Height="20">
                        <Ellipse Fill="{DynamicResource PrimaryBrush}" />
                        <PathIcon Data="M12 16V8M8 12l4-4 4 4"
                                  Width="12" Height="12"
                                  Foreground="White" />
                    </Panel>
                </Button>

                <!-- Notifications -->
                <Button Classes="header-icon"
                        Command="{Binding OpenNotificationsCommand}"
                        ToolTip.Tip="Notifications">
                    <Panel>
                        <PathIcon Data="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"
                                  Width="20" Height="20" />
                        <!-- Notification Badge -->
                        <Border Background="{DynamicResource DangerBrush}"
                                MinWidth="18" Height="18"
                                CornerRadius="9"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-4,-4,0"
                                Padding="5,0"
                                IsVisible="{Binding HasUnreadNotifications}">
                            <TextBlock Text="{Binding UnreadNotificationCount}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </Panel>
                </Button>

                <!-- Help -->
                <Button Classes="header-icon"
                        Command="{Binding OpenHelpCommand}"
                        ToolTip.Tip="Help">
                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"
                              Width="20" Height="20" />
                </Button>

                <!-- User Menu -->
                <Button Classes="user-menu"
                        Command="{Binding OpenUserMenuCommand}"
                        ToolTip.Tip="Account">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <!-- User Avatar -->
                        <Border Width="32" Height="32"
                                CornerRadius="16"
                                Background="{DynamicResource PrimaryBrush}"
                                ClipToBounds="True">
                            <Panel>
                                <!-- User Initials -->
                                <TextBlock Text="{Binding UserInitials}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding !HasUserAvatar}" />
                                <!-- User Avatar Image -->
                                <Image Source="{Binding UserAvatarSource}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasUserAvatar}" />
                            </Panel>
                        </Border>

                        <!-- User Info -->
                        <StackPanel VerticalAlignment="Center" Spacing="0">
                            <TextBlock Text="{Binding UserDisplayName}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding UserRole}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       IsVisible="{Binding UserRole, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>

    <UserControl.Styles>
        <!-- Header Icon Button Style (40x40, gray text, hover bg) -->
        <Style Selector="Button.header-icon">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.header-icon /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.header-icon:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.header-icon:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
        </Style>
        <Style Selector="Button.header-icon PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- User Menu Button Style -->
        <Style Selector="Button.user-menu">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.user-menu /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.user-menu:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
