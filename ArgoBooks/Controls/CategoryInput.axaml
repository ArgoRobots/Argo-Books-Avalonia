<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40"
             x:Class="ArgoBooks.Controls.CategoryInput"
             x:DataType="controls:CategoryInput"
             x:Name="Root"
             Focusable="True">

    <Grid>
        <!-- No Categories Message -->
        <Border IsVisible="{Binding #Root.HasCategories, Converter={x:Static BoolConverters.Not}}"
                CornerRadius="6"
                BorderThickness="1"
                Background="{DynamicResource SurfaceAltBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="12,10">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="No categories available."
                           FontSize="13"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           VerticalAlignment="Center" />
                <Button Classes="link-button"
                        Content="Create one"
                        Click="OnCreateCategoryClick"
                        VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Category Dropdown (shown when categories exist) -->
        <Border x:Name="CategoryDropdownBorder"
                IsVisible="{Binding #Root.HasCategories}"
                CornerRadius="6"
                BorderThickness="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                Classes.focused="{Binding #Root.IsDropdownOpen}">
            <Border.Styles>
                <Style Selector="Border.focused">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                </Style>
                <Style Selector="Border:pointerover:not(.focused)">
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderHoverBrush}" />
                </Style>
            </Border.Styles>

            <Grid ColumnDefinitions="*,Auto">
                <!-- Search/Display TextBox -->
                <TextBox x:Name="CategorySearchBox"
                         Grid.Column="0"
                         Text="{Binding #Root.SearchText, Mode=TwoWay}"
                         Watermark="Search categories..."
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="12,10"
                         FontSize="14"
                         VerticalAlignment="Center" />

                <!-- Dropdown Arrow -->
                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="24" Height="24"
                        Margin="0,0,8,0"
                        Padding="0"
                        CornerRadius="4"
                        Cursor="Hand"
                        Command="{Binding #Root.ToggleDropdownCommand}">
                    <PathIcon Data="M7 10l5 5 5-5z"
                              Width="12" Height="12"
                              Foreground="{DynamicResource TextTertiaryBrush}" />
                </Button>
            </Grid>
        </Border>

        <!-- Category Dropdown Popup -->
        <Popup x:Name="CategoryDropdownPopup"
               IsOpen="{Binding #Root.IsDropdownOpen, Mode=TwoWay}"
               PlacementTarget="{Binding #CategoryDropdownBorder}"
               Placement="Bottom"
               PlacementGravity="BottomLeft"
               IsLightDismissEnabled="True"
               WindowManagerAddShadowHint="True">

            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Width="280"
                    MaxHeight="300"
                    Margin="0,4,0,0"
                    BoxShadow="0 4 12 0 #20000000">

                <Grid RowDefinitions="Auto,*">
                    <!-- No Results Message -->
                    <TextBlock Grid.Row="0"
                               Text="No categories found"
                               FontSize="13"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               Padding="12,16"
                               HorizontalAlignment="Center"
                               IsVisible="{Binding #Root.HasFilteredCategories, Converter={x:Static BoolConverters.Not}}" />

                    <!-- Filtered Items -->
                    <ListBox Grid.Row="1"
                             x:Name="CategoryListBox"
                             ItemsSource="{Binding #Root.FilteredCategories}"
                             SelectedIndex="{Binding #Root.SelectedIndex, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             IsVisible="{Binding #Root.HasFilteredCategories}">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="12,10" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="controls:CategoryItem">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Popup>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Button.link-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.link-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.link-button:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>
        <Style Selector="Button.link-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Styles>
</UserControl>
