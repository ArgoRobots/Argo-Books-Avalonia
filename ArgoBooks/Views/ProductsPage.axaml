<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ProductsPage"
             x:DataType="vm:ProductsPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ProductsPageViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Tab Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        Margin="0"
                        Classes="page-tabs">
                <TabItem Header="Expenses" />
                <TabItem Header="Revenue" />
            </TabControl>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="24" Spacing="24">
                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto">
                    <Grid.Styles>
                        <Style Selector="Border.stat-card">
                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                            <Setter Property="CornerRadius" Value="12" />
                            <Setter Property="Padding" Value="20" />
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                            <Setter Property="BorderThickness" Value="1" />
                        </Style>
                    </Grid.Styles>

                    <!-- Total Products -->
                    <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="#DBEAFE"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M21 16.5c0 .38-.21.71-.53.88l-7.9 4.44c-.16.12-.36.18-.57.18-.21 0-.41-.06-.57-.18l-7.9-4.44A.991.991 0 0 1 3 16.5v-9c0-.38.21-.71.53-.88l7.9-4.44c.16-.12.36-.18.57-.18.21 0 .41.06.57.18l7.9 4.44c.32.17.53.5.53.88v9zM12 4.15L6.04 7.5 12 10.85l5.96-3.35L12 4.15zM5 15.91l6 3.38v-6.71L5 9.21v6.7zm14 0v-6.7l-6 3.37v6.71l6-3.38z"
                                          Width="24" Height="24"
                                          Foreground="#3B82F6" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding TotalProducts}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Total Products"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Physical Products -->
                    <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="#DCFCE7"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M21 3H3C1.9 3 1 3.9 1 5v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14zM5 15h14v2H5zm0-4h14v2H5zm0-4h14v2H5z"
                                          Width="24" Height="24"
                                          Foreground="#22C55E" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding PhysicalProducts}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Physical Products"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Services -->
                    <Border Grid.Column="2" Classes="stat-card" Margin="12,0,0,0">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48" Height="48"
                                    CornerRadius="10"
                                    Background="#F3E8FF"
                                    Margin="0,0,16,0">
                                <PathIcon Data="M18.5 12c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM5 9v6h4l5 5V4L9 9H5z"
                                          Width="24" Height="24"
                                          Foreground="#A855F7" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Services}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Services"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Main Content Card -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1">

                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header with Title, Search and Buttons -->
                        <Border Grid.Row="0"
                                Padding="24,20"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="*,Auto">
                                <!-- Title -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding IsExpensesTabSelected, Converter={x:Static local:BoolConverters.ToExpensesOrRevenueProducts}}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />

                                <!-- Search + Filter + Add Button (Right aligned) -->
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="12">
                                    <!-- Search Box -->
                                    <Border Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="6"
                                            Width="250">
                                        <Grid ColumnDefinitions="Auto,*">
                                            <PathIcon Grid.Column="0"
                                                      Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                      Width="16" Height="16"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Margin="12,0,8,0" />
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                                     Watermark="Search products..."
                                                     Classes="search-input" />
                                        </Grid>
                                    </Border>

                                    <!-- Filter Button -->
                                    <Button Classes="secondary-button"
                                            Command="{Binding OpenFilterModalCommand}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                      Width="16" Height="16" />
                                            <TextBlock Text="Filter" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Add Product Button -->
                                    <Button Classes="primary-button"
                                            Command="{Binding OpenAddModalCommand}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                      Width="16" Height="16"
                                                      Foreground="White" />
                                            <TextBlock Text="Add Product" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Products Table -->
                        <Grid Grid.Row="1" RowDefinitions="Auto,*">
                            <!-- Table Header - Expenses Tab (9 columns) -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,12"
                                    IsVisible="{Binding IsExpensesTabSelected}">
                                <Grid ColumnDefinitions="1.2*,0.6*,1.2*,0.8*,0.8*,0.8*,0.6*,0.6*,100">
                                    <!-- Product Name Column Header -->
                                    <Button Grid.Column="0" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Name">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Product Name" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Name:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Name:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Type Column Header -->
                                    <Button Grid.Column="1" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Type">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Type" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Type:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Type:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Description Column Header -->
                                    <Button Grid.Column="2" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Description">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Description:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Description:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Category Column Header -->
                                    <Button Grid.Column="3" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Category">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Category" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Category:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Category:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Supplier Column Header -->
                                    <Button Grid.Column="4" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Supplier">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Supplier" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Supplier:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Supplier:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Country of Origin Column Header -->
                                    <Button Grid.Column="5" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Country">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Country" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Country:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Country:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Reorder Point - not sortable -->
                                    <TextBlock Grid.Column="6"
                                               Text="Reorder"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />

                                    <!-- Overstock - not sortable -->
                                    <TextBlock Grid.Column="7"
                                               Text="Overstock"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />

                                    <!-- Actions - not sortable -->
                                    <TextBlock Grid.Column="8"
                                               Text="Actions"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </Border>

                            <!-- Table Header - Revenue Tab (5 columns) -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,12"
                                    IsVisible="{Binding IsRevenueTabSelected}">
                                <Grid ColumnDefinitions="1.5*,0.8*,2*,*,120">
                                    <!-- Product Name Column Header -->
                                    <Button Grid.Column="0" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Name">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Product Name" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Name:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Name:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Type Column Header -->
                                    <Button Grid.Column="1" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Type">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Type" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Type:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Type:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Description Column Header -->
                                    <Button Grid.Column="2" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Description">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Description:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Description:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Category Column Header -->
                                    <Button Grid.Column="3" Classes="column-header"
                                            Command="{Binding SortByCommand}" CommandParameter="Category">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Category" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                            <Panel Width="12" Height="12">
                                                <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Category:Ascending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                                <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                          Foreground="{DynamicResource TextTertiaryBrush}">
                                                    <PathIcon.IsVisible>
                                                        <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                      ConverterParameter="Category:Descending">
                                                            <Binding Path="SortColumn" />
                                                            <Binding Path="SortDirection" />
                                                        </MultiBinding>
                                                    </PathIcon.IsVisible>
                                                </PathIcon>
                                            </Panel>
                                        </StackPanel>
                                    </Button>

                                    <!-- Actions - not sortable -->
                                    <TextBlock Grid.Column="4"
                                               Text="Actions"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               HorizontalAlignment="Right" />
                                </Grid>
                            </Border>

                            <!-- Table Content - Expenses Tab -->
                            <ItemsControl Grid.Row="1"
                                          ItemsSource="{Binding ExpenseProducts}"
                                          IsVisible="{Binding IsExpensesTabSelected}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="vm:ProductDisplayItem">
                                        <Border Padding="24,16"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="0,0,0,1">
                                            <Grid ColumnDefinitions="1.2*,0.6*,1.2*,0.8*,0.8*,0.8*,0.6*,0.6*,100">
                                                <!-- Product Name with ID -->
                                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                                    <TextBlock Text="{Binding Id}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>

                                                <!-- Type Badge -->
                                                <Border Grid.Column="1"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding ItemType, Converter={x:Static local:StringConverters.ToItemTypeBadgeBackground}}">
                                                    <TextBlock Text="{Binding ItemType}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding ItemType, Converter={x:Static local:StringConverters.ToItemTypeBadgeForeground}}" />
                                                </Border>

                                                <!-- Description -->
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Description, TargetNullValue='-', FallbackValue='-'}"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis" />

                                                <!-- Category -->
                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding CategoryName}"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis" />

                                                <!-- Supplier -->
                                                <TextBlock Grid.Column="4"
