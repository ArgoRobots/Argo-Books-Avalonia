<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.StockLevelsPage"
             x:DataType="vm:StockLevelsPageViewModel">

    <Design.DataContext>
        <vm:StockLevelsPageViewModel />
    </Design.DataContext>

    <Panel>
        <Grid RowDefinitions="Auto,*">
            <!-- Tab Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                            Margin="0"
                            Classes="page-tabs">
                    <TabItem Header="{loc:Loc 'All Items'}" />
                    <TabItem Header="{loc:Loc 'Low Stock'}" />
                    <TabItem Header="{loc:Loc 'Out of Stock'}" />
                    <TabItem Header="{loc:Loc Overstock}" />
                </TabControl>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="24">
                <!-- Statistics Cards Row -->
                <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                    <controls:StatCard Label="{loc:Loc 'Total Units'}"
                                       Value="{Binding TotalItems}"
                                       Icon="M21 16.5c0 .38-.21.71-.53.88l-7.9 4.44c-.16.12-.36.18-.57.18-.21 0-.41-.06-.57-.18l-7.9-4.44A.991.991 0 0 1 3 16.5v-9c0-.38.21-.71.53-.88l7.9-4.44c.16-.12.36-.18.57-.18.21 0 .41.06.57.18l7.9 4.44c.32.17.53.5.53.88v9zM12 4.15L6.04 7.5 12 10.85l5.96-3.35L12 4.15zM5 15.91l6 3.38v-6.71L5 9.21v6.7zm14 0v-6.7l-6 3.37v6.71l6-3.38z"
                                       IconColor="Primary" />
                    <controls:StatCard Label="{loc:Loc 'In Stock'}"
                                       Value="{Binding InStockCount}"
                                       Icon="{x:Static icons:Icons.Check}"
                                       IconColor="Success" />
                    <controls:StatCard Label="{loc:Loc 'Low Stock'}"
                                       Value="{Binding LowStockCount}"
                                       Icon="{x:Static icons:Icons.LostDamaged}"
                                       IconColor="Warning" />
                    <controls:StatCard Label="{loc:Loc 'Out of Stock'}"
                                       Value="{Binding OutOfStockCount}"
                                       Icon="{x:Static icons:Icons.Info}"
                                       IconColor="Danger" />
                    <controls:StatCard Label="{loc:Loc Overstock}"
                                       Value="{Binding OverstockCount}"
                                       Icon="M4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm16-4H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-1 9h-4v4h-2v-4H9V9h4V5h2v4h4v2z"
                                       IconColor="Info" />
                </controls:StatCardsRow>

                <!-- Main Content Card using ArgoTable -->
                <table:ArgoTable Grid.Row="1"
                                    Title="{loc:Loc Inventory}"
                                    ItemsSource="{Binding DisplayItems}"
                                    SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                    SearchPlaceholder="{loc:Loc 'Search inventory...'}"
                                    SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                    SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                    SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                    HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                    HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                    IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                    IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                    ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                    FilterCommand="{Binding OpenFilterModalCommand}"
                                    AddCommand="{Binding OpenAddItemModalCommand}"
                                    AddButtonText="{loc:Loc 'Add Item'}"
                                    AddButtonTooltip="{loc:Loc 'Add Item'}"
                                    ColumnWidthsManager="{Binding ColumnWidths}"
                                    CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                    TotalPages="{Binding TotalPages}"
                                    PageSize="{Binding PageSize, Mode=TwoWay}"
                                    PaginationText="{Binding PaginationText}"
                                    GoToPageCommand="{Binding GoToPageCommand}"
                                    GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                    GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                    ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                    EmptyIcon="{x:Static icons:Icons.StockLevels}"
                                    EmptyTitle="{loc:Loc 'No inventory items found'}"
                                    EmptyMessage="{loc:Loc 'Add products with inventory tracking to see stock levels here.'}"
                                    BorderSizeChanged="OnHeaderSizeChanged"
                                    TableGridSizeChanged="OnTableSizeChanged">

                    <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                    <table:ArgoTable.HeaderContent>
                        <StackPanel Orientation="Horizontal">
                            <table:ArgoTableHeader Header="{loc:Loc Product}" ColumnName="Product" SortProperty="Product"
                                                       ColumnWidth="{Binding ColumnWidths.ProductColumnWidth}"
                                                       IsColumnVisible="{Binding ShowProductColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc SKU}" ColumnName="Sku" SortProperty="Sku"
                                                       ColumnWidth="{Binding ColumnWidths.SkuColumnWidth}"
                                                       IsColumnVisible="{Binding ShowSkuColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Category}" ColumnName="Category" SortProperty="Category"
                                                       ColumnWidth="{Binding ColumnWidths.CategoryColumnWidth}"
                                                       IsColumnVisible="{Binding ShowCategoryColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Location}" ColumnName="Location" SortProperty="Location"
                                                       ColumnWidth="{Binding ColumnWidths.LocationColumnWidth}"
                                                       IsColumnVisible="{Binding ShowLocationColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc 'In Stock'}" ColumnName="InStock" SortProperty="InStock"
                                                       ColumnWidth="{Binding ColumnWidths.InStockColumnWidth}"
                                                       IsColumnVisible="{Binding ShowInStockColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Reserved}" ColumnName="Reserved" SortProperty="Reserved"
                                                       ColumnWidth="{Binding ColumnWidths.ReservedColumnWidth}"
                                                       IsColumnVisible="{Binding ShowReservedColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Available}" ColumnName="Available" SortProperty="Available"
                                                       ColumnWidth="{Binding ColumnWidths.AvailableColumnWidth}"
                                                       IsColumnVisible="{Binding ShowAvailableColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc 'Reorder Point'}" ColumnName="ReorderPoint" SortProperty="ReorderPoint"
                                                       ColumnWidth="{Binding ColumnWidths.ReorderPointColumnWidth}"
                                                       IsColumnVisible="{Binding ShowReorderPointColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Status}" ColumnName="Status" SortProperty="Status"
                                                       ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                       IsColumnVisible="{Binding ShowStatusColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                       ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                       IsSortable="False" IsResizable="False" ShowSeparator="False" />
                        </StackPanel>
                    </table:ArgoTable.HeaderContent>

                    <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                    <table:ArgoTable.RowsContent>
                        <ItemsControl ItemsSource="{Binding DisplayItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:StockLevelDisplayItem">
                                    <Border Padding="24,0"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,0,1"
                                            MinHeight="52">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Product Name with SKU - Custom content required -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.ProductColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowProductColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ProductName}"
                                                                   FontSize="14"
                                                                   FontWeight="Medium"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Text="{Binding ProductId}"
                                                                   FontSize="12"
                                                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                                                    </StackPanel>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Simple text cells using ArgoTableCell -->
                                            <table:ArgoTableCell Text="{Binding Sku}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.SkuColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowSkuColumn}" />

                                            <table:ArgoTableCell Text="{Binding CategoryName}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.CategoryColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowCategoryColumn}" />

                                            <table:ArgoTableCell Text="{Binding LocationName}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.LocationColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowLocationColumn}" />

                                            <!-- In Stock - Custom content for FontWeight -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.InStockColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowInStockColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <TextBlock Text="{Binding InStock}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <table:ArgoTableCell Text="{Binding Reserved}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.ReservedColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowReservedColumn}" />

                                            <!-- Available - Custom content for FontWeight -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.AvailableColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowAvailableColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <TextBlock Text="{Binding Available}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <table:ArgoTableCell Text="{Binding ReorderPoint}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.ReorderPointColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowReorderPointColumn}" />

                                            <!-- Status Badge - Custom content required -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ShowStatusColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <Border VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Padding="8,4"
                                                            CornerRadius="4"
                                                            Background="{Binding StatusBackground}">
                                                        <TextBlock Text="{Binding StatusText, Converter={StaticResource TranslateConverter}}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="{Binding StatusColor}" />
                                                    </Border>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Actions - Custom content required -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                     ShowSeparator="False">
                                                <table:ArgoTableCell.CellContent>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Spacing="4">
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="{loc:Loc 'Adjust Stock'}"
                                                                Command="{Binding $parent[ItemsControl].((vm:StockLevelsPageViewModel)DataContext).OpenAdjustStockModalCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="{x:Static icons:Icons.Adjustments}"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                    </StackPanel>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </table:ArgoTable.RowsContent>
                </table:ArgoTable>
            </Grid>
        </Grid>

        <!-- Column Visibility Menu -->
        <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                        MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                        MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                        CloseCommand="{Binding CloseColumnMenuCommand}">
            <controls:ColumnVisibilityMenu.ColumnsContent>
                <StackPanel Spacing="4">
                    <CheckBox IsChecked="{Binding ShowProductColumn}" Content="{loc:Loc Product}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowSkuColumn}" Content="{loc:Loc SKU}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowCategoryColumn}" Content="{loc:Loc Category}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowLocationColumn}" Content="{loc:Loc Location}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowInStockColumn}" Content="{loc:Loc 'In Stock'}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowReservedColumn}" Content="{loc:Loc Reserved}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowAvailableColumn}" Content="{loc:Loc Available}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowReorderPointColumn}" Content="{loc:Loc 'Reorder Point'}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc Status}" Classes="column-toggle" />
                </StackPanel>
            </controls:ColumnVisibilityMenu.ColumnsContent>
        </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
