<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="60"
             x:Class="ArgoBooks.Controls.PhoneInput"
             x:DataType="controls:PhoneInput"
             Focusable="True">

    <Grid ColumnDefinitions="Auto,8,*">
        <!-- Country Code Dropdown -->
        <Border Grid.Column="0"
                x:Name="CountryDropdownBorder"
                CornerRadius="6"
                BorderThickness="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                MinWidth="80"
                Classes.focused="{Binding IsCountryDropdownOpen}">
            <Border.Styles>
                <Style Selector="Border.focused">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                </Style>
                <Style Selector="Border:pointerover:not(.focused)">
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderHoverBrush}" />
                </Style>
            </Border.Styles>

            <Grid ColumnDefinitions="*,Auto">
                <!-- Search/Display TextBox -->
                <TextBox x:Name="CountrySearchBox"
                         Grid.Column="0"
                         Text="{Binding CountrySearchText, Mode=TwoWay}"
                         Watermark="+1"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8,8"
                         FontSize="14"
                         MinWidth="50"
                         VerticalAlignment="Center" />

                <!-- Dropdown Arrow -->
                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="24" Height="24"
                        Margin="0,0,4,0"
                        Padding="0"
                        CornerRadius="4"
                        Cursor="Hand"
                        Command="{Binding ToggleCountryDropdownCommand}">
                    <PathIcon Data="M7 10l5 5 5-5z"
                              Width="12" Height="12"
                              Foreground="{DynamicResource TextTertiaryBrush}" />
                </Button>
            </Grid>
        </Border>

        <!-- Country Dropdown Popup -->
        <Popup x:Name="CountryDropdownPopup"
               IsOpen="{Binding IsCountryDropdownOpen, Mode=TwoWay}"
               PlacementTarget="{Binding #CountryDropdownBorder}"
               Placement="Bottom"
               PlacementGravity="BottomLeft"
               IsLightDismissEnabled="True"
               WindowManagerAddShadowHint="True">

            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Width="220"
                    MaxHeight="300"
                    Margin="0,4,0,0"
                    BoxShadow="0 4 12 0 #20000000">

                <Grid RowDefinitions="Auto,*">
                    <!-- No Results Message -->
                    <TextBlock Grid.Row="0"
                               Text="No countries found"
                               FontSize="13"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               Padding="12,16"
                               HorizontalAlignment="Center"
                               IsVisible="{Binding !HasFilteredCountries}" />

                    <!-- Filtered Items -->
                    <ListBox Grid.Row="1"
                             x:Name="CountryListBox"
                             ItemsSource="{Binding FilteredDialCodes}"
                             SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             IsVisible="{Binding HasFilteredCountries}">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="10,6" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="controls:CountryDialCode">
                                <StackPanel>
                                    <Grid ColumnDefinitions="26,46,*">
                                        <!-- Flag Image -->
                                        <Image Grid.Column="0"
                                               Source="{Binding FlagImage}"
                                               Width="20" Height="14"
                                               Stretch="UniformToFill"
                                               VerticalAlignment="Center"
                                               Margin="0,0,4,0" />
                                        <!-- Dial Code -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding DialCode}"
                                                   FontWeight="Medium"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                                        <!-- Country Name -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Name}"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                    <!-- Separator after priority countries -->
                                    <Border Height="1"
                                            Background="{DynamicResource BorderBrush}"
                                            Margin="-10,6,-10,0"
                                            IsVisible="{Binding ShowSeparatorAfter}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Popup>

        <!-- Phone Number TextBox with auto-formatting -->
        <TextBox Grid.Column="2"
                 x:Name="PhoneNumberBox"
                 Background="{DynamicResource SurfaceBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 BorderThickness="1"
                 CornerRadius="6"
                 Padding="12,10"
                 FontSize="14" />
    </Grid>
</UserControl>
