<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:loc="using:ArgoBooks.Localization"
             xmlns:icons="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.InvoicesPage"
             x:DataType="vm:InvoicesPageViewModel">

    <Design.DataContext>
        <vm:InvoicesPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="Auto,*">
        <!-- Tab Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        Margin="0"
                        Classes="page-tabs">
                <TabItem Header="{loc:Loc 'All Invoices'}" />
                <TabItem Header="{loc:Loc Drafts}" />
                <TabItem Header="{loc:Loc 'Recurring Invoices'}" />
            </TabControl>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Outstanding'}"
                                   Value="{Binding TotalOutstanding}"
                                   Icon="{x:Static icons:Icons.Invoices}"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Paid This Month'}"
                                   Value="{Binding PaidThisMonth}"
                                   Icon="{x:Static icons:Icons.CircleCheck}"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc Overdue}"
                                   Value="{Binding OverdueAmount}"
                                   Icon="{x:Static icons:Icons.Info}"
                                   IconColor="Danger" />
                <controls:StatCard Label="{loc:Loc 'Due This Week'}"
                                   Value="{Binding DueThisWeekCount}"
                                   Icon="{x:Static icons:Icons.Clock}"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc Invoices}"
                                ItemsSource="{Binding Invoices}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search invoices...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                AddCommand="{Binding OpenCreateModalCommand}"
                                AddButtonText="{loc:Loc 'Create Invoice'}"
                                AddButtonTooltip="{loc:Loc 'Create Invoice'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Invoices}"
                                EmptyTitle="{Binding EmptyStateTitle}"
                                EmptyMessage="{Binding EmptyStateMessage}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Extra Buttons Content (Template Designer) -->
                <table:ArgoTable.ExtraButtonsContent>
                    <Button Classes="secondary-button"
                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                            Command="{Binding OpenTemplateDesignerCommand}"
                            ToolTip.Tip="{loc:Loc 'Invoice Templates'}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14H5v-2h7v2zm5-4H5v-2h12v2zm0-4H5V7h12v2z"
                                      Width="16" Height="16" />
                            <TextBlock Text="{loc:Loc Templates}"
                                       IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                        </StackPanel>
                    </Button>
                </table:ArgoTable.ExtraButtonsContent>

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc 'Invoice #'}" ColumnName="Id" SortProperty="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Customer}" ColumnName="Customer" SortProperty="Customer"
                                                   ColumnWidth="{Binding ColumnWidths.CustomerColumnWidth}"
                                                   IsColumnVisible="{Binding ShowCustomerColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Issue Date'}" ColumnName="IssueDate" SortProperty="IssueDate"
                                                   ColumnWidth="{Binding ColumnWidths.IssueDateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIssueDateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Due Date'}" ColumnName="DueDate" SortProperty="DueDate"
                                                   ColumnWidth="{Binding ColumnWidths.DueDateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDueDateColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Amount}" ColumnName="Amount" SortProperty="Amount"
                                                   ColumnWidth="{Binding ColumnWidths.AmountColumnWidth}"
                                                   IsColumnVisible="{Binding ShowAmountColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Status}" ColumnName="Status" SortProperty="Status"
                                                   ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                   IsColumnVisible="{Binding ShowStatusColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Invoices}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:InvoiceDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="56">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Invoice # -->
                                        <table:ArgoTableCell Text="{Binding Id}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowIdColumn}"
                                                                 FontWeight="Medium" />

                                        <!-- Customer with Avatar - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.CustomerColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowCustomerColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                                    <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                                                            Background="{DynamicResource PrimaryBrush}" Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding CustomerInitials}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{Binding CustomerName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />
                                                </Grid>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Issue Date -->
                                        <table:ArgoTableCell Text="{Binding IssueDateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.IssueDateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowIssueDateColumn}" />

                                        <!-- Due Date -->
                                        <table:ArgoTableCell Text="{Binding DueDateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.DueDateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowDueDateColumn}" />

                                        <!-- Amount -->
                                        <table:ArgoTableCell Text="{Binding TotalFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowAmountColumn}"
                                                                 FontWeight="Medium" />

                                        <!-- Status Badge - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ShowStatusColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToInvoiceStatusBackground}}">
                                                    <TextBlock Text="{Binding StatusDisplay, Converter={StaticResource TranslateConverter}}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToInvoiceStatusForeground}}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Spacing="4">
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc Continue}"
                                                            IsVisible="{Binding IsDraft}"
                                                            Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).ContinueDraftInvoiceCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="M8 5v14l11-7z"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc Edit}"
                                                            IsVisible="{Binding CanEdit}"
                                                            Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc 'View History'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenHistoryModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger"
                                                            ToolTip.Tip="{loc:Loc Delete}"
                                                            Command="{Binding $parent[ItemsControl].((vm:InvoicesPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'Invoice #'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowCustomerColumn}" Content="{loc:Loc Customer}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowIssueDateColumn}" Content="{loc:Loc 'Issue Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDueDateColumn}" Content="{loc:Loc 'Due Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="{loc:Loc Amount}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc Status}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
