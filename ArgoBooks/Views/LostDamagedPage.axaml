<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.LostDamagedPage"
             x:DataType="vm:LostDamagedPageViewModel">

    <UserControl.Resources>
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:LostDamagedPageViewModel />
    </Design.DataContext>

    <Panel>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid RowDefinitions="Auto,*" Margin="24">
                <!-- Statistics Cards Row -->
                <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                    <controls:StatCard Label="{loc:Loc 'Total Lost/Damaged'}"
                                       Value="{Binding TotalLostDamaged}"
                                       Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                       IconColor="Danger" />
                    <controls:StatCard Label="{loc:Loc 'Lost Items'}"
                                       Value="{Binding LostItems}"
                                       Icon="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                       IconColor="Warning" />
                    <controls:StatCard Label="{loc:Loc 'Damaged Items'}"
                                       Value="{Binding DamagedItems}"
                                       Icon="M22 5.72l-4.6-3.86-1.29 1.53 4.6 3.86L22 5.72zM7.88 3.39L6.6 1.86 2 5.71l1.29 1.53 4.59-3.85zM12.5 8H11v6l4.75 2.85.75-1.23-4-2.37V8zM12 4c-4.97 0-9 4.03-9 9s4.03 9 9 9 9-4.03 9-9-4.03-9-9-9zm0 16c-3.87 0-7-3.13-7-7s3.13-7 7-7 7 3.13 7 7-3.13 7-7 7z"
                                       IconColor="Info" />
                    <controls:StatCard Label="{loc:Loc 'Total Loss Value'}"
                                       Value="{Binding TotalLossValue}"
                                       Icon="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                       IconColor="Primary" />
                </controls:StatCardsRow>

                <!-- Main Content Card (Row 1) -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        SizeChanged="OnHeaderSizeChanged">

                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header with Title, Search and Buttons -->
                        <Border Grid.Row="0"
                                Padding="{Binding ResponsiveHeader.HeaderPadding}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Title -->
                                <TextBlock Grid.Column="0"
                                           Text="{loc:Loc 'Lost &amp; Damaged Inventory'}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />

                                <!-- Action Buttons (Right aligned) -->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="{Binding ResponsiveHeader.HeaderSpacing}">
                                    <!-- Search Box -->
                                    <Border Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="6"
                                            Width="{Binding ResponsiveHeader.SearchBoxWidth}"
                                            MinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}">
                                        <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                            <PathIcon Grid.Column="0"
                                                      Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                      Width="16" Height="16"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Margin="{Binding ResponsiveHeader.SearchIconMargin}" />
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                                     Watermark="{loc:Loc 'Search products...'}"
                                                     Classes="search-input"
                                                     VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>

                                    <!-- Filter Button -->
                                    <Button Classes="secondary-button"
                                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                            Command="{Binding OpenFilterModalCommand}"
                                            ToolTip.Tip="{loc:Loc 'Filter'}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                      Width="16" Height="16" />
                                            <TextBlock Text="{loc:Loc 'Filter'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Items Table Content -->
                        <ScrollViewer Grid.Row="1"
                                      x:Name="HorizontalTableScroll"
                                      HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                      VerticalScrollBarVisibility="Disabled">
                            <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                                  MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                                <!-- Table Header -->
                                <Border Grid.Row="0"
                                        Background="{DynamicResource SurfaceAltBrush}"
                                        Padding="24,0"
                                        MinHeight="40"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        PointerPressed="OnTableHeaderPointerPressed">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- ID Column Header -->
                                        <Panel Width="{Binding ColumnWidths.IdColumnWidth}" IsVisible="{Binding ShowIdColumn}">
                                            <TextBlock Text="{loc:Loc 'ID'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Id" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Type Column Header -->
                                        <Panel Width="{Binding ColumnWidths.TypeColumnWidth}" IsVisible="{Binding ShowTypeColumn}">
                                            <TextBlock Text="{loc:Loc 'Type'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Type" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Product Column Header -->
                                        <Panel Width="{Binding ColumnWidths.ProductColumnWidth}" IsVisible="{Binding ShowProductColumn}">
                                            <TextBlock Text="{loc:Loc 'Product'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Product" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Date Column Header -->
                                        <Panel Width="{Binding ColumnWidths.DateColumnWidth}" IsVisible="{Binding ShowDateColumn}">
                                            <TextBlock Text="{loc:Loc 'Date'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Date" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Reason Column Header -->
                                        <Panel Width="{Binding ColumnWidths.ReasonColumnWidth}" IsVisible="{Binding ShowReasonColumn}">
                                            <TextBlock Text="{loc:Loc 'Reason'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Reason" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Staff Column Header -->
                                        <Panel Width="{Binding ColumnWidths.StaffColumnWidth}" IsVisible="{Binding ShowStaffColumn}">
                                            <TextBlock Text="{loc:Loc 'Staff'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Staff" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Loss Column Header -->
                                        <Panel Width="{Binding ColumnWidths.LossColumnWidth}" IsVisible="{Binding ShowLossColumn}">
                                            <TextBlock Text="{loc:Loc 'Loss'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Loss" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Status Column Header -->
                                        <Panel Width="{Binding ColumnWidths.StatusColumnWidth}" IsVisible="{Binding ShowStatusColumn}">
                                            <TextBlock Text="{loc:Loc 'Status'}" FontWeight="Medium" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" />
                                            <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                            <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                           HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        </Panel>

                                        <!-- Actions Column Header -->
                                        <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                            <TextBlock Text="{loc:Loc 'Actions'}" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,12" HorizontalAlignment="Left" />
                                        </Panel>
                                    </StackPanel>
                                </Border>

                                <!-- Table Content (scrollable vertically only) -->
                                <ScrollViewer Grid.Row="1"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <Panel>
                                        <!-- Table Rows -->
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="vm:LostDamagedDisplayItem">
                                                    <Border Padding="24,0"
                                                            BorderBrush="{DynamicResource BorderBrush}"
                                                            BorderThickness="0,0,0,1"
                                                            Background="{DynamicResource SurfaceBrush}"
                                                            MinHeight="52"
                                                            Cursor="Hand">
                                                        <Border.Styles>
                                                            <Style Selector="Border:pointerover">
                                                                <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
                                                            </Style>
                                                        </Border.Styles>
                                                        <StackPanel Orientation="Horizontal">
                                                            <!-- ID -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowIdColumn}">
                                                                <TextBlock Text="{Binding Id}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           Foreground="{DynamicResource PrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Type Badge -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.TypeColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowTypeColumn}">
                                                                <Border CornerRadius="4"
                                                                        Padding="6,3"
                                                                        Background="{Binding TypeBadgeBackground}"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Margin="8,0">
                                                                    <TextBlock Text="{Binding ItemType, Converter={StaticResource TranslateConverter}}"
                                                                               FontSize="10"
                                                                               FontWeight="Medium"
                                                                               Foreground="{Binding TypeBadgeForeground}" />
                                                                </Border>
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Product -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.ProductColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowProductColumn}">
                                                                <StackPanel VerticalAlignment="Center" Margin="8,0">
                                                                    <TextBlock Text="{Binding ProductName}"
                                                                               FontSize="12"
                                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                                               TextTrimming="CharacterEllipsis" />
                                                                    <TextBlock Text="{Binding QuantityFormatted}"
                                                                               FontSize="10"
                                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                                </StackPanel>
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Date -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowDateColumn}">
                                                                <TextBlock Text="{Binding DateFormatted}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Reason -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.ReasonColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowReasonColumn}">
                                                                <TextBlock Text="{Binding Reason}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Staff -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.StaffColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowStaffColumn}">
                                                                <TextBlock Text="{Binding StaffName}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Loss Value -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.LossColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowLossColumn}">
                                                                <TextBlock Text="{Binding ValueLostFormatted}"
                                                                           FontSize="12"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="#DC2626"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0" />
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Status Badge -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                   IsVisible="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ShowStatusColumn}">
                                                                <Border CornerRadius="4"
                                                                        Padding="6,3"
                                                                        Background="{Binding StatusBadgeBackground}"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Margin="8,0">
                                                                    <TextBlock Text="{Binding Status, Converter={StaticResource TranslateConverter}}"
                                                                               FontSize="10"
                                                                               FontWeight="Medium"
                                                                               Foreground="{Binding StatusBadgeForeground}" />
                                                                </Border>
                                                                <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                            </Panel>

                                                            <!-- Actions -->
                                                            <Panel Width="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            Spacing="2"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center">
                                                                    <Button Classes="icon-button-small"
                                                                            ToolTip.Tip="{loc:Loc 'View Details'}"
                                                                            Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).ViewItemDetailsCommand}"
                                                                            CommandParameter="{Binding}">
                                                                        <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                                  Width="14" Height="14" />
                                                                    </Button>
                                                                    <Button Classes="icon-button-small danger"
                                                                            ToolTip.Tip="{loc:Loc 'Undo'}"
                                                                            Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).UndoItemCommand}"
                                                                            CommandParameter="{Binding}">
                                                                        <PathIcon Data="M12.5 8c-2.65 0-5.05.99-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z"
                                                                                  Width="14" Height="14" />
                                                                    </Button>
                                                                </StackPanel>
                                                            </Panel>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Empty State -->
                                        <Border Padding="40"
                                                IsVisible="{Binding Items.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                            <StackPanel HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Spacing="16">
                                                <Border Width="64" Height="64"
                                                        CornerRadius="32"
                                                        Background="{DynamicResource SurfaceAltBrush}"
                                                        HorizontalAlignment="Center">
                                                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                                              Width="28" Height="28"
                                                              Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </Border>
                                                <TextBlock Text="{loc:Loc 'No lost or damaged items found'}"
                                                           FontSize="16"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           HorizontalAlignment="Center" />
                                                <TextBlock Text="{loc:Loc 'Items marked as lost or damaged from the Expenses or Revenue pages will appear here.'}"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="350" />
                                            </StackPanel>
                                        </Border>
                                    </Panel>
                                </ScrollViewer>
                            </Grid>
                        </ScrollViewer>

                        <!-- Pagination Footer -->
                        <Border Grid.Row="2"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12"
                                CornerRadius="0,0,11,11"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Rows per page selector -->
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="8"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding PaginationText}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBlock Text="|"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="8,0" />
                                    <TextBlock Text="{loc:Loc 'Per page:'}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               VerticalAlignment="Center" />
                                    <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                              SelectedItem="{Binding PageSize}"
                                              Classes="page-size-combobox"
                                              Width="70" />
                                </StackPanel>

                                <!-- Page Numbers -->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="4"
                                            IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                    <!-- Previous Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToPreviousPageCommand}"
                                            IsEnabled="{Binding CanGoToPreviousPage}">
                                        <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                                  Width="16" Height="16" />
                                    </Button>

                                    <!-- Page Number Buttons -->
                                    <ItemsControl ItemsSource="{Binding PageNumbers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="4" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Classes="pagination-button"
                                                        Content="{Binding}"
                                                        Command="{Binding $parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).GoToPageCommand}"
                                                        CommandParameter="{Binding}">
                                                    <controls:PaginationHelper.IsActivePage>
                                                        <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                            <Binding />
                                                            <Binding Path="$parent[ItemsControl].((vm:LostDamagedPageViewModel)DataContext).CurrentPage" />
                                                        </MultiBinding>
                                                    </controls:PaginationHelper.IsActivePage>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Next Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToNextPageCommand}"
                                            IsEnabled="{Binding CanGoToNextPage}">
                                        <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                                  Width="16" Height="16" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- View Details Modal Overlay -->
        <Border Background="#80000000"
                IsVisible="{Binding IsViewDetailsModalOpen}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#FEE2E2">
                                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                              Width="20" Height="20"
                                              Foreground="#DC2626" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{loc:Loc 'Lost/Damaged Details'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsId}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                </StackPanel>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseViewDetailsModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" Padding="24">
                        <StackPanel Spacing="20">
                            <!-- Product and Type -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Product'}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsProduct}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="6" HorizontalAlignment="Right">
                                    <TextBlock Text="{loc:Loc 'Type'}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsType}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Date, Quantity, and Value -->
                            <Grid ColumnDefinitions="*,*,*">
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Date Discovered'}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsDate}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Quantity'}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsQuantity}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock Text="{loc:Loc 'Loss Value'}"
                                               FontSize="12"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewDetailsValue}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#DC2626" />
                                </StackPanel>
                            </Grid>

                            <!-- Reason -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Reason'}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="8"
                                        Padding="12">
                                    <TextBlock Text="{Binding ViewDetailsReason}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextWrapping="Wrap" />
                                </Border>
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{loc:Loc 'Notes'}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="8"
                                        Padding="12"
                                        MinHeight="80">
                                    <TextBlock Text="{Binding ViewDetailsNotes}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextWrapping="Wrap" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2"
                            Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Button Content="{loc:Loc 'Close'}"
                                Classes="secondary-button"
                                HorizontalAlignment="Right"
                                Command="{Binding CloseViewDetailsModalCommand}" />
                    </Border>
                </Grid>
            </Border>
        </Border>

        <!-- Undo Item Modal Overlay -->
        <Border Background="#80000000"
                IsVisible="{Binding IsUndoItemModalOpen}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="450"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#FEF3C7">
                                    <PathIcon Data="M12.5 8c-2.65 0-5.05.99-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z"
                                              Width="20" Height="20"
                                              Foreground="#D97706" />
                                </Border>
                                <TextBlock Text="{loc:Loc 'Undo Lost/Damaged'}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseUndoItemModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <StackPanel Grid.Row="1" Spacing="16" Margin="24">
                        <!-- Item Description -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="{loc:Loc 'Item to undo:'}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding UndoItemDescription}"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                        </StackPanel>

                        <!-- Reason (Optional) -->
                        <StackPanel Spacing="8">
                            <TextBlock FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextPrimaryBrush}">
                                <Run Text="{loc:Loc 'Reason for undo'}" />
                                <Run Text="{loc:Loc '(optional)'}" Foreground="{DynamicResource TextTertiaryBrush}" />
                            </TextBlock>
                            <TextBox Text="{Binding UndoItemReason, Mode=TwoWay}"
                                     Watermark="{loc:Loc 'Enter reason for undoing this record...'}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"
                                     MaxHeight="120" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2"
                            Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <Button Grid.Column="1"
                                    Content="{loc:Loc 'Cancel'}"
                                    Classes="secondary-button"
                                    Margin="0,0,12,0"
                                    Command="{Binding CloseUndoItemModalCommand}" />
                            <Button Grid.Column="2"
                                    Content="{loc:Loc 'Undo Record'}"
                                    Classes="danger-button"
                                    Command="{Binding ConfirmUndoItemCommand}" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Border>

        <!-- Column Visibility Menu -->
        <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                        MenuX="{Binding ColumnMenuX}"
                                        MenuY="{Binding ColumnMenuY}"
                                        CloseCommand="{Binding CloseColumnMenuCommand}">
            <controls:ColumnVisibilityMenu.ColumnsContent>
                <StackPanel Spacing="4">
                    <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'ID'}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowTypeColumn}" Content="{loc:Loc Type}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowProductColumn}" Content="{loc:Loc Product}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc Date}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowReasonColumn}" Content="{loc:Loc Reason}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowStaffColumn}" Content="{loc:Loc Staff}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowLossColumn}" Content="{loc:Loc Loss}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc Status}" Classes="column-toggle" />
                </StackPanel>
            </controls:ColumnVisibilityMenu.ColumnsContent>
        </controls:ColumnVisibilityMenu>
    </Panel>

    <!-- Styles are now consolidated in Styles/TableStyles.axaml -->
</UserControl>
