<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:icons="using:ArgoBooks"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.PurchaseOrdersPage"
             x:DataType="vm:PurchaseOrdersPageViewModel">

    <Design.DataContext>
        <vm:PurchaseOrdersPageViewModel />
    </Design.DataContext>

    <Panel>
        <Grid RowDefinitions="Auto,*">
            <!-- Tab Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                            Margin="0"
                            Classes="page-tabs">
                    <TabItem Header="{loc:Loc All}" />
                    <TabItem Header="{loc:Loc Pending}" />
                    <TabItem Header="{loc:Loc Approved}" />
                    <TabItem Header="{loc:Loc 'On Order'}" />
                    <TabItem Header="{loc:Loc Received}" />
                </TabControl>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="24">
                <!-- Statistics Cards Row -->
                <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                    <controls:StatCard Label="{loc:Loc 'Total Orders'}"
                                       Value="{Binding TotalOrders}"
                                       Icon="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                       IconColor="Primary" />
                    <controls:StatCard Label="{loc:Loc 'Pending Approval'}"
                                       Value="{Binding PendingOrders}"
                                       Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                       IconColor="Warning" />
                    <controls:StatCard Label="{loc:Loc 'On Order'}"
                                       Value="{Binding OnOrderCount}"
                                       Icon="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"
                                       IconColor="Info" />
                    <controls:StatCard Label="{loc:Loc 'Total Value'}"
                                       Value="{Binding TotalValue}"
                                       Icon="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                       IconColor="Success" />
                </controls:StatCardsRow>

                <!-- Main Content Card using ArgoTable -->
                <table:ArgoTable Grid.Row="1"
                                    Title="{loc:Loc 'Purchase Orders'}"
                                    ItemsSource="{Binding Orders}"
                                    SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                    SearchPlaceholder="{loc:Loc 'Search orders...'}"
                                    SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                    SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                    SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                    HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                    HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                    IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                    IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                    ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                    FilterCommand="{Binding OpenFilterModalCommand}"
                                    AddCommand="{Binding OpenAddModalCommand}"
                                    AddButtonText="{loc:Loc 'New Order'}"
                                    AddButtonTooltip="{loc:Loc 'New Order'}"
                                    ColumnWidthsManager="{Binding ColumnWidths}"
                                    CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                    TotalPages="{Binding TotalPages}"
                                    PageSize="{Binding PageSize, Mode=TwoWay}"
                                    PaginationText="{Binding PaginationText}"
                                    GoToPageCommand="{Binding GoToPageCommand}"
                                    GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                    GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                    ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                    EmptyIcon="{x:Static icons:Icons.PurchaseOrders}"
                                    EmptyTitle="{loc:Loc 'No purchase orders found'}"
                                    EmptyMessage="{loc:Loc 'Purchase orders will appear here when you create orders for your suppliers.'}"
                                    BorderSizeChanged="OnHeaderSizeChanged"
                                    TableGridSizeChanged="OnTableSizeChanged">

                    <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                    <table:ArgoTable.HeaderContent>
                        <StackPanel Orientation="Horizontal">
                            <table:ArgoTableHeader Header="{loc:Loc 'PO #'}" ColumnName="PONumber" SortProperty="PONumber"
                                                       ColumnWidth="{Binding ColumnWidths.PoNumberColumnWidth}"
                                                       IsColumnVisible="{Binding ShowPONumberColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Date}" ColumnName="Date" SortProperty="Date"
                                                       ColumnWidth="{Binding ColumnWidths.DateColumnWidth}"
                                                       IsColumnVisible="{Binding ShowDateColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Supplier}" ColumnName="Supplier" SortProperty="Supplier"
                                                       ColumnWidth="{Binding ColumnWidths.SupplierColumnWidth}"
                                                       IsColumnVisible="{Binding ShowSupplierColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Items}" ColumnName="Items" SortProperty="Items"
                                                       ColumnWidth="{Binding ColumnWidths.ItemsColumnWidth}"
                                                       IsColumnVisible="{Binding ShowItemsColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Total}" ColumnName="Total" SortProperty="Total"
                                                       ColumnWidth="{Binding ColumnWidths.TotalColumnWidth}"
                                                       IsColumnVisible="{Binding ShowTotalColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Status}" ColumnName="Status" SortProperty="Status"
                                                       ColumnWidth="{Binding ColumnWidths.StatusColumnWidth}"
                                                       IsColumnVisible="{Binding ShowStatusColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Expected}" ColumnName="Expected" SortProperty="Expected"
                                                       ColumnWidth="{Binding ColumnWidths.ExpectedColumnWidth}"
                                                       IsColumnVisible="{Binding ShowExpectedColumn}"
                                                       SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                       SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                            <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                       ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                       IsSortable="False" IsResizable="False" ShowSeparator="False" />
                        </StackPanel>
                    </table:ArgoTable.HeaderContent>

                    <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                    <table:ArgoTable.RowsContent>
                        <ItemsControl ItemsSource="{Binding Orders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:PurchaseOrderDisplayItem">
                                    <Border Padding="24,0"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,0,1"
                                            MinHeight="52">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- PO Number - Custom content for monospace font -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.PoNumberColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ShowPONumberColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <TextBlock Text="{Binding PoNumber}"
                                                               FontSize="13"
                                                               FontFamily="Consolas, monospace"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Date - Simple text -->
                                            <table:ArgoTableCell Text="{Binding DateDisplay}"
                                                                     ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ShowDateColumn}" />

                                            <!-- Supplier - Custom content for font weight -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.SupplierColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ShowSupplierColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <TextBlock Text="{Binding SupplierName}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Items Count - Custom content for secondary color -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.ItemsColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ShowItemsColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <TextBlock Text="{Binding ItemsDisplay}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Total - Custom content for font weight -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.TotalColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ShowTotalColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <TextBlock Text="{Binding TotalDisplay}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center" />
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Status Badge - Custom content for badge styling -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ShowStatusColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <Border Background="{Binding StatusBackground}"
                                                            CornerRadius="4"
                                                            Padding="8,4"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding StatusDisplay, Converter={StaticResource TranslateConverter}}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="{Binding StatusColor}" />
                                                    </Border>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Expected Date - Custom content for secondary color -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.ExpectedColumnWidth}"
                                                                     IsColumnVisible="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ShowExpectedColumn}">
                                                <table:ArgoTableCell.CellContent>
                                                    <TextBlock Text="{Binding ExpectedDisplay}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center" />
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>

                                            <!-- Actions - Custom content for buttons -->
                                            <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                     ShowSeparator="False">
                                                <table:ArgoTableCell.CellContent>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Spacing="4">
                                                        <!-- View -->
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="{loc:Loc 'View Details'}"
                                                                Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ViewOrderCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <!-- Edit -->
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="{loc:Loc 'Edit Order'}"
                                                                IsVisible="{Binding CanEdit}"
                                                                Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).EditOrderCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <!-- Approve -->
                                                        <Button Classes="icon-button success"
                                                                ToolTip.Tip="{loc:Loc 'Approve Order'}"
                                                                IsVisible="{Binding CanApprove}"
                                                                Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ApproveOrderCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="{x:Static icons:Icons.Check}"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <!-- Receive -->
                                                        <Button Classes="icon-button info"
                                                                ToolTip.Tip="{loc:Loc 'Receive Order'}"
                                                                IsVisible="{Binding CanReceive}"
                                                                Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ReceiveOrderCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M19 3H5c-1.11 0-2 .89-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.11-.9-2-2-2zm-2 10h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <!-- Delete -->
                                                        <Button Classes="icon-button danger"
                                                                ToolTip.Tip="{loc:Loc Delete}"
                                                                Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                    </StackPanel>
                                                </table:ArgoTableCell.CellContent>
                                            </table:ArgoTableCell>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </table:ArgoTable.RowsContent>
                </table:ArgoTable>
            </Grid>
        </Grid>

        <!-- Column Visibility Menu -->
        <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                        MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                        MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                        CloseCommand="{Binding CloseColumnMenuCommand}"
                                        ResetCommand="{Binding ResetColumnVisibilityCommand}">
            <controls:ColumnVisibilityMenu.ColumnsContent>
                <StackPanel Spacing="4">
                    <CheckBox IsChecked="{Binding ShowPONumberColumn}" Content="{loc:Loc 'PO #'}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc Date}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowSupplierColumn}" Content="{loc:Loc Supplier}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowItemsColumn}" Content="{loc:Loc Items}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowTotalColumn}" Content="{loc:Loc Total}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="{loc:Loc Status}" Classes="column-toggle" />
                    <CheckBox IsChecked="{Binding ShowExpectedColumn}" Content="{loc:Loc Expected}" Classes="column-toggle" />
                </StackPanel>
            </controls:ColumnVisibilityMenu.ColumnsContent>
        </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
