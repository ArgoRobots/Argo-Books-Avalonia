<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="800"
             x:Class="ArgoBooks.Controls.Sidebar"
             x:DataType="vm:SidebarViewModel"
             Background="{DynamicResource SidebarBackgroundBrush}"
             BorderBrush="{DynamicResource SidebarBorderBrush}"
             BorderThickness="0,0,1,0">

    <Design.DataContext>
        <vm:SidebarViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <!-- Sidebar toggle button style -->
        <Style Selector="Button.sidebar-toggle">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sidebar-toggle:pointerover">
            <Setter Property="Background" Value="{DynamicResource SidebarHoverBrush}" />
        </Style>
        <Style Selector="Button.sidebar-toggle:pointerover PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}" />
        </Style>
        <Style Selector="Button.sidebar-toggle:pressed">
            <Setter Property="Background" Value="{DynamicResource SidebarActiveBrush}" />
        </Style>
    </UserControl.Styles>

    <DockPanel>
        <!-- Header: Logo and Company Name with Toggle -->
        <Border DockPanel.Dock="Top"
                Padding="15"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,0">
            <Panel>
                <!-- Expanded Header Layout -->
                <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding !IsCollapsed}">
                    <!-- Company Header Content -->
                    <Button Grid.Column="0"
                            Classes="sidebar-header"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Command="{Binding OpenCompanySwitcherCommand}">
                        <Grid ColumnDefinitions="Auto,*">
                            <!-- Logo (40px square) -->
                            <Border Grid.Column="0"
                                    Width="40" Height="40"
                                    CornerRadius="8"
                                    ClipToBounds="True"
                                    Background="{DynamicResource SurfaceAltBrush}">
                                <Panel>
                                    <Image Source="{Binding CompanyLogo}"
                                           Stretch="UniformToFill"
                                           IsVisible="{Binding HasCompanyLogo}" />
                                    <!-- Gradient background for initial only -->
                                    <Border CornerRadius="8"
                                            IsVisible="{Binding !HasCompanyLogo}">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                                <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0" />
                                                <GradientStop Color="{DynamicResource AccentColor}" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="{Binding CompanyInitial}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Border>
                                </Panel>
                            </Border>

                            <!-- Brand Name - auto-shrinks to fit, min effective font ~11px -->
                            <Viewbox Grid.Column="1"
                                     StretchDirection="DownOnly"
                                     Stretch="Uniform"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     Margin="8,0,0,0">
                                <TextBlock Text="{Binding CompanyName}"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SidebarTextBrush}"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="200" />
                            </Viewbox>
                        </Grid>
                    </Button>

                    <!-- Sidebar Toggle Button with Animated Arrow -->
                    <Button Grid.Column="1"
                            Classes="sidebar-toggle"
                            Command="{Binding ToggleCollapseCommand}"
                            ToolTip.Tip="{Binding CollapseTooltip}"
                            Width="28" Height="28"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center">
                        <controls:ToggleArrow IconSize="18"
                                              Foreground="{DynamicResource SidebarTextMutedBrush}"
                                              IsCollapsed="{Binding IsCollapsed}" />
                    </Button>
                </Grid>

                <!-- Collapsed Header Layout - Logo on top, toggle below -->
                <StackPanel IsVisible="{Binding IsCollapsed}"
                            HorizontalAlignment="Center"
                            Spacing="8">
                    <!-- Collapsed Logo - Clickable to open company switcher -->
                    <Button Classes="sidebar-header-collapsed"
                            Command="{Binding OpenCompanySwitcherCommand}"
                            ToolTip.Tip="{Binding CompanyName}"
                            HorizontalAlignment="Center">
                        <Border Width="40" Height="40"
                                CornerRadius="8"
                                ClipToBounds="True"
                                Background="{DynamicResource SurfaceAltBrush}">
                            <Panel>
                                <Image Source="{Binding CompanyLogo}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasCompanyLogo}" />
                                <!-- Gradient background for initial only -->
                                <Border CornerRadius="8"
                                        IsVisible="{Binding !HasCompanyLogo}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0" />
                                            <GradientStop Color="{DynamicResource AccentColor}" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="{Binding CompanyInitial}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Border>
                            </Panel>
                        </Border>
                    </Button>

                    <!-- Toggle button below logo when collapsed -->
                    <Button Classes="sidebar-toggle"
                            Command="{Binding ToggleCollapseCommand}"
                            ToolTip.Tip="{loc:Loc 'Expand sidebar'}"
                            Width="28" Height="28"
                            HorizontalAlignment="Center">
                        <controls:ToggleArrow IconSize="18"
                                              Foreground="{DynamicResource SidebarTextMutedBrush}"
                                              IsCollapsed="{Binding IsCollapsed}" />
                    </Button>
                </StackPanel>
            </Panel>
        </Border>

        <!-- Navigation Sections -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="0" Margin="0,15,0,20">
                <!-- Main Section -->
                <controls:SidebarSection Title="{loc:Loc Main}"
                                         SectionKey="Main"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         IsCollapsible="True"
                                         Items="{Binding MainItems}" />

                <!-- Transactions Section -->
                <controls:SidebarSection Title="{loc:Loc Transactions}"
                                         SectionKey="Transactions"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         IsCollapsible="True"
                                         Items="{Binding TransactionItems}"
                                         IsVisible="{Binding ShowTransactions}" />

                <!-- Rentals Section -->
                <controls:SidebarSection Title="{loc:Loc Rentals}"
                                         SectionKey="Rentals"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         IsCollapsible="True"
                                         Items="{Binding RentalItems}"
                                         IsVisible="{Binding ShowRentals}" />

                <!-- Management Section -->
                <controls:SidebarSection Title="{loc:Loc Management}"
                                         SectionKey="Management"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         IsCollapsible="True"
                                         Items="{Binding ManagementItems}" />

                <!-- Inventory Section -->
                <controls:SidebarSection Title="{loc:Loc Inventory}"
                                         SectionKey="Inventory"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         IsCollapsible="True"
                                         Items="{Binding InventoryItems}"
                                         IsVisible="{Binding ShowInventory}" />

                <!-- Team Section -->
                <controls:SidebarSection Title="{loc:Loc Team}"
                                         SectionKey="Team"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         IsCollapsible="True"
                                         Items="{Binding TeamItems}"
                                         IsVisible="{Binding ShowTeam}" />

                <!-- Tracking Section -->
                <controls:SidebarSection Title="{loc:Loc Tracking}"
                                         SectionKey="Tracking"
                                         IsCollapsed="{Binding IsCollapsed}"
                                         IsCollapsible="True"
                                         Items="{Binding TrackingItems}" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>

    <UserControl.Styles>
        <!-- Sidebar Header Button Style -->
        <Style Selector="Button.sidebar-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sidebar-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sidebar-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!-- Collapsed Sidebar Header Button Style -->
        <Style Selector="Button.sidebar-header-collapsed">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.sidebar-header-collapsed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.sidebar-header-collapsed:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Styles>
</UserControl>
