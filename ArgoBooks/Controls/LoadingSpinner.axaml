<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="48" d:DesignHeight="48"
             x:Class="ArgoBooks.Controls.LoadingSpinner"
             x:DataType="controls:LoadingSpinner">

    <Viewbox Width="{Binding ComputedSize, RelativeSource={RelativeSource AncestorType=controls:LoadingSpinner}}"
             Height="{Binding ComputedSize, RelativeSource={RelativeSource AncestorType=controls:LoadingSpinner}}"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             IsVisible="{Binding IsSpinning, RelativeSource={RelativeSource AncestorType=controls:LoadingSpinner}}">
        <Panel Width="24" Height="24">
            <!-- Background circle -->
            <Ellipse Width="24" Height="24"
                     StrokeThickness="3"
                     Stroke="{DynamicResource SurfaceHoverBrush}"
                     Fill="Transparent" />

            <!-- Spinning arc container - rotates around center -->
            <Panel x:Name="SpinnerArc"
                   Width="24" Height="24"
                   RenderTransformOrigin="0.5,0.5">
                <Panel.RenderTransform>
                    <RotateTransform />
                </Panel.RenderTransform>
                <Panel.Styles>
                    <Style Selector="Panel#SpinnerArc">
                        <Style.Animations>
                            <Animation Duration="0:0:1" IterationCount="INFINITE">
                                <KeyFrame Cue="0%">
                                    <Setter Property="RotateTransform.Angle" Value="0" />
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="RotateTransform.Angle" Value="360" />
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Panel.Styles>
                <Path Stroke="{Binding SpinnerBrush, RelativeSource={RelativeSource AncestorType=controls:LoadingSpinner}}"
                      StrokeThickness="3"
                      StrokeLineCap="Round"
                      Data="M 12,1.5 A 10.5,10.5 0 0 1 22.5,12" />
            </Panel>
        </Panel>
    </Viewbox>
</UserControl>
