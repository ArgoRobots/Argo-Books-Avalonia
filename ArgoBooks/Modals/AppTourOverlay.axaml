<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:conv="using:ArgoBooks.Converters"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
             x:Class="ArgoBooks.Modals.AppTourOverlay"
             x:DataType="vm:AppTourViewModel"
             IsVisible="{Binding IsOpen}">

    <Design.DataContext>
        <vm:AppTourViewModel />
    </Design.DataContext>

    <Panel Background="Transparent">
        <!-- Semi-transparent backdrop with cutout for highlighted area -->
        <Path x:Name="BackdropPath"
              Fill="{DynamicResource OverlayBrush}"
              IsHitTestVisible="False" />

        <!-- Dynamic highlight border - positioned by code-behind -->
        <Border x:Name="DynamicHighlight"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="{Binding HighlightMargin}"
                Width="{Binding HighlightWidth}"
                Height="{Binding HighlightHeight}"
                Background="Transparent"
                BorderBrush="{DynamicResource PrimaryBrush}"
                BorderThickness="3"
                CornerRadius="{Binding HighlightCornerRadius}"
                IsHitTestVisible="False"
                IsVisible="{Binding ShowHighlight}" />

        <!-- Tour step card - use nested borders to prevent corner clipping -->
        <Border CornerRadius="12"
                Width="400"
                MinHeight="340"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 12 40 0 #50000000"
                ClipToBounds="True">
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24">

            <Grid RowDefinitions="Auto,*,Auto,Auto,Auto">
                <!-- Icon and Title -->
                <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,16">
                    <Border Width="56" Height="56"
                            CornerRadius="28"
                            Background="{DynamicResource PrimaryLightBrush}"
                            HorizontalAlignment="Center">
                        <PathIcon Data="{Binding CurrentIcon}"
                                  Width="28" Height="28"
                                  Foreground="{DynamicResource PrimaryBrush}" />
                    </Border>

                    <TextBlock Text="{Binding CurrentTitle}"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center" />
                </StackPanel>

                <!-- Description -->
                <TextBlock Grid.Row="1"
                           Text="{Binding CurrentDescription}"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           LineHeight="22"
                           Margin="0,0,0,20" />

                <!-- Progress text above dots -->
                <TextBlock Grid.Row="2"
                           Text="{Binding ProgressText}"
                           FontSize="13"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />

                <!-- Progress dots -->
                <ItemsControl Grid.Row="3"
                              ItemsSource="{Binding StepIndicators}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:StepIndicator">
                            <Ellipse Width="8" Height="8">
                                <Ellipse.Fill>
                                    <Binding Path="IsActive">
                                        <Binding.Converter>
                                            <conv:BoolToBrushConverter TrueValue="{DynamicResource PrimaryBrush}"
                                                                        FalseValue="{DynamicResource TextTertiaryBrush}" />
                                        </Binding.Converter>
                                    </Binding>
                                </Ellipse.Fill>
                            </Ellipse>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Navigation buttons -->
                <Grid Grid.Row="4" ColumnDefinitions="Auto,*,Auto">
                    <!-- Skip button -->
                    <Button Grid.Column="0"
                            Classes="text-button"
                            Content="Skip"
                            Command="{Binding SkipTourCommand}"
                            IsVisible="{Binding !IsLastStep}" />

                    <!-- Navigation buttons on the right -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="8">
                        <Button Classes="secondary-button"
                                Command="{Binding PreviousStepCommand}"
                                IsVisible="{Binding !IsFirstStep}"
                                Width="90"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="Back" />
                        </Button>

                        <Button Classes="primary-button"
                                Command="{Binding NextStepCommand}"
                                Width="90"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="{Binding IsLastStep, Converter={x:Static conv:Converters.BoolToFinishNext}}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        </Border>
    </Panel>

    <UserControl.Styles>
        <Style Selector="Button.text-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.text-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.text-button:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
