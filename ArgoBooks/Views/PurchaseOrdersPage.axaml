<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.PurchaseOrdersPage"
             x:DataType="vm:PurchaseOrdersPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:PurchaseOrdersPageViewModel />
    </Design.DataContext>

    <Panel>
        <Grid RowDefinitions="*">
            <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="Total Orders"
                                   Value="{Binding TotalOrders}"
                                   Icon="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                   IconColor="Primary" />
                <controls:StatCard Label="Pending Approval"
                                   Value="{Binding PendingOrders}"
                                   Icon="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                   IconColor="Warning" />
                <controls:StatCard Label="On Order"
                                   Value="{Binding OnOrderCount}"
                                   Icon="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"
                                   IconColor="Info" />
                <controls:StatCard Label="Total Value"
                                   Value="{Binding TotalValue}"
                                   Icon="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                                   IconColor="Success" />
            </controls:StatCardsRow>

            <!-- Main Content Card -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Purchase Orders"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search orders..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- New Order Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="New Order" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Tab Bar -->
                    <Border Grid.Row="1"
                            Padding="24,0"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" Spacing="0">
                            <!-- All Tab -->
                            <Button Classes="tab-button"
                                    Classes.active="{Binding ActiveTab, Converter={x:Static local:StringConverters.Equals}, ConverterParameter=All}"
                                    Command="{Binding SwitchTabCommand}"
                                    CommandParameter="All">
                                <TextBlock Text="All" />
                            </Button>
                            <!-- Pending Tab -->
                            <Button Classes="tab-button"
                                    Classes.active="{Binding ActiveTab, Converter={x:Static local:StringConverters.Equals}, ConverterParameter=Pending}"
                                    Command="{Binding SwitchTabCommand}"
                                    CommandParameter="Pending">
                                <TextBlock Text="Pending" />
                            </Button>
                            <!-- Approved Tab -->
                            <Button Classes="tab-button"
                                    Classes.active="{Binding ActiveTab, Converter={x:Static local:StringConverters.Equals}, ConverterParameter=Approved}"
                                    Command="{Binding SwitchTabCommand}"
                                    CommandParameter="Approved">
                                <TextBlock Text="Approved" />
                            </Button>
                            <!-- On Order Tab -->
                            <Button Classes="tab-button"
                                    Classes.active="{Binding ActiveTab, Converter={x:Static local:StringConverters.Equals}, ConverterParameter=On Order}"
                                    Command="{Binding SwitchTabCommand}"
                                    CommandParameter="On Order">
                                <TextBlock Text="On Order" />
                            </Button>
                            <!-- Received Tab -->
                            <Button Classes="tab-button"
                                    Classes.active="{Binding ActiveTab, Converter={x:Static local:StringConverters.Equals}, ConverterParameter=Received}"
                                    Command="{Binding SwitchTabCommand}"
                                    CommandParameter="Received">
                                <TextBlock Text="Received" />
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Orders Table -->
                    <ScrollViewer Grid.Row="2"
                                  x:Name="HorizontalTableScroll"
                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40">
                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                    <!-- PO Number Column Header -->
                                    <Panel Width="{Binding ColumnWidths.PoNumberColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="PONumber">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="PO #" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="PONumber:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="PONumber:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="PONumber" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Date Column Header -->
                                    <Panel Width="{Binding ColumnWidths.DateColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Date">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Date" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Date:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Date:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Date" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Supplier Column Header -->
                                    <Panel Width="{Binding ColumnWidths.SupplierColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Supplier">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Supplier" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Supplier:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Supplier:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Supplier" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Items Column Header -->
                                    <Panel Width="{Binding ColumnWidths.ItemsColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Items">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Items" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Items:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Items:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Items" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Total Column Header -->
                                    <Panel Width="{Binding ColumnWidths.TotalColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Total">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Total" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Total:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Total:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Total" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Status Column Header -->
                                    <Panel Width="{Binding ColumnWidths.StatusColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Status">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Status:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Status:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Expected Column Header -->
                                    <Panel Width="{Binding ColumnWidths.ExpectedColumnWidth}">
                                        <Button Classes="column-header" Margin="8,12"
                                                Command="{Binding SortByCommand}" CommandParameter="Expected">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="Expected" FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                                <Panel Width="12" Height="12">
                                                    <PathIcon Data="M7 14l5-5 5 5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Expected:Ascending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                    <PathIcon Data="M7 10l5 5 5-5z" Width="12" Height="12"
                                                              Foreground="{DynamicResource TextTertiaryBrush}">
                                                        <PathIcon.IsVisible>
                                                            <MultiBinding Converter="{StaticResource SortIndicatorConverter}"
                                                                          ConverterParameter="Expected:Descending">
                                                                <Binding Path="SortColumn" />
                                                                <Binding Path="SortDirection" />
                                                            </MultiBinding>
                                                        </PathIcon.IsVisible>
                                                    </PathIcon>
                                                </Panel>
                                            </StackPanel>
                                        </Button>
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Expected" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>

                                    <!-- Actions Column Header -->
                                    <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                        <TextBlock Text="Actions"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Left"
                                                   Margin="8,12" />
                                    </Panel>
                                </StackPanel>
                            </Border>

                            <!-- Table Content -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <Panel>
                                    <!-- Orders List -->
                                    <ItemsControl ItemsSource="{Binding Orders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="vm:PurchaseOrderDisplayItem">
                                                <Border Padding="24,0"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="0,0,0,1"
                                                        MinHeight="52">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- PO Number -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.PoNumberColumnWidth}">
                                                            <TextBlock Text="{Binding PoNumber}"
                                                                       FontSize="13"
                                                                       FontFamily="Consolas, monospace"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource PrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Date -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.DateColumnWidth}">
                                                            <TextBlock Text="{Binding DateDisplay}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Supplier -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.SupplierColumnWidth}">
                                                            <TextBlock Text="{Binding SupplierName}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Items Count -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.ItemsColumnWidth}">
                                                            <TextBlock Text="{Binding ItemsDisplay}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Total -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.TotalColumnWidth}">
                                                            <TextBlock Text="{Binding TotalDisplay}"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Status Badge -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}">
                                                            <Border Background="{Binding StatusBackground}"
                                                                    CornerRadius="4"
                                                                    Padding="8,4"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    Margin="8,0">
                                                                <TextBlock Text="{Binding StatusDisplay}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           Foreground="{Binding StatusColor}" />
                                                            </Border>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Expected Date -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.ExpectedColumnWidth}">
                                                            <TextBlock Text="{Binding ExpectedDisplay}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Actions -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Spacing="4"
                                                                        Margin="8,0">
                                                                <!-- View -->
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="View Details"
                                                                        Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ViewOrderCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <!-- Edit -->
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="Edit Order"
                                                                        IsVisible="{Binding CanEdit}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).EditOrderCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <!-- Approve -->
                                                                <Button Classes="icon-button success"
                                                                        ToolTip.Tip="Approve Order"
                                                                        IsVisible="{Binding CanApprove}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ApproveOrderCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <!-- Receive -->
                                                                <Button Classes="icon-button info"
                                                                        ToolTip.Tip="Receive Order"
                                                                        IsVisible="{Binding CanReceive}"
                                                                        Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).ReceiveOrderCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M19 3H5c-1.11 0-2 .89-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.11-.9-2-2-2zm-2 10h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <!-- Delete -->
                                                                <Button Classes="icon-button danger"
                                                                        ToolTip.Tip="Delete"
                                                                        Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                            </StackPanel>
                                                        </Panel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Empty State -->
                                    <Border Padding="40"
                                            IsVisible="{Binding Orders.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Spacing="16">
                                            <Border Width="64" Height="64"
                                                    CornerRadius="32"
                                                    Background="{DynamicResource SurfaceAltBrush}"
                                                    HorizontalAlignment="Center">
                                                <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                                          Width="28" Height="28"
                                                          Foreground="{DynamicResource TextTertiaryBrush}" />
                                            </Border>
                                            <TextBlock Text="No purchase orders found"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center" />
                                            <TextBlock Text="Purchase orders will appear here when you create orders for your suppliers."
                                                       FontSize="14"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300" />
                                            <Button Classes="primary-button"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,8,0,0"
                                                    Command="{Binding OpenAddModalCommand}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                              Width="16" Height="16"
                                                              Foreground="White" />
                                                    <TextBlock Text="New Order" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Panel>
                            </ScrollViewer>
                        </Grid>
                    </ScrollViewer>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="3"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:PurchaseOrdersPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            </Grid>
        </Grid>

        <!-- Filter Modal Overlay -->
        <Border Background="#80000000"
                IsVisible="{Binding IsFilterModalOpen}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Width="480"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Filter Purchase Orders"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1"
                                    Classes="icon-button"
                                    Command="{Binding CloseFilterModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                          Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" Padding="24">
                        <StackPanel Spacing="16">
                            <!-- Date Range -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="From Date"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <CalendarDatePicker SelectedDate="{Binding StartDate}"
                                                        HorizontalAlignment="Stretch" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="To Date"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <CalendarDatePicker SelectedDate="{Binding EndDate}"
                                                        HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Grid>

                            <!-- Supplier -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Supplier"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding SupplierOptions}"
                                          SelectedItem="{Binding FilterSupplier}"
                                          Classes="form-combobox"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Status"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox ItemsSource="{Binding StatusOptions}"
                                          SelectedItem="{Binding FilterStatus}"
                                          Classes="form-combobox"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2"
                            Padding="24,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                            <Button Grid.Column="0"
                                    Content="Clear Filters"
                                    Classes="secondary-button"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ClearFiltersCommand}" />
                            <Button Grid.Column="2"
                                    Content="Cancel"
                                    Classes="secondary-button"
                                    Margin="0,0,12,0"
                                    Command="{Binding CloseFilterModalCommand}" />
                            <Button Grid.Column="3"
                                    Content="Apply Filters"
                                    Classes="primary-button"
                                    Command="{Binding ApplyFiltersCommand}" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Tab Button -->
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="Margin" Value="0,0,4,0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.tab-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.tab-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.tab-button TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.tab-button:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style Selector="Button.tab-button.active">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.tab-button.active TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>
        <Style Selector="Button.icon-button.success:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#DCFCE7" />
        </Style>
        <Style Selector="Button.icon-button.success:pointerover PathIcon">
            <Setter Property="Foreground" Value="#22C55E" />
        </Style>
        <Style Selector="Button.icon-button.info:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#DBEAFE" />
        </Style>
        <Style Selector="Button.icon-button.info:pointerover PathIcon">
            <Setter Property="Foreground" Value="#3B82F6" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
