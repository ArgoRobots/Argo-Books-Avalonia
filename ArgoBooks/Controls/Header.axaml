<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
             x:Class="ArgoBooks.Controls.Header"
             x:DataType="vm:HeaderViewModel">

    <Design.DataContext>
        <vm:HeaderViewModel />
    </Design.DataContext>

    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="24,12">
        <Grid ColumnDefinitions="Auto,*,Auto">
            <!-- Page Title / Breadcrumbs -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        IsVisible="{Binding ShowPageTitle}">
                <TextBlock Text="{Binding PageTitle}"
                           Classes="h3"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding PageSubtitle}"
                           Classes="body2"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           IsVisible="{Binding PageSubtitle, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
            </StackPanel>

            <!-- Global Search -->
            <Border Grid.Column="1"
                    Background="{DynamicResource InputBackgroundBrush}"
                    BorderBrush="{DynamicResource InputBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusMd}"
                    MaxWidth="400"
                    MinWidth="200"
                    Margin="16,0"
                    HorizontalAlignment="Left"
                    IsVisible="{Binding ShowSearch}">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Search Icon -->
                    <PathIcon Grid.Column="0"
                              Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                              Width="16" Height="16"
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="12,0,8,0" />

                    <!-- Search Input -->
                    <TextBox Grid.Column="1"
                             Watermark="{Binding SearchPlaceholder}"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="0,8,8,8"
                             Text="{Binding SearchQuery, Mode=TwoWay}">
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.KeyBindings>
                    </TextBox>

                    <!-- Keyboard Shortcut Hint -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            CornerRadius="{StaticResource RadiusSm}"
                            Padding="6,2"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            IsVisible="{Binding ShowSearchHint}">
                        <TextBlock Text="âŒ˜K"
                                   Classes="caption"
                                   Foreground="{DynamicResource TextTertiaryBrush}" />
                    </Border>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="4">
                <!-- Quick Actions -->
                <Button Classes="icon"
                        Width="36" Height="36"
                        Command="{Binding OpenQuickActionsCommand}"
                        ToolTip.Tip="Quick Actions (Ctrl+K)"
                        IsVisible="{Binding ShowQuickActions}">
                    <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                              Width="20" Height="20"
                              Foreground="{DynamicResource TextSecondaryBrush}" />
                </Button>

                <!-- Help -->
                <Button Classes="icon"
                        Width="36" Height="36"
                        Command="{Binding OpenHelpCommand}"
                        ToolTip.Tip="Help"
                        IsVisible="{Binding ShowHelp}">
                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"
                              Width="20" Height="20"
                              Foreground="{DynamicResource TextSecondaryBrush}" />
                </Button>

                <!-- Notifications -->
                <Button Classes="icon"
                        Width="36" Height="36"
                        Command="{Binding OpenNotificationsCommand}"
                        ToolTip.Tip="Notifications"
                        IsVisible="{Binding ShowNotifications}">
                    <Panel>
                        <PathIcon Data="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"
                                  Width="20" Height="20"
                                  Foreground="{DynamicResource TextSecondaryBrush}" />
                        <!-- Notification Badge -->
                        <Border Background="{DynamicResource DangerBrush}"
                                MinWidth="16" Height="16"
                                CornerRadius="8"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,2,2,0"
                                Padding="4,0"
                                IsVisible="{Binding HasUnreadNotifications}">
                            <TextBlock Text="{Binding UnreadNotificationCount}"
                                       Classes="caption"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding ShowNotificationCount}" />
                        </Border>
                    </Panel>
                </Button>

                <!-- Settings -->
                <Button Classes="icon"
                        Width="36" Height="36"
                        Command="{Binding OpenSettingsCommand}"
                        ToolTip.Tip="Settings"
                        IsVisible="{Binding ShowSettings}">
                    <PathIcon Data="M19.14 12.94c.04-.31.06-.63.06-.94 0-.31-.02-.63-.06-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.04.31-.06.63-.06.94s.02.63.06.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"
                              Width="20" Height="20"
                              Foreground="{DynamicResource TextSecondaryBrush}" />
                </Button>

                <!-- Separator -->
                <Border Width="1"
                        Height="24"
                        Background="{DynamicResource BorderBrush}"
                        Margin="8,0"
                        VerticalAlignment="Center"
                        IsVisible="{Binding ShowUserMenu}" />

                <!-- User Menu -->
                <Button Classes="icon"
                        MinWidth="36" Height="36"
                        Padding="8,0"
                        Command="{Binding OpenUserMenuCommand}"
                        ToolTip.Tip="User Menu"
                        IsVisible="{Binding ShowUserMenu}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <!-- User Avatar -->
                        <Border Width="28" Height="28"
                                CornerRadius="14"
                                Background="{DynamicResource PrimaryBrush}"
                                ClipToBounds="True">
                            <Panel>
                                <!-- Default Avatar Icon -->
                                <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"
                                          Width="20" Height="20"
                                          Foreground="White"
                                          IsVisible="{Binding !HasUserAvatar}" />
                                <!-- User Avatar Image -->
                                <Image Source="{Binding UserAvatarSource}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding HasUserAvatar}" />
                                <!-- User Initials -->
                                <TextBlock Text="{Binding UserInitials}"
                                           Classes="caption"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding ShowUserInitials}" />
                            </Panel>
                        </Border>

                        <!-- User Name (optional, shown if space allows) -->
                        <TextBlock Text="{Binding UserDisplayName}"
                                   Classes="body2"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding ShowUserName}" />

                        <!-- Dropdown Arrow -->
                        <PathIcon Data="M7 10l5 5 5-5z"
                                  Width="16" Height="16"
                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                  IsVisible="{Binding ShowUserName}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
