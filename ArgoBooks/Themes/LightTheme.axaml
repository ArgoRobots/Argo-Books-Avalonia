<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Argo Books Light Theme
        Theme-specific colors for light mode.
    -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondaryColor">#F9FAFB</Color>
    <Color x:Key="BackgroundTertiaryColor">#F3F4F6</Color>

    <!-- Surface Colors (cards, panels) -->
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="SurfaceHoverColor">#F9FAFB</Color>
    <Color x:Key="SurfacePressedColor">#F3F4F6</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#E5E7EB</Color>
    <Color x:Key="BorderLightColor">#F3F4F6</Color>
    <Color x:Key="BorderDarkColor">#D1D5DB</Color>
    <Color x:Key="BorderHoverColor">#9CA3AF</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#111827</Color>
    <Color x:Key="TextSecondaryColor">#6B7280</Color>
    <Color x:Key="TextTertiaryColor">#9CA3AF</Color>
    <Color x:Key="TextDisabledColor">#D1D5DB</Color>
    <Color x:Key="TextInverseColor">#FFFFFF</Color>

    <!-- Sidebar Colors -->
    <Color x:Key="SidebarBackgroundColor">#1F2937</Color>
    <Color x:Key="SidebarTextColor">#F9FAFB</Color>
    <Color x:Key="SidebarTextMutedColor">#9CA3AF</Color>
    <Color x:Key="SidebarHoverColor">#374151</Color>
    <Color x:Key="SidebarActiveColor">#2563EB</Color>

    <!-- Header Colors -->
    <Color x:Key="HeaderBackgroundColor">#FFFFFF</Color>
    <Color x:Key="HeaderBorderColor">#E5E7EB</Color>

    <!-- Input Colors -->
    <Color x:Key="InputBackgroundColor">#FFFFFF</Color>
    <Color x:Key="InputBorderColor">#D1D5DB</Color>
    <Color x:Key="InputFocusBorderColor">#2563EB</Color>
    <Color x:Key="InputPlaceholderColor">#9CA3AF</Color>

    <!-- Table/DataGrid Colors -->
    <Color x:Key="TableHeaderBackgroundColor">#F9FAFB</Color>
    <Color x:Key="TableRowAlternateColor">#F9FAFB</Color>
    <Color x:Key="TableRowHoverColor">#F3F4F6</Color>
    <Color x:Key="TableRowSelectedColor">#DBEAFE</Color>

    <!-- Shadow/Overlay Colors -->
    <Color x:Key="ShadowColor">#1A000000</Color>
    <Color x:Key="OverlayColor">#80000000</Color>
    <Color x:Key="LoadingOverlayColor">#E6FFFFFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiaryColor}" />

    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}" />
    <SolidColorBrush x:Key="SurfacePressedBrush" Color="{StaticResource SurfacePressedColor}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDarkColor}" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}" />
    <SolidColorBrush x:Key="TextInverseBrush" Color="{StaticResource TextInverseColor}" />

    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}" />
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}" />
    <SolidColorBrush x:Key="SidebarTextMutedBrush" Color="{StaticResource SidebarTextMutedColor}" />
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}" />
    <SolidColorBrush x:Key="SidebarActiveBrush" Color="{StaticResource SidebarActiveColor}" />

    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}" />
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="{StaticResource HeaderBorderColor}" />

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorderColor}" />
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="{StaticResource InputFocusBorderColor}" />
    <SolidColorBrush x:Key="InputPlaceholderBrush" Color="{StaticResource InputPlaceholderColor}" />

    <SolidColorBrush x:Key="TableHeaderBackgroundBrush" Color="{StaticResource TableHeaderBackgroundColor}" />
    <SolidColorBrush x:Key="TableRowAlternateBrush" Color="{StaticResource TableRowAlternateColor}" />
    <SolidColorBrush x:Key="TableRowHoverBrush" Color="{StaticResource TableRowHoverColor}" />
    <SolidColorBrush x:Key="TableRowSelectedBrush" Color="{StaticResource TableRowSelectedColor}" />

    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}" />
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}" />
    <SolidColorBrush x:Key="LoadingOverlayBrush" Color="{StaticResource LoadingOverlayColor}" />

</ResourceDictionary>
