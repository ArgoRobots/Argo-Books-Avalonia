<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="500"
             x:Class="ArgoBooks.Modals.LoginModal"
             x:DataType="vm:LoginModalViewModel">

    <Design.DataContext>
        <vm:LoginModalViewModel />
    </Design.DataContext>

    <Panel IsVisible="{Binding IsOpen}">
        <!-- Modal Backdrop -->
        <Border Background="#80000000"
                PointerPressed="Backdrop_PointerPressed">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                </Transitions>
            </Border.Transitions>
        </Border>

        <!-- Modal Container -->
        <Border x:Name="ModalBorder"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000"
                Focusable="True"
                KeyDown="Modal_KeyDown"
                Opacity="0"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
            </Border.RenderTransform>
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Border.Transitions>

            <StackPanel Margin="32,28">
                <!-- Account Info -->
                <StackPanel HorizontalAlignment="Center" Spacing="12" Margin="0,0,0,24">
                    <!-- Account Avatar -->
                    <Border Width="64" Height="64"
                            CornerRadius="12"
                            HorizontalAlignment="Center">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding AccountColor}" Opacity="0.15" />
                        </Border.Background>
                        <TextBlock Text="{Binding AccountInitials}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{Binding AccountColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Border>
                    <TextBlock Text="{Binding AccountName}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding AccountDescription}"
                               FontSize="13"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Spacing="8" Margin="0,0,0,20">
                    <TextBlock Text="{loc:Loc Password}"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,0">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding Password, Mode=TwoWay}"
                                     PasswordChar="â€¢"
                                     Watermark="{loc:Loc 'Enter your password'}"
                                     Classes="password-input"
                                     x:Name="PasswordBox" />
                            <Button Grid.Column="1"
                                    Classes="icon-button-small"
                                    Command="{Binding TogglePasswordVisibilityCommand}">
                                <PathIcon Data="{Binding PasswordVisibilityIcon}"
                                          Width="16" Height="16" />
                            </Button>
                        </Grid>
                    </Border>
                    <TextBlock Text="{Binding ErrorMessage}"
                               FontSize="12"
                               Foreground="#ef4444"
                               IsVisible="{Binding HasError}" />
                </StackPanel>

                <!-- Remember Me -->
                <CheckBox IsChecked="{Binding RememberMe}"
                          Margin="0,0,0,24">
                    <TextBlock Text="{loc:Loc 'Remember me on this device'}"
                               FontSize="13"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                </CheckBox>

                <!-- Buttons -->
                <StackPanel Spacing="12">
                    <Button Classes="primary-button"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Command="{Binding LoginCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"
                                      Width="16" Height="16"
                                      IsVisible="{Binding !IsLoading}" />
                            <TextBlock Text="{Binding LoginButtonText}" />
                        </StackPanel>
                    </Button>
                    <Button Classes="secondary-button"
                            Content="{loc:Loc Cancel}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Command="{Binding CancelCommand}" />
                </StackPanel>

                <!-- Forgot Password Link -->
                <Button Classes="link-button"
                        Content="{loc:Loc 'Forgot password?'}"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0"
                        Command="{Binding ForgotPasswordCommand}" />
            </StackPanel>
        </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Password Input -->
        <Style Selector="TextBox.password-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="Padding" Value="0,12" />
        </Style>
        <Style Selector="TextBox.password-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>


    </UserControl.Styles>
</UserControl>
