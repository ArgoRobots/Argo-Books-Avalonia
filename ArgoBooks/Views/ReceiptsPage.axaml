<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ReceiptsPage"
             x:DataType="vm:ReceiptsPageViewModel"
             DragDrop.AllowDrop="True">

    <UserControl.Resources>
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ReceiptsPageViewModel />
    </Design.DataContext>

    <Panel>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid RowDefinitions="Auto,*" Margin="24">
                <!-- Statistics Cards Row -->
                <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                    <controls:StatCard Label="{loc:Loc 'Total Receipts'}"
                                       Value="{Binding TotalReceipts}"
                                       Icon="M18 17H6v-2h12v2zm0-4H6v-2h12v2zm0-4H6V7h12v2zM3 22l1.5-1.5L6 22l1.5-1.5L9 22l1.5-1.5L12 22l1.5-1.5L15 22l1.5-1.5L18 22l1.5-1.5L21 22V2l-1.5 1.5L18 2l-1.5 1.5L15 2l-1.5 1.5L12 2l-1.5 1.5L9 2 7.5 3.5 6 2 4.5 3.5 3 2v20z"
                                       IconColor="Primary" />
                    <controls:StatCard Label="{loc:Loc 'Expense Receipts'}"
                                       Value="{Binding ExpenseReceipts}"
                                       Icon="M20 12l-1.41-1.41L13 16.17V4h-2v12.17l-5.58-5.59L4 12l8 8 8-8z"
                                       IconColor="Danger" />
                    <controls:StatCard Label="{loc:Loc 'Revenue Receipts'}"
                                       Value="{Binding RevenueReceipts}"
                                       Icon="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"
                                       IconColor="Success" />
                    <controls:StatCard Label="{loc:Loc 'AI Scanned'}"
                                       Value="{Binding AiScannedReceipts}"
                                       Icon="M20 9V7c0-1.1-.9-2-2-2h-3c0-1.66-1.34-3-3-3S9 3.34 9 5H6c-1.1 0-2 .9-2 2v2c-1.66 0-3 1.34-3 3s1.34 3 3 3v4c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2v-4c1.66 0 3-1.34 3-3s-1.34-3-3-3zM7.5 11.5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5S9.83 13 9 13s-1.5-.67-1.5-1.5zM16 17H8v-2h8v2zm-1-4c-.83 0-1.5-.67-1.5-1.5S14.17 10 15 10s1.5.67 1.5 1.5S15.83 13 15 13z"
                                       IconColor="Info" />
                </controls:StatCardsRow>

                <!-- Main Content Card (Row 1) -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        SizeChanged="OnHeaderSizeChanged">

                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header with Title, Search and Buttons -->
                        <Border Grid.Row="0"
                                Padding="{Binding ResponsiveHeader.HeaderPadding}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="*,Auto">
                                <!-- Title and Selection Info -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                    <TextBlock Text="{loc:Loc 'Receipt Archive'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <!-- Selection Count Badge -->
                                    <Border Background="{DynamicResource PrimaryLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,4"
                                            IsVisible="{Binding HasSelectedReceipts}">
                                        <TextBlock Foreground="{DynamicResource PrimaryBrush}"
                                                   FontSize="12"
                                                   FontWeight="Medium">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} selected">
                                                    <Binding Path="SelectedCount" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>

                                <!-- Action Buttons (Right aligned) -->
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="{Binding ResponsiveHeader.HeaderSpacing}">
                                    <!-- Search Box -->
                                    <Border Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="6"
                                            Width="{Binding ResponsiveHeader.SearchBoxWidth}">
                                        <Grid ColumnDefinitions="Auto,*">
                                            <PathIcon Grid.Column="0"
                                                      Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                      Width="16" Height="16"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Margin="{Binding ResponsiveHeader.SearchIconMargin}" />
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                                     Watermark="{loc:Loc 'Search receipts...'}"
                                                     Classes="search-input" />
                                        </Grid>
                                    </Border>

                                    <!-- Filter Button -->
                                    <Button Classes="secondary-button"
                                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                            Command="{Binding OpenFilterModalCommand}"
                                            ToolTip.Tip="{loc:Loc 'Filter'}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                      Width="16" Height="16" />
                                            <TextBlock Text="{loc:Loc 'Filter'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                        </StackPanel>
                                    </Button>

                                    <!-- AI Scan Button -->
                                    <Button x:Name="AiScanButton"
                                            Classes="primary-button"
                                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                            Click="OnAiScanButtonClick"
                                            ToolTip.Tip="{loc:Loc 'AI Scan Receipt'}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm4 18H6V4h7v5h5v11zm-9.18-6.95L7.4 14.46 10.94 18l5.66-5.66-1.41-1.41-4.24 4.24-2.13-2.12z"
                                                      Width="16" Height="16"
                                                      Foreground="White" />
                                            <TextBlock Text="{loc:Loc 'AI Scan Receipt'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Export Selected Button -->
                                    <Button Classes="primary-button"
                                            Classes.compact="{Binding ResponsiveHeader.IsCompactMode}"
                                            Classes.medium="{Binding ResponsiveHeader.IsMediumMode}"
                                            Command="{Binding ExportSelectedCommand}"
                                            IsEnabled="{Binding HasSelectedReceipts}"
                                            ToolTip.Tip="{loc:Loc 'Export Selected'}">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <PathIcon Data="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"
                                                      Width="16" Height="16"
                                                      Foreground="White" />
                                            <TextBlock Text="{loc:Loc 'Export Selected'}" IsVisible="{Binding ResponsiveHeader.ShowButtonText}" />
                                        </StackPanel>
                                    </Button>

                                    <!-- View Toggle -->
                                    <Border Background="{DynamicResource SurfaceAltBrush}"
                                            CornerRadius="6"
                                            Padding="4">
                                        <StackPanel Orientation="Horizontal" Spacing="2">
                                            <Button Classes="view-toggle-button"
                                                    Classes.selected="{Binding IsGridView}"
                                                    Command="{Binding SetGridViewCommand}">
                                                <PathIcon Data="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"
                                                          Width="16" Height="16" />
                                            </Button>
                                            <Button Classes="view-toggle-button"
                                                    Classes.selected="{Binding IsListView}"
                                                    Command="{Binding SetListViewCommand}">
                                                <PathIcon Data="M4 14h4v-4H4v4zm0 5h4v-4H4v4zM4 9h4V5H4v4zm5 5h12v-4H9v4zm0 5h12v-4H9v4zM9 5v4h12V5H9z"
                                                          Width="16" Height="16" />
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Receipt Grid/List Content -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <Panel Margin="24">
                                <!-- Grid View -->
                                <ItemsControl ItemsSource="{Binding Receipts}"
                                              IsVisible="{Binding IsGridView}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:ReceiptDisplayItem">
                                            <Border Width="260"
                                                    Margin="0,0,16,16"
                                                    Background="{DynamicResource SurfaceAltBrush}"
                                                    CornerRadius="8"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    Cursor="Hand"
                                                    PointerPressed="OnReceiptCardPressed">
                                                <Border.Styles>
                                                    <Style Selector="Border:pointerover">
                                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                                                    </Style>
                                                </Border.Styles>
                                                <Grid RowDefinitions="Auto,Auto">
                                                    <!-- File Preview Area -->
                                                    <Border Grid.Row="0"
                                                            Height="140"
                                                            Background="{DynamicResource SurfaceBrush}"
                                                            CornerRadius="8,8,0,0"
                                                            ClipToBounds="True">
                                                        <Panel>
                                                            <!-- Receipt Image (if available) -->
                                                            <Image Source="{Binding ImagePath, Converter={x:Static local:BoolConverters.ToImageSource}}"
                                                                   Stretch="UniformToFill"
                                                                   IsVisible="{Binding HasImage}" />

                                                            <!-- File Type Icon fallback (center) - shown when no image -->
                                                            <Panel HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding !HasImage}">
                                                                <!-- Image Icon -->
                                                                <PathIcon Data="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"
                                                                          Width="40" Height="40"
                                                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                                                          IsVisible="{Binding IsImage}" />
                                                                <!-- PDF Icon -->
                                                                <PathIcon Data="M20 2H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-8.5 7.5c0 .83-.67 1.5-1.5 1.5H9v2H7.5V7H10c.83 0 1.5.67 1.5 1.5v1zm5 2c0 .83-.67 1.5-1.5 1.5h-2.5V7H15c.83 0 1.5.67 1.5 1.5v3zm4-3H19v1h1.5V11H19v2h-1.5V7h3v1.5zM9 9.5h1v-1H9v1zM4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm10 5.5h1v-3h-1v3z"
                                                                          Width="40" Height="40"
                                                                          Foreground="#DC2626"
                                                                          IsVisible="{Binding IsPdf}" />
                                                            </Panel>

                                                            <!-- Checkbox (top-left) -->
                                                            <CheckBox IsChecked="{Binding IsSelected}"
                                                                      HorizontalAlignment="Left"
                                                                      VerticalAlignment="Top"
                                                                      Margin="12,12,0,0" />

                                                            <!-- AI Badge (top-right) -->
                                                            <Border Background="#F3E8FF"
                                                                    CornerRadius="4"
                                                                    Padding="6,3"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,12,12,0"
                                                                    IsVisible="{Binding IsAiScanned}">
                                                                <TextBlock Text="{loc:Loc 'AI'}"
                                                                           FontSize="10"
                                                                           FontWeight="Bold"
                                                                           Foreground="#9333EA" />
                                                            </Border>
                                                        </Panel>
                                                    </Border>

                                                    <!-- Receipt Details -->
                                                    <StackPanel Grid.Row="1" Margin="16">
                                                        <!-- ID and Date Row -->
                                                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                                                            <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding DateFormatted}"
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource TextTertiaryBrush}" />
                                                        </Grid>

                                                        <!-- Vendor Name -->
                                                        <TextBlock Text="{Binding Vendor}"
                                                                   FontSize="13"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="0,0,0,8" />

                                                        <!-- Type Badge and Amount Row -->
                                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                                            <!-- Type Badge -->
                                                            <Border CornerRadius="4"
                                                                    Padding="8,4">
                                                                <Border.Background>
                                                                    <MultiBinding>
                                                                        <Binding Path="IsExpense" />
                                                                    </MultiBinding>
                                                                </Border.Background>
                                                                <Border.Styles>
                                                                    <Style Selector="Border">
                                                                        <Setter Property="Background" Value="#DCFCE7" />
                                                                    </Style>
                                                                </Border.Styles>
                                                                <Panel>
                                                                    <Border Background="#FEE2E2"
                                                                            IsVisible="{Binding IsExpense}"
                                                                            CornerRadius="4"
                                                                            Margin="-8,-4"
                                                                            Padding="8,4">
                                                                        <TextBlock Text="{loc:Loc 'Expense'}"
                                                                                   FontSize="11"
                                                                                   FontWeight="Medium"
                                                                                   Foreground="#DC2626" />
                                                                    </Border>
                                                                    <Border Background="#DCFCE7"
                                                                            IsVisible="{Binding IsRevenue}"
                                                                            CornerRadius="4"
                                                                            Margin="-8,-4"
                                                                            Padding="8,4">
                                                                        <TextBlock Text="{loc:Loc 'Revenue'}"
                                                                                   FontSize="11"
                                                                                   FontWeight="Medium"
                                                                                   Foreground="#22C55E" />
                                                                    </Border>
                                                                </Panel>
                                                            </Border>

                                                            <!-- Amount -->
                                                            <TextBlock Grid.Column="2"
                                                                       Text="{Binding AmountFormatted}"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center" />
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- List View (Resizable Table) -->
                                <Panel IsVisible="{Binding IsListView}">
                                    <ScrollViewer x:Name="HorizontalTableScroll"
                                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                                  VerticalScrollBarVisibility="Disabled">
                                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                                            <!-- Table Header -->
                                            <Border Grid.Row="0"
                                                    Background="{DynamicResource SurfaceAltBrush}"
                                                    Padding="24,0"
                                                    MinHeight="40"
                                                    PointerPressed="OnTableHeaderPointerPressed">
                                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                                    <!-- Receipt # -->
                                                    <Panel Width="{Binding ColumnWidths.IdColumnWidth}" IsVisible="{Binding ShowIdColumn}">
                                                        <TextBlock Text="{loc:Loc 'Receipt #'}" FontSize="12" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                                   Margin="8,12,8,12" />
                                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        <controls:ColumnResizeGripper ColumnName="Id" ColumnWidths="{Binding ColumnWidths}"
                                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>
                                                    <!-- Vendor -->
                                                    <Panel Width="{Binding ColumnWidths.VendorColumnWidth}" IsVisible="{Binding ShowVendorColumn}">
                                                        <TextBlock Text="{loc:Loc 'Vendor'}" FontSize="12" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                                   Margin="8,12,8,12" />
                                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        <controls:ColumnResizeGripper ColumnName="Vendor" ColumnWidths="{Binding ColumnWidths}"
                                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>
                                                    <!-- Date -->
                                                    <Panel Width="{Binding ColumnWidths.DateColumnWidth}" IsVisible="{Binding ShowDateColumn}">
                                                        <TextBlock Text="{loc:Loc 'Date'}" FontSize="12" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                                   Margin="8,12,8,12" />
                                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        <controls:ColumnResizeGripper ColumnName="Date" ColumnWidths="{Binding ColumnWidths}"
                                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>
                                                    <!-- Type -->
                                                    <Panel Width="{Binding ColumnWidths.TypeColumnWidth}" IsVisible="{Binding ShowTypeColumn}">
                                                        <TextBlock Text="{loc:Loc 'Type'}" FontSize="12" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                                   Margin="8,12,8,12" />
                                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        <controls:ColumnResizeGripper ColumnName="Type" ColumnWidths="{Binding ColumnWidths}"
                                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>
                                                    <!-- Amount -->
                                                    <Panel Width="{Binding ColumnWidths.AmountColumnWidth}" IsVisible="{Binding ShowAmountColumn}">
                                                        <TextBlock Text="{loc:Loc 'Amount'}" FontSize="12" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                                   Margin="8,12,8,12" />
                                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        <controls:ColumnResizeGripper ColumnName="Amount" ColumnWidths="{Binding ColumnWidths}"
                                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                    </Panel>
                                                    <!-- Actions (Fixed) -->
                                                    <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                                        <TextBlock Text="{loc:Loc 'Actions'}" FontSize="12" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                                   HorizontalAlignment="Left"
                                                                   Margin="8,12,8,12" />
                                                    </Panel>
                                                </StackPanel>
                                            </Border>

                                            <!-- Table Content (scrollable vertically only) -->
                                            <ScrollViewer Grid.Row="1"
                                                          VerticalScrollBarVisibility="Auto"
                                                          HorizontalScrollBarVisibility="Disabled">
                                                <Panel>
                                                    <!-- Receipts List -->
                                                    <ItemsControl ItemsSource="{Binding Receipts}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate DataType="vm:ReceiptDisplayItem">
                                                                <Border Padding="24,0"
                                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                                        BorderThickness="0,0,0,1"
                                                                        MinHeight="56">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <!-- Receipt # -->
                                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowIdColumn}">
                                                                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="8,0">
                                                                                <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                                                                           FontSize="14"
                                                                                           FontWeight="SemiBold"
                                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                           TextTrimming="CharacterEllipsis" />
                                                                                <!-- AI Badge -->
                                                                                <Border Background="#F3E8FF"
                                                                                        CornerRadius="4"
                                                                                        Padding="6,2"
                                                                                        IsVisible="{Binding IsAiScanned}">
                                                                                    <TextBlock Text="{loc:Loc 'AI'}"
                                                                                               FontSize="10"
                                                                                               FontWeight="Bold"
                                                                                               Foreground="#9333EA" />
                                                                                </Border>
                                                                            </StackPanel>
                                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                                        </Panel>

                                                                        <!-- Vendor -->
                                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.VendorColumnWidth}"
                                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowVendorColumn}">
                                                                            <TextBlock Text="{Binding Vendor}"
                                                                                       FontSize="14"
                                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                       VerticalAlignment="Center"
                                                                                       TextTrimming="CharacterEllipsis"
                                                                                       Margin="8,0" />
                                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                                        </Panel>

                                                                        <!-- Date -->
                                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowDateColumn}">
                                                                            <TextBlock Text="{Binding DateFormatted}"
                                                                                       FontSize="14"
                                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                       VerticalAlignment="Center"
                                                                                       TextTrimming="CharacterEllipsis"
                                                                                       Margin="8,0" />
                                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                                        </Panel>

                                                                        <!-- Type Badge -->
                                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.TypeColumnWidth}"
                                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowTypeColumn}">
                                                                            <Panel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0">
                                                                                <Border Background="#FEE2E2"
                                                                                        CornerRadius="4"
                                                                                        Padding="8,4"
                                                                                        IsVisible="{Binding IsExpense}">
                                                                                    <TextBlock Text="{loc:Loc 'Expense'}"
                                                                                               FontSize="11"
                                                                                               FontWeight="Medium"
                                                                                               Foreground="#DC2626" />
                                                                                </Border>
                                                                                <Border Background="#DCFCE7"
                                                                                        CornerRadius="4"
                                                                                        Padding="8,4"
                                                                                        IsVisible="{Binding IsRevenue}">
                                                                                    <TextBlock Text="{loc:Loc 'Revenue'}"
                                                                                               FontSize="11"
                                                                                               FontWeight="Medium"
                                                                                               Foreground="#22C55E" />
                                                                                </Border>
                                                                            </Panel>
                                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                                        </Panel>

                                                                        <!-- Amount -->
                                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.AmountColumnWidth}"
                                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ShowAmountColumn}">
                                                                            <TextBlock Text="{Binding AmountFormatted}"
                                                                                       FontSize="14"
                                                                                       FontWeight="Medium"
                                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                                       VerticalAlignment="Center"
                                                                                       TextTrimming="CharacterEllipsis"
                                                                                       Margin="8,0" />
                                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                                        </Panel>

                                                                        <!-- Actions -->
                                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                                            <StackPanel Orientation="Horizontal"
                                                                                        HorizontalAlignment="Right"
                                                                                        Spacing="4"
                                                                                        Margin="8,0">
                                                                                <Button Classes="icon-button"
                                                                                        ToolTip.Tip="{loc:Loc 'Preview'}"
                                                                                        Command="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).OpenPreviewCommand}"
                                                                                        CommandParameter="{Binding}">
                                                                                    <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                                              Width="16" Height="16" />
                                                                                </Button>
                                                                                <Button Classes="icon-button"
                                                                                        ToolTip.Tip="{loc:Loc 'Download'}"
                                                                                        Command="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).DownloadReceiptCommand}"
                                                                                        CommandParameter="{Binding}">
                                                                                    <PathIcon Data="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"
                                                                                              Width="16" Height="16" />
                                                                                </Button>
                                                                                <Button Classes="icon-button danger"
                                                                                        ToolTip.Tip="{loc:Loc 'Delete'}"
                                                                                        Command="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).DeleteReceiptCommand}"
                                                                                        CommandParameter="{Binding}">
                                                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                                              Width="16" Height="16" />
                                                                                </Button>
                                                                            </StackPanel>
                                                                        </Panel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Panel>
                                            </ScrollViewer>
                                        </Grid>
                                    </ScrollViewer>
                                </Panel>

                                <!-- Empty State (shown when no receipts) -->
                                <Border Padding="40"
                                        IsVisible="{Binding Receipts.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M18 17H6v-2h12v2zm0-4H6v-2h12v2zm0-4H6V7h12v2zM3 22l1.5-1.5L6 22l1.5-1.5L9 22l1.5-1.5L12 22l1.5-1.5L15 22l1.5-1.5L18 22l1.5-1.5L21 22V2l-1.5 1.5L18 2l-1.5 1.5L15 2l-1.5 1.5L12 2l-1.5 1.5L9 2 7.5 3.5 6 2 4.5 3.5 3 2v20z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="{loc:Loc 'No receipts found'}"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="{loc:Loc 'Receipts from transactions will appear here. You can also scan receipts using AI.'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="350" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding AiScanReceiptCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm4 18H6V4h7v5h5v11zm-9.18-6.95L7.4 14.46 10.94 18l5.66-5.66-1.41-1.41-4.24 4.24-2.13-2.12z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="{loc:Loc 'Scan Receipt'}" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>

                        <!-- Pagination Footer -->
                        <Border Grid.Row="2"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12"
                                CornerRadius="0,0,11,11"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Rows per page selector -->
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="8"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding PaginationText}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBlock Text="|"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="8,0" />
                                    <TextBlock Text="{loc:Loc 'Per page:'}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                              SelectedItem="{Binding PageSize}"
                                              Classes="page-size-combobox"
                                              Width="70" />
                                </StackPanel>

                                <!-- Page Numbers -->
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="4"
                                            IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                    <!-- Previous Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToPreviousPageCommand}"
                                            IsEnabled="{Binding CanGoToPreviousPage}">
                                        <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                                  Width="16" Height="16" />
                                    </Button>

                                    <!-- Page Number Buttons -->
                                    <ItemsControl ItemsSource="{Binding PageNumbers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="4" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Classes="pagination-button"
                                                        Content="{Binding}"
                                                        Command="{Binding $parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).GoToPageCommand}"
                                                        CommandParameter="{Binding}">
                                                    <controls:PaginationHelper.IsActivePage>
                                                        <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                            <Binding />
                                                            <Binding Path="$parent[ItemsControl].((vm:ReceiptsPageViewModel)DataContext).CurrentPage" />
                                                        </MultiBinding>
                                                    </controls:PaginationHelper.IsActivePage>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Next Button -->
                                    <Button Classes="pagination-button"
                                            Command="{Binding GoToNextPageCommand}"
                                            IsEnabled="{Binding CanGoToNextPage}">
                                        <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                                  Width="16" Height="16" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnMenuX}"
                                    MenuY="{Binding ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc 'Receipt #'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowVendorColumn}" Content="{loc:Loc 'Vendor'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc 'Date'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTypeColumn}" Content="{loc:Loc 'Type'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="{loc:Loc 'Amount'}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>

    <!-- Drag-Drop Overlay -->
    <Border Background="#E0FFFFFF"
            IsVisible="{Binding IsDragOver}"
            IsHitTestVisible="False">
        <Border Background="{DynamicResource PrimaryLightBrush}"
                BorderBrush="{DynamicResource PrimaryBrush}"
                BorderThickness="3"
                CornerRadius="16"
                Margin="48"
                Padding="48">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16">
                <Border Width="80" Height="80"
                        CornerRadius="40"
                        Background="White"
                        HorizontalAlignment="Center">
                    <PathIcon Data="M9 11.75c-.69 0-1.25.56-1.25 1.25s.56 1.25 1.25 1.25 1.25-.56 1.25-1.25-.56-1.25-1.25-1.25zm6 0c-.69 0-1.25.56-1.25 1.25s.56 1.25 1.25 1.25 1.25-.56 1.25-1.25-.56-1.25-1.25-1.25zM12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8 0-.29.02-.58.05-.86 2.36-1.05 4.23-2.98 5.21-5.37C11.07 8.33 14.05 10 17.42 10c.78 0 1.53-.09 2.25-.26.21.71.33 1.47.33 2.26 0 4.41-3.59 8-8 8z"
                              Width="40" Height="40"
                              Foreground="{DynamicResource PrimaryBrush}" />
                </Border>
                <TextBlock Text="{loc:Loc 'Drop receipt to scan'}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{loc:Loc 'Release to analyze with AI'}"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Border>
    </Panel>

    <UserControl.Styles>
        <!-- View Toggle Button (page-specific) -->
        <Style Selector="Button.view-toggle-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.view-toggle-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <Style Selector="Button.view-toggle-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.view-toggle-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <!-- Selected state for view toggle button -->
        <Style Selector="Button.view-toggle-button.selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        </Style>
        <Style Selector="Button.view-toggle-button.selected PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        </Style>
        <Style Selector="Button.view-toggle-button.selected:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
