<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:icons="using:ArgoBooks"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.DepartmentsPage"
             x:DataType="vm:DepartmentsPageViewModel">

    <UserControl.Resources>
        <local:DepartmentColorToBrushConverter x:Key="DepartmentColorToBrushConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:DepartmentsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Departments'}"
                                   Value="{Binding TotalDepartments}"
                                   Icon="{x:Static icons:Icons.Departments}"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Active Departments'}"
                                   Value="{Binding ActiveDepartments}"
                                   Icon="{x:Static icons:Icons.CircleCheck}"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Total Employees'}"
                                   Value="{Binding TotalEmployees}"
                                   Icon="{x:Static icons:Icons.Customers}"
                                   IconColor="Warning" />
                <controls:StatCard Label="{loc:Loc 'New This Month'}"
                                   Value="{Binding NewThisMonth}"
                                   Icon="{x:Static icons:Icons.Add}"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{loc:Loc Departments}"
                                ItemsSource="{Binding Departments}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search departments...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                AddCommand="{Binding OpenAddModalCommand}"
                                AddButtonText="{loc:Loc 'Add Department'}"
                                AddButtonTooltip="{loc:Loc 'Add Department'}"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Departments}"
                                EmptyTitle="{loc:Loc 'No departments found'}"
                                EmptyMessage="{loc:Loc 'Add your first department to organize your company structure.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc Department}" ColumnName="Department" SortProperty="Name"
                                                   ColumnWidth="{Binding ColumnWidths.DepartmentColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDepartmentColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Description}" ColumnName="Description" SortProperty="Description"
                                                   ColumnWidth="{Binding ColumnWidths.DescriptionColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDescriptionColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Employees}" ColumnName="Employees" SortProperty="EmployeeCount"
                                                   ColumnWidth="{Binding ColumnWidths.EmployeesColumnWidth}"
                                                   IsColumnVisible="{Binding ShowEmployeesColumn}"
                                                   SortColumn="{Binding SortColumn}" SortDirection="{Binding SortDirection}"
                                                   SortCommand="{Binding SortByCommand}" ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc Actions}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Departments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:DepartmentDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        MinHeight="56">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Department Name with Icon - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.DepartmentColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ShowDepartmentColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                                    <Border Grid.Column="0" Width="40" Height="40"
                                                            CornerRadius="8"
                                                            Background="{Binding IconColor, Converter={StaticResource DepartmentColorToBrushConverter}}"
                                                            Margin="0,0,12,0">
                                                        <TextBlock Text="{Binding Icon}"
                                                                   FontSize="16"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" />
                                                </Grid>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Description - Simple text cell -->
                                        <table:ArgoTableCell Text="{Binding Description, TargetNullValue='-', FallbackValue='-'}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.DescriptionColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ShowDescriptionColumn}" />

                                        <!-- Employees Badge - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.EmployeesColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ShowEmployeesColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Padding="8,4"
                                                        CornerRadius="4"
                                                        Background="{DynamicResource PrimaryLightBrush}">
                                                    <TextBlock Text="{Binding EmployeeCountDisplay}"
                                                               FontSize="12"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource PrimaryBrush}" />
                                                </Border>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Spacing="4">
                                                    <Button Classes="icon-button"
                                                            ToolTip.Tip="{loc:Loc Edit}"
                                                            Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).OpenEditModalCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                    <Button Classes="icon-button danger"
                                                            ToolTip.Tip="{loc:Loc Delete}"
                                                            Command="{Binding $parent[ItemsControl].((vm:DepartmentsPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                  Width="16" Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}"
                                    ResetCommand="{Binding ResetColumnVisibilityCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowDepartmentColumn}" Content="{loc:Loc Department}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDescriptionColumn}" Content="{loc:Loc Description}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowEmployeesColumn}" Content="{loc:Loc Employees}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
