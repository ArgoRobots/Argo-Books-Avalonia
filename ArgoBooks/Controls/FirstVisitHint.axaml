<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="100"
             x:Class="ArgoBooks.Controls.FirstVisitHint"
             x:DataType="vm:FirstVisitHintViewModel"
             IsVisible="{Binding IsVisible}">

    <Design.DataContext>
        <vm:FirstVisitHintViewModel />
    </Design.DataContext>

    <!-- Floating hint banner -->
    <Border Background="{DynamicResource PrimaryBrush}"
            CornerRadius="8"
            Padding="16,12"
            Margin="24,0,24,24"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            BoxShadow="0 4 16 0 #30000000">

        <Grid ColumnDefinitions="Auto,*,Auto">
            <!-- Info Icon -->
            <Border Grid.Column="0"
                    Width="32" Height="32"
                    CornerRadius="16"
                    Background="#33FFFFFF"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center">
                <PathIcon Data="{x:Static local:Icons.Info}"
                          Width="16" Height="16"
                          Foreground="White" />
            </Border>

            <!-- Hint Text -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                <TextBlock Text="{Binding PageName}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="#CCFFFFFF" />
                <TextBlock Text="{Binding HintText}"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"
                           MaxWidth="400" />
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalAlignment="Center"
                        Margin="12,0,0,0">
                <Button Classes="hint-dismiss"
                        Content="Got it"
                        Command="{Binding DismissCommand}" />
                <Button Classes="hint-link"
                        Content="Don't show hints"
                        Command="{Binding DontShowAgainCommand}" />
            </StackPanel>
        </Grid>
    </Border>

    <UserControl.Styles>
        <Style Selector="Button.hint-dismiss">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.hint-dismiss /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#33FFFFFF" />
        </Style>
        <Style Selector="Button.hint-dismiss:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#55FFFFFF" />
        </Style>

        <Style Selector="Button.hint-link">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#AAFFFFFF" />
            <Setter Property="Padding" Value="8,8" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.hint-link /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.hint-link:pointerover">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Styles>
</UserControl>
