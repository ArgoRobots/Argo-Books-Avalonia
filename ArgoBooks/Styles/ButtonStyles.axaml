<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Argo Books Button Styles
        Various button variants for different use cases.
    -->

    <!-- Primary Button (filled) -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMd}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryDarkBrush}" />
    </Style>
    <Style Selector="Button.primary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryDarkBrush}" />
    </Style>
    <Style Selector="Button.primary:disabled">
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    <Style Selector="Button.primary PathIcon">
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style Selector="Button.primary TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Secondary Button (outlined) -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMd}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="TextBlock.Foreground" Value="White" />
    </Style>
    <Style Selector="Button.secondary:disabled">
        <Setter Property="Opacity" Value="0.5" />
    </Style>

    <!-- Primary Button (page header variant) -->
    <Style Selector="Button.primary-button">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.primary-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
    </Style>
    <Style Selector="Button.primary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>
    <Style Selector="Button.primary-button PathIcon">
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style Selector="Button.primary-button TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Secondary Button (page header variant) -->
    <Style Selector="Button.secondary-button">
        <Setter Property="Background" Value="{DynamicResource SecondaryButtonBgBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.secondary-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SecondaryButtonBgBrush}" />
    </Style>
    <Style Selector="Button.secondary-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
    </Style>

    <!-- Danger Button (for destructive actions) -->
    <Style Selector="Button.danger-button">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.danger-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
    </Style>
    <Style Selector="Button.danger-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ErrorDarkBrush}" />
    </Style>
    <Style Selector="Button.danger-button PathIcon">
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style Selector="Button.danger-button TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Success Button (for positive actions) -->
    <Style Selector="Button.success-button">
        <Setter Property="Background" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.success-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SuccessBrush}" />
    </Style>
    <Style Selector="Button.success-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SuccessDarkBrush}" />
    </Style>

    <!-- Warning Button (for cautionary actions) -->
    <Style Selector="Button.warning-button">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.warning-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}" />
    </Style>
    <Style Selector="Button.warning-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource WarningDarkBrush}" />
    </Style>

    <!-- Text Button (no background, text only) -->
    <Style Selector="Button.text-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.text-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.text-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.text-button:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!-- Ghost Button (no border, subtle) -->
    <Style Selector="Button.ghost">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMd}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.ghost:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
    </Style>
    <Style Selector="Button.ghost:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
    </Style>

    <!-- Icon Button (square, icon only) -->
    <Style Selector="Button.icon">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMd}" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.icon:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
    </Style>
    <Style Selector="Button.icon:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfacePressedBrush}" />
    </Style>

    <!-- Icon Button (modal close button variant) -->
    <Style Selector="Button.icon-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
    </Style>
    <Style Selector="Button.icon-button PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>
    <!-- Icon Button Danger Variant (red on hover) -->
    <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ErrorLightBrush}" />
    </Style>
    <Style Selector="Button.icon-button.danger:pointerover PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
    </Style>

    <!-- Icon Button Small (smaller variant for compact areas) -->
    <Style Selector="Button.icon-button-small">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.icon-button-small /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.icon-button-small:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
    </Style>
    <Style Selector="Button.icon-button-small PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>
    <!-- Icon Button Small Danger Variant (red on hover) -->
    <Style Selector="Button.icon-button-small.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ErrorLightBrush}" />
    </Style>
    <Style Selector="Button.icon-button-small.danger:pointerover PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
    </Style>

    <!-- Link Button (looks like a hyperlink, with underline on hover) -->
    <Style Selector="Button.link">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="MinHeight" Value="0" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.link:pointerover /template/ ContentPresenter">
        <Setter Property="TextBlock.TextDecorations" Value="Underline" />
    </Style>
    <Style Selector="Button.link:pressed /template/ ContentPresenter">
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource PrimaryDarkBrush}" />
    </Style>

    <!-- Compact Primary Button (icon-only, reduced padding and size) -->
    <Style Selector="Button.primary-button.compact">
        <Setter Property="Padding" Value="8,8" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="Button.primary-button.compact StackPanel">
        <Setter Property="Spacing" Value="0" />
    </Style>
    <Style Selector="Button.primary-button.compact PathIcon">
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
    </Style>

    <!-- Compact Secondary Button (icon-only, reduced padding and size) -->
    <Style Selector="Button.secondary-button.compact">
        <Setter Property="Padding" Value="8,8" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="Button.secondary-button.compact StackPanel">
        <Setter Property="Spacing" Value="0" />
    </Style>
    <Style Selector="Button.secondary-button.compact PathIcon">
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
    </Style>

    <!-- Medium Primary Button (smaller text and padding) -->
    <Style Selector="Button.primary-button.medium">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="Button.primary-button.medium PathIcon">
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
    </Style>
    <Style Selector="Button.primary-button.medium StackPanel">
        <Setter Property="Spacing" Value="6" />
    </Style>

    <!-- Medium Secondary Button (smaller text and padding) -->
    <Style Selector="Button.secondary-button.medium">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="Button.secondary-button.medium PathIcon">
        <Setter Property="Width" Value="14" />
        <Setter Property="Height" Value="14" />
    </Style>
    <Style Selector="Button.secondary-button.medium StackPanel">
        <Setter Property="Spacing" Value="6" />
    </Style>

    <!-- Link Button (inline text link, color change on hover) -->
    <Style Selector="Button.link-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.link-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.link-button:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>
    <Style Selector="Button.link-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- Pagination Button -->
    <Style Selector="Button.pagination-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style Selector="Button.pagination-button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{TemplateBinding Background}" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>
    <Style Selector="Button.pagination-button:not(:active):pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
    </Style>
    <Style Selector="Button.pagination-button:disabled">
        <Setter Property="Opacity" Value="0.4" />
    </Style>
    <Style Selector="Button.pagination-button PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>
    <!-- Active page button (uses :active pseudo-class set by PaginationHelper.IsActivePage) -->
    <Style Selector="Button.pagination-button:active /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
    </Style>
    <Style Selector="Button.pagination-button:active">
        <Setter Property="Foreground" Value="White" />
    </Style>

</Styles>
