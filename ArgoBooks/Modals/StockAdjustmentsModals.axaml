<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArgoBooks.Modals.StockAdjustmentsModals"
             x:DataType="vm:StockAdjustmentsModalsViewModel">

    <Panel>
        <!-- Add Adjustment Modal -->
        <Panel IsVisible="{Binding IsAddModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="12" Width="550"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="New Stock Adjustment"
                                           FontSize="18" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="Adjust inventory stock levels"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseAddModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="16">
                            <!-- Inventory Item Selection -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Inventory Item" /><Run Text="*" Foreground="#dc2626" />
                                </TextBlock>
                                <ComboBox ItemsSource="{Binding AvailableInventoryItems}"
                                          SelectedItem="{Binding SelectedInventoryOption}"
                                          Classes="form-combobox"
                                          HorizontalAlignment="Stretch">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding DisplayText}" />
                                                <TextBlock Text="{Binding CurrentStock, StringFormat='(Stock: {0})'}"
                                                           Foreground="{DynamicResource TextTertiaryBrush}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="Please select an inventory item"
                                           FontSize="12" Foreground="#dc2626"
                                           IsVisible="{Binding HasInventoryError}" />
                            </StackPanel>

                            <!-- Adjustment Type -->
                            <StackPanel Spacing="6">
                                <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Adjustment Type" /><Run Text="*" Foreground="#dc2626" />
                                </TextBlock>
                                <ComboBox ItemsSource="{Binding AdjustmentTypes}"
                                          SelectedItem="{Binding AdjustmentType}"
                                          Classes="form-combobox"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Stock Values Row -->
                            <Grid ColumnDefinitions="*,16,*,16,*">
                                <!-- Current Stock -->
                                <StackPanel Grid.Column="0" Spacing="6">
                                    <TextBlock Text="Current Stock" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding CurrentStock}"
                                             IsReadOnly="True"
                                             Classes="form-input"
                                             Background="{DynamicResource SurfaceAltBrush}" />
                                </StackPanel>

                                <!-- Adjustment Quantity -->
                                <StackPanel Grid.Column="2" Spacing="6">
                                    <TextBlock FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <Run Text="Quantity" /><Run Text="*" Foreground="#dc2626" />
                                    </TextBlock>
                                    <TextBox Text="{Binding AdjustmentQuantity, Mode=TwoWay}"
                                             Classes="form-input"
                                             Watermark="Enter quantity" />
                                </StackPanel>

                                <!-- New Stock Level -->
                                <StackPanel Grid.Column="4" Spacing="6">
                                    <TextBlock Text="New Stock" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBox Text="{Binding CalculatedNewStock}"
                                             IsReadOnly="True"
                                             Classes="form-input"
                                             Background="{DynamicResource SurfaceAltBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Reference Number -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Reference Number" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding ReferenceNumber, Mode=TwoWay}"
                                         Classes="form-input"
                                         Watermark="e.g., PO-12345 or RMA-67890" />
                            </StackPanel>

                            <!-- Reason/Notes -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Reason/Notes" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Text="{Binding AdjustmentReason, Mode=TwoWay}"
                                         Classes="form-input"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MinHeight="80"
                                         MaxHeight="120"
                                         Watermark="Enter reason for adjustment..." />
                            </StackPanel>

                            <!-- Error Message -->
                            <TextBlock Text="{Binding AddModalError}"
                                       FontSize="12"
                                       Foreground="#dc2626"
                                       IsVisible="{Binding AddModalError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseAddModalCommand}" />
                            <Button Classes="primary-button" Content="Save Adjustment" Command="{Binding SaveAdjustmentCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- View Details Modal -->
        <Panel IsVisible="{Binding IsViewModalOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="12" Width="500"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Adjustment Details"
                                           FontSize="18" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{Binding ViewingAdjustment.Id}"
                                           FontSize="13"
                                           FontFamily="Consolas, monospace"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseViewModalCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="20">
                            <!-- Type Badge -->
                            <Border Background="{Binding ViewingAdjustment.TypeBackground}"
                                    CornerRadius="6"
                                    Padding="12,8"
                                    HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding ViewingAdjustment.TypeDisplay}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{Binding ViewingAdjustment.TypeColor}" />
                                    <TextBlock Text="{Binding ViewingAdjustment.QuantityDisplay}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="{Binding ViewingAdjustment.QuantityColor}" />
                                </StackPanel>
                            </Border>

                            <!-- Product Info -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Product" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Text="{Binding ViewingAdjustment.ProductName}"
                                           FontSize="16" FontWeight="Medium"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                <TextBlock Text="{Binding ViewingAdjustment.ProductSku}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>

                            <!-- Location -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Location" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Text="{Binding ViewingAdjustment.LocationName}"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                            </StackPanel>

                            <!-- Stock Changes -->
                            <Grid ColumnDefinitions="*,Auto,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Previous Stock" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewingAdjustment.PreviousStock}"
                                               FontSize="20" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                </StackPanel>
                                <PathIcon Grid.Column="1"
                                          Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          Margin="16,0" />
                                <StackPanel Grid.Column="2" Spacing="4">
                                    <TextBlock Text="New Stock" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                    <TextBlock Text="{Binding ViewingAdjustment.NewStock}"
                                               FontSize="20" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Date and Time -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Date &amp; Time" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding ViewingAdjustment.DateDisplay}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{Binding ViewingAdjustment.TimeDisplay}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Reason -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Reason" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Text="{Binding ViewingAdjustment.Reason}"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <!-- User -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Adjusted By" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" />
                                <TextBlock Text="{Binding ViewingAdjustment.UserDisplay}"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <Button Classes="secondary-button" Content="Close" Command="{Binding CloseViewModalCommand}" HorizontalAlignment="Right" />
                    </Border>
                </Grid>
            </Border>
        </Panel>

        <!-- Delete Confirmation Modal -->
        <Panel IsVisible="{Binding IsDeleteConfirmOpen}">
            <Border Background="#80000000" />
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="12" Width="420"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Modal Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Delete Adjustment"
                                       FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding CloseDeleteConfirmCommand}">
                                <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <StackPanel Grid.Row="1" Margin="24" Spacing="16">
                        <!-- Warning Icon -->
                        <Border Width="64" Height="64"
                                CornerRadius="32"
                                Background="#FEE2E2"
                                HorizontalAlignment="Center">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                      Width="32" Height="32"
                                      Foreground="#DC2626" />
                        </Border>

                        <TextBlock Text="Are you sure you want to delete this adjustment?"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />

                        <!-- Adjustment Info -->
                        <Border Background="{DynamicResource SurfaceAltBrush}"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Product:" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding DeletingAdjustment.ProductName}" Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Type:" FontWeight="Medium" Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding DeletingAdjustment.TypeDisplay}" Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{Binding DeletingAdjustment.QuantityDisplay}" Foreground="{Binding DeletingAdjustment.QuantityColor}" FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="This will reverse the stock change and cannot be undone without re-creating the adjustment."
                                   FontSize="12"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />
                    </StackPanel>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Classes="secondary-button" Content="Cancel" Command="{Binding CloseDeleteConfirmCommand}" />
                            <Button Classes="danger-button" Content="Delete Adjustment" Command="{Binding ConfirmDeleteCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Panel>
    </Panel>

    <UserControl.Styles>
        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Form Input -->
        <Style Selector="TextBox.form-input">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- Form ComboBox -->
        <Style Selector="ComboBox.form-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <!-- Danger Button -->
        <Style Selector="Button.danger-button">
            <Setter Property="Background" Value="#DC2626" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.danger-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#B91C1C" />
        </Style>
    </UserControl.Styles>
</UserControl>
