                                    </StackPanel>
                                </StackPanel>

                                <!-- Style Tab -->
                                <StackPanel Spacing="8" IsVisible="{Binding TablePropertiesTabIndex, Converter={StaticResource EqualConverter}, ConverterParameter=1}">
