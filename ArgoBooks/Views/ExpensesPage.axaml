<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ExpensesPage"
             x:DataType="vm:ExpensesPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ExpensesPageViewModel />
    </Design.DataContext>

    <Panel>
    <!-- Main Content -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards (Row 0) -->
            <Grid Grid.Row="0" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto" Margin="0,0,0,24">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>

                <!-- Total Monthly Expenses -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEE2E2"
                                Margin="0,0,16,0">
                            <PathIcon Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"
                                      Width="24" Height="24"
                                      Foreground="#DC2626" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalMonthlyExpenses}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Monthly Expenses"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Transactions -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DBEAFE"
                                Margin="0,0,16,0">
                            <PathIcon Data="M19 3h-4.18C14.4 1.84 13.3 1 12 1c-1.3 0-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm2 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                      Width="24" Height="24"
                                      Foreground="#3B82F6" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TransactionCount}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Transactions"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Receipts on File -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#DCFCE7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                                      Width="24" Height="24"
                                      Foreground="#22C55E" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ReceiptsOnFile}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Receipts on File"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Returns -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border Grid.Column="0"
                                Width="48" Height="48"
                                CornerRadius="10"
                                Background="#FEF3C7"
                                Margin="0,0,16,0">
                            <PathIcon Data="M12.5 6.9c1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-.53.12-1.03.3-1.48.54l1.47 1.47c.41-.17.91-.27 1.51-.27zM5.33 4.06L4.06 5.33 7.5 8.77c0 2.08 1.56 3.22 3.91 3.91l3.51 3.51c-.34.49-1.05.91-2.42.91-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c.96-.18 1.83-.55 2.46-1.12l2.22 2.22 1.27-1.27L5.33 4.06z"
                                      Width="24" Height="24"
                                      Foreground="#F59E0B" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ReturnsCount}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="Returns"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Expenses"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search expenses..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Expense Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Expense" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Column Menu Popup (outside the scroll area) -->
                    <Popup IsOpen="{Binding IsColumnMenuOpen, Mode=TwoWay}"
                           Placement="Pointer"
                           IsLightDismissEnabled="True">
                            <Border Background="{DynamicResource SurfaceBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="8"
                                    BoxShadow="0 4 16 0 #20000000">
                                <StackPanel Spacing="4" Width="180">
                                    <TextBlock Text="Show Columns"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="8,4,8,8" />
                                    <CheckBox IsChecked="{Binding ShowIdColumn}" Content="ID" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowAccountantColumn}" Content="Accountant" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowProductColumn}" Content="Product" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowSupplierColumn}" Content="Supplier" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowDateColumn}" Content="Date" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowQuantityColumn}" Content="Quantity" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowUnitPriceColumn}" Content="Unit Price" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowAmountColumn}" Content="Amount" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowTaxColumn}" Content="Tax" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowShippingColumn}" Content="Shipping" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowDiscountColumn}" Content="Discount" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowTotalColumn}" Content="Total" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowReceiptColumn}" Content="Receipt" Classes="column-toggle" />
                                    <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="Status" Classes="column-toggle" />
                                </StackPanel>
                            </Border>
                        </Popup>

                    <!-- Table Content -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,*">
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Padding="24,12"
                                PointerPressed="OnTableHeaderPointerPressed">
                            <!-- Column Headers with proportional widths -->
                            <Grid ColumnDefinitions="0.8*,1*,1.5*,1.2*,0.9*,0.5*,0.8*,0.8*,0.7*,0.7*,0.7*,0.8*,0.6*,0.8*,140">
                                <!-- ID -->
                                <TextBlock Grid.Column="0" Text="ID" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowIdColumn}" />
                                <!-- Accountant -->
                                <TextBlock Grid.Column="1" Text="Accountant" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowAccountantColumn}" />
                                <!-- Product -->
                                <TextBlock Grid.Column="2" Text="Product" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowProductColumn}" />
                                <!-- Supplier -->
                                <TextBlock Grid.Column="3" Text="Supplier" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowSupplierColumn}" />
                                <!-- Date -->
                                <TextBlock Grid.Column="4" Text="Date" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowDateColumn}" />
                                <!-- Qty -->
                                <TextBlock Grid.Column="5" Text="Qty" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowQuantityColumn}" />
                                <!-- Unit Price -->
                                <TextBlock Grid.Column="6" Text="Unit Price" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowUnitPriceColumn}" />
                                <!-- Amount -->
                                <TextBlock Grid.Column="7" Text="Amount" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowAmountColumn}" />
                                <!-- Tax -->
                                <TextBlock Grid.Column="8" Text="Tax" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowTaxColumn}" />
                                <!-- Shipping -->
                                <TextBlock Grid.Column="9" Text="Shipping" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowShippingColumn}" />
                                <!-- Discount -->
                                <TextBlock Grid.Column="10" Text="Discount" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowDiscountColumn}" />
                                <!-- Total -->
                                <TextBlock Grid.Column="11" Text="Total" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowTotalColumn}" />
                                <!-- Receipt -->
                                <TextBlock Grid.Column="12" Text="Receipt" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           IsVisible="{Binding ShowReceiptColumn}" />
                                <!-- Status -->
                                <TextBlock Grid.Column="13" Text="Status" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsVisible="{Binding ShowStatusColumn}" />
                                <!-- Actions -->
                                <TextBlock Grid.Column="14" Text="Actions" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                            <!-- Table Content (scrollable) -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Panel>
                                <!-- Expenses List -->
                                <ItemsControl ItemsSource="{Binding Expenses}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:ExpenseDisplayItem">
                                            <Border Padding="24,16"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid ColumnDefinitions="0.8*,1*,1.5*,1.2*,0.9*,0.5*,0.8*,0.8*,0.7*,0.7*,0.7*,0.8*,0.6*,0.8*,140">
                                                    <!-- ID -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Id}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="{DynamicResource PrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowIdColumn}" />

                                                    <!-- Accountant -->
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding AccountantName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowAccountantColumn}" />

                                                    <!-- Product -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding ProductDescription}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowProductColumn}" />

                                                    <!-- Supplier -->
                                                    <TextBlock Grid.Column="3"
                                                               Text="{Binding SupplierName}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowSupplierColumn}" />

                                                    <!-- Date -->
                                                    <TextBlock Grid.Column="4"
                                                               Text="{Binding DateFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowDateColumn}" />

                                                    <!-- Quantity -->
                                                    <TextBlock Grid.Column="5"
                                                               Text="{Binding Quantity}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowQuantityColumn}" />

                                                    <!-- Unit Price -->
                                                    <TextBlock Grid.Column="6"
                                                               Text="{Binding UnitPriceFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowUnitPriceColumn}" />

                                                    <!-- Amount -->
                                                    <TextBlock Grid.Column="7"
                                                               Text="{Binding AmountFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowAmountColumn}" />

                                                    <!-- Tax -->
                                                    <TextBlock Grid.Column="8"
                                                               Text="{Binding TaxAmountFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowTaxColumn}" />

                                                    <!-- Shipping -->
                                                    <TextBlock Grid.Column="9"
                                                               Text="{Binding ShippingCostFormatted}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowShippingColumn}" />

                                                    <!-- Discount -->
                                                    <TextBlock Grid.Column="10"
                                                               Text="{Binding DiscountFormatted}"
                                                               FontSize="14"
                                                               Foreground="#22C55E"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowDiscountColumn}" />

                                                    <!-- Total -->
                                                    <TextBlock Grid.Column="11"
                                                               Text="{Binding TotalFormatted}"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="#DC2626"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowTotalColumn}" />

                                                    <!-- Receipt Icon -->
                                                    <Panel Grid.Column="12" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowReceiptColumn}">
                                                        <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                                                  Width="16" Height="16"
                                                                  Foreground="#22C55E"
                                                                  IsVisible="{Binding HasReceipt}" />
                                                        <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                                                  Width="16" Height="16"
                                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                                  IsVisible="{Binding !HasReceipt}" />
                                                    </Panel>

                                                    <!-- Status Badge -->
                                                    <Border Grid.Column="13"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Padding="8,4"
                                                            CornerRadius="4"
                                                            Background="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToExpenseStatusBackground}}"
                                                            IsVisible="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ShowStatusColumn}">
                                                        <TextBlock Text="{Binding StatusDisplay}"
                                                                   FontSize="12"
                                                                   FontWeight="Medium"
                                                                   Foreground="{Binding StatusDisplay, Converter={x:Static local:StringConverters.ToExpenseStatusForeground}}" />
                                                    </Border>

                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="14"
                                                                Orientation="Horizontal"
                                                                HorizontalAlignment="Right"
                                                                Spacing="4">
                                                        <!-- View Receipt Button -->
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="View Receipt"
                                                                Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).ViewReceiptCommand}"
                                                                CommandParameter="{Binding}"
                                                                IsVisible="{Binding HasReceipt}">
                                                            <PathIcon Data="M18 17H6v-2h12v2zm0-4H6v-2h12v2zm0-4H6V7h12v2zM3 22l1.5-1.5L6 22l1.5-1.5L9 22l1.5-1.5L12 22l1.5-1.5L15 22l1.5-1.5L18 22l1.5-1.5L21 22V2l-1.5 1.5L18 2l-1.5 1.5L15 2l-1.5 1.5L12 2l-1.5 1.5L9 2 7.5 3.5 6 2 4.5 3.5 3 2v20z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="Edit"
                                                                Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).OpenEditModalCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button warning"
                                                                ToolTip.Tip="Mark as Lost/Damaged"
                                                                Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).MarkAsLostDamagedCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button"
                                                                ToolTip.Tip="Mark as Returned"
                                                                Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).MarkAsReturnedCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M12 5V1L7 6l5 5V7c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                        <Button Classes="icon-button danger"
                                                                ToolTip.Tip="Delete"
                                                                Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                CommandParameter="{Binding}">
                                                            <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                      Width="16" Height="16" />
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Expenses.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No expenses found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Add your first expense to start tracking your spending."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Add Expense" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                            </ScrollViewer>
                        </Grid>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:ExpensesPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>

    <!-- Receipt Preview Modal Overlay -->
    <Border Background="#80000000"
            IsVisible="{Binding IsReceiptPreviewOpen}">
        <Border Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Width="{Binding IsReceiptFullscreen, Converter={x:Static local:BoolConverters.ToFullscreenWidth}}"
                Height="{Binding IsReceiptFullscreen, Converter={x:Static local:BoolConverters.ToFullscreenHeight}}"
                Margin="{Binding IsReceiptFullscreen, Converter={x:Static local:BoolConverters.ToFullscreenMargin}}"
                HorizontalAlignment="{Binding IsReceiptFullscreen, Converter={x:Static local:BoolConverters.ToFullscreenHorizontalAlignment}}"
                VerticalAlignment="{Binding IsReceiptFullscreen, Converter={x:Static local:BoolConverters.ToFullscreenVerticalAlignment}}"
                BoxShadow="0 8 32 0 #40000000">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Modal Header -->
                <Border Grid.Row="0"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel>
                            <TextBlock Text="{Binding PreviewReceiptId, StringFormat='Receipt for {0}'}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                        </StackPanel>
                        <Button Grid.Column="1"
                                Classes="icon-button"
                                Command="{Binding CloseReceiptPreviewCommand}">
                            <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                      Width="20" Height="20" />
                        </Button>
                    </Grid>
                </Border>

                <!-- Receipt Image Preview -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SurfaceAltBrush}"
                        Margin="16">
                    <Panel>
                        <Image Source="{Binding PreviewReceiptPath, Converter={x:Static local:BoolConverters.ToImageSource}}"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                        <!-- Fallback for when image can't load -->
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="16"
                                    IsVisible="{Binding PreviewReceiptPath, Converter={x:Static StringConverters.IsNullOrEmpty}}">
                            <PathIcon Data="M18 17H6v-2h12v2zm0-4H6v-2h12v2zm0-4H6V7h12v2zM3 22l1.5-1.5L6 22l1.5-1.5L9 22l1.5-1.5L12 22l1.5-1.5L15 22l1.5-1.5L18 22l1.5-1.5L21 22V2l-1.5 1.5L18 2l-1.5 1.5L15 2l-1.5 1.5L12 2l-1.5 1.5L9 2 7.5 3.5 6 2 4.5 3.5 3 2v20z"
                                      Width="48" Height="48"
                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                            <TextBlock Text="Receipt preview not available"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Panel>
                </Border>

                <!-- Modal Footer -->
                <Border Grid.Row="2"
                        Padding="24,12"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Grid.Column="0"
                                Classes="icon-button"
                                ToolTip.Tip="Toggle Fullscreen"
                                Command="{Binding ToggleReceiptFullscreenCommand}">
                            <PathIcon Data="{Binding IsReceiptFullscreen, Converter={x:Static local:BoolConverters.ToFullscreenIcon}}"
                                      Width="16" Height="16" />
                        </Button>
                        <Button Grid.Column="2"
                                Content="Close"
                                Classes="secondary-button"
                                Command="{Binding CloseReceiptPreviewCommand}" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
    </Panel>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Column Toggle Checkbox -->
        <Style Selector="CheckBox.column-toggle">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="CheckBox.column-toggle:pointerover">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>

        <!-- Icon Button -->
        <Style Selector="Button.icon-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.icon-button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        </Style>
        <Style Selector="Button.icon-button PathIcon">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEE2E2" />
        </Style>
        <Style Selector="Button.icon-button.danger:pointerover PathIcon">
            <Setter Property="Foreground" Value="#DC2626" />
        </Style>
        <Style Selector="Button.icon-button.warning:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FEF3C7" />
        </Style>
        <Style Selector="Button.icon-button.warning:pointerover PathIcon">
            <Setter Property="Foreground" Value="#F59E0B" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </UserControl.Styles>
</UserControl>
