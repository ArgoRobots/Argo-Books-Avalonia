<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             xmlns:table="using:ArgoBooks.Controls.ArgoTable"
             xmlns:icons="using:ArgoBooks"
             xmlns:loc="using:ArgoBooks.Localization"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.ReturnsPage"
             x:DataType="vm:ReturnsPageViewModel">

    <Design.DataContext>
        <vm:ReturnsPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="Auto,*">
        <!-- Tab Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        Margin="0"
                        Classes="page-tabs">
                <TabItem Header="{loc:Loc 'Expense Returns'}" />
                <TabItem Header="{loc:Loc 'Customer Returns'}" />
            </TabControl>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="{loc:Loc 'Total Returns'}"
                                   Value="{Binding TotalReturns}"
                                   Icon="M19 7v4H5.83l3.58-3.59L8 6l-6 6 6 6 1.41-1.41L5.83 13H21V7h-2z"
                                   IconColor="Primary" />
                <controls:StatCard Label="{loc:Loc 'Expense Returns'}"
                                   Value="{Binding ExpenseReturns}"
                                   Icon="M20 12l-1.41-1.41L13 16.17V4h-2v12.17l-5.58-5.59L4 12l8 8 8-8z"
                                   IconColor="Danger" />
                <controls:StatCard Label="{loc:Loc 'Customer Returns'}"
                                   Value="{Binding CustomerReturns}"
                                   Icon="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"
                                   IconColor="Success" />
                <controls:StatCard Label="{loc:Loc 'Total Refunded'}"
                                   Value="{Binding TotalRefunded}"
                                   Icon="{x:Static icons:Icons.Dollar}"
                                   IconColor="Info" />
            </controls:StatCardsRow>

            <!-- Main Content Card using ArgoTable -->
            <table:ArgoTable Grid.Row="1"
                                Title="{Binding IsExpenseTabActive, Converter={x:Static local:BoolConverters.ToReturnTableTitle}}"
                                ItemsSource="{Binding Returns}"
                                SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                                SearchPlaceholder="{loc:Loc 'Search returns...'}"
                                SearchBoxWidth="{Binding ResponsiveHeader.SearchBoxWidth}"
                                SearchBoxMinHeight="{Binding ResponsiveHeader.SearchBoxMinHeight}"
                                SearchIconMargin="{Binding ResponsiveHeader.SearchIconMargin}"
                                HeaderPadding="{Binding ResponsiveHeader.HeaderPadding}"
                                HeaderSpacing="{Binding ResponsiveHeader.HeaderSpacing}"
                                IsCompactMode="{Binding ResponsiveHeader.IsCompactMode}"
                                IsMediumMode="{Binding ResponsiveHeader.IsMediumMode}"
                                ShowButtonText="{Binding ResponsiveHeader.ShowButtonText}"
                                FilterCommand="{Binding OpenFilterModalCommand}"
                                ShowAddButton="False"
                                ColumnWidthsManager="{Binding ColumnWidths}"
                                CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
                                TotalPages="{Binding TotalPages}"
                                PageSize="{Binding PageSize, Mode=TwoWay}"
                                PaginationText="{Binding PaginationText}"
                                GoToPageCommand="{Binding GoToPageCommand}"
                                GoToPreviousPageCommand="{Binding GoToPreviousPageCommand}"
                                GoToNextPageCommand="{Binding GoToNextPageCommand}"
                                ToggleColumnMenuCommand="{Binding ToggleColumnMenuCommand}"
                                EmptyIcon="{x:Static icons:Icons.Returns}"
                                EmptyTitle="{loc:Loc 'No returns found'}"
                                EmptyMessage="{loc:Loc 'Returns will appear here when items are returned to suppliers or by customers.'}"
                                BorderSizeChanged="OnHeaderSizeChanged"
                                TableGridSizeChanged="OnTableSizeChanged">

                <!-- Table Header Content - Using ArgoTableHeader for reduced boilerplate -->
                <table:ArgoTable.HeaderContent>
                    <StackPanel Orientation="Horizontal">
                        <table:ArgoTableHeader Header="{loc:Loc 'ID'}" ColumnName="Id"
                                                   ColumnWidth="{Binding ColumnWidths.IdColumnWidth}"
                                                   IsColumnVisible="{Binding ShowIdColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Product'}" ColumnName="Product"
                                                   ColumnWidth="{Binding ColumnWidths.ProductColumnWidth}"
                                                   IsColumnVisible="{Binding ShowProductColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{Binding IsExpenseTabActive, Converter={x:Static local:BoolConverters.ToSupplierOrCustomerHeader}}"
                                                   ColumnName="SupplierCustomer"
                                                   ColumnWidth="{Binding ColumnWidths.SupplierCustomerColumnWidth}"
                                                   IsColumnVisible="{Binding ShowSupplierCustomerColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Date'}" ColumnName="Date"
                                                   ColumnWidth="{Binding ColumnWidths.DateColumnWidth}"
                                                   IsColumnVisible="{Binding ShowDateColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Reason'}" ColumnName="Reason"
                                                   ColumnWidth="{Binding ColumnWidths.ReasonColumnWidth}"
                                                   IsColumnVisible="{Binding ShowReasonColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Refund'}" ColumnName="Refund"
                                                   ColumnWidth="{Binding ColumnWidths.RefundColumnWidth}"
                                                   IsColumnVisible="{Binding ShowRefundColumn}"
                                                   IsSortable="False"
                                                   ColumnWidths="{Binding ColumnWidths}" />

                        <table:ArgoTableHeader Header="{loc:Loc 'Actions'}" ColumnName="Actions"
                                                   ColumnWidth="{Binding ColumnWidths.ActionsColumnWidth}"
                                                   IsSortable="False" IsResizable="False" ShowSeparator="False" />
                    </StackPanel>
                </table:ArgoTable.HeaderContent>

                <!-- Table Rows Content - Using ArgoTableCell for reduced boilerplate -->
                <table:ArgoTable.RowsContent>
                    <ItemsControl ItemsSource="{Binding Returns}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:ReturnDisplayItem">
                                <Border Padding="24,0"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        Background="{DynamicResource SurfaceBrush}"
                                        MinHeight="52">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Transaction ID -->
                                        <table:ArgoTableCell Text="{Binding Id}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.IdColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ShowIdColumn}" />

                                        <!-- Product - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.ProductColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ShowProductColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ProductNames}"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               TextTrimming="CharacterEllipsis" />
                                                    <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} item(s)'}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextTertiaryBrush}" />
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Supplier/Customer -->
                                        <table:ArgoTableCell Text="{Binding SupplierOrCustomerName}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.SupplierCustomerColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ShowSupplierCustomerColumn}" />

                                        <!-- Return Date -->
                                        <table:ArgoTableCell Text="{Binding DateFormatted}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.DateColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ShowDateColumn}" />

                                        <!-- Reason -->
                                        <table:ArgoTableCell Text="{Binding Reason}"
                                                                 ColumnWidth="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.ReasonColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ShowReasonColumn}" />

                                        <!-- Refund Amount - Custom content for special styling -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.RefundColumnWidth}"
                                                                 IsColumnVisible="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ShowRefundColumn}">
                                            <table:ArgoTableCell.CellContent>
                                                <TextBlock Text="{Binding RefundAmountFormatted}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource ErrorBrush}"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis" />
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>

                                        <!-- Actions - Custom content required -->
                                        <table:ArgoTableCell ColumnWidth="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}"
                                                                 ShowSeparator="False">
                                            <table:ArgoTableCell.CellContent>
                                                <StackPanel Orientation="Horizontal"
                                                            Spacing="2"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                    <Button Classes="icon-button-small"
                                                            ToolTip.Tip="{loc:Loc 'View Details'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).ViewReturnDetailsCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                                  Width="14" Height="14" />
                                                    </Button>
                                                    <Button Classes="icon-button-small danger"
                                                            ToolTip.Tip="{loc:Loc 'Undo Return'}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ReturnsPageViewModel)DataContext).UndoReturnCommand}"
                                                            CommandParameter="{Binding}">
                                                        <PathIcon Data="{x:Static icons:Icons.Returns}"
                                                                  Width="14" Height="14" />
                                                    </Button>
                                                </StackPanel>
                                            </table:ArgoTableCell.CellContent>
                                        </table:ArgoTableCell>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </table:ArgoTable.RowsContent>
            </table:ArgoTable>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnWidths.ColumnMenuX}"
                                    MenuY="{Binding ColumnWidths.ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowIdColumn}" Content="{loc:Loc ID}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowProductColumn}" Content="{loc:Loc Product}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowSupplierCustomerColumn}" Content="{loc:Loc 'Supplier/Customer'}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDateColumn}" Content="{loc:Loc Date}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowReasonColumn}" Content="{loc:Loc Reason}" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowRefundColumn}" Content="{loc:Loc Refund}" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

</UserControl>
