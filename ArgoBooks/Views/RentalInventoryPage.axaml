<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArgoBooks.ViewModels"
             xmlns:local="using:ArgoBooks.Converters"
             xmlns:controls="using:ArgoBooks.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ArgoBooks.Views.RentalInventoryPage"
             x:DataType="vm:RentalInventoryPageViewModel">

    <UserControl.Resources>
        <local:SortIndicatorConverter x:Key="SortIndicatorConverter" />
        <local:PageActiveBackgroundConverter x:Key="PageActiveBackgroundConverter" />
        <local:PageActiveForegroundConverter x:Key="PageActiveForegroundConverter" />
        <local:PageEqualsConverter x:Key="PageEqualsConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:RentalInventoryPageViewModel />
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="*">
        <!-- Main Content -->
        <Grid Grid.Row="0" RowDefinitions="Auto,*" Margin="24">
            <!-- Statistics Cards Row -->
            <controls:StatCardsRow Grid.Row="0" Margin="0,0,0,24">
                <controls:StatCard Label="Total Items"
                                   Value="{Binding TotalItems}"
                                   Icon="M21 16.5c0 .38-.21.71-.53.88l-7.9 4.44c-.16.12-.36.18-.57.18-.21 0-.41-.06-.57-.18l-7.9-4.44A.991.991 0 0 1 3 16.5v-9c0-.38.21-.71.53-.88l7.9-4.44c.16-.12.36-.18.57-.18.21 0 .41.06.57.18l7.9 4.44c.32.17.53.5.53.88v9zM12 4.15L6.04 7.5 12 10.85l5.96-3.35L12 4.15zM5 15.91l6 3.38v-6.71L5 9.21v6.7zm14 0v-6.7l-6 3.37v6.71l6-3.38z"
                                   IconColor="Primary" />
                <controls:StatCard Label="Available"
                                   Value="{Binding AvailableItems}"
                                   Icon="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                   IconColor="Success" />
                <controls:StatCard Label="Rented Out"
                                   Value="{Binding RentedOutItems}"
                                   Icon="M12.5 2C8.36 2 5 5.36 5 9.5c0 1.71.57 3.29 1.54 4.56L2.71 17.9l1.41 1.41 3.83-3.83C9.21 16.43 10.79 17 12.5 17c4.14 0 7.5-3.36 7.5-7.5S16.64 2 12.5 2zm0 13c-3.03 0-5.5-2.47-5.5-5.5S9.47 4 12.5 4 18 6.47 18 9.5 15.53 15 12.5 15z"
                                   IconColor="Info" />
                <controls:StatCard Label="In Maintenance"
                                   Value="{Binding MaintenanceItems}"
                                   Icon="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"
                                   IconColor="Warning" />
            </controls:StatCardsRow>

            <!-- Main Content Card (Row 1) -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">

                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header with Title, Search and Buttons -->
                    <Border Grid.Row="0"
                            Padding="24,20"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Column="0"
                                       Text="Rental Items"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" />

                            <!-- Search + Filter + Add Button (Right aligned) -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <!-- Search Box -->
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        CornerRadius="6"
                                        Width="250">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <PathIcon Grid.Column="0"
                                                  Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Width="16" Height="16"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="12,0,8,0" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SearchQuery, Mode=TwoWay}"
                                                 Watermark="Search rental items..."
                                                 Classes="search-input" />
                                    </Grid>
                                </Border>

                                <!-- Filter Button -->
                                <Button Classes="secondary-button"
                                        Command="{Binding OpenFilterModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
                                                  Width="16" Height="16" />
                                        <TextBlock Text="Filter" />
                                    </StackPanel>
                                </Button>

                                <!-- Add Rental Item Button -->
                                <Button Classes="primary-button"
                                        Command="{Binding OpenAddModalCommand}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                  Width="16" Height="16"
                                                  Foreground="White" />
                                        <TextBlock Text="Add Item" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <ScrollViewer Grid.Row="1"
                                  x:Name="HorizontalTableScroll"
                                  HorizontalScrollBarVisibility="{Binding ColumnWidths.NeedsHorizontalScroll, Converter={x:Static local:BoolConverters.ToScrollBarVisibility}}"
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,*" x:Name="TableGrid" SizeChanged="OnTableSizeChanged"
                              MinWidth="{Binding ColumnWidths.MinimumTotalWidth}">
                            <!-- Table Header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceAltBrush}"
                                    Padding="24,0"
                                    MinHeight="40"
                                    PointerPressed="OnTableHeaderPointerPressed">
                                <StackPanel Orientation="Horizontal" x:Name="HeaderPanel">
                                    <!-- Item -->
                                    <Panel Width="{Binding ColumnWidths.ItemColumnWidth}" IsVisible="{Binding ShowItemColumn}">
                                        <controls:SortableColumnHeader Text="Item" ColumnName="Item"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Item" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Supplier -->
                                    <Panel Width="{Binding ColumnWidths.SupplierColumnWidth}" IsVisible="{Binding ShowSupplierColumn}">
                                        <controls:SortableColumnHeader Text="Supplier" ColumnName="Supplier"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Supplier" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Status -->
                                    <Panel Width="{Binding ColumnWidths.StatusColumnWidth}" IsVisible="{Binding ShowStatusColumn}">
                                        <controls:SortableColumnHeader Text="Status" ColumnName="Status"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Status" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Total Qty -->
                                    <Panel Width="{Binding ColumnWidths.TotalQtyColumnWidth}" IsVisible="{Binding ShowTotalQtyColumn}">
                                        <controls:SortableColumnHeader Text="Total" ColumnName="TotalQty"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="TotalQty" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Available -->
                                    <Panel Width="{Binding ColumnWidths.AvailableColumnWidth}" IsVisible="{Binding ShowAvailableColumn}">
                                        <controls:SortableColumnHeader Text="Avail." ColumnName="Available"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Available" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Rented -->
                                    <Panel Width="{Binding ColumnWidths.RentedColumnWidth}" IsVisible="{Binding ShowRentedColumn}">
                                        <controls:SortableColumnHeader Text="Rented" ColumnName="Rented"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Rented" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Daily Rate -->
                                    <Panel Width="{Binding ColumnWidths.DailyRateColumnWidth}" IsVisible="{Binding ShowDailyRateColumn}">
                                        <controls:SortableColumnHeader Text="Daily" ColumnName="DailyRate"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="DailyRate" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Weekly Rate -->
                                    <Panel Width="{Binding ColumnWidths.WeeklyRateColumnWidth}" IsVisible="{Binding ShowWeeklyRateColumn}">
                                        <controls:SortableColumnHeader Text="Weekly" ColumnName="WeeklyRate"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="WeeklyRate" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Deposit -->
                                    <Panel Width="{Binding ColumnWidths.DepositColumnWidth}" IsVisible="{Binding ShowDepositColumn}">
                                        <controls:SortableColumnHeader Text="Deposit" ColumnName="Deposit"
                                                                        Command="{Binding SortByCommand}"
                                                                        SortColumn="{Binding SortColumn}"
                                                                        SortDirection="{Binding SortDirection}" />
                                        <Border Width="1" Background="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                        <controls:ColumnResizeGripper ColumnName="Deposit" ColumnWidths="{Binding ColumnWidths}"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                    </Panel>
                                    <!-- Actions (Fixed) -->
                                    <Panel Width="{Binding ColumnWidths.ActionsColumnWidth}">
                                        <TextBlock Text="Actions" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="8,12,8,12" />
                                    </Panel>
                                </StackPanel>
                            </Border>

                            <!-- Table Content (scrollable vertically only) -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <Panel>
                                    <!-- Items List -->
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="vm:RentalItemDisplayItem">
                                                <Border Padding="24,0"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="0,0,0,1"
                                                        MinHeight="56">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Item -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.ItemColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowItemColumn}">
                                                            <StackPanel VerticalAlignment="Center" Margin="8,0">
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="14"
                                                                           FontWeight="Medium"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                                           TextTrimming="CharacterEllipsis" />
                                                                <TextBlock Text="{Binding Id}"
                                                                           FontSize="12"
                                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                                           TextTrimming="CharacterEllipsis" />
                                                            </StackPanel>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Supplier -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.SupplierColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowSupplierColumn}">
                                                            <TextBlock Text="{Binding SupplierName}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Status -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.StatusColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowStatusColumn}">
                                                            <Border VerticalAlignment="Center"
                                                                    HorizontalAlignment="Left"
                                                                    Padding="8,4"
                                                                    CornerRadius="4"
                                                                    Margin="8,0"
                                                                    Background="{Binding Status, Converter={x:Static local:StringConverters.ToRentalItemStatusBackground}}">
                                                                <TextBlock Text="{Binding Status}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           Foreground="{Binding Status, Converter={x:Static local:StringConverters.ToRentalItemStatusForeground}}" />
                                                            </Border>
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Total Quantity -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.TotalQtyColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowTotalQtyColumn}">
                                                            <TextBlock Text="{Binding TotalQuantity}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Available Quantity -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.AvailableColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowAvailableColumn}">
                                                            <TextBlock Text="{Binding AvailableQuantity}"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="#22C55E"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Rented Quantity -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.RentedColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowRentedColumn}">
                                                            <TextBlock Text="{Binding RentedQuantity}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Daily Rate -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.DailyRateColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowDailyRateColumn}">
                                                            <TextBlock Text="{Binding DailyRateFormatted}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Weekly Rate -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.WeeklyRateColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowWeeklyRateColumn}">
                                                            <TextBlock Text="{Binding WeeklyRateFormatted}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Deposit -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.DepositColumnWidth}"
                                                               IsVisible="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ShowDepositColumn}">
                                                            <TextBlock Text="{Binding DepositFormatted}"
                                                                       FontSize="14"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="8,0" />
                                                            <Border Width="1" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
                                                        </Panel>

                                                        <!-- Actions -->
                                                        <Panel Width="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).ColumnWidths.ActionsColumnWidth}">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Right"
                                                                        Spacing="4"
                                                                        Margin="8,0">
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="Rent Out"
                                                                        Command="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).OpenRentOutModalCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        IsEnabled="{Binding IsAvailable}">
                                                                    <PathIcon Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button"
                                                                        ToolTip.Tip="Edit"
                                                                        Command="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).OpenEditModalCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                                <Button Classes="icon-button danger"
                                                                        ToolTip.Tip="Delete"
                                                                        Command="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).OpenDeleteConfirmCommand}"
                                                                        CommandParameter="{Binding}">
                                                                    <PathIcon Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                                              Width="16" Height="16" />
                                                                </Button>
                                                            </StackPanel>
                                                        </Panel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                <!-- Empty State -->
                                <Border Padding="40"
                                        IsVisible="{Binding Items.Count, Converter={x:Static local:IntConverters.IsZero}}">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Spacing="16">
                                        <Border Width="64" Height="64"
                                                CornerRadius="32"
                                                Background="{DynamicResource SurfaceAltBrush}"
                                                HorizontalAlignment="Center">
                                            <PathIcon Data="M21 16.5c0 .38-.21.71-.53.88l-7.9 4.44c-.16.12-.36.18-.57.18-.21 0-.41-.06-.57-.18l-7.9-4.44A.991.991 0 0 1 3 16.5v-9c0-.38.21-.71.53-.88l7.9-4.44c.16-.12.36-.18.57-.18.21 0 .41.06.57.18l7.9 4.44c.32.17.53.5.53.88v9z"
                                                      Width="28" Height="28"
                                                      Foreground="{DynamicResource TextTertiaryBrush}" />
                                        </Border>
                                        <TextBlock Text="No rental items found"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="Add your first rental item to start managing your rental inventory."
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300" />
                                        <Button Classes="primary-button"
                                                HorizontalAlignment="Center"
                                                Margin="0,8,0,0"
                                                Command="{Binding OpenAddModalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                                                          Width="16" Height="16"
                                                          Foreground="White" />
                                                <TextBlock Text="Add Item" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Panel>
                        </ScrollViewer>
                    </Grid>
                    </ScrollViewer>

                    <!-- Pagination Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceAltBrush}"
                            Padding="24,12"
                            CornerRadius="0,0,11,11"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Rows per page selector -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding PaginationText}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="|"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0" />
                                <TextBlock Text="Rows per page:"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                                          SelectedItem="{Binding PageSize}"
                                          Classes="page-size-combobox"
                                          Width="70" />
                            </StackPanel>

                            <!-- Page Numbers -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        IsVisible="{Binding TotalPages, Converter={x:Static local:IntConverters.IsGreaterThanOne}}">
                                <!-- Previous Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToPreviousPageCommand}"
                                        IsEnabled="{Binding CanGoToPreviousPage}">
                                    <PathIcon Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- Page Number Buttons -->
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="pagination-button"
                                                    Content="{Binding}"
                                                    Command="{Binding $parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).GoToPageCommand}"
                                                    CommandParameter="{Binding}">
                                                <controls:PaginationHelper.IsActivePage>
                                                    <MultiBinding Converter="{StaticResource PageEqualsConverter}">
                                                        <Binding />
                                                        <Binding Path="$parent[ItemsControl].((vm:RentalInventoryPageViewModel)DataContext).CurrentPage" />
                                                    </MultiBinding>
                                                </controls:PaginationHelper.IsActivePage>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Next Button -->
                                <Button Classes="pagination-button"
                                        Command="{Binding GoToNextPageCommand}"
                                        IsEnabled="{Binding CanGoToNextPage}">
                                    <PathIcon Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                              Width="16" Height="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <!-- Column Visibility Menu -->
    <controls:ColumnVisibilityMenu IsOpen="{Binding IsColumnMenuOpen}"
                                    MenuX="{Binding ColumnMenuX}"
                                    MenuY="{Binding ColumnMenuY}"
                                    CloseCommand="{Binding CloseColumnMenuCommand}">
        <controls:ColumnVisibilityMenu.ColumnsContent>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowItemColumn}" Content="Item" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowSupplierColumn}" Content="Supplier" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowStatusColumn}" Content="Status" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowTotalQtyColumn}" Content="Total Qty" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowAvailableColumn}" Content="Available" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowRentedColumn}" Content="Rented" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDailyRateColumn}" Content="Daily Rate" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowWeeklyRateColumn}" Content="Weekly Rate" Classes="column-toggle" />
                <CheckBox IsChecked="{Binding ShowDepositColumn}" Content="Deposit" Classes="column-toggle" />
            </StackPanel>
        </controls:ColumnVisibilityMenu.ColumnsContent>
    </controls:ColumnVisibilityMenu>
    </Panel>

    <UserControl.Styles>
        <!-- Search Input -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,10,12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="180" />
        </Style>
        <Style Selector="TextBox.search-input /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Page Size ComboBox -->
        <Style Selector="ComboBox.page-size-combobox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <!-- Column Header Button -->
        <Style Selector="Button.column-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.column-header /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.column-header:pointerover TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>

        <!-- Column Toggle CheckBox -->
        <Style Selector="CheckBox.column-toggle">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Styles>
</UserControl>
